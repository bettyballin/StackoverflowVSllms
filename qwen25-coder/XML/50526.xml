<!-- Configure cache settings on the server -->\n<configuration>\n  <system.webServer>\n    <staticContent>\n      <!-- Set expiry time to 30 days for images and css -->\n      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00"/>\n    </staticContent>\n    <httpProtocol>\n      <!-- Add Cache-Control headers -->\n      <customHeaders>\n        <add name="Cache-Control" value="public, max-age=2592000" />\n      </customHeaders>\n    </httpProtocol>\n  </system.webServer>\n</configuration>