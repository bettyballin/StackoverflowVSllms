<Project>\n  <Target Name="ValidateMarkupFiles" BeforeTargets="Build">\n    <MSBuild.ExtensionPack.Compression.HtmlTidy TaskAction="Execute"\n                                               InputFile="$(ProjectDir)YourFolder\**\*.aspx;$(ProjectDir)YourFolder\**\*.ascx;$(ProjectDir)YourFolder\**\*.html"\n                                               OutputFile="$(_TemporaryFileWrites)\tidy_%.log" \n                                               ShowWarnings="true" />\n    <Error Text="HTML Tidy found errors in the markup files. Check the log at $(_TemporaryFileWrites)\tidy_%.log for details." Condition="'@(TidyOut)' != '' and '%(TidyOut.ExitCode)' != '0'" />\n  </Target>\n</Project>