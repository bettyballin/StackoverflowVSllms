<project name="rpm-creation" default="create-rpm">\n\n    <property name="remote.user" value="your-username"/>\n    <property name="remote.host" value="remote-linux-host"/>\n    <property name="local.build.dir" value="path/to/local/build"/>\n\n    <property name="remote.working.dir" value="/tmp/rpm-work"/>\n\n    <!-- SCP tasks to copy files to the remote host -->\n    <target name="scp-build-outputs">\n        <sshexec host="${remote.host}" username="${remote.user}">\n            mkdir -p ${remote.working.dir}\n        </sshexec>\n        <scp file="${local.build.dir}/**" todir="${remote.user}@${remote.host}:${remote.working.dir}"/>\n    </target>\n\n    <!-- Execute RPM creation on remote host -->\n    <target name="create-rpm-remotely" depends="scp-build-outputs">\n        <sshexec host="${remote.host}" username="${remote.user}"\n                 command="cd ${remote.working.dir} && rpmbuild -ba your-app.spec"/>\n    </target>\n\n    <!-- SCP task to copy the RPM back to local machine -->\n    <target name="retrieve-rpm" depends="create-rpm-remotely">\n        <scp file="${remote.user}@${remote.host}:${remote.working.dir}/RPMS/noarch/your-app.rpm"\n             todir="${local.build.dir}"/>\n    </target>\n\n    <!-- Default target that creates RPM and copies it back -->\n    <target name="create-rpm" depends="retrieve-rpm">\n        <echo message="RPM creation complete. RPM is located in ${local.build.dir}"/>\n    </target>\n</project>