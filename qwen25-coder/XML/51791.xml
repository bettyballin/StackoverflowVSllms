<project name="RunSQLScripts" default="run-sql-scripts">\n    <!-- Set your database connection properties -->\n    <property name="id" value="your_username"/>\n    <property name="pw" value="your_password"/>\n    <property name="db.instance" value="your_database_instance"/>\n\n    <!-- Define the directory containing SQL scripts -->\n    <property name="sql.dir" value="path/to/sql/files"/>\n\n    <!-- Task definition for ant-contrib's for task -->\n    <taskdef resource="net/sf/antcontrib/antlib.xml">\n        <classpath>\n            <pathelement location="path/to/ant-contrib-1.0b3.jar"/>\n        </classpath>\n    </taskdef>\n\n    <!-- Target to run all SQL files in the specified directory -->\n    <target name="run-sql-scripts">\n        <for param="file" list="${sql.dir}/*.sql" delimiter=",">\n            <sequential>\n                <exec executable="sqlplus" failonerror="true">\n                    <arg value="${id}/${pw}@${db.instance}" />\n                    <arg value="@:@{file}" />\n                </exec>\n            </sequential>\n        </for>\n    </target>\n</project>