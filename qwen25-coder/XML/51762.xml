<configuration>\n  <system.web>\n    <!-- Disable debugging to avoid exposing sensitive information -->\n    <compilation debug="false" targetFramework="4.5" />\n\n    <!-- Security settings -->\n    <authentication mode="Forms">\n      <forms loginUrl="~/Account/Login.aspx" timeout="2880" />\n    </authentication>\n\n    <authorization>\n      <deny users="?" />\n      <allow roles="Admin,Member" />\n    </authorization>\n\n    <!-- Reduce the trust level as much as possible -->\n    <trust level="Medium" originUrl="" />\n\n    <customErrors mode="RemoteOnly" defaultRedirect="~/Error.aspx">\n      <error statusCode="404" redirect="~/NotFound.aspx" />\n    </customErrors>\n  </system.web>\n\n  <location path="Admin">\n    <system.web>\n      <authorization>\n        <allow roles="Admin" />\n        <deny users="*" />\n      </authorization>\n    </system.web>\n  </location>\n</configuration>