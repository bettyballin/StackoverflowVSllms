<!-- Spring.NET context file -->\n<objects xmlns="http://www.springframework.net">\n    <description>Spring.NET Configuration for NHibernate</description>\n    \n    <!-- Define the SessionFactory, pointing to a Hibernate mapping file or assembly -->\n    <object id="NHibernateSessionFactory" type="Spring.Data.NHibernate.LocalSessionFactoryObject, Spring.Data.NHibernate34">\n        <property name="DbProvider" ref="DbProvider"/>\n        \n        <!-- Specify your nhibernate mappings here -->\n        <property name="Mappings">\n            <list>\n                <value>MyNamespace.Mappings.hbm.xml</value>\n            </list>\n        </property>\n        \n        <!-- NHibernate properties -->\n        <property name="HibernateProperties">\n            <props>\n                <prop key="connection.driver_class">NHibernate.Driver.SqlClientDriver</prop>\n                <prop key="dialect">NHibernate.Dialect.MsSql2012Dialect</prop>\n                <!-- other props... -->\n            </props>\n        </property>\n\n        <!-- Registering NHibernate Validator event listener -->\n        <property name="ExposeTransactionAwareSessionFactory">\n            <value value="true"/>\n        </property>\n        <property name="PostProcessListeners" ref="ValidatorEventListener"/>\n    </object>\n\n    <!-- Hibernate Validator's Event Listener -->\n    <object id="ValidatorEventListener" type="NHibernate.Validator.Event.ValidateEventListener, NHibernate.Validator.CastleIntegration"/>\n\n\n    <!-- Database provider, configure according to your needs such as ConnectionString -->\n    <object id="DbProvider" type="Spring.Data.Common.Config.DbProviderFactoryObject, Spring.Data">\n        <property name="ProductName" value="System.Data.SqlClient"/>\n        <property name="ConnectionString">\n            <value>Data Source=.;Initial Catalog=mydb;Integrated Security=True</value>\n        </property>\n    </object>\n\n    <!-- Ensure use of shared engine provider for optimal performance -->\n    <object id="NHibernateEngineProvider" type="Spring.Data.NHibernate.ISharedEngineProvider, Spring.Data.NHibernate34">\n        <!-- Configuration details as needed -->\n    </object>\n</objects>