<class name="Customer" table="Entity">\n    <id name="Id" column="EntityId"/>\n    <property name="Name">\n        <formula>\n            (SELECT VarcharValue \n             FROM EntityVarchar \n             WHERE EntityId = this_.EntityId AND AttributeName = 'Name')\n        </formula>\n    </property>\n    <property name="Balance">\n        <formula>\n            (SELECT FloatValue \n             FROM EntityFloat \n             WHERE EntityId = this_.EntityId AND AttributeName = 'Balance')\n        </formula>\n    </property>\n</class>\n\n<class name="EntityVarchar" table="EntityVarchar">\n    <id>\n        <composite-id>\n            <key-property name="EntityId"/>\n            <key-property name="AttributeName"/>\n        </composite-id>\n    </id>\n    <property name="Value" column="VarcharValue"/>\n</class>\n\n<class name="EntityFloat" table="EntityFloat">\n    <id>\n        <composite-id>\n            <key-property name="EntityId"/>\n            <key-property name="AttributeName"/>\n        </composite-id>\n    </id>\n    <property name="Value" column="FloatValue"/>\n</class>