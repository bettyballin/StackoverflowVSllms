<configuration>\n  <location path="PublicService">\n    <system.webServer>\n      <security>\n        <authorization>\n          <!-- Allow all users -->\n          <add accessType="Allow" />\n        </authorization>\n      </security>\n    </system.webServer>\n  </location>\n  <location path="PrivateService">\n    <system.webServer>\n      <security>\n        <authorization>\n          <!-- Deny public internet, allow specific IPs -->\n          <add accessType="Deny" users="?" />\n          <add accessType="Allow" ipAddress="192.168.1.*" />\n        </authorization>\n      </security>\n    </system.webServer>\n  </location>\n</configuration>