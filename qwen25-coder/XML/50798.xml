<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"\n    xmlns:steel="yourNamespaceURI"\n    exclude-result-prefixes="steel">\n\n  <!-- Identity template to copy all nodes and attributes -->\n  <xsl:template match="@*|node()">\n    <xsl:copy>\n      <xsl:apply-templates select="@*|node()"/>\n    </xsl:copy>\n  </xsl:template>\n\n  <!-- Rename Addresses under Business to BusinessAddresses -->\n  <xsl:template match="steel:Business/steel:Addresses">\n    <BusinessAddresses>\n      <xsl:apply-templates select="@*|node()"/>\n    </BusinessAddresses>\n  </xsl:template>\n\n  <!-- Rename Address under Businesses/Business/Addresses to BusinessAddress -->\n  <xsl:template match="steel:Business/steel:Addresses/steel:Address">\n    <BusinessAddress>\n      <xsl:apply-templates select="@*|node()"/>\n    </BusinessAddress>\n  </xsl:template>\n\n  <!-- Rename Addresses under Contact to ContactAddresses -->\n  <xsl:template match="steel:Contact/steel:Addresses">\n    <ContactAddresses>\n      <xsl:apply-templates select="@*|node()"/>\n    </ContactAddresses>\n  </xsl:template>\n\n  <!-- Rename Address under Businesses/Business/Contacts/Contact/Addresses to ContactAddress -->\n  <xsl:template match="steel:Business/steel:Contacts/steel:Contact/steel:Addresses/steel:Address">\n    <ContactAddress>\n      <xsl:apply-templates select="@*|node()"/>\n    </ContactAddress>\n  </xsl:template>\n\n</xsl:stylesheet>