<configuration>\n  <system.webServer>\n    <!-- Enable Basic Authentication -->\n    <security>\n      <authentication>\n        <basicAuthentication enabled="true" />\n      </authentication>\n    </security>\n\n    <!-- Specify the user credentials file in the same directory. Format: username:password in hashed form -->\n    <httpProtocol>\n      <customHeaders>\n        <add name="WWW-Authenticate" value="Basic realm=&quot;Restricted Content&quot;" />\n      </customHeaders>\n    </httpProtocol>\n\n    <!-- Authorization rules for different paths -->\n    <authorization>\n      <!-- Deny by default (optional) -->\n      <deny users="?" />\n\n      <!-- Allow access to specific path for authenticated users in a specific role -->\n      <location path="some/path">\n        <system.webServer>\n          <security>\n            <authorization>\n              <!-- Replace "yourGroup" with your actual group name -->\n              <allow roles="yourGroup" />\n            </authorization>\n          </security>\n        </system.webServer>\n      </location>\n    </authorization>\n  </system.webServer>\n\n  <!-- Manage your user accounts here -->\n  <system.web>\n    <membership>\n      <providers>\n        <!-- Example in-memory provider for demonstration purposes -->\n        <add name="InMemoryMembershipProvider" type="System.Web.Security.MembershipProvider" passwordFormat="SHA1" />\n      </providers>\n    </membership>\n\n    <roleManager enabled="true">\n      <providers>\n        <clear />\n        <add name="CSVRoleProvider"\n             type="CsvRoleProvider,CsvAuthentication"\n             pathToUsersFile="~/App_Data/Users.csv"\n             pathToRolesFile="~/App_Data/Roles.csv" />\n      </providers>\n    </roleManager>\n  </system.web>\n</configuration>