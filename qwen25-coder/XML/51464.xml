<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="RewriteRequestsForExtensionlessURL" stopProcessing="true">\n          <match url="(.*)" />\n          <conditions logicalGrouping="MatchAll">\n            <add input="{REQUEST_URI}" pattern="^/(service|api)/" /> <!-- Adjust the pattern as needed -->\n          </conditions>\n          <action type="Rewrite" url="handler.ashx?path={R:1}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>