<configuration>\n  <system.web>\n    <!-- Custom Errors -->\n    <customErrors mode="On" defaultRedirect="/Server-Error.aspx">\n      <error statusCode="404" redirect="/404-NotFound.aspx"/>\n    </customErrors>\n  </system.web>\n\n  <system.webServer>\n    <!-- HTTP Errors -->\n    <httpErrors existingResponse="Replace">\n      <remove statusCode="404"/>\n      <error statusCode="404" path="/404-NotFound.aspx" responseMode="ExecuteURL"/>\n    </httpErrors>\n  </system.webServer>\n</configuration>