<project name="YourProject" default="build">\n    <target name="build">\n        <call target="compile"/>\n        <call target="run-tests-critical"/>\n        <call target="run-tests-non-critical"/>\n    </target>\n\n    <!-- Compile your code -->\n    <target name="compile">\n        <echo message="Compiling the project..."/>\n    </target>\n\n    <!-- Run critical tests -->\n    <target name="run-tests-critical" failonerror="true">\n        <nunit2>\n            <test assembly="path/to/your/critical-tests.dll"/>\n        </nunit2>\n    </target>\n\n    <!-- Run non-critical tests and allow failures -->\n    <target name="run-tests-non-critical" failonerror="false">\n        <nunit2>\n            <test assembly="path/to/your/non-critical-tests.dll"/>\n        </nunit2>\n    </target>\n</project>