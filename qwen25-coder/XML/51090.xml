<configuration>\n  <system.webServer> <!-- Use <system.web> if you are not using IIS7 or later in integrated mode -->\n    <authorization>\n      <!-- Deny all users by default -->\n      <deny users="?" />\n    </authorization>\n  </system.webServer>\n\n  <location path="RestrictedFolder">\n    <system.web> <!-- For IIS6 and classic mode on later versions use <system.web> -->\n      <authorization>\n        <!-- Allow access to the restricted group -->\n        <allow roles="DOMAIN\YourGroupName" />\n        <!-- Deny all others -->\n        <deny users="*" />\n      </authorization>\n    </system.web>\n  </location>\n</configuration>