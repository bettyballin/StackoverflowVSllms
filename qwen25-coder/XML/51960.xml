<Window x:Class="MasterDetailApp.MainWindow"\n        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"\n        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"\n        Title="MainWindow" Height="350" Width="525">\n    <StackPanel>       \n        <!-- Master ComboBox -->\n        <ComboBox Name="comboBox_CompanyName" \n                  ItemsSource="{Binding Path=Companies, Mode=OneWay}"\n                  DisplayMemberPath="CompanyName"\n                  SelectedItem="{Binding Path=SelectedCompany}"\n                  IsSynchronizedWithCurrentItem="True"/>\n        \n        <!-- Detail ComboBox -->\n        <ComboBox Name="comboBox_ContactName" \n                  ItemsSource="{Binding Path=SelectedCompany.Contacts, Mode=OneWay}"\n                  DisplayMemberPath="ContactName"\n                  IsSynchronizedWithCurrentItem="True"/>\n    </StackPanel>\n</Window>