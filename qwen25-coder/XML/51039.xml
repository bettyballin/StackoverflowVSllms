<?xml version="1.0" encoding="UTF-8"?>\n<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"\n           elementFormDefault="qualified">\n    <xs:element name="root">\n        <xs:complexType>\n            <xs:sequence>\n                <xs:choice minOccurs="0" maxOccurs="unbounded">\n                    <xs:element ref="elementFoo"/>\n                    <xs:element ref="elementHello"/>\n                </xs:choice>\n            </xs:sequence>\n        </xs:complexType>\n    </xs:element>\n\n    <!-- Define element with attribute "foo" containing bar -->\n    <xs:element name="element">\n        <xs:complexType>\n            <xs:choice>\n                <xs:element name="bar"/>\n            </xs:choice>\n            <xs:attribute name="attribute" type="xs:string" fixed="foo"/>\n        </xs:complexType>\n    </xs:element>\n\n    <!-- Define element with attribute "hello" containing world -->\n    <xs:element name="elementHello">\n        <xs:complexType>\n            <xs:sequence>\n                <xs:element name="world"/>\n            </xs:sequence>\n            <xs:attribute name="attribute" type="xs:string" fixed="hello"/>\n        </xs:complexType>\n    </xs:element>\n\n    <!-- Reference elements with appropriate attribute types -->\n    <xs:element name="elementFoo" substitutionGroup="element">\n        <xs:complexType>\n            <xs:complexContent>\n                <xs:restriction base="element">\n                    <xs:sequence>\n                        <xs:element ref="bar"/>\n                    </xs:sequence>\n                </xs:restriction>\n            </xs:complexContent>\n        </xs:complexType>\n    </xs:element>\n\n    <!-- Define the bar and world elements -->\n    <xs:element name="bar"/>\n    <xs:element name="world"/>\n\n</xs:schema>