<!-- validation-rules.xml -->\n<ValidationRules>\n    <Field name="username">\n        <Required>true</Required>\n        <MinLength>5</MinLength>\n        <MaxLength>20</MaxLength>\n        <Pattern>[a-zA-Z0-9_]</Pattern>\n    </Field>\n    <Field name="email">\n        <Required>true</Required>\n        <Pattern>^[^\s@]+@[^\s@]+\.[^\s@]+$</Pattern>\n    </Field>\n</ValidationRules>