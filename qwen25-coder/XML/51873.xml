<configuration>\n  <system.web.extensions>\n    <!-- Disable ScriptModule to prevent automatic registration of AJAX extensions -->\n    <scripting>\n      <webServices>\n        <authenticationService enabled="false" />\n        <profileService enabled="false" readAccessProperties="string0,string1" writeAccessProperties="string1" />\n        <roleService enabled="false" />\n      </webServices>\n      <!-- Disable ScriptManager to prevent automatic adding of AJAX scripts -->\n      <scriptResourceHandler enableCompression="false" enableCaching="true" />\n    </scripting>\n  </system.web.extensions>\n\n  <system.web>\n    <httpHandlers>\n      <!-- Remove the handlers that render the ASMX and WCF script-enabled services -->\n      <remove verb="*" path="*.asmx"/>\n      <add verb="*" path="*.asmx" validate="false" type="System.Web.Script.Services.ScriptHandlerFactory, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>\n      <add verb="*" path="*_AppService.axd" validate="false" type="System.Web.Script.Services.ScriptHandlerFactory, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>\n      <add verb="GET,HEAD" path="ScriptResource.axd" validate="false" type="System.Web.Handlers.ScriptResourceHandler, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>\n    </httpHandlers>\n\n    <httpModules>\n      <!-- Remove the Module that handles AJAX scripts -->\n      <remove name="ScriptModule" />\n    </httpModules>\n\n    <!-- Other settings for your application... -->\n\n  </system.web>\n\n  <system.webServer>\n    <validation validateIntegratedModeConfiguration="false"/>\n\n    <handlers>\n      <!-- Remove handlers similar to httpHandlers in system.web configuration above -->\n      <remove verb="*" path="*.asmx"/>\n      <add name="ScriptHandlerFactory" preCondition="integratedMode" verb="*" path="*.asmx" type="System.Web.Script.Services.ScriptHandlerFactory, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>\n      <add name="ScriptHandlerFactoryAppServices" preCondition="integratedMode" verb="*" path="*_AppService.axd" type="System.Web.Script.Services.ScriptHandlerFactory, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>\n      <add name="ScriptResource" preCondition="integratedMode" verb="GET,HEAD" path="ScriptResource.axd" type="System.Web.Handlers.ScriptResourceHandler, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>\n    </handlers>\n\n    <modules>\n      <!-- Remove the similar module like in httpModules in system.web configuration -->\n      <remove name="ScriptModule" />\n    </modules>\n\n  </system.webServer>\n</configuration>