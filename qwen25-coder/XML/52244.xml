<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n  <xsl:output method="text" indent="no"/>\n\n  <!-- Match the root element and apply templates to each project -->\n  <xsl:template match="/projects">\n    <xsl:for-each select="project">\n      <!-- Select each child node of project and concatenate values with commas -->\n      <xsl:value-of select="name"/>,<xsl:value-of select="language"/>,\n      <xsl:value-of select="owner"/>,<xsl:value-of select="state"/>,\n      <xsl:value-of select="startDate"/>\n      <!-- Add a newline after each project for the CSV format -->\n      <xsl:text>&#10;</xsl:text>\n    </xsl:for-each>\n  </xsl:template>\n\n</xsl:stylesheet>