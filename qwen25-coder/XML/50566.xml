<system.serviceModel>\n    <clients>\n        <endpoint address="net.msmq://localhost/private/YourServiceQueue"\n                  binding="netMsmqBinding"\n                  bindingConfiguration="Certificate_MSMQ_Binding"\n                  contract="YourServiceNamespace.IYourService" />\n    </clients>\n\n    <bindings>\n        <netMsmqBinding>\n            <binding name="Certificate_MSMQ_Binding">\n                <!-- Security mode set to Message for encrypting only the message body. -->\n                <security mode="Message">\n                    <message clientCredentialType="Certificate" />\n                </security>\n            </binding>\n        </netMsmqBinding>\n    </bindings>\n\n    <behaviors>\n        <endpointBehaviors>\n            <behavior>\n                <!-- Specify the client's certificate subject name. -->\n                <clientCredentials>\n                    <serviceCertificate>\n                        <defaultCertificate findValue="YourServerCertificateSubjectName"\n                                          x509FindType="FindBySubjectName"\n                                          storeLocation="LocalMachine"\n                                          storeName="TrustedPeople" />\n                    </serviceCertificate>\n                    <clientCertificate findValue="YourClientCertificateSubjectName"\n                                       x509FindType="FindBySubjectName"\n                                       storeLocation="LocalMachine"\n                                       storeName="My" />\n                </clientCredentials>\n            </behavior>\n        </endpointBehaviors>\n    </behaviors>\n</system.serviceModel>