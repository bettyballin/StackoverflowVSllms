<ivy-settings>\n    <resolvers>\n        <!-- Define a chain resolver that includes your Nexus proxy first -->\n        <chain name="default">\n            <!-- Nexus repository as a proxy for Maven Central -->\n            <ibiblio name="nexus-proxy" m2compatible="true" root="http://localhost:8081/content/groups/public"/>\n            \n            <!-- If you want to fall back to an external repository, e.g., Maven Central -->\n            <ibiblio name="maven-central" m2compatible="true" root="https://repo.maven.apache.org/maven2"/>\n        </chain>\n    </resolvers>\n</ivy-settings>