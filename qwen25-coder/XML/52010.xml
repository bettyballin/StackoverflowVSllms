<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="Force HTTPS" stopProcessing="true">\n          <match url="(.*)" />\n          <conditions>\n            <add input="{HTTPS}" pattern="^OFF$" />\n          </conditions>\n          <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Permanent" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>