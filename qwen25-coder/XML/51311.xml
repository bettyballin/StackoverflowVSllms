<project name="ConditionalExecution" default="check-file-and-run">\n    <taskdef resource="net/sf/antcontrib/antlib.xml" uri="http://ant-contrib.sourceforge.net"/>\n\n    <!-- Define a property to hold the path of your file -->\n    <property name="config.file.path" value="config.properties"/>\n\n    <target name="check-file-and-run">\n        <!-- Check if the file exists -->\n        <available file="${config.file.path}" property="file.exists"/>\n        \n        <!-- Use if task from ant-contrib to conditionally execute target -->\n        <if>\n            <equals arg1="${file.exists}" arg2="true" />\n            <then>\n                <antcall target="special-processing"/>\n            </then>\n            <else>\n                <echo message="Configuration file not found. Skipping special processing."/>\n            </else>\n        </if>\n    </target>\n\n    <!-- Target to run if the file exists -->\n    <target name="special-processing">\n        <echo message="Running special processing..."/>\n        <!-- Add your specific tasks here -->\n    </target>\n</project>