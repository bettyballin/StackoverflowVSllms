<?xml version="1.0" encoding="UTF-8"?>\n<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">\n\n  <xs:element name="hospital">\n    <xs:complexType>\n      <xs:sequence>\n        <xs:element ref="patient" maxOccurs="unbounded"/>\n        <xs:element ref="appointment" maxOccurs="unbounded"/>\n      </xs:sequence>\n    </xs:complexType>\n  </xs:element>\n\n  <!-- Define a patient with an ID -->\n  <xs:element name="patient">\n    <xs:complexType>\n      <xs:attribute name="id" type="xs:string" use="required">\n        <xs:key>\n          <xs:selector xpath="."/>\n          <xs:field xpath="@id"/>\n        </xs:key>\n      </xs:attribute>\n      <!-- Other attributes or elements related to a patient -->\n    </xs:complexType>\n  </xs:element>\n\n  <!-- Define an appointment with IDREF referencing patients -->\n  <xs:element name="appointment">\n    <xs:complexType>\n      <xs:sequence>\n        <xs:element name="date" type="xs:date"/>\n        <xs:element name="time" type="xs:string"/>\n      </xs:sequence>\n      <xs:attribute name="patientId" type="xs:string" use="required">\n        <xs:keyref name="appointmentPatientRef" refer="patient">\n          <xs:selector xpath="."/>\n          <xs:field xpath="@patientId"/>\n        </xs:keyref>\n      </xs:attribute>\n    </xs:complexType>\n  </xs:element>\n\n</xs:schema>