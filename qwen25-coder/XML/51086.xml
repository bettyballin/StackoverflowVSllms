<!-- Example XSLT snippet to illustrate combining elements -->\n<xsl:stylesheet version="1.0"\n                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    <xsl:template match="/">\n        <IntegratedMessage>\n            <!-- Copy data from first source message -->\n            <DataFromSource1>\n                <xsl:value-of select="/SourceMessage1/DataElement"/>\n            </DataFromSource1>\n            \n            <!-- Copy data from second source message -->\n            <DataFromSource2>\n                <xsl:value-of select="/SourceMessage2/AnotherDataElement"/>\n            </DataFromSource2>\n        </IntegratedMessage>\n    </xsl:template>\n</xsl:stylesheet>