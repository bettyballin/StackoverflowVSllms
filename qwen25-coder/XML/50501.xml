<Connector name="https" protocol="HTTP/1.1" \n           socket-binding="https" scheme="https" security-realm="SSLRealm"/>\n\n<Subsystem xmlns="urn:jboss:domain:undertow:8.0">\n    <server name="default-server">\n        <http-listener name="default" socket-binding="http"/>\n        <https-listener name="https" socket-binding="https" security-realm="SSLRealm" max-parameters="2048"/>\n\n        // Add SSLHostConfig for each hostname\n        <host name="foo.com" alias="www.foo.com">\n            <ssl-context name="ssl-foo-com"/>\n        </host>\n\n        <host name="bar.com" alias="www.bar.com">\n            <ssl-context name="ssl-bar-com"/>\n        </host>\n    </server>\n\n    // Define SSL contexts\n    <security-realm name="SSLRealm">\n        <server-identities>\n            <!-- SSLContext for foo.com -->\n            <ssl>\n                <keystore path="/path/to/keystore_foo_com.jks" relative-to="jboss.server.config.dir"\n                          keystore-password="your_keystore_password"/>\n            </ssl>\n\n            <!-- SSLContext for bar.com -->\n            <ssl name="ssl-bar-com">\n                <keystore path="/path/to/keystore_bar_com.jks" relative-to="jboss.server.config.dir"\n                          keystore-password="your_keystore_password"/>\n            </ssl>\n        </server-identities>\n    </security-realm>\n\n</Subsystem>