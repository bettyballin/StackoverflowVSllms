<build>\n    <plugins>\n        <plugin>\n            <groupId>org.apache.maven.plugins</groupId>\n            <artifactId>maven-assembly-plugin</artifactId>\n            <version>3.3.0</version>\n            <configuration>\n                <descriptors>\n                    <descriptor>src/assembly/dist.xml</descriptor>\n                </descriptors>\n                <archive>\n                    <manifest>\n                        <mainClass></mainClass>\n                    </manifest>\n                </archive>\n            </configuration>\n            <executions>\n                <execution>\n                    <id>make-assembly</id>\n                    <phase>package</phase>\n                    <goals>\n                        <goal>single</goal>\n                    </goals>\n                </execution>\n            </executions>\n        </plugin>\n\n        <!-- Configure Jetty with all webapps -->\n        <plugin>\n            <groupId>org.apache.maven.plugins</groupId>\n            <artifactId>maven-jetty-plugin</artifactId>\n            <version>9.4.40.v20210413</version>\n            <configuration>\n                <scanIntervalSeconds>10</scanIntervalSeconds>\n                <webAppConfig>\n                    <contextPath>/</contextPath>\n                    <war>${project.build.directory}/myapp.war</war>\n                    <extraClasspath>\n                        ${project.build.directory}/geoserver-*.war\n                    </extraClasspath>\n                </webAppConfig>\n            </configuration>\n        </plugin>\n    </plugins>\n</build>