<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"\n    version="1.0">\n    \n    <!-- Identity template to copy all nodes and attributes -->\n    <xsl:template match="@*|node()">\n        <xsl:copy>\n            <xsl:apply-templates select="@*|node()"/>\n        </xsl:copy>\n    </xsl:template>\n\n    <!-- Template to modify the content node -->\n    <xsl:template match="content">\n        <xsl:copy>\n            <xsl:for-each select="*">\n                <!-- Copy the h2 element as it is -->\n                <xsl:if test="self::h2">\n                    <xsl:apply-templates select="."/>\n                </xsl:if>\n                \n                <!-- Insert new p with a link after h2 -->\n                <xsl:if test="preceding-sibling::*[1][self::h2] and self::p">\n                    <p><a href="https://example.com/new-link">New Link</a></p>\n                </xsl:if>\n                \n                <!-- Copy the rest of the nodes as they are -->\n                <xsl:apply-templates select="."/>\n            </xsl:for-each>\n        </xsl:copy>\n    </xsl:template>\n\n</xsl:stylesheet>