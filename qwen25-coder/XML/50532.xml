<configuration>\n  <system.webServer>\n    <!-- IP Security Settings -->\n    <security>\n      <ipSecurity allowUnlisted="false">\n        <add ipAddress="192.168.1.10" allowed="true"/> <!-- Add each tester's IP here -->\n        <add ipAddress="192.168.1.11" allowed="true"/>\n      </ipSecurity>\n    </security>\n\n    <!-- URL Rewrite Rule for maintenance page -->\n    <rewrite>\n      <rules>\n        <rule name="Maintenance Mode" stopProcessing="true">\n          <match url=".*" />\n          <conditions logicalGrouping="MatchAll">\n            <add input="{REMOTE_ADDR}" pattern="^(?!192\.168\.1\.10$)(?!192\.168\.1\.11$).*$" />\n          </conditions>\n          <action type="Rewrite" url="maintenance.html" appendQueryString="false" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>