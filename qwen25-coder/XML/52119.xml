<system.webServer>\n    <rewrite>\n        <rules>\n            <rule name="RewriteStaticImages" stopProcessing="true">\n                <match url="^(images/.*)" />\n                <conditions logicalGrouping="MatchAny">\n                    <add input="{HTTP_HOST}" pattern="localhost" negate="true" />\n                </conditions>\n                <action type="Redirect" url="{AppSettings:StaticContentDomain}/{R:1}" appendQueryString="false" redirectType="Permanent" />\n            </rule>\n        </rules>\n    </rewrite>\n</system.webServer>