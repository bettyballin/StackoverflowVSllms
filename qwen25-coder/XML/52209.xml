<system.web>\n  <webServices>\n    <protocols>\n      <add name="HttpPost"/>\n      <remove name="HttpGet"/>\n    </protocols>\n    <secureProtocols>tls13;tls12</secureProtocols>\n  </webServices>\n</system.web>\n\n<!-- Force HTTPS -->\n<rewrite>\n  <rules>\n    <rule name="HTTP to HTTPS redirect" stopProcessing="true">\n      <match url="(.*)" />\n      <conditions>\n        <add input="{HTTPS}" pattern="off" ignoreCase="true" />\n      </conditions>\n      <action type="Redirect" url="https://{HTTP_HOST}/{R:1}"\n              appendQueryString="true" redirectType="Permanent" />\n    </rule>\n  </rules>\n</rewrite>