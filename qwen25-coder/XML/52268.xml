<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">\n\n  <PropertyGroup>\n    <!-- Path to vnu.jar -->\n    <HtmlValidatorJarPath>path\to\vnu.jar</HtmlValidatorJarPath>\n    <NpmPackagesRoot>$(SolutionDir)\node_modules</NpmPackagesRoot>\n    <CSSLintPath>$([System.IO.Path]::Combine($(NpmPackagesRoot), '.bin', 'csslint.cmd'))</CSSLintPath>\n  </PropertyGroup>\n\n  <!-- Item Groups for HTML and CSS Files -->\n  <ItemGroup>\n    <HtmlFiles Include="**\*.html;**\*.htm" />\n    <CssFiles Include="**\*.css" />\n  </ItemGroup>\n\n  <!-- Validate HTML Targets -->\n  <Target Name="ValidateHTML">\n    <Message Text="Validating HTML files..." Importance="high" />\n    <Exec Command="java -jar "$(HtmlValidatorJarPath)" @(HtmlFiles, ' ')" ContinueOnError="false" />\n  </Target>\n\n  <!-- Validate CSS Targets -->\n  <Target Name="ValidateCSS">\n    <Message Text="Validating CSS files..." Importance="high" />\n    <Exec Command="$(CSSLintPath)@(CssFiles, ' ')" ContinueOnError="false" />\n  </Target>\n\n  <!-- Add as part of Build -->\n  <Target Name="BeforeBuild">\n    <CallTarget Targets="ValidateHTML; ValidateCSS" />\n  </Target>\n  \n</Project>