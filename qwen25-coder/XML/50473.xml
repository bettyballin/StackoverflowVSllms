<configuration>\n  <system.webServer>\n    <security>\n      <requestFiltering>\n        <hiddenSegments>\n          <add segment="Templates" />\n        </hiddenSegments>\n      </requestFiltering>\n    </security>\n    <!-- Alternatively, deny direct http access to the files -->\n    <staticContent>\n      <clientCache cacheControlMode="DisableCache" />\n    </staticContent>\n    <httpProtocol>\n      <customHeaders>\n        <clear />\n      </customHeaders>\n    </httpProtocol>\n  </system.webServer>\n\n  <!-- Deny all scripts and other handlers in this directory -->\n  <location path="Templates">\n    <system.web>\n      <authorization>\n        <deny users="*"/>\n      </authorization>\n    </system.web>\n  </location>\n</configuration>