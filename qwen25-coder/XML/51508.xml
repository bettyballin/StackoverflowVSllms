<Application x:Class="GraphPaperApp.App"\n             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"\n             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"\n             StartupUri="MainWindow.xaml">\n    <Application.Resources>\n        <DrawingBrush x:Key="GraphPaperBrush" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">\n            <DrawingBrush.Drawing>\n                <GeometryDrawing Brush="White">\n                    <GeometryDrawing.Geometry>\n                        <GeometryGroup>\n                            <!-- Horizontal lines -->\n                            <RectangleGeometry Rect="0,0,10,1"/>\n                            <RectangleGeometry Rect="0,9,10,1"/>\n                            \n                            <!-- Vertical Lines -->\n                            <RectangleGeometry Rect="0,0,1,10"/>\n                            <RectangleGeometry Rect="9,0,1,10"/>\n                        </GeometryGroup>\n                    </GeometryDrawing.Geometry>\n                    <GeometryDrawing.Pen>\n                        <Pen Brush="Black" Thickness="1"/>\n                    </GeometryDrawing.Pen>\n                </GeometryDrawing>\n            </DrawingBrush.Drawing>\n        </DrawingBrush>\n    </Application.Resources>\n</Application>