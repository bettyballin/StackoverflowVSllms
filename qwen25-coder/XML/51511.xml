<configuration>\n  <system.webServer>\n    <rewrite>\n      <outboundRules>\n        <rule name="Rewrite Host Name" preCondition="ResponseIsHtml1">\n          <match filterByTags="A, Area, Base, Form, Frame, Head, IFrame, Img, Input, Link, Script"\n                 pattern="^http://abc\.xyz\.com/(.*)$" />\n          <action type="Rewrite" value="http://xyz.com/sites/abc/{R:1}" />\n        </rule>\n        <preConditions>\n          <preCondition name="ResponseIsHtml1">\n            <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html" />\n          </preCondition>\n        </preConditions>\n      </outboundRules>\n    </rewrite>\n  </system.webServer>\n</configuration>