<servlet>\n    <servlet-name>proxy</servlet-name>\n    <servlet-class>org.apache.catalina.servlets.ProxyServlet</servlet-class>\n    <init-param>\n        <param-name>proxyName</param-name>\n        <param-value>your-domain.com</param-value>\n    </init-param>\n    <init-param>\n        <param-name>proxyPort</param-name>\n        <param-value>80</param-value>\n    </init-param>\n    <init-param>\n        <param-name>prefix</param-name>\n        <param-value>/http-bind</param-value>\n    </init-param>\n    <load-on-startup>1</load-on-startup>\n</servlet>\n\n<servlet-mapping>\n    <servlet-name>proxy</servlet-name>\n    <url-pattern>/http-bind/*</url-pattern>\n</servlet-mapping>