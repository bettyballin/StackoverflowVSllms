<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <!-- Rule to enforce www and HTTPS -->\n        <rule name="Redirect non-www & HTTP to https://www" stopProcessing="true">\n          <match url="(.*)" />\n          <conditions logicalGrouping="MatchAny">\n            <add input="{HTTP_HOST}" pattern="^example\.com$" />\n            <add input="{HTTPS}" pattern="off" ignoreCase="true" />\n          </conditions>\n          <action type="Redirect" url="https://www.example.com/{R:1}" redirectType="Permanent" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>