<Window x:Class="WpfApp.MainWindow"\n        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"\n        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"\n        Title="MainWindow" Height="450" Width="800">\n    <Grid>\n        <!-- Define Grid Rows and Columns -->\n        <Grid.RowDefinitions>\n            <RowDefinition/>\n            <RowDefinition/>\n            <RowDefinition/>\n        </Grid.RowDefinitions>\n        <Grid.ColumnDefinitions>\n            <ColumnDefinition/>\n            <ColumnDefinition/>\n            <ColumnDefinition/>\n        </Grid.ColumnDefinitions>\n\n        <!-- Style each cell individually with Borders and Background -->\n        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Background="#FFEFF4F9">\n            <TextBlock Text="Cell 0,0" Margin="5"/>\n        </Border>\n        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Background="#FFDCE6EC">\n            <TextBlock Text="Cell 0,1" Margin="5"/>\n        </Border>\n        <!-- Continue for other cells similarly -->\n        \n        <!-- Example for row styling (using a different approach) -->\n        <Grid Grid.Row="1" Grid.ColumnSpan="3" Background="#FFBFD8E6">\n            <TextBlock Text="This is Row 1" HorizontalAlignment="Center" Margin="5"/>\n        </Grid>\n    </Grid>\n</Window>