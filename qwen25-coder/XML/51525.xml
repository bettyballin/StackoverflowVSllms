<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"\n    version="1.0">\n\n    <!-- Template to match the root element -->\n    <xsl:template match="/">\n        <html>\n            <body>\n                <h2>Converted Values</h2>\n                <table border="1">\n                    <tr>\n                        <th>Type</th>\n                        <th>Original Value</th>\n                        <th>Converted Value</th>\n                    </tr>\n                    <!-- Example for meter to micrometers -->\n                    <xsl:for-each select="//length">\n                        <tr>\n                            <td>Length</td>\n                            <td><xsl:value-of select="."/> m</td>\n                            <td><xsl:value-of select=". * 1000000"/> um</td>\n                        </tr>\n                    </xsl:for-each>\n                    \n                    <!-- Example for newton to millinewtons -->\n                    <xsl:for-each select="//force">\n                        <tr>\n                            <td>Force</td>\n                            <td><xsl:value-of select="."/> N</td>\n                            <td><xsl:value-of select=". * 1000"/> mN</td>\n                        </tr>\n                    </xsl:for-each>\n                </table>\n            </body>\n        </html>\n    </xsl:template>\n\n</xsl:stylesheet>