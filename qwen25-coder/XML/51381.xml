<system.webServer>\n  <rewrite>\n    <rules>\n      <rule name="HTTP to HTTPS redirect" stopProcessing="true">\n        <match url="(.*)" />\n        <conditions>\n          <add input="{HTTPS}" pattern="off" ignoreCase="true" />\n        </conditions>\n        <action type="Redirect" url="https://{HTTP_HOST}/{R:1}"\n                redirectType="Permanent" />\n      </rule>\n    </rules>\n  </rewrite>\n</system.webServer>