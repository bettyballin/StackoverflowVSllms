<dependencies>\n       <!-- Other dependencies -->\n       \n       <dependency>\n           <groupId>org.hibernate</groupId>\n           <artifactId>hibernate-core</artifactId>\n           <version>5.4.30.Final</version>\n       </dependency>\n       <dependency>\n           <groupId>org.hibernate.tool</groupId>\n           <artifactId>hibernate-tools</artifactId>\n           <version>5.4.30.Final</version>\n       </dependency>\n   </dependencies>\n\n   <build>\n       <plugins>\n           <plugin>\n               <groupId>org.apache.maven.plugins</groupId>\n               <artifactId>maven-antrun-plugin</artifactId>\n               <version>3.0.0</version>\n               <executions>\n                   <execution>\n                       <id>generate-ddl</id>\n                       <phase>process-classes</phase>\n                       <goals>\n                           <goal>run</goal>\n                       </goals>\n                       <configuration>\n                           <tasks>\n                               <taskdef name="hibernatetool" classname="org.hibernate.tool.ant.HibernateToolTask">\n                                   <classpath refid="maven.compile.classpath"/>\n                                   <classpath path="${project.build.outputDirectory}"/>\n                               </taskdef>\n                               <hibernatetool destdir="${project.build.directory}/generated-resources/ddl">\n                                   <jpaconfiguration persistenceunit="your-persistence-unit-name" propertyfile="src/main/resources/hibernate.properties"/>\n                                   <hbm2ddl haltonerror="false" export="true" drop="false" update="false" create="true" format="true"/>\n                               </hibernatetool>\n                           </tasks>\n                       </configuration>\n                   </execution>\n               </executions>\n           </plugin>\n       </plugins>\n   </build>