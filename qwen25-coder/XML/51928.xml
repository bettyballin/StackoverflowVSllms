<?xml version="1.0"?>\n<xsl:stylesheet version="2.0"\n                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n    <xsl:output method="xml" indent="yes"/>\n\n    <xsl:template match="dag">\n        <minimal-vertices>\n            <!-- Use the except operator to exclude vertices that have incoming edges -->\n            <xsl:for-each select="(vertex/@name) except (vertex/directed-edge-to/@vertex)">\n                <minimal-vertex name="{.}"/>\n            </xsl:for-each>\n        </minimal-vertices>\n    </template>\n\n</xsl:stylesheet>