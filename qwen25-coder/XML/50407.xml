<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <rule name="Redirect mydomain.com to www.mydomain.com" stopProcessing="true">\n                    <match url="(.*)" />\n                    <conditions>\n                        <add input="{HTTP_HOST}" pattern="^mydomain\.com$" />\n                    </conditions>\n                    <action type="Redirect" url="http://www.mydomain.com/{R:1}" redirectType="Permanent" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>