<configuration>\n  <system.webServer>\n    <!-- Deny all users by default -->\n    <security>\n      <authorization>\n        <deny users="?" />\n      </authorization>\n    </security>\n\n    <!-- Basic authentication for ELMAH RSS feed -->\n    <location path="elmah.axd/rss">\n      <system.webServer>\n        <security>\n          <authentication>\n            <basicAuthentication enabled="true" realm="ELMAHRSS" />\n            <anonymousAuthentication enabled="false" />\n          </authentication>\n          <authorization>\n            <allow users="adminUsername" /> <!-- Replace with your admin username -->\n            <deny users="?" />\n          </authorization>\n        </security>\n      </system.webServer>\n    </location>\n\n    <!-- Other configuration settings for ELMAH -->\n    <handlers>\n      <add name="ELMAH" verb="POST,GET,HEAD" path="elmah.axd" type="Elmah.ErrorLogPageFactory, Elmah" resourceType="Unspecified" preCondition="integratedMode" />\n      <remove name="WebDAV" />\n    </handlers>\n\n    <modules>\n      <add name="ErrorLog" type="Elmah.ErrorLogModule, Elmah" preCondition="managedHandler" />\n    </modules>\n  </system.webServer>\n  \n  <!-- System.Web settings -->\n  <system.web>\n    <authentication mode="Forms">\n      <!-- Other forms authentication settings -->\n    </authentication>\n    \n    <location path="elmah.axd/rss">\n      <system.web>\n        <authorization>\n          <allow roles="Admins" /> <!-- Ensure your admin users have the Admins role -->\n          <deny users="*" />\n        </authorization>\n      </system.web>\n    </location>\n  </system.web>\n</configuration>