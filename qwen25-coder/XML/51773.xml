<configuration>\n    <system.webServer>\n        <!-- Block specific User Agents -->\n        <security>\n            <requestFiltering>\n                <filteringRules>\n                    <rule name="BlockBadBot1" denyUrlSequences="[B|b]ot">\n                        <match sequence="BadBot1" />\n                    </rule>\n                    <rule name="BlockBadBot2" denyUrlSequences="[B|b]ot">\n                        <match sequence="BadBot2" />\n                    </rule>\n                </filteringRules>\n            </requestFiltering>\n        </security>\n\n        <!-- URL Rewriting to handle logging -->\n        <rewrite>\n            <rules>\n                <rule name="Hide Bad Bots from Logs" stopProcessing="true">\n                    <match url=".*" />\n                    <conditions logicalGrouping="MatchAny">\n                        <add input="{HTTP_USER_AGENT}" pattern="BadBot1" ignoreCase="true" />\n                        <add input="{HTTP_USER_AGENT}" pattern="BadBot2" ignoreCase="true" />\n                    </conditions>\n                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>