<project name="SchemaSpy" default="run.schemaspy" xmlns:ivy="antlib:org.apache.ivy.ant">\n    <!-- Define the JDBC driver dependency -->\n    <path id="schemaspy.classpath">\n        <fileset dir="path/to/schemaspy/jars" includes="**/*.jar"/>\n        <fileset dir="path/to/your/database/driver" includes="**/*.jar"/>\n    </path>\n\n    <!-- Task to invoke SchemaSpy -->\n    <target name="run.schemaspy">\n        <java classname="schemaspy.SchemaSpy" fork="true" failonerror="true">\n            <classpath refid="schemaspy.classpath"/>\n            <arg value="-t"/> <arg value="your-db-type"/>  <!-- e.g., pgsql, mysql -->\n            <arg value="-db"/> <arg value="your_database_name"/>\n            <arg value="-dbtype"/> <arg value="your_db_type"/>\n            <arg value="-s"/> <arg value="your_schema_if_needed"/> <!-- Optional -->\n            <arg value="-u"/> <arg value="your_username"/>\n            <arg value="-p"/> <arg value="your_password"/>\n            <arg value="-o"/> <arg value="${project.build.directory}/schemaSpy-output"/>\n        </java>\n    </target>\n</project>