<!-- In your web.config -->\n<system.web>\n  <httpRuntime maxRequestLength="10240" executionTimeout="3600" />\n</system.web>\n\n<configuration>\n  <system.webServer>\n    <asp scriptErrorSentToBrowser="false">\n      <performance numRecompilesBeforeAppRestart="50" />\n    </asp>\n    <security>\n      <requestFiltering>\n        <requestLimits maxAllowedContentLength="104857600" />\n      </requestFiltering>\n    </security>\n    <httpProtocol>\n      <customHeaders>\n        <!-- Adjust keep-alive settings -->\n        <add name="Keep-Alive" value="timeout=20, max=100" />\n      </customHeaders>\n    </httpProtocol>\n  </system.webServer>\n</configuration>