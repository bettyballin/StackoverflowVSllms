<project name="EnvironmentProperty" default="check-property">\n    <!-- Load environment variables -->\n    <property environment="env"/>\n\n    <!-- Define property with default if env variable not set -->\n    <condition property="fileTargetName" value="${env.RELEASE_VER}">\n        <isset property="env.RELEASE_VER"/>\n    </condition>\n    <property name="fileTargetName" value="dev"/>\n\n    <!-- Example target to print the property -->\n    <target name="check-property">\n        <echo message="The fileTargetName is set to: ${fileTargetName}"/>\n    </target>\n</project>