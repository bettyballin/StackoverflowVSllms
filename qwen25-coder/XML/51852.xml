<system.webServer>\n    <rewrite>\n        <rules>\n            <rule name="Redirect extensionless URLs" stopProcessing="true">\n                <match url="^example/([^/]*)$" />\n                <conditions logicalGrouping="MatchAll" trackAllCaptures="false">\n                    <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />\n                    <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />\n                </conditions>\n                <action type="Redirect" url="/default.aspx?article={R:1}" redirectType="Permanent" />\n            </rule>\n        </rules>\n    </rewrite>\n</system.webServer>