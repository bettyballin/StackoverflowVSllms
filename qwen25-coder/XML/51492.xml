<project name="MyProject" default="release">\n\n    <property name="debug.flag" value="false"/>\n    <property name="output.dir" value="bin"/>\n\n    <target name="clean">\n        <delete dir="${output.dir}"/>\n        <mkdir dir="${output.dir}"/>\n    </target>\n\n    <target name="compile-debug" depends="clean">\n        <mxmlc file="src/Main.as"\n            output="${output.dir}/MyProject.swf"\n            defines="DEBUG=true"\n            debug="true"\n            optimize="false"/>\n    </target>\n\n    <target name="release" depends="clean">\n        <mxmlc file="src/Main.as"\n            output="${output.dir}/MyProject.swf"\n            defines="DEBUG=false"\n            debug="false"\n            optimize="true"/>\n    </target>\n\n</project>