<!-- Example: Simple Mondrian Schema -->\n<Schema name="Sales">\n    <Cube name="Quarterly Sales" cache="true" enabled="true">\n        <Table name="sales_fact_1997"/>\n        <!-- Define dimensions and hierarchies here -->\n        <Dimension type="StandardDimension" visible="true" highCardinality="false" foreignKey="time_id">\n            <Hierarchy hasAll="true" primaryKey="time_id">\n                <Table name="time_by_day"/>\n                <Level name="Year" column="the_year" type="Numeric" uniqueMembers="true">\n                    <Property name="YEAR_WA" column="week_of_year_as_char" type="String"/>\n                </Level>\n            </Hierarchy>\n        </Dimension>\n        <!-- Measures defined here -->\n        <Measure name="Unit Sales" column="unit_sales" datatype="Integer" aggregator="sum" formatString="#,###">\n            <Property name="DATATYPE" value="Numeric"/>\n        </Measure>\n    </Cube>\n</Schema>