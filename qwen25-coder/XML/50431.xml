<project name="GenerateSQLSchema" default="hbm2ddl" basedir=".">\n    <property name="hb.path" location="/path/to/hibernate"/>\n    <taskdef name="schemaexport"\n             classname="org.hibernate.tool.ant.SchemaExportTask">\n        <classpath>\n            <fileset dir="${hb.path}/lib">\n                <include name="**/*.jar"/>\n            </fileset>\n        </classpath>\n    </taskdef>\n\n    <target name="hbm2ddl" description="Generate the Database schema">\n        <schemaexport\n            quiet="no"\n            format="true"\n            properties="hibernate.properties"\n            text="false"\n            drop="true"\n            output="/path/to/output/dbscript.sql">\n            <fileset dir="com/example/yourproject">\n                <include name="**/*.class"/>\n            </fileset>\n        </schemaexport>\n    </target>\n</project>