<system.webServer>\n    <rewrite>\n        <rules>\n            <rule name="ReplaceSpacesWithDashes" stopProcessing="true">\n                <match url="(.*)" />\n                <conditions logicalGrouping="MatchAll">\n                    <add input="{REQUEST_URI}" pattern="%20" />\n                </conditions>\n                <action type="Redirect" url="{R:1:%20-}" appendQueryString="true" redirectType="Permanent" />\n            </rule>\n        </rules>\n    </rewrite>\n</system.webServer>