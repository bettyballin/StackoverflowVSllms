<configuration>\n    <system.web>\n        <authentication mode="Forms">\n            <forms name=".ASPXAUTH" timeout="30" protection="All" path="/" loginUrl="~/login.aspx" />\n        </authentication>\n        <authorization>\n            <deny users="?" />\n        </authorization>\n    </system.web>\n\n    <!-- Configure IIS to use Asp.Net for .pdf files -->\n    <system.webServer>\n        <staticContent>\n            <mimeMap fileExtension=".pdf" mimeType="application/pdf" />\n        </staticContent>\n    </system.webServer>\n\n    <location path="mydoc.pdf">\n        <system.web>\n            <authorization>\n                <allow roles="authenticated" />\n                <deny users="?" />\n            </authorization>\n        </system.web>\n    </location>\n\n    <!-- Ensure ASP.NET handles .pdf requests -->\n    <httpHandlers>\n        <!-- Add this handler to let aspnet_isapi.dll serve pdf files -->\n        <add verb="*" path="*.pdf" type="System.Web.StaticFileHandler" />\n    </httpHandlers>\n</configuration>