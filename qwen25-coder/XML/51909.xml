<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <!-- Rule for handling the root URL -->\n        <rule name="Root URL" stopProcessing="true">\n          <match url="^$" />\n          <action type="Rewrite" url="/index.php?page=home" />\n        </rule>\n        <!-- Existing rule to handle other pages -->\n        <rule name="Other Pages" stopProcessing="true">\n          <match url="^([^/.]+)/?.html" />\n          <action type="Rewrite" url="/index.php?page={R:1}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>