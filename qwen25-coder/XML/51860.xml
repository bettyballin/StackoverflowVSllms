<Configure id="Server" class="org.eclipse.jetty.server.Server">\n       <!-- ... other configurations ... -->\n       \n       <!-- sslContextFactory -->\n       <New id="sslContextFactory" class="org.eclipse.jetty.util.ssl.SslContextFactory.Client">\n           <Set name="KeyStorePath">/path/to/your/keystore.jks</Set>\n           <Set name="KeyStorePassword">yourKeystorePassword</Set>\n           <Set name="CertAlias">yourCertificateAlias</Set> <!-- Use if you have multiple certificates in the store -->\n       </New>\n\n       <!-- Connectors -->\n       <Call name="addConnector">\n           <Arg>\n               <New id="sslConnector" class="org.eclipse.jetty.server.ServerConnector">\n                   <Arg><Ref refid="Server"/></Arg>\n                   <Arg>\n                       <New class="org.eclipse.jetty.server.SslConnectionFactory">\n                           <Arg><Ref refid="sslContextFactory"/></Arg>\n                           <Arg>http/1.1</Arg>\n                       </New>\n                   </Arg>\n                   <Set name="Port">8443</Set>\n               </New>\n           </Arg>\n       </Call>\n\n       <!-- ... other configurations ... -->\n   </Configure>