<build>\n    <plugins>\n        <!-- Unit Tests Configuration -->\n        <plugin>\n            <groupId>org.apache.maven.plugins</groupId>\n            <artifactId>maven-surefire-plugin</artifactId>\n            <version>2.22.2</version> <!-- Ensure use of a recent version for better integration with JUnit 5 if using -->\n        </plugin>\n\n        <!-- Integration Tests Configuration -->\n        <plugin>\n            <groupId>org.apache.maven.plugins</groupId>\n            <artifactId>maven-failsafe-plugin</artifactId>\n            <version>2.22.2</version>\n            <executions>\n                <execution>\n                    <id>integration-test</id>\n                    <goals>\n                        <goal>integration-test</goal>\n                        <goal>verify</goal>\n                    </goals>\n                </execution>\n            </executions>\n        </plugin>\n\n        <!-- If you need to start/stop an external service like HSQL -->\n        <plugin>\n            <groupId>org.codehaus.mojo</groupId>\n            <artifactId>exec-maven-plugin</artifactId>\n            <version>3.0.0</version>\n            <executions>\n                <execution>\n                    <id>start-hsql</id>\n                    <phase>pre-integration-test</phase>\n                    <goals>\n                        <goal>java</goal>\n                    </goals>\n                    <configuration>\n                        <mainClass>path.to.HSQLStartScript</mainClass>\n                    </configuration>\n                </execution>\n                <execution>\n                    <id>stop-hsql</id>\n                    <phase>post-integration-test</phase>\n                    <goals>\n                        <goal>java</goal>\n                    </goals>\n                    <configuration>\n                        <mainClass>path.to.HSQLStopScript</mainClass>\n                    </configuration>\n                </execution>\n            </executions>\n        </plugin>\n    </plugins>\n</build>\n\n<reporting>\n    <plugins>\n        <!-- Surefire Report Plugin for Unit Tests -->\n        <plugin>\n            <groupId>org.apache.maven.plugins</groupId>\n            <artifactId>maven-surefire-report-plugin</artifactId>\n            <version>2.22.2</version>\n        </plugin>\n\n        <!-- Failsafe Report Plugin for Integration Tests -->\n        <plugin>\n            <groupId>org.apache.maven.plugins</groupId>\n            <artifactId>maven-failsafe-plugin</artifactId>\n            <version>2.22.2</version>\n        </plugin>\n    </plugins>\n</reporting>