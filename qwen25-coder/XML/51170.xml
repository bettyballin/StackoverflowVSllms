<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">\n  <PropertyGroup>\n    <!-- Paths -->\n    <HtmlToMhtExe>path\to\html2mht.exe</HtmlToMhtExe>\n    <InputHtmlFile>path\to\your\file.html</InputHtmlFile>\n    <OutputMhtFile>output.mht</OutputMhtFile>\n  </PropertyGroup>\n\n  <!-- Define the custom target -->\n  <Target Name="ConvertHTMLToMHT">\n    <Exec Command="$(HtmlToMhtExe) -in $(InputHtmlFile) -out $(OutputMhtFile)" />\n  </Target>\n\n  <!-- Include the ConvertHTMLToMHT target in the build process -->\n  <PropertyGroup>\n    <BuildDependsOn>\n      $(BuildDependsOn);\n      ConvertHTMLToMHT;\n    </BuildDependsOn>\n  </PropertyGroup>\n</Project>