<configuration>\n       <system.webServer>\n           <handlers>\n               <add name="PHP_via_FastCGI"\n                    path="*.php"\n                    verb="*"\n                    modules="FastCgiModule"\n                    scriptProcessor="c:\php\php-cgi.exe"\n                    resourceType="File" />\n           </handlers>\n\n           <fastCgi>\n               <application fullPath="c:\php\php-cgi.exe" arguments="-c c:\php">\n                   <environmentVariables>\n                       <environmentVariable name="PHP_FCGI_MAX_REQUESTS" value="10000" />\n                   </environmentVariables>\n               </application>\n           </fastCgi>\n       </system.webServer>\n   </configuration>