<?xml version="1.0"?>\n<xsl:stylesheet version="2.0"\n                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n    <xsl:output method="xml" indent="yes"/>\n\n    <xsl:template match="dag">\n        <minimal-vertices>\n            <!-- Select vertices that are not referenced by any directed-edge-to -->\n            <xsl:for-each select="vertex[not(@name = /dag/vertex/directed-edge-to/@vertex)]">\n                <minimal-vertex name="{@name}"/>\n            </xsl:for-each>\n        </minimal-vertices>\n    </template>\n\n</xsl:stylesheet>