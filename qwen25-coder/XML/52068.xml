<Project DefaultTargets="Deploy" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">\n  <!-- Other project settings -->\n\n  <PropertyGroup>\n    <!-- Define your remote server and path -->\n    <RemoteServer>your-remote-server</RemoteServer>\n    <SiteName>YourWebSiteName</SiteName>\n    <VirtualDirectory>/YourVDir</VirtualDirectory>\n    <MSDeployPath>c:\Program Files\IIS\Microsoft Web Deploy V2\msdeploy.exe</MSDeployPath>\n  </PropertyGroup>\n\n  <!-- Custom Target -->\n  <Target Name="Deploy">\n    <Exec Command="$(MSDeployPath) -verb:sync -source:contentPath='$(ProjectDir)_PublishedWebsites\YourWebApp',setParamFile='$(ProjectDir)your-parameters.xml' -dest:auto,computerName='https://$(RemoteServer):8172/msdeploy.axd?site=$(SiteName)$(VirtualDirectory)',username=your-username,password=your-password,authtype=Basic" />\n  </Target>\n</Project>