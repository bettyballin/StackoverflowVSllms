<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <rule name="Rewrite to animal.html" stopProcessing="true">\n                    <match url="^thesite/animal/([^/]+)/?$" />\n                    <action type="Rewrite" url="/thesite/animal.html?category={R:1}" />\n                </rule>\n                <rule name="Rewrite with subcategory" stopProcessing="true">\n                    <match url="^thesite/animal/([^/]+)/([^/]+)/?$" />\n                    <action type="Rewrite" url="/thesite/animal.html?category={R:1}&subcategory={R:2}" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>