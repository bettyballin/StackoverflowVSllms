<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="Redirect from HTML to ASP" stopProcessing="true">\n          <match url="^(.*)\.html$" />\n          <conditions logicalGrouping="MatchAll">\n            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />\n            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />\n          </conditions>\n          <action type="Redirect" url="{R:1}.asp" redirectType="Permanent" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>