' Define a delegate for the property's get method\nPublic Delegate Function StringGetter() As String\n\nModule Module1\n    Sub Main()\n        ' Create an instance of a class that has the PropertyName property\n        Dim myObject As New MyClassWithProperty()\n\n        ' Instantiate the delegate with the property's getter\n        Dim t As StringGetter = AddressOf myObject.PropertyName_Getter\n\n        ' Use the delegate to get the value of the property\n        Console.WriteLine(t())\n    End Sub\nEnd Module\n\nPublic Class MyClassWithProperty\n    Private _propertyName As String = "Sample Property Value"\n\n    Public Overridable ReadOnly Property PropertyName() As String\n        Get\n            Return _propertyName\n        End Get\n    End Property\n\n    ' Expose the getter as a method that can be pointed to by a delegate\n    Public Function PropertyName_Getter() As String\n        Return Me.PropertyName\n    End Function\nEnd Class