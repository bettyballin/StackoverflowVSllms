Private Sub Form_Current()\n    Dim rst As Recordset\n    Dim SQL As String\n    \n    ' Check if the ID has a value before executing the query.\n    If Not IsNull(Me.ID) Then\n        SQL = "SELECT [ID], MAX([Ln]) AS MaxLn FROM [Order Detail] WHERE [Order Detail].[ID] = " & Me.ID\n        Set rst = CurrentDb.OpenRecordset(SQL)\n        \n        ' Check if the recordset is not empty.\n        If Not (rst.BOF And rst.EOF) Then\n            rst.MoveFirst\n            Forms![Order Data Entry Header].LineNum = rst!MaxLn + 1\n        Else\n            Forms![Order Data Entry Header].LineNum = 1  ' Start from 1 if no records found.\n        End If\n        \n        rst.Close\n    Else\n        Forms![Order Data Entry Header].LineNum = 0  ' Or set to any default value as needed.\n    End If\n    \n    Set rst = Nothing\nEnd Sub