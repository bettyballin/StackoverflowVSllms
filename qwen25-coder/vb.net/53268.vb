Function BuildSelectExpression(keys As String) As String\n    Dim escapedKeys As List(Of String) = keys.Split(New Char() {" "c}, StringSplitOptions.RemoveEmptyEntries).ToList()\n    Dim expressions As New List(Of String)\n\n    For Each key In escapedKeys\n        Dim escapedKey = EscapeApostrophes(key)\n        \n        ' Create LIKE expressions for each column you want to search\n        Dim likeExpression = $"Country LIKE '%{escapedKey}%' OR Department LIKE '%{escapedKey}%' OR Location LIKE '%{escapedKey}%'"\n        If Not String.IsNullOrEmpty(likeExpression) Then\n            expressions.Add($"({likeExpression})")\n        End If\n    Next\n\n    ' Combine all expressions with AND (intersection of conditions)\n    Dim combinedExpression As String = String.Join(" AND ", expressions)\n\n    ' Include NULL handling if needed\n    If expressions.Count > 0 Then\n        combinedExpression += " AND (Country IS NOT NULL OR Department IS NOT NULL OR Location IS NOT NULL)"\n    End If\n\n    Return combinedExpression\nEnd Functio