' Assuming you have a binding source and a table adapter already set up\nPrivate Sub SaveChangesButton_Click(sender As Object, e As EventArgs) Handles SaveChangesButton.Click\n    Try\n        ' Validate the DataGridView to ensure all edits are committed\n        Me.Validate()\n        \n        ' Update the BindingSource with changes from the DataGridView\n        Me.YourBindingSource.EndEdit()\n        \n        ' Update the DataTable in the DataSet with changes made through the BindingSource\n        Me.TableAdapter.Update(Me.DataSet.YourDataTable)\n    Catch ex As Exception\n        MessageBox.Show("An error occurred while saving changes: " & ex.Message)\n    End Try\nEnd Sub