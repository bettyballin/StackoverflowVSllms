Public Sub ShowModalView(ByVal ViewName As String, ByVal typeName As String)\n    ' Get the Type from the string name\n    Dim viewType As Type = Type.GetType(typeName)\n\n    If viewType IsNot Nothing Then\n        ' Create an instance of the view\n        Dim _MasterListView As Object = Activator.CreateInstance(viewType)\n\n        ' Check if the created object is of the expected base class or interface\n        If TypeOf _MasterListView Is IView Then  ' Assuming all views implement IView\n            CType(_MasterListView, IView).Show()\n        Else\n            Throw New InvalidCastException("The specified type does not implement IView")\n        End If\n    Else\n        Throw New ArgumentException($"Could not find a type with the name '{typeName}'")\n    End If\nEnd Sub