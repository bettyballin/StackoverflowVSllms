Sub ListTables()\n    Dim catalog As Object\n    Set catalog = CreateObject("ADOX.Catalog")\n    \n    ' Open the connection to your Access database\n    catalog.ActiveConnection = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=C:\path\to\your\database.accdb;"\n    \n    ' Loop through the Tables collection and print table names\n    Dim tbl As Object\n    For Each tbl In catalog.Tables\n        If Not tbl.Type = "SYSTEM TABLE" Then\n            Debug.Print tbl.Name\n        End If\n    Next\n    \n    Set catalog.ActiveConnection = Nothing\n    Set catalog = Nothing\nEnd Sub