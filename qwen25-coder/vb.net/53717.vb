Imports System.Data.Sql\n\nPublic Sub LoadSqlServerInstances(comboBox As ComboBox)\n    ' Create an instance of SqlDataSourceEnumerator\n    Dim enumerator As SqlDataSourceEnumerator = SqlDataSourceEnumerator.Instance\n    \n    ' Get the data table containing SQL Server instances\n    Dim dataTable As DataTable = enumerator.GetDataSources()\n    \n    ' Clear existing items in the combo box\n    comboBox.Items.Clear()\n    \n    ' Loop through each row and add to the combo box\n    For Each row As DataRow In dataTable.Rows\n        ' Assuming that you want InstanceName, but you can also use ServerName or other fields if necessary.\n        Dim instanceName As String = DirectCast(row("InstanceName"), String)\n        \n        ' If the instance name is empty, it means it's a default instance\n        If String.IsNullOrEmpty(instanceName) Then\n            comboBox.Items.Add(DirectCast(row("ServerName"), String))\n        Else\n            comboBox.Items.Add($"{row("ServerName")}\{instanceName}")\n        End If\n    Next\nEnd Sub