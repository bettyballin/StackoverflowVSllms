Function GetMonthLastDate(ByVal sDateTime As DateTime) As String\n    Try\n        Dim days As Integer\n        If sDateTime.Month = 2 Then\n            ' Check for leap year\n            If (sDateTime.Year Mod 4 = 0 AndAlso sDateTime.Year Mod 100 <> 0) OrElse (sDateTime.Year Mod 400 = 0) Then\n                days = 29\n            Else\n                days = 28\n            End If\n        Else\n            ' Array with the number of days in each month\n            Dim strArrMonth() As String = {"", "31", "28", "31", "30", "31", "30", "31", "31", "30", "31", "30", "31"}\n            days = Convert.ToInt32(strArrMonth(sDateTime.Month))\n        End If\n        Return Format(sDateTime.AddDays(days - 1), "MM/dd/yyyy")\n    Catch ex As Exception\n        Response.Write("<script>alert('" & Server.HtmlEncode(ex.Message) & "');</script>")\n    End Try\nEnd Functio