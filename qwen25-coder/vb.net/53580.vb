Sub SaveWorksheetsAsCsv()\n    Dim ws As Worksheet\n    Dim folderPath As String\n    \n    ' Set the folder path where you want to save the CSV files\n    folderPath = "C:\Your\Desired\Folder\"\n    \n    If Right(folderPath, 1) <> "\" Then\n        folderPath = folderPath & "\"\n    End If\n\n    Application.DisplayAlerts = False\n    \n    For Each ws In ActiveWorkbook.Worksheets\n        ws.SaveAs Filename:=folderPath & ws.Name & ".csv", FileFormat:=xlCSV\n    Next ws\n    \n    Application.DisplayAlerts = True\n    \n    MsgBox "All worksheets have been saved as CSV files!", vbInformation\nEnd Sub