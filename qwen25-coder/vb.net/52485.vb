Imports System.IO\n\nPublic Sub WriteStats(ByVal ad_id As Integer)\n    Dim ad_date As String = String.Format("{0}{1}", Now.Year, Now.Month)\n\n    Dim FILENAME As String = Server.MapPath("text/BoxedAds.txt")\n    Using objFileStream As New FileStream(FILENAME, FileMode.Append, FileAccess.Write, FileShare.None)\n        Using objStreamWriter As New StreamWriter(objFileStream)\n            objStreamWriter.WriteLine(ad_id & ";" & ad_date)\n        End Using\n    End Using\nEnd Sub