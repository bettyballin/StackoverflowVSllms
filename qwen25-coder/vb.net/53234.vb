Private Sub YourTextBox_KeyPress(sender As Object, e As KeyPressEventArgs) Handles YourTextBox.KeyPress\n    ' Check if the Enter key is pressed\n    If Asc(e.KeyChar) = 13 Then\n        ' Insert a line feed instead of moving focus to the next control\n        SendKeys.SendWait("{ENTER}")\n        \n        ' Prevent the default action from occurring\n        e.Handled = True\n    End If\nEnd Sub