Private Sub dataGridView1_EditingControlShowing(sender As Object, e As DataGridViewEditingControlShowingEventArgs) Handles dataGridView1.EditingControlShowing\n    ' Remove previously attached event handlers to avoid multiple subscriptions\n    RemoveHandler CType(e.Control, ComboBox).SelectedIndexChanged, AddressOf RecalculateTotal\n\n    If TypeOf e.Control Is ComboBox Then\n        AddHandler CType(e.Control, ComboBox).SelectedIndexChanged, AddressOf RecalculateTotal\n    End If\nEnd Sub\n\nPrivate Sub RecalculateTotal(sender As Object, e As EventArgs)\n    ' Your logic to recalculate the total and update the label here.\n    Dim total As Decimal = 0\n    For Each row As DataGridViewRow In dataGridView1.Rows\n        If Not IsDBNull(row.Cells("PriceColumn").Value) AndAlso Not IsDBNull(row.Cells("QuantityColumn").Value) Then\n            total += Convert.ToDecimal(row.Cells("PriceColumn").Value) * Convert.ToDecimal(row.Cells("QuantityColumn").Value)\n        End If\n    Next\n\n    ' Update the label with the new total.\n    lblTotal.Text = String.Format("Total: {0:C}", total)\nEnd Sub