Dim db As DAO.Database\nDim tbl As DAO.TableDef\nDim fldTemp As DAO.Field\n\nSet db = CurrentDb() ' Assuming your current project is connected to this database\nSet tbl = db.TableDefs("YourTableName") ' Replace "YourTableName" with the actual table name\n\n' Step 1: Create a temporary field with dbLong data type\nSet fldTemp = tbl.CreateField("TmpFieldName", DAO.dbLong) ' Replace "TmpFieldName" with your desired temp field name\ntbl.Fields.Append fldTemp\n\n' Ensure that the temporary column is updated to hold existing integer values\nDim rs As DAO.Recordset\nSet rs = db.OpenRecordset("SELECT * FROM YourTableName", dbOpenDynaset)\n\nDo While Not rs.EOF\n    rs.Edit\n    rs!TmpFieldName = rs!YourIntegerField ' Replace "YourIntegerField" with your original field name\n    rs.Update\n    rs.MoveNext\nLoop\n\nrs.Close\nSet rs = Nothing\n\n' Step 2: Delete the old column\ntbl.Fields.Delete "YourIntegerField"\n\n' Step 3: Rename the temporary field to replace the old one\nfldTemp.Name = "YourIntegerField"\n\nSet fldTemp = Nothing\nSet tbl = Nothing\nSet db = Nothing