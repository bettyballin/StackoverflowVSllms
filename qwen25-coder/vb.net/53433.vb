Sub SendAllDrafts()\n    Dim myOutlook As Outlook.Application\n    Dim ns As Namespace\n    Dim DraftsFolder As MAPIFolder\n    Dim msg As Object\n    Dim i As Integer\n    \n    Set myOutlook = CreateObject("Outlook.Application")\n    Set ns = myOutlook.GetNamespace("MAPI")\n    Set DraftsFolder = ns.GetDefaultFolder(olFolderDrafts)\n    \n    ' Loop through each item in the Drafts folder\n    For i = DraftsFolder.Items.Count To 1 Step -1\n        Set msg = DraftsFolder.Items(i)\n        If TypeName(msg) = "MailItem" Then\n            msg.Send\n        End If\n    Next\n    \n    Set msg = Nothing\n    Set DraftsFolder = Nothing\n    Set ns = Nothing\n    Set myOutlook = Nothing\n    \n    MsgBox "All drafts have been sent.", vbInformation\nEnd Sub