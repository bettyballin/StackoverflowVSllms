Sub CreateChart()\n    Dim ws As Worksheet\n    Dim chtObj As ChartObject\n\n    Set ws = ThisWorkbook.Sheets("Sheet1")\n    \n    ' Add a chart at the top-left corner of the worksheet with width 500 and height 300.\n    Set chtObj = ws.ChartObjects.Add(Left:=10, Width:=500, Top:=10, Height:=300)\n    \n    With chtObj.Chart\n        .ChartType = xlColumnClustered ' You can change chart type here\n        .SetSourceData Source:=ws.Range("A1:B10") ' Set this to your data range\n        .HasTitle = True\n        .ChartTitle.Text = "Sales Data" ' Set the title of the chart\n        \n        ' Customize further as needed\n    End With\nEnd Sub