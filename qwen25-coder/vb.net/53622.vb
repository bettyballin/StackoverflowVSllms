Imports System.Text.RegularExpressions\n\nModule Module1\n    Sub Main()\n        Dim sqlText As String = "CREATE TABLE ExampleTable ( Column1 INT, Column2 VARCHAR(50), Column3 DATE );"\n        \n        ' Regular expression to match column definitions: <column> <type>(<size>)\n        Dim pattern As String = "\s*(\w+)\s+(\w+)(?:\((\d+)\))?"\n        Dim regex As New Regex(pattern)\n        \n        Dim matches As MatchCollection = regex.Matches(sqlText)\n        \n        For Each match As Match In matches\n            If match.Success Then\n                Dim columnName As String = match.Groups(1).Value\n                Dim dataType As String = match.Groups(2).Value\n                Dim size As String = If(match.Groups(3).Success, match.Groups(3).Value, "")\n                \n                Console.WriteLine($"Column: {columnName}, Type: {dataType}{If(size <> "", $"({size})", "")}")\n            End If\n        Next\n    End Sub\nEnd Module