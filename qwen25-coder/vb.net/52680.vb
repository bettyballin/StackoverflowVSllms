Imports System.Windows.Forms\n\nPublic Class Form1\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Setup DataSet and BindingSource\n        Dim ds As New DataSet()\n        ' Fill your dataset here - Assume it's filled with data.\n\n        ' Set up the BindingSource\n        Dim bindingSource As New BindingSource With {\n            .DataSource = ds.Tables(0)\n        }\n\n        ' Configure sorting or filtering if needed.\n        bindingSource.Sort = "YourFieldName ASC" ' Example sort\n\n        ' Set ReportViewer Data Source\n        SetupReportViewer(bindingSource.List)\n\n        ' Show the report\n        Me.ReportViewer1.RefreshReport()\n    End Sub\n\n    Private Sub SetupReportViewer(dataSource As Object)\n        ' Initialize and set up your local report.\n        Dim localReport = Me.ReportViewer1.LocalReport\n        localReport.DataSources.Clear()\n\n        ' Create a new ReportDataSource and add it to the LocalReport\n        Dim reportDataSource As New Microsoft.Reporting.WinForms.ReportDataSource("YourDataSetName", dataSource)\n        localReport.DataSources.Add(reportDataSource)\n\n        ' Set the path to your RDLC report.\n        localReport.ReportPath = "Path\To\YourReport.rdlc"\n    End Sub\n\n    Private Sub ButtonRefresh_Click(sender As Object, e As EventArgs) Handles ButtonRefresh.Click\n        ' Refreshes binding source and ReportViewer data.\n        SetupReportViewer(Me.BindingSource1.List)\n        Me.ReportViewer1.RefreshReport()\n    End Sub\nEnd Class