Protected Sub Button1_Click(ByVal sender As Object, ByVal e As System.EventArgs) Handles Button1.Click\n    Select Case oType\n        Case "m"\n            oType = "c"\n        Case "c"\n            oType = "m"\n    End Select\n    Label1.Text = Now.ToString\n\n    ' Increment a version number or use timestamp to force CSS reload\n    Dim cssVersion As Integer = ViewState("cssVersion") IsNot Nothing ? CInt(ViewState("cssVersion")) : 0\n    cssVersion += 1\n    ViewState("cssVersion") = cssVersion\n\n    ' Refresh the CSS link by changing query string\n    ClientScript.RegisterStartupScript(Page.GetType(), "RefreshCSS", "<script type='text/javascript'>document.getElementById('StyleSheetLink').href = '/style.aspx?t=" & oType & "&v=" & oText & "&ver=" & cssVersion.ToString() & "';</script>")\nEnd Sub