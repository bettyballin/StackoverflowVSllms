Public Class ComicViewerForm\n    Private scaleFactor As Double = 1.0\n    Private lastMousePos As Point\n\n    Private Sub ComicViewerForm_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Load a comic image into the PictureBox.\n        Dim imagePath As String = "path_to_your_comic_image.jpg"\n        PictureBox1.Image = Image.FromFile(imagePath)\n        PictureBox1.SizeMode = PictureBoxSizeMode.AutoSize\n    End Sub\n\n    Private Sub PictureBox1_MouseDown(sender As Object, e As MouseEventArgs) Handles PictureBox1.MouseDown\n        lastMousePos = PointToClient(Cursor.Position)\n    End Sub\n\n    Private Sub PictureBox1_MouseMove(sender As Object, e As MouseEventArgs) Handles PictureBox1.MouseMove\n        If (e.Button And MouseButtons.Left) <> 0 Then\n            Dim newMousePos As Point = PointToClient(Cursor.Position)\n            Dim diffX As Integer = lastMousePos.X - newMousePos.X\n            Dim diffY As Integer = lastMousePos.Y - newMousePos.Y\n\n            ' Move the image within PictureBox1.\n            PictureBox1.Left += diffX\n            PictureBox1.Top += diffY\n\n            lastMousePos = newMousePos\n        End If\n    End Sub\n\n    Private Sub PictureBox1_MouseClick(sender As Object, e As MouseEventArgs) Handles PictureBox1.MouseClick\n        ' Zoom in/out based on the mouse button.\n        If e.Button = MouseButtons.Left Then\n            scaleFactor *= 1.25\n        ElseIf e.Button = MouseButtons.Right Then\n            scaleFactor /= 1.25\n        End If\n\n        ScalePictureBox()\n    End Sub\n\n    Private Sub ScalePictureBox()\n        ' Apply scaling around the mouse click position.\n        Dim originalWidth As Integer = PictureBox1.Image.Width\n        Dim originalHeight As Integer = PictureBox1.Image.Height\n\n        PictureBox1.Width = CInt(originalWidth * scaleFactor)\n        PictureBox1.Height = CInt(originalHeight * scaleFactor)\n\n        PictureBox1.Invalidate()\n    End Sub\nEnd Class