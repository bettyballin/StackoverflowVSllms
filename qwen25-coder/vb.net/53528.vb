Private Sub Command4_Click()\n    Dim appOutLook As Outlook.Application\n    Dim MailOutLook As Outlook.MailItem\n    Dim attachmentField As DAO.Field2\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n\n    ' Ensure you have a reference to the current database\n    Set db = CurrentDb\n    ' Open your recordset, replace "YourTableName" with the actual table name\n    Set rs = db.OpenRecordset("SELECT * FROM YourTableName WHERE ID=" & Me.ID.Value)\n\n    Set appOutLook = CreateObject("Outlook.Application")\n    Set MailOutLook = appOutLook.CreateItem(olMailItem)\n\n    With MailOutLook\n        .To = Me.Description.Value\n        .Subject = "Confirmation of " & Me.ID.Value\n\n        ' Assuming 'Att' is the field name for attachments in your recordset\n        If Not (rs.EOF And rs.BOF) Then\n            Set attachmentField = rs.Fields("Att").Value\n            attachmentField.SaveToFile "C:\Temp\" & attachmentField.FileName\n            .Attachments.Add "C:\Temp\" & attachmentField.FileName, olByValue, 1, "Document"\n        End If\n\n        '.DeleteAfterSubmit = True\n        .Send\n    End With\n\n    ' Clean up\n    rs.Close\n    Set rs = Nothing\n    Set db = Nothing\nEnd Sub