Imports Microsoft.Office.Interop.Excel\n\nPublic Sub AdjustRowHeightToFitContent(excelApp As Application, workbookPath As String)\n    Dim excelWorkbook As Workbook = Nothing\n    Dim excelWorksheet As Worksheet = Nothing\n\n    Try\n        ' Open the workbook and select the first worksheet\n        excelWorkbook = excelApp.Workbooks.Open(workbookPath)\n        excelWorksheet = excelWorkbook.Sheets(1)\n\n        ' Define the range you are targeting, in this case A2:L36\n        Dim targetRange As Range = excelWorksheet.Range("A2:L36")\n\n        ' Unmerge cells first to adjust each row's height individually\n        targetRange.UnMerge()\n\n        ' Loop through rows of the specified range\n        For Each row As Range In targetRange.Rows\n            ' AutoFit the height of the row based on its contents\n            row.AutoFit()\n        Next\n\n        ' Re-merge the cells if necessary after adjusting heights\n        excelWorksheet.Range("A2:L36").Merge()\n\n    Catch ex As Exception\n        Console.WriteLine("An error occurred: " & ex.Message)\n    Finally\n        ' Cleanup\n        If excelWorkbook IsNot Nothing Then\n            excelWorkbook.Save()\n            excelWorkbook.Close(False)\n            System.Runtime.InteropServices.Marshal.ReleaseComObject(excelWorkbook)\n        End If\n\n        System.Runtime.InteropServices.Marshal.ReleaseComObject(excelApp)\n    End Try\nEnd Sub