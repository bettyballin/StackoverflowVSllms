For Each s As String In MyArray\n    ' Create the TextBlock with content\n    Dim tb As New TextBlock() With {\n        .Text = s\n    }\n\n    ' Create the ListBoxItem and set its content to the TextBlock\n    Dim lbi As New ListBoxItem()\n    lbi.Content = tb\n\n    ' Create a Border, apply style and set its child to the ListBoxItem\n    Dim border As New Border() With {\n        .Child = lbi,\n        .Style = DirectCast(Me.FindResource("ListBoxItemRoundedBorder"), Style)\n    }\n\n    ' Add the Border to MainListBox\n    MainListBox.Items.Add(border)\nNext