Private Sub Form_AfterInsert()\n    Dim db As DAO.Database\n    Dim rsCustomer As DAO.Recordset\n    Dim invoiceAmount As Integer\n    Dim custNumber As Integer\n\n    Set db = CurrentDb()\n\n    ' Assuming the current form is bound to the 'invoice' table\n    invoiceAmount = Me.Inv_Amt.Value\n    custNumber = Me.cust_num.Value\n\n    Set rsCustomer = db.OpenRecordset("SELECT * FROM customer WHERE Id = " & custNumber)\n\n    If Not (rsCustomer.EOF And rsCustomer.BOF) Then\n        rsCustomer.Edit\n        rsCustomer.Fields("amount").Value = invoiceAmount ' This will sum if you want to aggregate\n        rsCustomer.Update\n    End If\n\n    rsCustomer.Close\n    Set db = Nothing\nEnd Sub