Imports System.IO\nImports System.Xml\n\nPartial Class YourPageName\n    Inherits System.Web.UI.Page\n\n    Protected Sub Page_Load(ByVal sender As Object, ByVal e As EventArgs) Handles Me.Load\n        Dim userId As Integer = 27 ' Example user_id\n        Dim imagePath As String = Server.MapPath("~/images/") ' Path to the images folder\n        \n        ' Get all files in the directory that start with userId and end with .jpg\n        Dim files As String() = Directory.GetFiles(imagePath, userId.ToString & "_*.jpg")\n\n        ' Create an XML writer\n        Using act As XmlWriter = XmlWriter.Create(Response.OutputStream)\n            act.WriteStartDocument()\n            act.WriteStartElement("Images")\n            \n            For Each file As String In files\n                Dim fileName As String = Path.GetFileName(file)\n                act.WriteStartElement("Image")\n                act.WriteAttributeString("Url", "http://www.my_site.com/images/" & fileName)\n                act.WriteEndElement() ' End of Image element\n            Next\n\n            act.WriteEndElement() ' End of Images element\n            act.WriteEndDocument()\n        End Using\n    End Sub\nEnd Class