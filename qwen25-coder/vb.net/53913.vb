Imports System.DirectoryServices\n\nModule Module1\n    Sub Main()\n        ' Define ADS_GROUP_TYPE constants\n        Const ADS_GROUP_TYPE_GLOBAL_GROUP As Integer = &H2\n        Const ADS_GROUP_TYPE_DISTRIBUTION_GROUP As Integer = &H0\n\n        ' Create a new DirectoryEntry object pointing to the container where you want to create the group\n        Using rootDSE As New DirectoryEntry("LDAP://RootDSE")\n            Dim defaultNamingContext As String = rootDSE.Properties("defaultNamingContext").Value.ToString()\n            Using container As New DirectoryEntry($"LDAP://{defaultNamingContext}"),\n                  newGroup As DirectoryEntry = container.Children.Add("CN=MyDistributionList", "group")\n\n                ' Set the group type\n                newGroup.Properties("groupType").Value = ADS_GROUP_TYPE_GLOBAL_GROUP Or ADS_GROUP_TYPE_DISTRIBUTION_GROUP\n\n                ' Commit changes to Active Directory\n                newGroup.CommitChanges()\n\n                Console.WriteLine("Global distribution group created successfully.")\n            End Using\n        End Using\n    End Sub\nEnd Module