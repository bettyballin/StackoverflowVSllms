Sub SheetToPdf(sht As Worksheet)\n    Dim htmlFilePath As String\n    Dim pdfFilePath As String\n    Dim wkhtmltopdfPath As String ' Path to your wkhtmltopdf executable\n    \n    wkhtmltopdfPath = "C:\Program Files\wkhtmltopdf\bin\wkhtmltopdf.exe"\n    \n    ' Create a temporary HTML file from the worksheet\n    htmlFilePath = Environ("TEMP") & "\" & sht.Name & ".html"\n    pdfFilePath = Environ("TEMP") & "\" & sht.Name & ".pdf"\n    \n    Application.DisplayAlerts = False\n    sht.ExportAsFixedFormat Type:=xlTypeHTML, Filename:=htmlFilePath, Quality:=xlQualityStandard, IncludeDocProperties:=True, IgnorePrintAreas:=False, OpenAfterPublish:=False\n    Application.DisplayAlerts = True\n    \n    ' Use wkhtmltopdf to convert HTML file to PDF\n    Shell """\" & wkhtmltopdfPath & """ " & htmlFilePath & " " & pdfFilePath, vbNormalFocus\n    \n    ' Clean up: delete the temporary HTML file (optional)\n    Kill htmlFilePath\n    \n    ' Open the created PDF or save it to a desired location\n    Shell "start " & pdfFilePath, vbNormalFocus\nEnd Sub\n\nSub ExportSheetsToPdf()\n    Dim ws As Worksheet\n    For Each ws In ThisWorkbook.Sheets\n        SheetToPdf ws\n    Next ws\nEnd Sub