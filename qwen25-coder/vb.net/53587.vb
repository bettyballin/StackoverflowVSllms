Dim sql As String\nsql = "SELECT TestScenario, TestId FROM tblTesting WHERE empid = ? AND testid = ?"\n\n' Create a temporary recordset to hold the data\nDim rs As DAO.Recordset\nSet rs = CurrentDb.OpenRecordset(sql, dbOpenSnapshot)\n\n' Apply parameters to avoid SQL injection\nrs.Parameters(0) = Me.txtEmpId.Value\nrs.Parameters(1) = Me.txtAutoNumber.Value\n\n' Move the recordset to check if there are any records\nrs.MoveFirst\nIf Not rs.EOF Then\n    ' Set RowSource only if there are records\n    Set lstDiff.Recordset = rs\nElse\n    ' Handle case where no records are found\n    MsgBox "No records found for the given criteria.", vbExclamation\nEnd If\n\n' Close and clean up\nrs.Close\nSet rs = Nothing