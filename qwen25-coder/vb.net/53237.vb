Imports System.Management\n\nModule Module1\n    Sub Main()\n        Dim clientName As String = GetClientName()\n        Console.WriteLine("Client Name: " & clientName)\n    End Sub\n\n    Function GetClientName() As String\n        Using searcher As New ManagementObjectSearcher("\root\CIMV2\TerminalServices", "SELECT ClientName FROM Win32_TerminalServiceSession WHERE SessionId = (SELECT SessionId FROM Win32_Process WHERE ProcessId = " & System.Diagnostics.Process.GetCurrentProcess().Id & ")")\n            For Each queryObj As ManagementObject In searcher.Get()\n                Return CType(queryObj("ClientName"), String)\n            Next\n        End Using\n        Return ""\n    End Function\nEnd Module