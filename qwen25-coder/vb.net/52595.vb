Imports System.Data.SqlClient\n\nPublic Module DatabaseConnectionModule\n    ' Define your connection string here.\n    Private connString As String = "Server=YOUR_SERVER;Database=YOUR_DATABASE;User Id=UID;Password=PWD;"\n    \n    Public Function GetData(query As String) As DataTable\n        Using conn As New SqlConnection(connString)\n            Using cmd As New SqlCommand(query, conn)\n                Dim adapter As New SqlDataAdapter(cmd)\n                Dim dt As New DataTable()\n                adapter.Fill(dt)\n                Return dt\n            End Using\n        End Using\n    End Function\nEnd Module