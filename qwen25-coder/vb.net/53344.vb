Imports System.IO\n\nModule Module1\n    Sub Main()\n        Dim sourceFilePath As String = "C:\path\to\your\file.txt"\n        Dim destinationFilePath As String = "C:\path\to\your\cloned_file.txt"\n\n        Try\n            ' Read all bytes from the file into a byte array\n            Dim fileBytes() As Byte = File.ReadAllBytes(sourceFilePath)\n\n            ' Write the byte array to a new file\n            File.WriteAllBytes(destinationFilePath, fileBytes)\n            \n            Console.WriteLine("File cloned successfully.")\n        Catch ex As IOException\n            Console.WriteLine("Error: The file is in use or an I/O error occurred. " & ex.Message)\n        Catch ex As UnauthorizedAccessException\n            Console.WriteLine("Error: You do not have the necessary permissions to access the file. " & ex.Message)\n        End Try\n    End Sub\nEnd Module