Imports System\n\nModule Subscription\n    Sub Main()\n        ' Assume today is the purchase date\n        Dim purchaseDate As DateTime = DateTime.Now\n        \n        ' Add 6 months to the purchase date\n        Dim expiryDate As DateTime = purchaseDate.AddMonths(6)\n        \n        Console.WriteLine("Purchase Date: " & purchaseDate.ToString("yyyy-MM-dd"))\n        Console.WriteLine("Expiry Date: " & expiryDate.ToString("yyyy-MM-dd"))\n    End Sub\nEnd Module