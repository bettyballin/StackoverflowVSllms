Public Class DirCompare\n    Implements IEqualityComparer(Of IO.DirectoryInfo)\n\n    Public Function Equals(x As DirectoryInfo, y As DirectoryInfo) As Boolean Implements IEqualityComparer(Of DirectoryInfo).Equals\n        If x Is Nothing OrElse y Is Nothing Then Return False\n        Return String.Compare(x.Name, y.Name, StringComparison.OrdinalIgnoreCase) = 0\n    End Function\n\n    Public Function GetHashCode(obj As DirectoryInfo) As Integer Implements IEqualityComparer(Of DirectoryInfo).GetHashCode\n        If obj Is Nothing Then Return 0\n        Return obj.Name.ToLower().GetHashCode()\n    End Function\nEnd Class