Module Module1\n\n    Sub Main()\n\n        Dim str1 As String = "1"\n        Dim str2 As String = "2"\n        Dim str3 As String = "3"\n        Dim str4 As String = "4"\n\n        ' Create an array of the string variables you want to update\n        Dim targets() As String = {str2, str3, str4}\n\n        ' Call the method with the source and the array of targets\n        SetEqual(str1, targets)\n\n        Console.WriteLine("String 1 = {0}", str1)\n        Console.WriteLine("String 2 = {0}", targets(0)) ' Updated value\n        Console.WriteLine("String 3 = {0}", targets(1)) ' Updated value\n        Console.WriteLine("String 4 = {0}", targets(2)) ' Updated value\n\n        Console.ReadKey()\n\n    End Sub\n\n    <System.Runtime.CompilerServices.Extension()>\n    Public Sub SetEqual(Of T)(ByVal source As T, ByVal targets() As T)\n\n        For _index = 0 To targets.Length - 1\n            targets(_index) = source\n        Next\n\n    End Sub\n\nEnd Module