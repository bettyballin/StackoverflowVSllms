Public Class MyUserControl\n    Inherits UserControl\n\n    Protected Overrides Sub OnMouseWheel(ByVal e As System.Windows.Forms.MouseEventArgs)\n        MyBase.OnMouseWheel(e)\n\n        ' Check if the mouse wheel is being scrolled and pass the event to the vertical scrollbar\n        If Me.VerticalScroll.Visible Then\n            Dim scrollAmount As Integer = e.Delta \ 120\n            Me.AutoScrollPosition = New Point( _\n                Me.AutoScrollPosition.X, _\n                Me.AutoScrollPosition.Y - scrollAmount * SystemInformation.MouseWheelScrollLines * Me.Font.Height \ Me.CreateGraphics().DpiY)\n        End If\n\n        ' Mark the event as being handled to prevent base classes from handling it\n        e.Handled = True\n    End Sub\nEnd Class