Imports System.Data.SqlClient\n\nPublic Sub BatchInsertUsingSqlBulkCopy(ByVal dataTable As DataTable)\n    Using Conn As SqlConnection = New SqlConnection(DBHelper.DatabaseConnection)\n        Dim bulkCopy As SqlBulkCopy = New SqlBulkCopy(Conn, SqlBulkCopyOptions.Default, Nothing)\n\n        ' Map the datatable columns to your SQL Server table columns if necessary\n        bulkCopy.ColumnMappings.Add("YourDataTableColumnName1", "YourDatabaseColumnName1")\n        bulkCopy.ColumnMappings.Add("YourDataTableColumnName2", "YourDatabaseColumnName2")\n        ' Add more mappings as needed\n\n        Conn.Open()\n        bulkCopy.DestinationTableName = "YourDestinationTable"\n        bulkCopy.BulkCopyTimeout = 600 ' Adjust timeout as necessary\n        bulkCopy.WriteToServer(dataTable)\n        Conn.Close()\n    End Using\nEnd Sub