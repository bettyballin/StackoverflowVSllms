Imports System.IO\nImports iTextSharp.text.pdf\n\nPublic Sub AppendPDFs(ByVal sourcePdf As String, ByVal pdfToAppend As String, ByVal outputPath As String)\n    Using readerSource As New PdfReader(sourcePdf),\n          readerAppend As New PdfReader(pdfToAppend),\n          fsOutput As New FileStream(outputPath, FileMode.Create, FileAccess.Write)\n\n        Dim doc As New Document(PageSize.A4)\n        Dim writer As PdfWriter = PdfWriter.GetInstance(doc, fsOutput)\n        doc.Open()\n\n        For page As Integer = 1 To readerSource.NumberOfPages\n            Dim importPage As PdfImportedPage = writer.GetImportedPage(readerSource, page)\n            doc.Add(New iTextSharp.text.Image.GetInstance(importPage))\n        Next\n\n        ' Append the second PDF\n        For page As Integer = 1 To readerAppend.NumberOfPages\n            Dim importPage As PdfImportedPage = writer.GetImportedPage(readerAppend, page)\n            doc.NewPage()\n            doc.Add(New iTextSharp.text.Image.GetInstance(importPage))\n        Next\n\n        doc.Close()\n    End Using\nEnd Sub