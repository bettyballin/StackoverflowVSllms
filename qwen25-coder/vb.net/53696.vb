Module Module1\n    Sub Main()\n        Dim i As Integer\n        i = 0\n\n        ' Using a separate sub to achieve similar scoping\n        DoInnerScope(i)\n\n        Console.WriteLine("Outer scope value: " & i)\n    End Sub\n\n    Private Sub DoInnerScope(ByRef outerI As Integer)\n        ' This is effectively another scope\n        Dim i As Integer\n        i = outerI + 1 ' or you can manipulate as needed\n        Console.WriteLine("Inner scope value: " & i)\n    End Sub\nEnd Module