Private Sub btnNextRow_Click(sender As Object, e As EventArgs) Handles btnNextRow.Click\n    ' Check if there are any rows in the DataGridView.\n    If DataGridView1.Rows.Count > 0 Then\n        ' Get the current row index.\n        Dim currentIndex As Integer = DataGridView1.CurrentCell.RowIndex\n\n        ' Calculate the next index.\n        Dim newIndex As Integer = currentIndex + 1\n\n        ' Ensure that the new index is within the bounds of the DataGridView rows.\n        If newIndex < DataGridView1.Rows.Count Then\n            ' Set the current cell to the first column of the next row.\n            DataGridView1.CurrentCell = DataGridView1.Rows(newIndex).Cells(0)\n        Else\n            MessageBox.Show("You are at the last row.")\n        End If\n    Else\n        MessageBox.Show("No rows in the DataGridView.")\n    End If\nEnd Sub