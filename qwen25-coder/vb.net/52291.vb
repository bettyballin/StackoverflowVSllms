Dim vehicles = From v In doc...<Vehicle>\n               Let mileageElement = (From x In v.<ItemSpecific>.<NameValueList> Where x.<Name>.Value = "Mileage" Select x.<Value>.Value).FirstOrDefault\n               Let yearElement = (From z In v.<ItemSpecific>.<NameValueList> Where z.<Name>.Value = "Year" Select z.<Value>.Value).FirstOrDefault\n               Select New Vehicle With {\n                   .Name = v.<Item>.<Name>.Value,\n                   .Maker = v.<Item>.<Maker>.Value,\n                   .Color = v.<Item>.<Color>.Value,\n                   .Mileage = If(mileageElement IsNot Nothing, CInt(mileageElement), -1), ' or some default value\n                   .Year = If(yearElement IsNot Nothing, CInt(yearElement), 0) ' or some default value\n               }