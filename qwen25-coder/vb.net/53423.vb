Sub DecryptFile()\n    Dim filePath As String\n    Dim outputPath As String\n    Dim gpgPath As String\n    Dim privateKeyPassphrase As String\n    \n    ' Specify the path to GPG.exe, encrypted file, and output file location.\n    gpgPath = "C:\Program Files (x86)\GnuPG\bin\gpg.exe"\n    filePath = "C:\path\to\your\encrypted.gpg"\n    outputPath = "C:\path\to\output\decrypted.txt"\n    privateKeyPassphrase = "YourPrivateKeyPassphraseHere"\n\n    ' Construct the command to run GPG decryption\n    Dim decryptCommand As String\n    decryptCommand = """" & gpgPath & """ --batch --yes --passphrase=" & privateKeyPassphrase & " -o " & outputPath & " -d " & filePath\n    \n    ' Run the decryption command using Shell\n    Dim result As Double\n    result = Shell(decryptCommand, vbNormalFocus)\n    \n    If result <> 0 Then\n        MsgBox "Decryption successful!", vbInformation\n    Else\n        MsgBox "An error occurred while trying to decrypt the file.", vbCritical\n    End If\nEnd Sub