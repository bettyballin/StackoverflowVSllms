' Initialize BackgroundWorker\nDim backgroundWorker As New BackgroundWorker()\nbackgroundWorker.WorkerReportsProgress = False\nbackgroundWorker.DoWork += Sub(sender As Object, e As DoWorkEventArgs)\n                               ' Perform long-running operation here\n                           End Sub\n\nbackgroundWorker.RunWorkerCompleted += Sub(sender As Object, e As RunWorkerCompletedEventArgs)\n                                         ' Re-enable controls after completion\n                                         Me.Enabled = True\n                                       End Sub\n\n' Disable Controls before starting the background work\nMe.Enabled = False\n\n' Start the background worker\nbackgroundWorker.RunWorkerAsync()