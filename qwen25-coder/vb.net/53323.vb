Imports System.IO\nImports ADODB\nImports ADOX\n\nModule Module1\n    Sub Main()\n        Dim dbPath As String = "C:\path\to\your\database.accdb"\n        \n        ' Create a Catalog object to access the database metadata.\n        Dim catalog As New Catalog()\n        \n        Try\n            ' Open the Access Database.\n            catalog.ActiveConnection = _\n                "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=" & dbPath\n            \n            ' Get extended properties - Note: Some properties like Author, Owner may not be set or visible.\n            Console.WriteLine("Database User: " & catalog.Properties("Jet OLEDB:Create System Database").Value)\n            \n            ' Get Last Modified and Last Accessed using File object\n            Dim fileInfo As New FileInfo(dbPath)\n            Console.WriteLine("Last Modified Date: " & fileInfo.LastWriteTime)\n            Console.WriteLine("Last Accessed Date: " & fileInfo.LastAccessTime)\n\n        Catch ex As Exception\n            Console.WriteLine("Error accessing database properties: " & ex.Message)\n        Finally\n            ' Clean up.\n            If Not catalog.ActiveConnection Is Nothing Then\n                catalog.ActiveConnection.Close()\n            End If\n            System.Runtime.InteropServices.Marshal.ReleaseComObject(catalog)\n        End Try\n\n    End Sub\nEnd Module