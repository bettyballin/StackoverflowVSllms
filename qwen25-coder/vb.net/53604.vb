Sub ImportCSVWithDateReformat()\n    Dim ws As Worksheet\n    Dim csvFilePath As String\n    Dim dateCol As Integer ' Assuming the date is in column 1 (A)\n    \n    Set ws = ThisWorkbook.Sheets("Sheet1") ' Change to your actual sheet name\n    \n    ' Define CSV file paths\n    csvFilePaths = Array("a.csv", "b.csv", "c.csv")\n    dateCol = 1 ' Column number where dates are located, adjust as necessary\n\n    For Each filePath In csvFilePaths\n        ' Open and read the CSV file\n        With Workbooks.Open(filePath)\n            .Worksheets(1).UsedRange.Copy Destination:=ws.Cells(ws.Rows.Count, 1).End(xlUp).Offset(1)\n            \n            ' Reformat dates in the destination sheet\n            Dim lastRow As Long\n            lastRow = ws.Cells(ws.Rows.Count, dateCol).End(xlUp).Row\n            \n            For rowNumber = ws.Cells(ws.Rows.Count, dateCol).End(xlUp).Offset(-UBound(csvFilePaths), 0).Row To lastRow\n                ' Convert and format the date\n                If IsDate(ws.Cells(rowNumber, dateCol)) Then\n                    ws.Cells(rowNumber, dateCol).Value = Format(ws.Cells(rowNumber, dateCol).Value, "dd/mm/yyyy")\n                End If\n            Next rowNumber\n            \n            .Close False ' Close the CSV file without saving changes\n        End With\n    Next filePath\nEnd Sub