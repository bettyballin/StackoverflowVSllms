Public Class MyEnumClass(Of T)\n    Public MyValue As T\n\n    ' Method to get the integer value of the enum\n    Public Function GetEnumIntValue() As Integer\n        If Type.GetTypeCode(GetType(T)) <> TypeCode.Int32 Then\n            Throw New InvalidOperationException("T must be an enumeration with underlying type Int32")\n        End If\n\n        Return Convert.ToInt32(MyValue)\n    End Function\nEnd Class