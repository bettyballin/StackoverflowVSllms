Imports System.ServiceProcess\n\nModule Module1\n    Public Sub Main(ByVal args As String())\n        If args.Length > 0 Then\n            Dim argument As String = args(0)\n            Dim installer As New Installer()\n            Select Case argument\n                Case "/i", "--install"\n                    installer.Install(New Hashtable())\n                    Console.WriteLine("Service installed successfully.")\n                Case "/u", "--uninstall"\n                    installer.Uninstall(New Hashtable())\n                    Console.WriteLine("Service uninstalled successfully.")\n                Case Else\n                    Usage()\n            End Select\n        Else\n            Usage()\n        End If\n\n        Dim servicesToRun() As ServiceBase = {New YourService()}\n        ServiceBase.Run(servicesToRun)\n    End Sub\n\n    Private Sub Usage()\n        Console.WriteLine("Usage: myservice /i to install")\n        Console.WriteLine("       myservice /u to uninstall")\n    End Sub\nEnd Module