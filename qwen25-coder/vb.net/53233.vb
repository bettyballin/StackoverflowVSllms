Imports System.Linq\n\n' Clone the structure of the original DataTable\nDim dtCloned As New DataTable()\ndtCloned = dtTable.Clone()\n\n' Use LINQ to process each row and create a new row with modified data\nFor Each originalRow In dtTable.AsEnumerable()\n    ' Project each item in the row into a new array with single quotes removed\n    Dim newRowData As Object() = originalRow.ItemArray _\n        .Select(Function(item)\n            If TypeOf item Is String Then\n                Return DirectCast(item, String).Replace("'", "")\n            Else\n                Return item\n            End If\n        End Function) _\n        .ToArray()\n\n    ' Add the new row to the cloned table\n    dtCloned.Rows.Add(newRowData)\nNext\n\n' dtCloned now contains the modified data without single quotes