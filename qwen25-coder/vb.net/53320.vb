Imports System.Runtime.InteropServices\n\nModule Module1\n    Sub Main()\n        Dim jobName As String = "BITSDownloadJob"\n        Dim remotePath As String = "\\server\share\file.exe"\n        Dim localPath As String = "C:\Downloads\file.exe"\n\n        ' Create a new BITS background copy job.\n        Dim bcj As IBackgroundCopyManager = DirectCast(New BackgroundCopyManager, IBackgroundCopyManager)\n        Dim job As IBackgroundCopyJob\n\n        Try\n            job = bcj.CreateJob(jobName, BG_JOB_TYPE.BG_JOB_TYPE_DOWNLOAD)\n\n            job.AddFile(remotePath, localPath)\n            \n            ' Set priority to low to ensure minimal bandwidth usage.\n            Dim options As UInt32 = 0\n            options = Convert.ToUInt32(BG_JOB_PRIORITY_BG_JOB_PRIORITY_LOW)\n            job.SetPriority(options)\n\n            job.Resume()\n\n            Console.WriteLine("Download started. Check the status through BITS management tools.")\n        Catch ex As Exception\n            Console.WriteLine("An error occurred: " & ex.Message)\n        End Try\n\n    End Sub\nEnd Module\n\n' Importing BITS Com Interfaces\n<ComImport, Guid("5ce349e3-e1db-47c8-9f6a-d50a2d50b073"), InterfaceType(ComInterfaceType.InterfaceIsIUnknown)>\nPublic Interface IBackgroundCopyManager\n\n    Function CreateJob([ByVal] displayName As String, [ByVal] type As BG_JOB_TYPE) As IBackgroundCopyJob\nEnd Interface\n\n<Guid("97ea99a9-aa82-42c3-a4d6-e14e05cededf"), ComImport, InterfaceType(ComInterfaceType.InterfaceIsIUnknown)>\nPublic Interface IBackgroundCopyJob\n\n    Sub AddFile([ByVal] remoteUrl As String, [ByVal] localName As String)\n    Sub Resume()\n    Sub SetPriority([ByVal] options As UInt32)\n\nEnd Interface\n\nPublic Enum BG_JOB_PRIORITY\n    BG_JOB_PRIORITY_FOREGROUND = 0\n    BG_JOB_PRIORITY_HIGH = 1\n    BG_JOB_PRIORITY_NORMAL = 2\n    BG_JOB_PRIORITY_LOW = 3\nEnd Enum\n\nPublic Enum BG_JOB_TYPE\n    BG_JOB_TYPE_DOWNLOAD = 1\n    BG_JOB_TYPE_UPLOAD = 2\nEnd Enum