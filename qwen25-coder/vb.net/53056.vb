Protected Sub SetDropDownValue(ByVal target As DropDownList, ByVal value As Nullable(Of Object), ByVal bindFirst As Boolean)\n\n    If target Is Nothing Then\n        Throw New ArgumentNullException("target")\n    End If\n\n    If bindFirst Then\n        target.DataBind()\n    End If\n\n    If value.HasValue Then\n        Dim nonNullableValue As Object = value.Value\n        ' Ensure you handle converting the type to string correctly depending on your needs\n        target.SelectedValue = Convert.ToString(nonNullableValue)\n    Else\n        target.SelectedIndex = 0\n    End If\n\nEnd Sub