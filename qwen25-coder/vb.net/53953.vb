Imports System.Xml.Linq\n\nModule Module1\n    Sub Main()\n        Dim xmlString As String = "<MyXML>\n                                      <event type=""MyEvent"" uid=""3"">\n                                        <start>2009-02-01T12:00:00</start>\n                                        <stop>2009-02-01T12:00:30</stop>\n                                        <New>1</New>\n                                        <x>20</x>\n                                        <y>60</y>\n                                        <!--Whatever-->\n                                      </event>\n                                      <event type=""MyEvent"" uid=""3"">\n                                        <start>2009-02-01T11:00:00</start>\n                                        <stop>2009-02-01T11:00:30</stop>\n                                        <New>3</New>\n                                        <x>21</x>\n                                        <y>67</y>\n                                        <!--Second Whatever-->\n                                      </event>\n                                    </MyXML>"\n\n        Dim xdoc = XDocument.Parse(xmlString)\n\n        For Each eventNode In xdoc.Descendants("event")\n            For Each node In eventNode.Nodes()\n                If TypeOf node Is XComment Then\n                    Dim comment As XComment = DirectCast(node, XComment)\n                    Console.WriteLine(comment.Value)\n                End If\n            Next\n        Next\n    End Sub\nEnd Module