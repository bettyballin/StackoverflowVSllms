Public Class SkinnableButton\n    Inherits Button\n\n    Protected Overrides Sub OnPaint(ByVal pevent As PaintEventArgs)\n        ' Clear existing background\n        pevent.Graphics.Clear(Color.Transparent)\n\n        ' Fill background with a gradient brush (skinned look)\n        Using linearBrush As New Drawing2D.LinearGradientBrush(ClientRectangle, Color.DarkGray, Color.LightGray, Drawing2D.LinearGradientMode.Vertical)\n            pevent.Graphics.FillRectangle(linearBrush, ClientRectangle)\n        End Using\n\n        ' Draw border\n        pevent.Graphics.DrawRectangle(Pens.Black, 0, 0, Width - 1, Height - 1)\n\n        ' Center text\n        Dim stringFormat As New StringFormat()\n        stringFormat.Alignment = StringAlignment.Center\n        stringFormat.LineAlignment = StringAlignment.Center\n        pevent.Graphics.DrawString(Me.Text, Me.Font, Brushes.Black, ClientRectangle, stringFormat)\n    End Sub\nEnd Class