Imports System.Windows.Forms\n\nPublic Class MainForm\n    Private Sub MainForm_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Initialize DataGridView\n        Dim dataGridView As New DataGridView()\n        dataGridView.Dock = DockStyle.Fill\n\n        ' Set size of the DataGridView to accommodate 2 rows and 100 columns\n        dataGridView.ColumnCount = 100\n        dataGridView.RowCount = 2\n\n        ' Allow user input in all cells\n        For row As Integer = 0 To dataGridView.RowCount - 1\n            For col As Integer = 0 To dataGridView.ColumnCount - 1\n                dataGridView.Rows(row).Cells(col).ReadOnly = False\n            Next\n        Next\n\n        ' Add the DataGridView to the form\n        Me.Controls.Add(dataGridView)\n    End Sub\nEnd Class