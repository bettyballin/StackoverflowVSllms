Public Function StringSize(ByVal data As String, ByVal size As Short, ByVal usehtml As Boolean) As String\n    If data.Length > size Then\n        Return Left(data, size - 4) & "... "\n    Else\n        Dim spacesToAdd = size - Len(data)\n        If usehtml Then\n            ' Creating a string of &nbsp; entities for HTML output\n            Return data & New String(" ", spacesToAdd).Replace(" ", "&nbsp;")\n        Else\n            ' Creating a plain space-string for non-HTML output\n            Return data & New String(" "c, spacesToAdd)\n        End If\n    End If\nEnd Functio