Sub ExportWorksheetsToNewWorkbooks(ByVal folderPath As String)\n    Dim xlApp As Excel.Application\n    Dim xlTargetBook As Excel.Workbook\n    Dim xlSourceBook As Excel.Workbook\n    Dim ws As Excel.Worksheet\n    Dim newFilePath As String\n    Dim fileName As String\n    \n    Set xlApp = New Excel.Application\n    ' Assuming you have already opened the source workbook. Modify as needed.\n    Set xlSourceBook = xlApp.Workbooks.Open("C:\Path\To\Your\Workbook.xlsx") ' Update path\n    \n    For Each ws In xlSourceBook.Worksheets\n        fileName = folderPath & "\" & ws.Name & ".xlsx" ' Define path for the new workbook\n        \n        ' Create a new workbook to hold the copied worksheet\n        Set xlTargetBook = xlApp.Workbooks.Add\n        xlApp.SheetsInNewWorkbook = 1 ' Ensure only one sheet is added initially\n        \n        ' Copy the worksheet into the new workbook\n        ws.Copy before:=xlTargetBook.Sheets(1)\n        \n        ' Save the new workbook and close it\n        xlTargetBook.SaveAs Filename:=fileName\n        xlTargetBook.Close False\n    Next ws\n    \n    ' Close the source workbook without saving changes\n    xlSourceBook.Close False\n    \n    ' Quit Excel if you are done with all operations\n    xlApp.Quit\n    \n    ' Clean up objects\n    Set ws = Nothing\n    Set xlTargetBook = Nothing\n    Set xlSourceBook = Nothing\n    Set xlApp = Nothing\nEnd Sub