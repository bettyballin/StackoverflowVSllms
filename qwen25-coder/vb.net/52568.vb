Imports System.Net\n\nPublic Class SimpleWebServer\n    Private listener As HttpListener\n\n    Public Sub Start(ByVal prefix As String)\n        listener = New HttpListener()\n        listener.Prefixes.Add(prefix)\n        listener.Start()\n\n        Console.WriteLine("Listening for connections on " & prefix)\n\n        While True\n            Dim context As HttpListenerContext = listener.GetContext()\n            ProcessRequest(context)\n        End While\n    End Sub\n\n    Private Sub ProcessRequest(ByVal context As HttpListenerContext)\n        Dim responseString As String = "<html><body><h1>Status Page</h1><p>Your service is running!</p></body></html>"\n        Dim buffer As Byte() = System.Text.Encoding.UTF8.GetBytes(responseString)\n\n        With context.Response\n            .ContentLength64 = buffer.Length\n            .OutputStream.Write(buffer, 0, CInt(.ContentLength64))\n            .Close()\n        End With\n    End Sub\n\n    Public Sub [Stop]()\n        listener.Stop()\n        listener.Close()\n    End Sub\nEnd Class