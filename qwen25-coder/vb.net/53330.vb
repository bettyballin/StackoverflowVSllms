Imports System.IO\n\nPublic Class Form1\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Initialize ListView\n        ListView1.View = View.Details\n        ListView1.Columns.Add("File Name", -2, HorizontalAlignment.Left)\n        ListView1.Columns.Add("Size (KB)", -2, HorizontalAlignment.Right)\n\n        ' Example: Populate ListView with files from a directory\n        LoadFilesToListView("C:\YourDirectoryPath")\n    End Sub\n\n    Private Sub LoadFilesToListView(directoryPath As String)\n        Try\n            Dim files = Directory.GetFiles(directoryPath)\n\n            For Each file In files\n                Dim fileInfo As New FileInfo(file)\n                Dim item As New ListViewItem(fileInfo.Name)\n                item.SubItems.Add(Math.Round(fileInfo.Length / 1024, 2).ToString())\n                ListView1.Items.Add(item)\n            Next\n        Catch ex As Exception\n            MessageBox.Show("Error: " & ex.Message)\n        End Try\n    End Sub\nEnd Class