Imports System.Linq\n\n' Assuming 'context' is your data context object\nDim productId As String = "A03"\nDim startDate As DateTime = New DateTime(2009, 1, 2)\nDim endDate As DateTime = New DateTime(2009, 1, 8)\n\n' Generate a list of dates from startDate to endDate\nDim dateRange = Enumerable.Range(0, (endDate - startDate).Days + 1) _\n                      .Select(Function(offset) startDate.AddDays(offset)) _\n                      .ToList()\n\n' Get all order dates for the specified product\nDim orderedDates = From od In context.OrderDetails\n                   Join o In context.Orders On od.OrderID Equals o.OrderID\n                   Where od.ProductID = productId AndAlso o.OrderDate >= startDate AndAlso o.OrderDate <= endDate\n                   Select o.OrderDate.Date\n\n' Find missing dates within the range that do not have an order for the product\nDim missingDates = From d In dateRange\n                   Where Not orderedDates.Contains(d)\n                   Select d\n\nFor Each missingDate In missingDates\n    Console.WriteLine(missingDate.ToString("dd/MM/yyyy"))\nNext