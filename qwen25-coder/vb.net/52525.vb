Imports System.Windows.Forms\n\nPublic Class MainForm\n    Private Sub MainForm_MouseMove(sender As Object, e As MouseEventArgs) Handles MyBase.MouseMove\n        ' Define the region where the form will appear (top left corner)\n        Dim showRegion As Rectangle = New Rectangle(0, 0, 20, 20)\n\n        If showRegion.Contains(Cursor.Position) AndAlso Not Me.Visible Then\n            ' Show the form if cursor is in the defined region and the form is hidden\n            Me.Show()\n        Else\n            ' Optionally, hide the form if the cursor leaves that area\n            If Not showRegion.Contains(Cursor.Position) AndAlso Me.Visible Then\n                Me.Hide()\n            End If\n        End If\n    End Sub\n\n    Protected Overrides Sub OnLoad(e As EventArgs)\n        MyBase.OnLoad(e)\n        ' To initially ensure the form is hidden when starting\n        Me.Hide()\n    End Sub\nEnd Class