' Form1.vb (or MainForm.vb)\nPublic Class Form1\n\n    Private currentControl As UserControl\n\n    Public Sub ShowMainMenu()\n        SwitchToControl(New MainMenuUC())\n    End Sub\n\n    Public Sub ShowSettings()\n        SwitchToControl(New SettingsUC())\n    End Sub\n\n    Public Sub ShowGameScreen()\n        SwitchToControl(New GameScreenUC())\n    End Sub\n\n    Private Sub SwitchToControl(newControl As UserControl)\n        If currentControl IsNot Nothing Then\n            Me.Controls.Remove(currentControl)\n            currentControl.Dispose()\n        End If\n        newControl.Dock = DockStyle.Fill\n        Me.Controls.Add(newControl)\n        currentControl = newControl\n        currentControl.Show()\n    End Sub\n\nEnd Class