Imports System.Data\n\nSub SummarizeDataTable()\n    Dim originalTable As New DataTable()\n    ' Define the columns of the original table\n    originalTable.Columns.Add("Dept", GetType(String))\n    originalTable.Columns.Add("Code", GetType(String))\n    originalTable.Columns.Add("Value", GetType(Integer))\n\n    ' Add sample data to the original table\n    originalTable.Rows.Add({"Science", "ABC", 5})\n    originalTable.Rows.Add({"Science", "ABC", 6})\n    originalTable.Rows.Add({"Science", "DEF", 7})\n    originalTable.Rows.Add({"Math", "ABC", 3})\n    originalTable.Rows.Add({"Math", "DEF", 9})\n    originalTable.Rows.Add({"English", "ABC", 2})\n    originalTable.Rows.Add({"English", "DEF", 3})\n    originalTable.Rows.Add({"English", "DEF", 4})\n    originalTable.Rows.Add({"English", "DEF", 5})\n\n    ' Create a new table to store the summarized results\n    Dim summaryTable As New DataTable()\n    summaryTable.Columns.Add("Dept", GetType(String))\n    summaryTable.Columns.Add("Code", GetType(String))\n    summaryTable.Columns.Add("Value", GetType(Integer))\n\n    ' Group and sum by Dept and Code\n    Dim groupedData = From row In originalTable.AsEnumerable()\n                      Group By deptKey = row.Field(Of String)("Dept"),\n                               codeKey = row.Field(Of String)("Code")\n                      Into SumValues = Sum(row.Field(Of Integer)("Value"))\n                      Select New With {.Dept = deptKey, .Code = codeKey, .Sum = SumValues}\n\n    ' Add the summarized data to the summary table\n    For Each g In groupedData\n        summaryTable.Rows.Add(g.Dept, g.Code, g.Sum)\n    Next\n\n    ' Display or use the summaryTable as needed\nEnd Sub