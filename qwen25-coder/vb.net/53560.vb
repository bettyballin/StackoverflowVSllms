Private Sub CalculateAndDisplay()\n    Dim rst As DAO.Recordset\n    Dim db As DAO.Database\n    Set db = CurrentDb\n    Set rst = db.OpenRecordset("SELECT SomeColumn FROM YourTableName")\n\n    Dim totalCount As Long\n    Dim totalSum As Double\n    Dim minValue As Double\n    Dim maxValue As Double\n    \n    If Not (rst.EOF And rst.BOF) Then\n        rst.MoveFirst\n        Do Until rst.EOF\n            totalCount = totalCount + 1\n            totalSum = totalSum + rst!SomeColumn\n            If minValue > rst!SomeColumn Or totalCount = 1 Then minValue = rst!SomeColumn\n            If maxValue < rst!SomeColumn Or totalCount = 1 Then maxValue = rst!SomeColumn\n            rst.MoveNext\n        Loop\n        \n        ' Calculate Average\n        Dim averageValue As Double\n        If totalCount <> 0 Then\n            averageValue = totalSum / totalCount\n        End If\n\n        ' Set the values in form text boxes\n        Me!txtTotalCount.Value = totalCount\n        Me!txtAverageValue.Value = averageValue\n        Me!txtMaxValue.Value = maxValue\n        Me!txtMinValue.Value = minValue\n\n    Else\n        MessageBox "No records found.", vbInformation\n    End If\n    \n    rst.Close\n    Set rst = Nothing\n    Set db = Nothing\nEnd Sub