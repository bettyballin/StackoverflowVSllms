Imports System.IO\n\nPublic Class DirectoryUtility\n    ' Static method to move directory\n    Public Shared Sub Move(sourceDir As String, destinationDir As String)\n        If Not Directory.Exists(sourceDir) Then\n            Throw New DirectoryNotFoundException($"Source directory {sourceDir} not found.")\n        End If\n\n        If Directory.Exists(destinationDir) Then\n            Throw New IOException($"Destination directory {destinationDir} already exists.")\n        End If\n\n        ' Use Directory.Move method from System.IO to move the directory\n        Directory.Move(sourceDir, destinationDir)\n    End Sub\n\n    ' You can add more utility methods here\nEnd Class