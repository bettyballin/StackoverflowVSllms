Imports System.IO\n\nSub MakeFileWritable(filePath As String)\n    ' Check if the file exists\n    If Not File.Exists(filePath) Then\n        Console.WriteLine("The file does not exist.")\n        Return\n    End If\n    \n    Dim attributes As FileAttributes = File.GetAttributes(filePath)\n\n    ' Check if the file is read-only\n    If (attributes And FileAttributes.ReadOnly) <> 0 Then\n        ' Remove the ReadOnly attribute\n        File.SetAttributes(filePath, attributes And Not FileAttributes.ReadOnly)\n        Console.WriteLine("The file was read-only and has been made writable.")\n    Else\n        Console.WriteLine("The file is already writable.")\n    End If\nEnd Sub