Imports System.IO\n\nModule Module1\n\n    Sub Main()\n        Dim appPath As String = Application.StartupPath\n        Dim crashFile As String = Path.Combine(appPath, "crashed.tmp")\n\n        If File.Exists(crashFile) Then\n            ' The application crashed last time.\n            MessageBox.Show("The application may have crashed on the last run.")\n        End If\n\n        ' Create a crash file to detect if the app crashes\n        File.Create(crashFile).Close()\n\n        Dim myfrm As New Form2()\n        Application.Run(myfrm)\n\n        ' On clean exit, delete the crash file\n        File.Delete(crashFile)\n    End Sub\n\nEnd Module