Private Sub ShowConstraints(ByVal tableName As String)\n\n    Using connection As SqlConnection = New SqlConnection(GetConnectionString)\n        Dim query As String = "\n            SELECT \n                fk.name AS ForeignKeyConstraintName,\n                OBJECT_NAME(fk.parent_object_id) as TableName,\n                COL_NAME(fc.parent_object_id, fc.parent_column_id)  as ColumnName,\n                OBJECT_NAME (fkc.referenced_object_id) as ReferenceTableName,\n                COL_NAME (fkc.referenced_object_id, fkc.referenced_column_id) as ReferenceColumnName\n            FROM \n                sys.foreign_keys AS fk\n            INNER JOIN \n                sys.foreign_key_columns AS fkc ON fk.object_id = fkc.constraint_object_id\n            WHERE \n                OBJECT_NAME(fk.parent_object_id) = @TableName"\n\n        Using command As New SqlCommand(query, connection)\n            command.Parameters.AddWithValue("@TableName", tableName)\n\n            connection.Open()\n            Using reader As SqlDataReader = command.ExecuteReader()\n                While reader.Read()\n                    Console.WriteLine("** FK ** ConstraintName: {0}; TableName: {1}; ColumnName: {2}; ReferenceTableName: {3}; ReferenceColumnName: {4}",\n                        reader("ForeignKeyConstraintName"),\n                        reader("TableName"),\n                        reader("ColumnName"),\n                        reader("ReferenceTableName"),\n                        reader("ReferenceColumnName"))\n                End While\n            End Using\n        End Using\n    End Using\n\nEnd Sub