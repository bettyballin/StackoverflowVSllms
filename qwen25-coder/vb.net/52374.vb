Imports System.Numerics\n\nModule Module1\n    Sub Main()\n        ' Calculate 2^1000 using BigInteger\n        Dim powerResult As BigInteger = BigInteger.Pow(2, 1000)\n        \n        ' Convert the result to a string to iterate over each digit\n        Dim numberString As String = powerResult.ToString()\n        \n        ' Initialize sum of digits\n        Dim sumOfDigits As Integer = 0\n        \n        ' Sum all the digits\n        For Each c As Char In numberString\n            sumOfDigits += Int32.Parse(c.ToString())\n        Next\n\n        ' Output the result\n        Console.WriteLine("The sum of the digits of 2^1000 is: " & sumOfDigits)\n    End Sub\nEnd Module