Imports System\n\n<Flags>\nPublic Enum FileAccessPermissions\n    None = 0\n    Read = 1 << 0 ' 1\n    Write = 1 << 1 ' 2\n    Execute = 1 << 2 ' 4\n    All = Read Or Write Or Execute\nEnd Enum\n\nModule Module1\n    Sub Main()\n        Dim permissions As FileAccessPermissions = FileAccessPermissions.Read Or FileAccessPermissions.Write\n        \n        Console.WriteLine($"User has: {permissions}")\n        \n        If (permissions And FileAccessPermissions.Read) = FileAccessPermissions.Read Then\n            Console.WriteLine("Read permission granted.")\n        End If\n    End Sub\nEnd Module