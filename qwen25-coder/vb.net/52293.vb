Dim input As String\nDim number As Double\nDim values As Double\n\nDo\n    input = InputBox("Enter numbers to add, enter -1 to stop")\n    \n    ' Check if the user clicked "Cancel" or left the box empty\n    If input = "" Then Exit Do\n    \n    Try\n        number = CDbl(input)\n        \n        ' Only add to values if the conversion is successful and not equal to -1\n        If number <> -1 Then\n            values = values + number\n        Else\n            Exit Do\n        End If\n        \n    Catch ex As InvalidCastException\n        MsgBox("Invalid entry. Please enter a numeric value.", MsgBoxStyle.Exclamation)\n    End Try\n    \nLoop\n\nMsgBox("The sum of the numbers entered is: " & values, MsgBoxStyle.Information)