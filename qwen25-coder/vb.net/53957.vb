Public Function GetSizeInfoBySite(ByVal siteID As String) As IList(Of CategoryInfo)\n    Dim strSQL As String = "SELECT someID, someName FROM YourTable WHERE SiteID = @MySiteID"\n    Dim alAnArrayList As New List(Of CategoryInfo)\n\n    Using cn As New SqlConnection(ConfigurationSettings.AppSettings("ConnectionString"))\n        Using cmd As New SqlCommand(strSQL, cn)\n            cmd.Parameters.Add(New SqlParameter("@MySiteID", SqlDbType.NVarChar, 2)).Value = siteID\n            cn.Open()\n            Using rs As SqlDataReader = cmd.ExecuteReader()\n                While rs.Read()\n                    alAnArrayList.Add(New CategoryInfo(rs("someID"), rs("someName")))\n                End While\n            End Using ' Closes the data reader and implicitly closes the connection due to CommandBehavior.CloseConnection\n        End Using\n    End Using\n\n    Return alAnArrayList\nEnd Functio