Sub ImportAllCSV()\n    Dim strPath As String\n    Dim strFile As String\n    Dim tblName As String\n    \n    ' Change this to the name of the table you want to import the data into\n    tblName = "YourTableName"\n    \n    ' Change this to the path where your CSV files are located\n    strPath = "C:\path\to\your\csv\files\"\n    \n    ' Get the first file in the folder\n    strFile = Dir(strPath & "*.csv")\n    \n    Do While strFile <> ""\n        ' Import the CSV file into Access\n        DoCmd.TransferText acImportDelim, , tblName, strPath & strFile, True\n        \n        ' Move to the next file\n        strFile = Dir\n    Loop\n    \n    MsgBox "All CSV files have been imported."\nEnd Sub