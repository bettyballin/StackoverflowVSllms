Imports System.Data.SqlClient\n\nModule Module1\n    Sub Main()\n        ' Connection String to your SQL Server database\n        Dim connectionString As String = "your_connection_string_here"\n\n        ' Create a connection object\n        Using cnxn As New SqlConnection(connectionString)\n            ' Define Commands for Insert and Update\n            Dim insertCommand As New SqlCommand("INSERT INTO YourTable (Column1, Column2) VALUES (@Value1, @Value2)", cnxn)\n            Dim updateCommand As New SqlCommand("UPDATE YourTable SET Column2 = @Value2 WHERE Column1 = @Value1", cnxn)\n\n            ' Add parameters to commands\n            insertCommand.Parameters.Add("@Value1", SqlDbType.NVarChar, 50).Value = "NewValue"\n            insertCommand.Parameters.Add("@Value2", SqlDbType.Int).Value = 42\n\n            updateCommand.Parameters.Add("@Value2", SqlDbType.Int).Value = 43\n            updateCommand.Parameters.Add("@Value1", SqlDbType.NVarChar, 50).Value = "ExistingValue"\n\n            ' Create a DataAdapter for the connection\n            Using adapter As New SqlDataAdapter()\n                adapter.InsertCommand = insertCommand\n                adapter.UpdateCommand = updateCommand\n\n                ' Create a DataSet to hold your data and retrieve it from the database\n                Dim ds As New DataSet()\n                adapter.Fill(ds, "YourTable")\n\n                ' Insert new row in DataSet\n                Dim newRow As DataRow = ds.Tables("YourTable").NewRow()\n                newRow!Column1 = "AnotherValue"\n                newRow!Column2 = 44\n                ds.Tables("YourTable").Rows.Add(newRow)\n\n                ' Update row in DataSet\n                For Each row As DataRow In ds.Tables("YourTable").Rows\n                    If row.Field(Of String)("Column1") = "ExistingValue" Then\n                        row.BeginEdit()\n                        row!Column2 = 45\n                        row.EndEdit()\n                        Exit For\n                    End If\n                Next\n\n                ' Use the DataAdapter to update database from changes in the DataSet\n                adapter.Update(ds, "YourTable")\n            End Using\n        End Using\n    End Sub\nEnd Module