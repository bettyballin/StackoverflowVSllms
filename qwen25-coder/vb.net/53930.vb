Dim updatedResults = (From item In bloops\n                      Let address = item.Address ' Store address for use in closure\n                      Select New Razzie With {\n                          .FirstName = item.FirstName,\n                          .LastName = item.LastName\n                      }).Select(Function(razzie) \n                                    razzie.UpdateAddress(address)\n                                    Return razzie\n                                End Function).ToList()