Public Class Form1\n    Private targetWidth As Integer\n    Private originalWidth As Integer\n    Private resizeStep As Integer = 5 ' Step size in pixels\n    Private timer As New Timer()\n\n    Private Sub ButtonResize_Click(sender As Object, e As EventArgs) Handles ButtonResize.Click\n        If Not timer.Enabled Then\n            targetWidth = Me.Width + 200 ' Example: increase width by 200px\n            originalWidth = Me.Width\n            timer.Interval = 10 ' Interval in milliseconds\n            AddHandler timer.Tick, AddressOf Timer_Tick\n            timer.Start()\n        End If\n    End Sub\n\n    Private Sub Timer_Tick(sender As Object, e As EventArgs)\n        Dim newWidth As Integer = Math.Min(Me.Width + resizeStep, targetWidth)\n\n        Me.SetBounds(Screen.PrimaryScreen.WorkingArea.Width - newWidth, _\n                     Screen.PrimaryScreen.WorkingArea.Height - Me.Height, _\n                     newWidth, Me.Height)\n\n        If newWidth >= targetWidth Then\n            timer.Stop()\n            RemoveHandler timer.Tick, AddressOf Timer_Tick\n        End If\n    End Sub\nEnd Class