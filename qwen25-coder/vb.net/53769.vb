Private Sub ShowReport(ByVal reportName As String)\n    Try\n        ' Get the type of 'Me' (the current class)\n        Dim thisType As Type = Me.GetType()\n        \n        ' Construct the method name based on the reportName parameter\n        Dim methodName As String = "Show" & reportName & "Report"\n        \n        ' Get the MethodInfo object for the specified method name\n        Dim methodInfo As Reflection.MethodInfo = thisType.GetMethod(methodName, BindingFlags.Instance Or BindingFlags.NonPublic)\n        \n        If methodInfo IsNot Nothing Then\n            ' Invoke the method\n            methodInfo.Invoke(Me, Nothing)\n        Else\n            pnlMessage.Visible = True\n            litMessage.Text = "The report name """ & reportName & """ is invalid."\n        End If\n    Catch ex As Exception\n        ' Handle exceptions (e.g., method not found, invocation errors)\n        pnlMessage.Visible = True\n        litMessage.Text = "An error occurred while showing the report: " & ex.Message\n    End Try\nEnd Sub