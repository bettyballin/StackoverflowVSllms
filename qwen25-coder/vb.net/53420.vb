Sub ExportQueryToCSV()\n    Dim db As DAO.Database\n    Dim qdf As DAO.QueryDef\n    Dim OutputFileName As String\n\n    ' Set the path to save the CSV file\n    OutputFileName = "C:\Path\To\ExportedFile.csv"\n\n    ' Open the database\n    Set db = CurrentDb\n    \n    ' Replace 'YourQueryName' with your actual query name\n    Set qdf = db.QueryDefs("YourQueryName")\n    \n    ' Execute the transfer to CSV\n    DoCmd.TransferText acExportDelim, , "YourQueryName", OutputFileName, True\n    \n    ' Clean up\n    Set qdf = Nothing\n    Set db = Nothing\n\n    MsgBox "Data exported successfully!"\nEnd Sub