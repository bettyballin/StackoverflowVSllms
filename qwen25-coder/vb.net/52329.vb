Public Class Form1\n\n    Private Async Sub Button1_Click(ByVal sender As System.Object, ByVal e As _\n        System.EventArgs) Handles Button1.Click\n\n        Await Task.Run(Sub() Add())\n    End Sub\n\n    Private Sub Add()\n        For i As Integer = 0 To 10000\n            ' Since UI updates can only be done on the main thread,\n            ' we must marshal this to the UI thread.\n            TextBox1.Invoke(Sub() TextBox1.Text = i.ToString())\n            Threading.Thread.Sleep(1) ' Just to simulate work and show changes sequentially\n        Next\n    End Sub\nEnd Class