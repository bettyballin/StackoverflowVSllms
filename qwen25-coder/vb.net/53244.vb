Imports System.Reflection\n\nPublic Module PropertyIterator\n    Public Sub IterateProperties(ByVal obj As Object)\n        ' Get the type of the object\n        Dim objType As Type = obj.GetType()\n\n        ' Get all public properties of the type\n        Dim properties As PropertyInfo() = objType.GetProperties(BindingFlags.Public Or BindingFlags.Instance)\n\n        ' Iterate through each property\n        For Each prop As PropertyInfo In properties\n            ' Get the value of the property using the object passed in\n            Dim value As Object = prop.GetValue(obj, Nothing)\n            \n            ' Do something with the name and value of the property\n            Console.WriteLine($"Property: {prop.Name}, Value: {value}")\n        Next\n    End Sub\nEnd Module\n\n' Example usage:\nPublic Class MyClassWithProperties\n    Public Property MyStringProperty As String = "Hello"\n    Public Property MyIntProperty As Integer = 42\n    Public Property MyBoolProperty As Boolean = True\nEnd Class\n\nSub Main()\n    Dim myObject As New MyClassWithProperties()\n    PropertyIterator.IterateProperties(myObject)\nEnd Sub