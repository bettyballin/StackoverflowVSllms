Imports System.Net.Http\nImports System.Threading.Tasks\n\nModule SimpleWebCrawler\n    Private ReadOnly client As HttpClient = New HttpClient()\n\n    Public Async Function FetchPageAsync(url As String) As Task(Of String)\n        Try\n            Dim response As HttpResponseMessage = Await client.GetAsync(url)\n            response.EnsureSuccessStatusCode()\n            Dim responseBody As String = Await response.Content.ReadAsStringAsync()\n            Return responseBody\n        Catch e As HttpRequestException\n            Console.WriteLine($"Request error: {e.Message}")\n            Return Nothing\n        End Try\n    End Function\n\n    Sub Main()\n        Task.Run(Async Function() Await MainAsync()).Wait()\n    End Sub\n\n    Private Async Function MainAsync() As Task\n        Dim crawler As New SimpleWebCrawler()\n        Dim url As String = "https://example.com"\n\n        Dim pageContent As String = Await FetchPageAsync(url)\n\n        If pageContent IsNot Nothing Then\n            Console.WriteLine("Fetched HTML content:")\n            ' Display the first 500 characters\n            Console.WriteLine(pageContent.Substring(0, 500))\n        End If\n    End Function\nEnd Module