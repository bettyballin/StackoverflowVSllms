Imports System.Net.Http\nImports System.Threading.Tasks\n\nModule Module1\n    Sub Main()\n        Dim result As String = GetHostIpInfo("68.180.206.184").Result\n        Console.WriteLine(result)\n    End Sub\n\n    Async Function GetHostIpInfo(ipAddress As String) As Task(Of String)\n        Using client As HttpClient = New HttpClient()\n            Dim response As HttpResponseMessage = Await client.GetAsync($"http://api.hostip.info/?ip={ipAddress}")\n            response.EnsureSuccessStatusCode()\n            Dim responseBody As String = Await response.Content.ReadAsStringAsync()\n            Return responseBody\n        End Using\n    End Function\nEnd Module