Public Shared Function Range(ByVal Minimum As Integer, ByVal Maximum As Integer) As String\n    Dim minStr As String = Minimum.ToString()\n    Dim maxStr As String = Maximum.ToString()\n\n    If minStr.Length <> maxStr.Length Then\n        Throw New ArgumentException("Minimum and Maximum must have the same number of digits")\n    End If\n\n    If Minimum > Maximum Then\n        Throw New ArgumentException("Minimum cannot be greater than Maximum")\n    End If\n\n    Dim pattern As String = "^"\n\n    For i As Integer = 0 To minStr.Length - 1\n        Dim startChar As Char = CChar(minStr(i))\n        Dim endChar As Char = CChar(maxStr(i))\n\n        If startChar <> endChar Then\n            pattern &= "["c & startChar & "-"c & endChar & "]"c\n        Else\n            pattern &= startChar.ToString()\n        End If\n    Next\n\n    Return pattern & "$"\nEnd Functio