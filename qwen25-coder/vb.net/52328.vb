Sub ListFilesInDirectory(ByVal directoryPath As String)\n    Dim fileName As String\n    \n    ' Ensure the directory path ends with a backslash\n    If Right$(directoryPath, 1) <> "\" Then\n        directoryPath = directoryPath & "\"\n    End If\n    \n    ' Get the first file in the directory\n    fileName = Dir(directoryPath & "*.*")\n    \n    Do While fileName <> ""\n        ' Print or store the filename\n        Debug.Print fileName\n        \n        ' Get the next file in the directory\n        fileName = Dir()\n    Loop\nEnd Sub\n\n' Example usage\nSub TestListFiles()\n    ListFilesInDirectory "C:\Your\Directory\Path"\nEnd Sub