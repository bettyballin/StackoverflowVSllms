Public Class TransparentForm\n    Public Sub New()\n        InitializeComponent()\n\n        ' Enable transparency support\n        Me.SetStyle(ControlStyles.OptimizedDoubleBuffer, True)\n        Me.SetStyle(ControlStyles.SupportsTransparentBackColor, True)\n        Me.SetStyle(ControlStyles.AllPaintingInWmPaint, True)\n\n        ' Set the background color to transparent\n        Me.BackColor = Color.Magenta ' Using Magenta as TransparencyKey\n\n        ' Load your image and set it as BackgroundImage\n        Me.BackgroundImage = New Bitmap("path_to_your_image.png")\n        Me.BackgroundImageLayout = ImageLayout.None\n\n        ' Define a Region for the form based on the non-transparent pixels of the image\n        Dim formRegion As New Region(New Rectangle(0, 0, Me.Width, Me.Height))\n        Using tmpBmp As New Bitmap(Me.BackgroundImage)\n            For y As Integer = 1 To Me.BackgroundImage.Height - 2\n                For x As Integer = 1 To Me.BackgroundImage.Width - 2\n                    If Not tmpBmp.GetPixel(x, y).Equals(Color.Magenta) Then\n                        formRegion.Union(New Rectangle(x, y, 1, 1))\n                    End If\n                Next\n            Next\n        End Using\n\n        ' Set the Region to the form's region\n        Me.Region = formRegion\n    End Sub\n\n    Protected Overrides Sub OnLoad(e As EventArgs)\n        MyBase.OnLoad(e)\n\n        ' Remove the default border style\n        Me.FormBorderStyle = FormBorderStyle.None\n\n        ' Set TransparencyKey\n        Me.TransparencyKey = Color.Magenta\n    End Sub\nEnd Class