Private Sub UserComboBox_AfterUpdate()\n    Dim strFilter As String\n    \n    If Me.UserComboBox & "" = "" Then ' Check if nothing is selected in combo box\n        strFilter = ""\n    Else\n        strFilter = "[UserID] = " & Me.UserComboBox.Value '& "" assumes UserID is numeric.\n        ' Use quotes for string data types: strFilter = "[UserName] = '" & Me.UserComboBox.Value & "'"\n    End If\n    \n    Me.SubformControlName.Form.Filter = strFilter\n    Me.SubformControlName.Form.FilterOn = True\nEnd Sub\n\nPrivate Sub UserComboBox_NotInList(NewData As String, Response As Integer)\n    ' Handle if the user enters a new value that is not in the list.\n    MsgBox "Please select an existing user.", vbExclamation\n    Response = acDataErrDisplay\nEnd Sub\n\nPrivate Sub Form_Load()\n    ' Ensure all records are shown by clearing any filters on load.\n    Me.SubformControlName.Form.FilterOn = False\nEnd Sub