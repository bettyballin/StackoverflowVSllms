Protected Sub GridView1_RowDeleting(sender As Object, e As GridViewDeleteEventArgs) Handles GridView1.RowDeleting\n    ' Get the value from DataKeys collection\n    Dim primaryKeyValue As Integer = Convert.ToInt32(GridView1.DataKeys(e.RowIndex).Value)\n\n    ' Find the row in DataTable that matches the primary key value\n    Dim rowToDelete = temptable.AsEnumerable().FirstOrDefault(Function(row) row.Field(Of Integer)("PrimaryKeyColumnName") = primaryKeyValue)\n\n    If rowToDelete IsNot Nothing Then\n        ' Remove the found row from the DataTable\n        temptable.Rows.Remove(rowToDelete)\n    End If\n\n    ' Rebind the GridView to reflect changes\n    GridView1.DataSource = temptable\n    GridView1.DataBind()\nEnd Sub