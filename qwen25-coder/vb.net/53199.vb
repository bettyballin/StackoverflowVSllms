Imports System.IO\nImports System.Net\n\nModule Module1\n    Sub Main()\n        Dim fileUrl As String = "http://www.domain.com/myfile.txt"\n        If RemoteFileExists(fileUrl) Then\n            Console.WriteLine("The file exists.")\n        Else\n            Console.WriteLine("The file does not exist.")\n        End If\n    End Sub\n\n    Public Function RemoteFileExists(ByVal url As String) As Boolean\n        Dim request As HttpWebRequest = CType(WebRequest.Create(url), HttpWebRequest)\n        request.Method = "HEAD"\n        Try\n            Using response As WebResponse = request.GetResponse()\n                Return (DirectCast(response, HttpWebResponse).StatusCode = HttpStatusCode.OK)\n            End Using\n        Catch ex As WebException\n            Dim resp As HttpWebResponse = CType(ex.Response, HttpWebResponse)\n            If resp IsNot Nothing Then\n                Return (resp.StatusCode = HttpStatusCode.OK)\n            Else\n                Return False\n            End If\n        End Try\n    End Function\nEnd Module