' Define the Enum with the allowed color values\nPublic Enum ColorOptions\n    Red\n    Green\n    Yellow\nEnd Enum\n\n' Function that accepts an Enum parameter\nPublic Sub GetPaint(color As ColorOptions)\n    Select Case color\n        Case ColorOptions.Red\n            Console.WriteLine("You selected Red paint.")\n        Case ColorOptions.Green\n            Console.WriteLine("You selected Green paint.")\n        Case ColorOptions.Yellow\n            Console.WriteLine("You selected Yellow paint.")\n    End Select\nEnd Sub\n\n' Example usage of GetPaint function\nSub Main()\n    ' The following calls are valid and will compile:\n    GetPaint(ColorOptions.Red)\n    GetPaint(ColorOptions.Green)\n    GetPaint(ColorOptions.Yellow)\n\n    ' The following line would cause a compile-time error:\n    ' GetPaint("Blue")  ' This is invalid as "Blue" is not part of the ColorOptions Enum\nEnd Sub