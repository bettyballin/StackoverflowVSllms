Imports System.Drawing\nImports System.Drawing.Imaging\n\nPublic Shared Sub CopyExifData(source As Image, destination As Image)\n    ' List of property IDs that are allowed in JPEG images\n    Dim jpegPropertyIds() As Integer = {\n        &H9003, ' Artist (Author)\n        &H927C, ' Maker_note \n        &H9286, ' User_comment \n        &H9004, ' Copyright\n        ExifTags.XResolution,\n        ExifTags.YResolution,\n        ExifTags.ResolutionUnit,\n        ExifTags.ExposureTime,\n        ExifTags.FNumber,\n        ExifTags.ISOSpeedRatings,\n        ExifTags.ShutterSpeedValue,\n        ExifTags.BrightnessValue,\n        ExifTags.ExposureBiasValue,\n        ExifTags.MaxApertureValue,\n        ExifTags.SubjectDistance,\n        ExifTags.MeteringMode,\n        ExifTags.LightSource,\n        ExifTags.Flash,\n        ExifTags.FocalLength,\n        ExifTags.ColorSpace,\n        ExifTags.DateTimeOriginal,\n        ExifTags.DateTimeDigitized\n    }\n\n    For Each propItem In source.PropertyItems\n        If Array.IndexOf(jpegPropertyIds, propItem.Id) >= 0 Then\n            destination.SetPropertyItem(propItem)\n        End If\n    Next\nEnd Sub\n\n' Usage example:\n' Dim image1 As Image = Image.FromFile("source.tif")\n' Dim image2 As Image ' your in-memory created image \n' CopyExifData(image1, image2)\n\n' Save the image with JPEG encoder\nDim eps As New EncoderParameters(1)\neps.Param(0) = New EncoderParameter(Encoder.Quality, 85L)\nDim ici As ImageCodecInfo = GetEncoderInfo("image/jpeg")\nimage2.Save("output.jpg", ici, eps)\n\nPrivate Shared Function GetEncoderInfo(mimeType As String) As ImageCodecInfo\n    Dim j As Integer\n    Dim encoders() As ImageCodecInfo\n    encoders = ImageCodecInfo.GetImageEncoders()\n    For j = 0 To encoders.Length - 1 Step 1\n        If encoders(j).MimeType = mimeType Then\n            Return encoders(j)\n        End If\n    Next\n    Return Nothing\nEnd Functio