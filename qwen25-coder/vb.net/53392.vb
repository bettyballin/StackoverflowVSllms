Imports System.IO\nImports Microsoft.Office.Interop.Word\n\nPublic Sub OpenWordDocumentFromByteArray(ByVal documentBytes As Byte())\n    ' Create a memory stream from the byte array\n    Using ms = New System.IO.MemoryStream(documentBytes)\n        Dim app As New Application()\n        Dim doc As Document = Nothing\n\n        Try\n            ' Load the document into Word based on the memory stream\n            doc = app.Documents.Open(ms)\n\n            ' Show the application (optional if you just want processing in background)\n            app.Visible = True\n\n        Catch ex As Exception\n            MessageBox.Show("Error opening document: " & ex.Message, "Document Error", MessageBoxButtons.OK, MessageBoxIcon.Error)\n            If doc IsNot Nothing Then doc.Close()\n            app.Quit()\n        End Try\n    End Using\nEnd Sub