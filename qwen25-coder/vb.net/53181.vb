Public Class CustomMsgBox\n\n    Public Sub New(message As String, caption As String, button1Text As String, button2Text As String)\n        InitializeComponent()\n        Text = caption\n        lblMessage.Text = message\n        btn1.Text = button1Text\n        btn2.Text = button2Text\n    End Sub\n\n    Private Sub btn1_Click(sender As Object, e As EventArgs) Handles btn1.Click\n        DialogResult = DialogResult.Yes\n        Close()\n    End Sub\n\n    Private Sub btn2_Click(sender As Object, e As EventArgs) Handles btn2.Click\n        DialogResult = DialogResult.No\n        Close()\n    End Sub\nEnd Class\n\n' Usage Example\nDim result As DialogResult\nUsing customBox As New CustomMsgBox("Do you want to proceed?", "Question", "Yes", "No")\n    result = customBox.ShowDialog()\nEnd Using\n\nIf result = DialogResult.Yes Then\n    ' User clicked Yes\nElseIf result = DialogResult.No Then\n    ' User clicked No\nEnd If