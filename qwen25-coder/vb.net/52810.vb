Imports System.Text.RegularExpressions\n\nPublic Class SentenceHandler\n    Public Function GetLinkedSentence(ByVal word As String, ByVal sentence As String) As String\n        ' Escape any special characters in the word for regex use\n        Dim escapedWord = Regex.Escape(word)\n        \n        ' Create a regex pattern that accounts for potential plurals and different forms\n        ' This is a basic example. Depending on your needs, you might need a more sophisticated pattern.\n        Dim pattern As String = "\b" & escapedWord & "(s?)\b"\n        \n        ' Replace any matches with the linked version\n        Dim replacement As String = "<a href=""http://www.example.com/?" & Regex.Escape(word) & "$1"">" & word & "$1</a>"\n        Dim result As String = Regex.Replace(sentence, pattern, replacement, RegexOptions.IgnoreCase)\n        \n        Return result\n    End Function\nEnd Class