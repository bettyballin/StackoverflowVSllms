Imports System.Diagnostics\n\nModule Module1\n    Sub Main()\n        ' Open a port (e.g., TCP port 443) for the local subnet in Windows Firewall\n        Dim processInfo As New ProcessStartInfo("netsh")\n        processInfo.Arguments = "advfirewall firewall add rule name=""Open Port For Application"" dir=in action=allow protocol=TCP localport=443"\n        processInfo.Verb = "runas" ' Requires administrator privileges\n\n        Try\n            Dim proc As New Process()\n            proc.StartInfo = processInfo\n            proc.Start()\n            proc.WaitForExit()\n\n            If proc.ExitCode = 0 Then\n                Console.WriteLine("Firewall rule added successfully.")\n            Else\n                Console.WriteLine("Failed to add firewall rule. Exit code: " & proc.ExitCode)\n            End If\n        Catch ex As Exception\n            Console.WriteLine("An error occurred: " & ex.Message)\n        End Try\n    End Sub\nEnd Module