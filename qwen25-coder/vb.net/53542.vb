Public Class TreeViewManager\n    Private _treeView As TreeView\n\n    Public Sub New(treeView As TreeView)\n        _treeView = treeView\n    End Sub\n\n    ' Method to get a specific node by its name or other criteria\n    Public Function GetNodeByName(name As String) As TreeNode\n        Return _treeView.Nodes.Find(name, True).FirstOrDefault()\n    End Function\n\n    ' Allow external modifications through properties or methods\n    Public Sub ModifyNodeText(key As String, newText As String)\n        Dim node = _treeView.Nodes.Find(key, True).FirstOrDefault()\n        If node IsNot Nothing Then\n            node.Text = newText\n        End If\n    End Sub\nEnd Class