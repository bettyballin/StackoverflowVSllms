Imports System.Net\nImports System.Net.Mail\n\nPublic Shared Sub send(ByVal recipent As String, ByVal from As String, ByVal subject As String, ByVal body As String)\n    Try\n        Dim mailMessage As New MailMessage()\n        \n        mailMessage.From = New MailAddress(from)\n        mailMessage.To.Add(New MailAddress(recipent))\n        \n        mailMessage.Subject = subject\n        mailMessage.Body = body\n        \n        mailMessage.IsBodyHtml = True\n        mailMessage.Priority = MailPriority.Normal\n\n        ' Configure the SMTP client\n        Dim smtp As New SmtpClient()\n        smtp.Host = MAIL_SERVER\n        smtp.Port = 587 ' Common port for submission over TLS\n        ' Uncomment and set if your server requires credentials\n        'smtp.Credentials = New NetworkCredential("username", "password")\n        smtp.EnableSsl = True ' Set to False if not required\n\n        smtp.Send(mailMessage)\n\n    Catch ex As SmtpException ' Better exception handling for SMTP-specific issues\n        critical_error(ex, "send() in Util_Email - SMTP Exception")\n    Catch ex As Exception\n        critical_error(ex, "send() in Util_Email - General Exception")\n    End Try\nEnd Sub\n\nPrivate Shared Sub critical_error(ByVal ex As Exception, ByVal message As String)\n    ' Add your error handling logic here\n    Console.WriteLine($"{message}: {ex.Message}")\nEnd Sub