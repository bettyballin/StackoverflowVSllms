' Declare myForm as a Form type but not globally unless necessary\nDim myForm As Form\n\nSub ShowNewForm()\n    ' Always create a new instance of the form\n    myForm = New Form()\n    \n    ' Set up your form here (add buttons, combobox, etc.)\n    \n    ' Show the form\n    myForm.Show()\nEnd Sub\n\nSub CloseCurrentForm()\n    If myForm IsNot Nothing Then\n        ' Optionally Hide instead of Dispose if you want to keep data\n        ' myForm.Hide()\n\n        ' Dispose the form and set it to nothing\n        myForm.Close()\n        myForm.Dispose()\n        myForm = Nothing\n    End If\nEnd Sub