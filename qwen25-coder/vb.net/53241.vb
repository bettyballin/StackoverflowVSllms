Private Function MapDataRowToProperties(ByVal dr As DataRow) As Incident\n    Dim targetIncident As Incident\n    \n    ' Determine whether to use Me or create a new Instance\n    If dr.Item("pkIncidentID") IsNot Nothing AndAlso CInt(dr.Item("pkIncidentID")) = ID Then\n        targetIncident = Me\n    Else\n        targetIncident = New Incident()\n    End If\n\n    ' Call the helper method to populate properties\n    PopulatePropertiesFromDataRow(dr, targetIncident)\n    \n    Return targetIncident\nEnd Function\n\nPrivate Sub PopulatePropertiesFromDataRow(ByVal dr As DataRow, ByVal incident As Incident)\n    incident.ID = Convert.ToInt32(dr.Item("pkIncidentID"))\n    incident.Description = dr.Item("IncidentDetail").ToString()\n    incident.Created = Convert.ToDateTime(dr.Item("CreatedOn"))\n    ' Add other properties as necessary\nEnd Sub