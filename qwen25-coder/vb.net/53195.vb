Public MustInherit Class FooBase\n    Public Event StatusTextChanged(ByVal StatusText As String)\n\n    Private _StatusText As String = "Idle."\n\n    Public Property StatusText() As String\n        Get\n            Return _StatusText\n        End Get\n        Protected Set(ByVal value As String)\n            If String.Equals(_StatusText, value) Then\n                Return ' No need to raise an event if the text did not change.\n            End If\n\n            _StatusText = value\n            RaiseEventIfSubscribed(StatusTextChanged, value)\n        End Set\n    End Property\n\n    Private Sub RaiseEventIfSubscribed(eventToRaise As EventHandler(Of String), ByVal arg As String)\n        Dim handler As EventHandler(Of String) = eventToRaise\n        If handler IsNot Nothing Then\n            handler.Invoke(Me, arg)\n        End If\n    End Sub\nEnd Class