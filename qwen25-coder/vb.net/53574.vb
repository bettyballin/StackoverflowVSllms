Sub CreatePivotTableFromLocalExcelData()\n    Dim SourceSheet As Worksheet\n    Dim PivotSheet As Worksheet\n    Dim SourceRange As Range\n    Dim PivotCache As PivotCache\n    Dim PivotTable As PivotTable\n    \n    ' Set source data sheet and range\n    Set SourceSheet = ThisWorkbook.Sheets("DataSheet")\n    Set SourceRange = SourceSheet.Range("A1:D100")\n    \n    ' Add a new worksheet for the pivot table\n    Set PivotSheet = Worksheets.Add\n    PivotSheet.Name = "PivotTable"\n    \n    ' Create the pivot cache and then create the pivot table from that cache\n    Set PivotCache = ThisWorkbook.PivotCaches.Create(SourceType:=xlDatabase, SourceData:=SourceRange)\n    Set PivotTable = PivotCache.CreatePivotTable(TableDestination:=PivotSheet.Cells(1, 1), TableName:="SalesReport")\n    \n    ' Configure the pivot table fields (example configuration, adjust as needed)\n    With PivotTable\n        .AddFieldToArea Field:=.PivotFields("account_code"), Area:=xlRowField\n        .AddFieldToArea Field:=.PivotFields("amount"), Area:=xlDataField\n    End With\nEnd Sub