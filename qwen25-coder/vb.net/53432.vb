Sub CreatePassThroughQuery()\n    Dim db As DAO.Database\n    Dim qdf As DAO.QueryDef\n    \n    Set db = CurrentDb\n    \n    ' Delete the query if it already exists\n    If Not IsNull(db.TableDefs("MyPassThroughQuery")) Then\n        DoCmd.DeleteObject acQuery, "MyPassThroughQuery"\n    End If\n\n    ' Create the new pass-through query\n    Set qdf = db.CreateQueryDef("MyPassThroughQuery")\n    \n    ' Define your ODBC connection string here\n    qdf.Connect = "ODBC;DRIVER={Oracle in OraClient12Home1};SERVER=myServerAddress;UID=myUsername;PWD=myPassword;"\n    \n    ' SQL statement to fetch from Oracle view or table with an artificial PK\n    qdf.SQL = "SELECT (ROWID) AS ARTIFICIAL_PK, * FROM mySourceView"\n    \n    ' Set the type of query to pass-through\n    qdf.ReturnsRecords = True\n    \n    ' Refresh the query\n    db.QueryDefs.Refresh\n    \n    Set qdf = Nothing\n    Set db = Nothing\nEnd Sub