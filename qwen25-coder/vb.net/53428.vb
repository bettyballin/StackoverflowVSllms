Dim conn As New ADODB.Connection\nDim cmd As New ADODB.Command\nDim sqlStr As String\n\n' Open the connection\nconn.Open "YourConnectionString"\n\n' Define your SQL query with placeholders for parameters\nsqlStr = "SELECT * FROM YourTable WHERE YourColumn = :1"\n\n' Set the command type and text\ncmd.CommandType = adCmdText\ncmd.CommandText = sqlStr\n\n' Manually add parameters to the command object\ncmd.Parameters.Append cmd.CreateParameter("Param1", adVarChar, adParamInput, 50, "YourValue")\n\n' Assign connection and execute\nSet cmd.ActiveConnection = conn\ncmd.Execute\n\n' Close connection\nconn.Close