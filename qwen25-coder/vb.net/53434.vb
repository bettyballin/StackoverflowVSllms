Sub ExportTablesAsUnicodeTilde()\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n    Dim fld As DAO.Field\n    Dim filePath As String\n    Dim tblName As String\n    \n    Set db = CurrentDb\n    \n    ' Loop through all tabledefs in the database\n    For Each tbl In db.TableDefs\n        If Not (tbl.Name Like "MSYS*" Or tbl_Name Like "~*") Then\n            tblName = tbl.Name\n            filePath = "C:\" & tblName & ".txt"\n            \n            Set rs = db.OpenRecordset(tblName)\n            If rs.EOF Then\n                rs.Close\n                GoTo NextTable\n            End If\n            \n            ' Create a TextStream to write the output file\n            Dim fso As Object\n            Dim ts As Object\n            Set fso = CreateObject("Scripting.FileSystemObject")\n            Set ts = fso.CreateTextFile(filePath, True)\n            \n            ' Write field names first with tilde delimiter and Unicode BOM (Byte Order Mark) for UTF-16LE encoding\n            Dim unicodeBOM As String\n            unicodeBOM = ChrW(&HFEFF)\n            Dim header As String\n            header = ""\n            For Each fld In rs.Fields\n                header = header & fld.Name & "~"\n            Next\n            ts.Write unicodeBOM ' Add Unicode BOM for UTF-16LE\n            ts.WriteLine Left(header, Len(header) - 1) ' Remove the last tilde\n            \n            ' Write each row of the recordset to the file with tilde delimiter\n            Do While Not rs.EOF\n                Dim line As String\n                line = ""\n                For Each fld In rs.Fields\n                    If IsNull(fld.Value) Then\n                        line = line & "~"\n                    ElseIf VarType(fld.Value) = vbString Then\n                        ' Escape tilde in string fields with backslash to preserve delimitation\n                        line = line & Replace(fld.Value, "~", "\~") & "~"\n                    Else\n                        line = line & fld.Value & "~"\n                    End If\n                Next\n                ts.WriteLine Left(line, Len(line) - 1) ' Remove the last tilde\n                rs.MoveNext\n            Loop\n            \n            ' Clean up recordset\n            rs.Close\nNextTable:\n        End If\n    Next tbl\n    \n    Set fso = Nothing\n    Set db = Nothing\nEnd Sub