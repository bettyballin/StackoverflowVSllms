Public Class CountdownForm\n\n    Private countdownDuration As TimeSpan = TimeSpan.FromMinutes(4) ' 4 minutes countdown\n    Private remainingTime As TimeSpan\n\n    Private Sub CountdownForm_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        remainingTime = countdownDuration\n        Timer1.Interval = 1000 ' Set the timer to tick every second\n        Timer1.Start()\n    End Sub\n\n    Private Sub Timer1_Tick(sender As Object, e As EventArgs) Handles Timer1.Tick\n        If remainingTime.TotalSeconds > 0 Then\n            remainingTime = remainingTime.Subtract(TimeSpan.FromSeconds(1))\n            TextBox1.Text = remainingTime.ToString("hhmmss")\n        Else\n            Timer1.Stop()\n            MessageBox.Show("Countdown finished!")\n            ' You can add more actions here when countdown reaches zero\n        End If\n    End Sub\n\nEnd Class