Public Function CheckNetworkPath(path As String, timeOutInSeconds As Integer) As Boolean\n        Dim startTime As Single\n        Dim fso As Object\n        Set fso = CreateObject("Scripting.FileSystemObject")\n        \n        startTime = Timer\n        \n        Do While (Timer - startTime) < timeOutInSeconds\n            If fso.FolderExists(path) Then\n                CheckNetworkPath = True\n                Exit Function\n            End If\n            ' Optionally, add a small sleep to reduce CPU usage\n            Application.Wait Now + TimeValue("0:00:01")\n        Loop\n        \n        CheckNetworkPath = False\n    End Functio