Private Sub Form_Load()\n    ' Setup the ListView control to act like a grid with 2 columns\n    With List1\n        .View = lvwReport\n        .FullRowSelect = True\n        .Gridlines = True\n        .ColumnHeaders.Add , , "Text Column", 3000\n        .ColumnHeaders.Add , , "ComboBox Column", 2000\n        \n        ' Add some sample data (normally you would fill this dynamically)\n        Dim lvItem As ListItem\n        Set lvItem = .ListItems.Add(, , "Row 1 Text")\n        \n        ' Add a ComboBox to the second column of the first row\n        With Combo1\n            .Left = List1.Left + List1.ColumnHeaders.Item(1).Width\n            .Top = lvItem.Top + (lvItem.Height - .Height) / 2\n            .Visible = True\n            .AddItem "Option 1"\n            .AddItem "Option 2"\n            .AddItem "Option 3"\n        End With\n        \n        ' Note: Add more rows and ComboBoxes as needed in a loop, adjusting positions accordingly.\n    End With\nEnd Sub\n\nPrivate Sub List1_ItemClick(ByVal Item As MSComctlLib.ListItem)\n    ' Adjust visibility of ComboBox based on which row is clicked\n    Combo1.Visible = (Combo1.Tag = Item.Index)\n    If Not Combo1.Visible Then\n        Combo1.Move List1.Left + List1.ColumnHeaders.Item(1).Width, _\n                    Item.Top + (Item.Height - Combo1.Height) / 2\n        Combo1.Tag = Item.Index\n        Combo1.Visible = True\n        Combo1.SetFocus\n    End If\nEnd Sub\n\nPrivate Sub Form_Resize()\n    ' Resize the ListView control on form resize to maintain layout\n    On Error Resume Next\n    List1.Width = ScaleWidth\n    List1.Height = ScaleHeight - Combo1.Height\n    Combo1.Top = List1.Top + List1.Height\nEnd Sub