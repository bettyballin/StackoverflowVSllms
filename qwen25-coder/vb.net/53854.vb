Imports System.Text\n\nPublic Function DecodeHexString(hexString As String) As String\n    If (hexString.Length Mod 2) <> 0 Then\n        Throw New ArgumentException("Input must have an even number of characters.", nameof(hexString))\n    End If\n\n    Dim bytes(hexString.Length \ 2 - 1) As Byte\n    For i As Integer = 0 To bytes.Length - 1\n        ' Convert each pair of hex digits to a byte\n        bytes(i) = Convert.ToByte(hexString.Substring(i * 2, 2), 16)\n    Next\n\n    ' Decode the byte array as Unicode string\n    Return Encoding.Unicode.GetString(bytes)\nEnd Functio