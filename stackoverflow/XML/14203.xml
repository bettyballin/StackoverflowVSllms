<macrodef name="iterate-projects">\n    <attribute name="target" />\n    <sequential>\n        <subant target="@{target}">\n            <filelist dir="${src_dir}">\n              <file name="projectA/build.xml"/>\n              <file name="projectB/build.xml"/>\n              <file name="projectC/build.xml"/>\n            </filelist>\n        </subant>\n    </sequential>\n</macrodef>