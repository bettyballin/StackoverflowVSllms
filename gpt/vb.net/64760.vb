Dim PostsEnum = From BlogPost In XMLSource.Descendants("item")\n    Order By DateTime.Parse(If(BlogPost.Element("pubDate") IsNot Nothing, BlogPost.Element("pubDate").Value, DateTime.MinValue.ToString)) Descending\n    Select New Post() With {\n        .Title = If(BlogPost.Element("title") IsNot Nothing, BlogPost.Element("title").Value, String.Empty),\n        .Link = If(BlogPost.Element("link") IsNot Nothing, BlogPost.Element("link").Value, String.Empty),\n        .Description = If(BlogPost.Element("description") IsNot Nothing, BlogPost.Element("description").Value, String.Empty),\n        .AuthorText = If(BlogPost.Element("author") IsNot Nothing, BlogPost.Element("author").Value, String.Empty),\n        .Category = (From tag In BlogPost.Descendants("category")\n                     Select cat = If(tag.FirstNode IsNot Nothing, tag.FirstNode.ToString, String.Empty)).ToList,\n        .PubDate = If(BlogPost.Element("pubDate") IsNot Nothing, DateTime.Parse(BlogPost.Element("pubDate").Value), DateTime.MinValue),\n        .GUID = If(BlogPost.Element("guid") IsNot Nothing, BlogPost.Element("guid").Value, String.Empty),\n        .Source = If(BlogPost.Element("source") IsNot Nothing, BlogPost.Element("source").Value, String.Empty)\n    }