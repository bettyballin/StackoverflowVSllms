' Ensure necessary imports\nImports System.Drawing\n\nPublic Sub AdjustTextBoxHeight(ByVal textBox As TextBox, ByVal fontSize As Single)\n    ' Create Graphics object\n    Dim graphics As Graphics = textBox.Parent.CreateGraphics()\n    \n    ' Create the font with the specified size\n    Dim font As New Font("Tahoma", fontSize, FontStyle.Regular)\n    \n    ' Calculate the height of one line\n    Dim lineHeight As Single = graphics.MeasureString("A", font).Height\n    \n    ' Calculate the total height required for the text in the TextBox\n    Dim textSize As SizeF = graphics.MeasureString(textBox.Text, font, textBox.Width)\n    Dim totalHeight As Single = textSize.Height\n    \n    ' Calculate the number of lines\n    Dim numLines As Integer = CInt(Math.Ceiling(totalHeight / lineHeight))\n    \n    ' Set the TextBox height based on the number of lines plus padding\n    Dim topPadding As Integer = 4\n    Dim bottomPadding As Integer = 3\n    textBox.Height = CInt(numLines * lineHeight) + topPadding + bottomPadding\nEnd Sub\n\n' Example usage\nPrivate Sub AdjustAllTextBoxes()\n    Dim fontSize As Single\n    \n    ' Determine the font size based on user selection\n    If Me.CheckBox1.Checked Then\n        fontSize = 6\n    ElseIf Me.CheckBox2.Checked Then\n        fontSize = 8\n    ElseIf Me.CheckBox3.Checked Then\n        fontSize = 12\n    Else\n        fontSize = 10\n    End If\n    \n    ' Adjust each TextBox height\n    AdjustTextBoxHeight(Me.TextBox1, fontSize)\n    AdjustTextBoxHeight(Me.TextBox2, fontSize)\n    ' Repeat for other text boxes as needed\nEnd Sub