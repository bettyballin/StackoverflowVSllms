Sub ExportSheetsToHTML()\n    Dim ws As Worksheet\n    Dim tempFileName As String\n    Dim finalHTMLFile As String\n    Dim tempHTMLContent As String\n    Dim finalHTMLContent As String\n    Dim fs As Object\n    Dim ts As Object\n    \n    finalHTMLFile = ThisWorkbook.Path & "\final_report.html"\n    finalHTMLContent = "<html><head><title>Excel Report</title></head><body>"\n    \n    Set fs = CreateObject("Scripting.FileSystemObject")\n    \n    For Each ws In ThisWorkbook.Worksheets\n        tempFileName = ThisWorkbook.Path & "\" & ws.Name & ".html"\n        \n        ' Export the sheet to a temporary HTML file\n        ws.SaveAs Filename:=tempFileName, FileFormat:=xlHtml\n        \n        ' Read the content of the temporary HTML file\n        Set ts = fs.OpenTextFile(tempFileName, 1)\n        tempHTMLContent = ts.ReadAll\n        ts.Close\n        fs.DeleteFile tempFileName ' Cleanup\n        \n        ' Extract the <table>...</table> part from the HTML content\n        tempHTMLContent = Mid(tempHTMLContent, InStr(tempHTMLContent, "<table"), InStr(tempHTMLContent, "</table>") - InStr(tempHTMLContent, "<table") + Len("</table>"))\n        \n        ' Append the extracted table to the final HTML content\n        finalHTMLContent = finalHTMLContent & tempHTMLContent & "<br>"\n    Next ws\n    \n    finalHTMLContent = finalHTMLContent & "</body></html>"\n    \n    ' Write the final HTML content to the final HTML file\n    Set ts = fs.CreateTextFile(finalHTMLFile, True)\n    ts.Write finalHTMLContent\n    ts.Close\n    \n    MsgBox "HTML report created successfully: " & finalHTMLFile\nEnd Sub