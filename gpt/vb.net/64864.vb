Imports System.Data.SqlClient\n\nModule Module1\n    Sub Main()\n        ' Create a new SqlConnectionStringBuilder and\n        ' initialize it with a few name/value pairs:\n        Dim builder As New SqlConnectionStringBuilder(GetConnectionString())\n\n        ' Build the connection string\n        builder.ConnectionString = "Server=http://sql.example.com;user id=******;password=***********;"\n        builder.Password = "new@1Password"\n        builder.AsynchronousProcessing = True\n        builder("Server") = "."\n        builder("Connect Timeout") = 1000\n        builder.Item("Trusted_Connection") = True\n\n        ' Test the connection\n        Using connection As New SqlConnection(builder.ConnectionString)\n            Try\n                connection.Open()\n                Console.WriteLine("Connection successful.")\n            Catch ex As Exception\n                Console.WriteLine("Connection failed: " & ex.Message)\n            End Try\n        End Using\n\n        Console.WriteLine("Press Enter to finish.")\n        Console.ReadLine()\n    End Sub\n\n    Private Function GetConnectionString() As String\n        ' To avoid storing the connection string in your code,\n        ' you can retrieve it from a configuration file. \n        Return "Server=(local);Integrated Security=SSPI;Initial Catalog=AdventureWorks"\n    End Function\nEnd Module