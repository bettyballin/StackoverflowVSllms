Imports System.Drawing\n\nPublic Class LimitedTextBox\n    Inherits TextBox\n\n    Protected Overrides Sub OnKeyPress(ByVal e As KeyPressEventArgs)\n        MyBase.OnKeyPress(e)\n        \n        ' Measure the size of the text\n        Using g As Graphics = Me.CreateGraphics()\n            Dim textSize As SizeF = g.MeasureString(Me.Text & e.KeyChar, Me.Font)\n\n            ' Check if the text exceeds the visible area of the TextBox\n            If Me.Multiline Then\n                If textSize.Height > Me.ClientSize.Height Then\n                    e.Handled = True ' Prevent further typing\n                End If\n            Else\n                If textSize.Width > Me.ClientSize.Width Then\n                    e.Handled = True ' Prevent further typing\n                End If\n            End If\n        End Using\n    End Sub\nEnd Class