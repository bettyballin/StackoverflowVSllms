Dim db As DAO.Database\nDim tdf As DAO.TableDef\nDim fldOld As DAO.Field\nDim fldNew As DAO.Field\nDim rs As DAO.Recordset\n\nSet db = DBEngine.OpenDatabase("YourDatabasePath")\n\n' Open the desired table\nSet tdf = db.TableDefs("YourTableName")\n\n' Step 1: Add a new temporary column\nSet fldNew = tdf.CreateField("TempColumn", DAO.DataTypeEnum.dbLong)\ntdf.Fields.Append fldNew\n\n' Step 2: Copy data from old column to new temporary column\nSet rs = db.OpenRecordset("YourTableName", DAO.RecordsetTypeEnum.dbOpenDynaset)\nDo While Not rs.EOF\n    rs.Edit\n    rs!TempColumn = rs!OldColumn\n    rs.Update\n    rs.MoveNext\nLoop\nrs.Close\n\n' Step 3: Delete the old column\ntdf.Fields.Delete "OldColumn"\n\n' Step 4: Rename the new column to the original column name\nSet fldNew = tdf.Fields("TempColumn")\nfldNew.Name = "OldColumn"\n\n' Clean up\nSet fldNew = Nothing\nSet fldOld = Nothing\nSet tdf = Nothing\nSet db = Nothing