Imports System.Net.Mail\n\nSub SendEmailWithPDFAttachment(pdfFilePath As String, recipientEmail As String, subject As String, body As String)\n    Dim smtpClient As New SmtpClient("smtp.yourserver.com")\n    Dim mail As New MailMessage()\n\n    mail.From = New MailAddress("your_email@yourdomain.com")\n    mail.To.Add(recipientEmail)\n    mail.Subject = subject\n    mail.Body = body\n    mail.IsBodyHtml = True\n\n    ' Create the attachment\n    Dim attachment As New Attachment(pdfFilePath)\n    mail.Attachments.Add(attachment)\n\n    ' Send the email\n    smtpClient.Send(mail)\nEnd Sub