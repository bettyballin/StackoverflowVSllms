<%\nDim conn, rs, sql, uploadFile, fileName, fileData\n\nSet conn = Server.CreateObject("ADODB.Connection")\nconn.Open "your_connection_string_here"\n\nIf Request.TotalBytes > 0 Then\n    uploadFile = Request.BinaryRead(Request.TotalBytes)\n    fileName = Request.Form("filename")\n\n    sql = "INSERT INTO Images (ImageName, ImageData) VALUES (?, ?)"\n    Set rs = Server.CreateObject("ADODB.Command")\n    rs.ActiveConnection = conn\n    rs.CommandText = sql\n    rs.CommandType = 1\n\n    rs.Parameters.Append rs.CreateParameter("@ImageName", 202, 1, 255, fileName)\n    rs.Parameters.Append rs.CreateParameter("@ImageData", 204, 1, LenB(uploadFile), uploadFile)\n\n    rs.Execute\n    Response.Write "File uploaded successfully."\nEnd If\n\nconn.Close\nSet conn = Nothing\n%>\n\n<html>\n<body>\n<form method="post" enctype="multipart/form-data">\n    Select Image: <input type="file" name="filename"><br>\n    <input type="submit" value="Upload">\n</form>\n</body>\n</html>