Public Class Form1\n    Private sourceControl As Control\n\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Assign the context menu to both grid controls\n        ContextMenuStrip1.Opening += AddressOf ContextMenuStrip1_Opening\n        DataGridView1.ContextMenuStrip = ContextMenuStrip1\n        DataGridView2.ContextMenuStrip = ContextMenuStrip1\n    End Sub\n\n    Private Sub ContextMenuStrip1_Opening(sender As Object, e As System.ComponentModel.CancelEventArgs)\n        ' Determine the source control\n        Dim cms As ContextMenuStrip = CType(sender, ContextMenuStrip)\n        sourceControl = cms.SourceControl\n    End Sub\n\n    Private Sub ContextMenuItem_Click(sender As Object, e As EventArgs) Handles ContextMenuItem1.Click\n        ' Perform actions based on the source control\n        If sourceControl Is DataGridView1 Then\n            MessageBox.Show("Context menu item clicked from DataGridView1")\n        ElseIf sourceControl Is DataGridView2 Then\n            MessageBox.Show("Context menu item clicked from DataGridView2")\n        End If\n    End Sub\nEnd Class