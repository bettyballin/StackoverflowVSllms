Sub GetMemoryConfiguration()\n    Dim objWMIService As Object\n    Dim colItems As Object\n    Dim objItem As Object\n    Dim strComputer As String\n    Dim memoryInfo As String\n    \n    strComputer = "."\n    \n    ' Connect to WMI service\n    Set objWMIService = GetObject("winmgmts:\\" & strComputer & "\root\CIMV2")\n    Set colItems = objWMIService.ExecQuery("SELECT * FROM Win32_PhysicalMemory", , 48)\n    \n    memoryInfo = "Memory Configuration:" & vbCrLf\n    \n    ' Iterate through each memory module\n    For Each objItem In colItems\n        memoryInfo = memoryInfo & "Capacity: " & objItem.Capacity / 1024 / 1024 & " MB" & vbCrLf\n        memoryInfo = memoryInfo & "Manufacturer: " & objItem.Manufacturer & vbCrLf\n        memoryInfo = memoryInfo & "Speed: " & objItem.Speed & " MHz" & vbCrLf\n        memoryInfo = memoryInfo & "Memory Type: " & objItem.MemoryType & vbCrLf\n        memoryInfo = memoryInfo & vbCrLf\n    Next objItem\n    \n    ' Display the memory information\n    MsgBox memoryInfo\nEnd Sub