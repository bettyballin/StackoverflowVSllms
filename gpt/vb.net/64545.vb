Sub ImportCSV()\n    Dim ws As Worksheet\n    Dim qt As QueryTable\n    Dim csvFilePath As String\n\n    ' Set the file path to your CSV file\n    csvFilePath = "C:\path\to\your\file.csv"\n\n    ' Set the worksheet where you want to import the data\n    Set ws = ThisWorkbook.Sheets("Sheet1")\n\n    ' Create a new QueryTable to import the CSV data\n    Set qt = ws.QueryTables.Add(Connection:="TEXT;" & csvFilePath, Destination:=ws.Range("A1"))\n\n    ' Configure the QueryTable settings\n    With qt\n        .TextFileParseType = xlDelimited\n        .TextFileCommaDelimiter = True\n        .RefreshStyle = xlOverwriteCells\n        .AdjustColumnWidth = True\n        .Refresh BackgroundQuery:=False\n    End With\n\n    ' Disable automatic refresh\n    qt.RefreshOnFileOpen = False\n\n    ' Delete the QueryTable to prevent future refreshes\n    qt.Delete\nEnd Sub