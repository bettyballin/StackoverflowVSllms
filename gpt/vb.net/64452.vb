Imports System.DirectoryServices\n\nModule Module1\n    Sub Main()\n        ' Define the LDAP path and credentials (update with your own)\n        Dim ldapPath As String = "LDAP://CN=Groups,DC=example,DC=com"\n        Dim username As String = "your_username"\n        Dim password As String = "your_password"\n\n        ' Create a new DirectoryEntry\n        Dim entry As New DirectoryEntry(ldapPath, username, password)\n\n        ' Create a new group\n        Dim newGroup As DirectoryEntry = entry.Children.Add("CN=NewDistributionList", "group")\n\n        ' Set properties for the new group\n        newGroup.Properties("sAMAccountName").Value = "NewDistributionList"\n        newGroup.Properties("description").Value = "This is a new distribution list."\n\n        ' ADS_GROUP_TYPE_GLOBAL_GROUP + ADS_GROUP_TYPE_SECURITY_ENABLED = 2 + 2147483648\n        ' For a distribution list (non-security), just use ADS_GROUP_TYPE_GLOBAL_GROUP (2)\n        Dim ADS_GROUP_TYPE_GLOBAL_GROUP As Integer = &H2\n        newGroup.Properties("groupType").Value = ADS_GROUP_TYPE_GLOBAL_GROUP\n\n        ' Commit the new group to the directory\n        newGroup.CommitChanges()\n\n        ' Dispose the objects\n        newGroup.Dispose()\n        entry.Dispose()\n\n        Console.WriteLine("New distribution list created successfully.")\n    End Sub\nEnd Module