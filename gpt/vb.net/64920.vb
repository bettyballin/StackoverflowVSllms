<TestFixture()> _\nPublic Class SerializationTests\n\n    <Test()> _\n    Public Sub TestSerializationAndDeserialization()\n        ' Arrange\n        Dim originalObject As New MySerializableClass()\n        originalObject.Property1 = "Test"\n        originalObject.Property2 = 123\n\n        Dim memoryStream As New MemoryStream()\n        Dim formatter As New BinaryFormatter()\n\n        ' Act\n        ' Serialize the object\n        formatter.Serialize(memoryStream, originalObject)\n\n        ' Reset the stream position to the beginning\n        memoryStream.Seek(0, SeekOrigin.Begin)\n\n        ' Deserialize the object\n        Dim deserializedObject As MySerializableClass = CType(formatter.Deserialize(memoryStream), MySerializableClass)\n\n        ' Assert\n        Assert.AreEqual(originalObject.Property1, deserializedObject.Property1)\n        Assert.AreEqual(originalObject.Property2, deserializedObject.Property2)\n    End Sub\n\nEnd Class