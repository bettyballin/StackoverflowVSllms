Sub SwitchToExclusiveMode()\n    ' Save all open objects\n    DoCmd.RunCommand acCmdSaveAll\n\n    ' Close all open objects\n    DoCmd.CloseDatabase\n\n    ' Reopen the database in exclusive mode\n    Application.OpenCurrentDatabase "C:\Path\To\Your\Database.accdb", True\nEnd Sub\n\nSub SwitchToSharedMode()\n    ' Save all open objects\n    DoCmd.RunCommand acCmdSaveAll\n\n    ' Close all open objects\n    DoCmd.CloseDatabase\n\n    ' Reopen the database in shared mode\n    Application.OpenCurrentDatabase "C:\Path\To\Your\Database.accdb", False\nEnd Sub