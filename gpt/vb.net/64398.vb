Public Class ExampleClass\n    ' Shared variable\n    Public Shared sharedCounter As Integer = 0\n\n    ' Instance variable\n    Public instanceCounter As Integer = 0\n\n    Public Sub IncrementCounters()\n        ' Increment both the shared and instance counters\n        sharedCounter += 1\n        instanceCounter += 1\n    End Sub\n\n    Public Sub DisplayCounters()\n        Console.WriteLine("Shared Counter: " & sharedCounter)\n        Console.WriteLine("Instance Counter: " & instanceCounter)\n    End Sub\nEnd Class\n\nModule Module1\n    Sub Main()\n        Dim obj1 As New ExampleClass()\n        Dim obj2 As New ExampleClass()\n\n        obj1.IncrementCounters()\n        obj1.DisplayCounters()\n\n        obj2.IncrementCounters()\n        obj2.DisplayCounters()\n\n        ' Display counters again to see the effect of shared counter\n        obj1.DisplayCounters()\n        obj2.DisplayCounters()\n    End Sub\nEnd Module