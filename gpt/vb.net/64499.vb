Private Sub ExportAndSend_Click()\n    Dim FilePath As String\n    Dim FileNumber As Integer\n    Dim rst As DAO.Recordset\n    Dim strData As String\n    Dim objOutlook As Object\n    Dim objMail As Object\n    \n    ' Define file path\n    FilePath = "C:\Path\To\Your\TextFile.txt"\n    FileNumber = FreeFile\n    \n    ' Open the text file for output\n    Open FilePath For Output As #FileNumber\n    \n    ' Retrieve data from the form's recordset\n    Set rst = Me.RecordsetClone\n    rst.MoveFirst\n    \n    ' Loop through all fields in the recordset\n    For Each fld In rst.Fields\n        strData = strData & fld.Name & ": " & fld.Value & vbCrLf\n    Next fld\n    \n    ' Write the data to the text file\n    Print #FileNumber, strData\n    \n    ' Close the text file\n    Close #FileNumber\n    \n    ' Create Outlook application\n    Set objOutlook = CreateObject("Outlook.Application")\n    Set objMail = objOutlook.CreateItem(0)\n    \n    ' Create email\n    With objMail\n        .To = "recipient@example.com"\n        .Subject = "Exported Data"\n        .Body = "Please find the attached text file containing the exported data."\n        .Attachments.Add FilePath\n        .Send\n    End With\n    \n    ' Cleanup\n    Set objMail = Nothing\n    Set objOutlook = Nothing\n    Set rst = Nothing\n\n    MsgBox "Data exported and email sent successfully."\nEnd Sub