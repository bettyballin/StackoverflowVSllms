Private Sub CheckBox1_Click()\n    Me.TextBox1.Enabled = Me.CheckBox1.Value\nEnd Sub\n\nPrivate Sub CheckBox2_Click()\n    Me.TextBox2.Enabled = Me.CheckBox2.Value\nEnd Sub\n\nPrivate Sub SearchButton_Click()\n    Dim strSQL As String\n    Dim strWhere As String\n    \n    strSQL = "SELECT * FROM YourTableName"\n    strWhere = ""\n\n    If Me.CheckBox1.Value And Me.TextBox1.Text <> "" Then\n        strWhere = strWhere & "Field1 LIKE '*" & Me.TextBox1.Text & "*' AND "\n    End If\n    \n    If Me.CheckBox2.Value And Me.TextBox2.Text <> "" Then\n        strWhere = strWhere & "Field2 LIKE '*" & Me.TextBox2.Text & "*' AND "\n    End If\n\n    ' Remove the trailing "AND " if necessary\n    If strWhere <> "" Then\n        strWhere = Left(strWhere, Len(strWhere) - 5)\n        strSQL = strSQL & " WHERE " & strWhere\n    End If\n\n    ' Set the form's record source to the SQL string\n    Me.RecordSource = strSQL\nEnd Sub