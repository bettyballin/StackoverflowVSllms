Sub ImportCSVWithSchema()\n    Dim ws As Worksheet\n    Set ws = ThisWorkbook.Sheets.Add\n    Dim filePath As String\n    filePath = Application.GetOpenFilename("CSV Files (*.csv), *.csv", , "Select CSV File")\n    \n    If filePath = "False" Then Exit Sub\n\n    With ws.QueryTables.Add(Connection:="TEXT;" & filePath, Destination:=ws.Range("A1"))\n        .TextFileParseType = xlDelimited\n        .TextFileConsecutiveDelimiter = False\n        .TextFileTabDelimiter = False\n        .TextFileSemicolonDelimiter = False\n        .TextFileCommaDelimiter = True\n        .TextFileColumnDataTypes = Array(xlTextFormat, xlTextFormat, xlGeneralFormat, xlTextFormat) ' Specify data formats for each column\n        .Refresh BackgroundQuery:=False\n    End With\nEnd Sub