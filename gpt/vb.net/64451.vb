Module MainModule\n        Sub Main()\n            ' Read the setting from App.config\n            Dim showLogin As Boolean = Boolean.Parse(ConfigurationManager.AppSettings("ShowLogin"))\n\n            ' Check the flag and open the appropriate form\n            If showLogin Then\n                ' Show the login form\n                Dim loginForm As New LoginForm()\n                Application.Run(loginForm)\n            Else\n                ' Show the splash screen first\n                Dim splashScreen As New SplashScreen()\n                splashScreen.ShowDialog()\n\n                ' Then show the main form\n                Dim mainForm As New MainForm()\n                Application.Run(mainForm)\n            End If\n        End Sub\n    End Module