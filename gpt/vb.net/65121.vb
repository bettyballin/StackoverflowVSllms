Imports System.IO.Ports\n\nPublic Class SerialPortHandler\n    Private WithEvents _serialPort As SerialPort\n\n    Public Sub New(portName As String, baudRate As Integer)\n        ' Instantiate the SerialPort object\n        _serialPort = New SerialPort()\n\n        ' Set the properties\n        _serialPort.PortName = portName\n        _serialPort.BaudRate = baudRate\n        _serialPort.Parity = Parity.None\n        _serialPort.DataBits = 8\n        _serialPort.StopBits = StopBits.One\n        _serialPort.Handshake = Handshake.None\n\n        ' Add the DataReceived event handler\n        AddHandler _serialPort.DataReceived, AddressOf DataReceivedHandler\n\n        ' Open the port\n        _serialPort.Open()\n    End Sub\n\n    Private Sub DataReceivedHandler(sender As Object, e As SerialDataReceivedEventArgs)\n        ' Read the data from the serial port\n        Dim receivedData As String = _serialPort.ReadExisting()\n        ' Process the received data\n        Console.WriteLine("Data Received: " & receivedData)\n    End Sub\n\n    ' Method to close the serial port\n    Public Sub ClosePort()\n        If _serialPort IsNot Nothing AndAlso _serialPort.IsOpen Then\n            _serialPort.Close()\n        End If\n    End Sub\n\n    ' Ensure the port is closed when the object is disposed\n    Protected Overrides Sub Finalize()\n        ClosePort()\n        MyBase.Finalize()\n    End Sub\nEnd Class