Imports System.Xml\nImports System.IO\n\nModule Module1\n    Sub Main()\n        Dim strFileName As String = "output.xml"\n        Dim dictArguments As New Dictionary(Of String, String) From {\n            {"Element1", "Value1"},\n            {"Element2", "Value2"}\n        }\n\n        ' Use StreamWriter to write the custom XML declaration\n        Using stream As New StreamWriter(strFileName, False, System.Text.Encoding.UTF8)\n            stream.WriteLine("<?xml version=""1.0""?>")\n\n            ' Create XmlWriter with the StreamWriter\n            Dim settings As New XmlWriterSettings()\n            settings.Indent = True\n            settings.IndentChars = "    "\n            settings.NewLineChars = vbCrLf\n            settings.Encoding = System.Text.Encoding.UTF8\n\n            Using writer As XmlWriter = XmlWriter.Create(stream, settings)\n                ' Write XML content\n                writer.WriteStartElement("Root")\n\n                For Each kvp As KeyValuePair(Of String, String) In dictArguments\n                    writer.WriteStartElement(kvp.Key)\n                    writer.WriteString(kvp.Value)\n                    writer.WriteEndElement()\n                Next\n\n                writer.WriteEndElement() ' End Root element\n                writer.Flush()\n            End Using\n        End Using\n\n        Console.WriteLine("XML file created successfully.")\n    End Sub\nEnd Module