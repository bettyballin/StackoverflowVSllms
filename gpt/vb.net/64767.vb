Imports System.Security.Cryptography\nImports System.Text\n\nModule Module1\n    Sub Main()\n        ' Example data to sign (e.g., date of birth)\n        Dim dataToSign As String = "01/01/2000"\n        Dim dataBytes As Byte() = Encoding.UTF8.GetBytes(dataToSign)\n\n        ' Create a new instance of RSACryptoServiceProvider\n        Using rsa As New RSACryptoServiceProvider()\n\n            ' Export the public key for verification\n            Dim publicKey As String = rsa.ToXmlString(False)\n            Console.WriteLine("Public Key: " & publicKey)\n\n            ' Sign the data with the private key\n            Dim signedData As Byte() = rsa.SignData(dataBytes, New SHA256CryptoServiceProvider())\n\n            ' Convert the signed data to a base64 string for display\n            Dim signedDataString As String = Convert.ToBase64String(signedData)\n            Console.WriteLine("Signed Data: " & signedDataString)\n\n            ' Verify the signature using the public key\n            Dim rsaForVerification As New RSACryptoServiceProvider()\n            rsaForVerification.FromXmlString(publicKey)\n\n            Dim isVerified As Boolean = rsaForVerification.VerifyData(dataBytes, New SHA256CryptoServiceProvider(), signedData)\n            Console.WriteLine("Signature Verified: " & isVerified)\n        End Using\n    End Sub\nEnd Module