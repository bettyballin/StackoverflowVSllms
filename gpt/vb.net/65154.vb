Imports System.Diagnostics\n\nPublic Sub LogCPUUsage()\n    Dim cpuCounter As New PerformanceCounter("Processor", "% Processor Time", "_Total")\n    cpuCounter.NextValue()\n    System.Threading.Thread.Sleep(1000) ' Wait a second to get a valid reading\n    Dim cpuUsage As Single = cpuCounter.NextValue()\n    Log("CPU Usage: " & cpuUsage.ToString() & "%")\nEnd Sub\n\nPublic Sub Log(message As String)\n    ' Implement your logging mechanism here\n    Console.WriteLine(message)\nEnd Sub