Public Shared Sub EnumerateFiles(serverLocation As String)\n    Try\n        Dim allFiles As IEnumerable(Of String) = Directory.EnumerateFiles(serverLocation, "*.*", SearchOption.AllDirectories)\n        For Each file As String In allFiles\n            ' Process each file\n            Console.WriteLine(file)\n        Next\n    Catch ex As Exception\n        ' Handle exceptions such as UnauthorizedAccessException or DirectoryNotFoundException\n        Console.WriteLine("An error occurred: " & ex.Message)\n    End Try\nEnd Sub