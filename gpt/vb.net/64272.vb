Protected Sub SpecialErrorHandler(ByVal TargetControl As Object, ByVal ControlType As Type)\n    Try\n        Dim controlTextProperty As System.Reflection.PropertyInfo = ControlType.GetProperty("Text")\n        If controlTextProperty IsNot Nothing Then\n            Dim controlText As String = controlTextProperty.GetValue(TargetControl, Nothing).ToString()\n            MessageBox.Show("Bad Juice: " & controlText)\n        Else\n            MessageBox.Show("The provided control type does not have a Text property.")\n        End If\n    Catch ex As Exception\n        MessageBox.Show("Error: " & ex.Message)\n    End Try\nEnd Sub