Imports System.Data.SQLite\n\nPublic Sub InsertIntoEntries(appInput As String, userInput As String, passInput As String)\n    Try\n        Using SQLconnect As New SQLiteConnection("Data Source=vault.db;")\n            SQLconnect.Open()\n            Using SQLcommand As New SQLiteCommand("INSERT INTO entries (app, user, pass) VALUES (@app, @user, @pass)", SQLconnect)\n                SQLcommand.Parameters.AddWithValue("@app", appInput)\n                SQLcommand.Parameters.AddWithValue("@user", userInput)\n                SQLcommand.Parameters.AddWithValue("@pass", passInput)\n                SQLcommand.ExecuteNonQuery()\n            End Using\n        End Using\n    Catch ex As Exception\n        MessageBox.Show("Error: " & ex.Message)\n    End Try\nEnd Sub