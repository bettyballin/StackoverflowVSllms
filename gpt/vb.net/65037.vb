Imports System.Runtime.InteropServices\n\nModule Module1\n    <DllImport("user32.dll", CharSet:=CharSet.Auto, ExactSpelling:=True, CallingConvention:=CallingConvention.Winapi)>\n    Public Function GetKeyState(ByVal keyCode As Integer) As Short\n    End Function\n\n    Sub Main()\n        ' Check current state of Caps Lock\n        Dim capsLockState As Boolean = (GetKeyState(&H14) And 1) <> 0\n\n        ' Toggle Caps Lock\n        If capsLockState Then\n            ' If Caps Lock is on, turn it off\n            SendKeys.SendWait("{CAPSLOCK}")\n        Else\n            ' If Caps Lock is off, turn it on\n            SendKeys.SendWait("{CAPSLOCK}")\n        End If\n    End Sub\nEnd Module