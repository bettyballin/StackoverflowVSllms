Public Class Form1\n    Private listBox1 As ListBox\n    Private listBox2 As ListBox\n\n    Public Sub New()\n        ' This call is required by the designer.\n        InitializeComponent()\n\n        ' Initialize ListBox1\n        listBox1 = New ListBox()\n        listBox1.Items.AddRange(New String() {"Item 1", "Item 2", "Item 3"})\n        listBox1.Dock = DockStyle.Fill\n\n        ' Initialize ListBox2\n        listBox2 = New ListBox()\n        listBox2.Items.AddRange(listBox1.Items.Cast(Of String).ToArray())\n        listBox2.Dock = DockStyle.Fill\n\n        ' Add ListBox1 to TabPage1\n        TabPage1.Controls.Add(listBox1)\n\n        ' Add ListBox2 to TabPage2\n        TabPage2.Controls.Add(listBox2)\n\n        ' Sync the listboxes\n        AddHandler listBox1.SelectedIndexChanged, AddressOf ListBox1_SelectedIndexChanged\n        AddHandler listBox2.SelectedIndexChanged, AddressOf ListBox2_SelectedIndexChanged\n    End Sub\n\n    Private Sub ListBox1_SelectedIndexChanged(sender As Object, e As EventArgs)\n        If listBox2.SelectedIndex <> listBox1.SelectedIndex Then\n            listBox2.SelectedIndex = listBox1.SelectedIndex\n        End If\n    End Sub\n\n    Private Sub ListBox2_SelectedIndexChanged(sender As Object, e As EventArgs)\n        If listBox1.SelectedIndex <> listBox2.SelectedIndex Then\n            listBox1.SelectedIndex = listBox2.SelectedIndex\n        End If\n    End Sub\nEnd Class