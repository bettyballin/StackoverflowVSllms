Imports System.Data\nImports System.Linq\n\nModule Module1\n    Sub Main()\n        ' Sample DataTable\n        Dim dtTable As New DataTable()\n        dtTable.Columns.Add("Column1")\n        dtTable.Columns.Add("Column2")\n\n        ' Adding sample data\n        dtTable.Rows.Add("'Hello'", "'World'")\n        dtTable.Rows.Add("'Foo'", "'Bar'")\n\n        ' Create new DataTable with the same structure\n        Dim dtNewTable As DataTable = dtTable.Clone()\n\n        ' Use LINQ to transform the data and remove single quotes\n        Dim newRows = From row In dtTable.AsEnumerable()\n                      Let newItems = row.ItemArray.Select(Function(item) \n                                           If(TypeOf item Is String, item.ToString().Trim("'"c), item)).ToArray()\n                      Select dtNewTable.LoadDataRow(newItems, False)\n\n        ' Execute the query to fill the new DataTable\n        newRows.CopyToDataTable(dtNewTable, LoadOption.OverwriteChanges)\n\n        ' Display the new DataTable\n        For Each row As DataRow In dtNewTable.Rows\n            Console.WriteLine(String.Join(",", row.ItemArray))\n        Next\n    End Sub\nEnd Module