Public Class Form1\n    Private originalImage As Image\n    Private zoomFactor As Double = 2.0 ' Change this value to adjust the zoom level\n\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Load your image\n        originalImage = Image.FromFile("path_to_your_image.jpg")\n        PictureBox1.Image = originalImage\n        PictureBox1.SizeMode = PictureBoxSizeMode.AutoSize\n    End Sub\n\n    Private Sub PictureBox1_MouseClick(sender As Object, e As MouseEventArgs) Handles PictureBox1.MouseClick\n        ' Get the click point\n        Dim clickPoint As Point = e.Location\n\n        ' Calculate the zoomed area\n        Dim zoomWidth As Integer = CInt(PictureBox1.Width / zoomFactor)\n        Dim zoomHeight As Integer = CInt(PictureBox1.Height / zoomFactor)\n        Dim zoomRect As New Rectangle(clickPoint.X - zoomWidth \ 2, clickPoint.Y - zoomHeight \ 2, zoomWidth, zoomHeight)\n\n        ' Ensure the zoom rectangle is within the bounds of the image\n        If zoomRect.X < 0 Then zoomRect.X = 0\n        If zoomRect.Y < 0 Then zoomRect.Y = 0\n        If zoomRect.Right > originalImage.Width Then zoomRect.X = originalImage.Width - zoomRect.Width\n        If zoomRect.Bottom > originalImage.Height Then zoomRect.Y = originalImage.Height - zoomRect.Height\n\n        ' Create a new bitmap for the zoomed area\n        Dim zoomedImage As New Bitmap(zoomRect.Width, zoomRect.Height)\n        Using g As Graphics = Graphics.FromImage(zoomedImage)\n            g.DrawImage(originalImage, New Rectangle(0, 0, zoomedImage.Width, zoomedImage.Height), zoomRect, GraphicsUnit.Pixel)\n        End Using\n\n        ' Display the zoomed image\n        PictureBox1.Image = zoomedImage\n    End Sub\nEnd Class