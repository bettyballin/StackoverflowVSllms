Private Sub GetUserGroups()\n    Dim objWMIService As Object\n    Dim colGroups As Object\n    Dim objGroup As Object\n    Dim strComputer As String\n\n    strComputer = "."\n    Set objWMIService = GetObject("winmgmts:\\" & strComputer & "\root\cimv2")\n    Set colGroups = objWMIService.ExecQuery("Select * from Win32_GroupUser Where PartComponent=""Win32_UserAccount.Domain='" & Environ("USERDOMAIN") & "',Name='" & Environ("USERNAME") & "'""")\n\n    For Each objGroup In colGroups\n        Debug.Print objGroup.GroupComponent\n    Next\nEnd Sub