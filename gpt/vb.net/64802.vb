Imports System.Text.RegularExpressions\n\nModule Module1\n    Sub Main()\n        Dim inputText As String = "Your input text goes here."\n        Dim wordFreq As New Dictionary(Of String, Integer)(StringComparer.OrdinalIgnoreCase)\n\n        ' Split input text into words using Regex\n        Dim words As String() = Regex.Split(inputText, "\W+")\n\n        ' Process each word\n        For Each word As String In words\n            If Not String.IsNullOrEmpty(word) AndAlso word.All(Function(c) Char.IsLetter(c)) Then\n                If wordFreq.ContainsKey(word) Then\n                    wordFreq(word) += 1\n                Else\n                    wordFreq.Add(word, 1)\n                End If\n            End If\n        Next\n\n        ' Sort by frequency and then alphabetically\n        Dim sortedWordFreq = wordFreq.OrderByDescending(Function(pair) pair.Value).ThenBy(Function(pair) pair.Key)\n\n        ' Display word frequencies\n        For Each pair In sortedWordFreq\n            Console.WriteLine($"{pair.Key}: {pair.Value}")\n        Next\n\n        Console.ReadLine()\n    End Sub\nEnd Module