Sub DecryptPGPFile(inputFile As String, outputFile As String, privateKeyPassword As String)\n    Dim gpgPath As String\n    Dim command As String\n    Dim result As Integer\n\n    ' Path to the GPG executable\n    gpgPath = "C:\Program Files (x86)\GnuPG\bin\gpg.exe"\n\n    ' Command to decrypt the file\n    command = gpgPath & " --batch --yes --passphrase " & Chr(34) & privateKeyPassword & Chr(34) & " -o " & Chr(34) & outputFile & Chr(34) & " -d " & Chr(34) & inputFile & Chr(34)\n\n    ' Execute the command\n    result = Shell(command, vbHide)\n\n    ' Check the result\n    If result = 0 Then\n        MsgBox "File decrypted successfully.", vbInformation\n    Else\n        MsgBox "Error decrypting file.", vbCritical\n    End If\nEnd Sub