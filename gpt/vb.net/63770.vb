Imports System.Text\n\nPublic Function DecodeBasicAuthHeader(authHeader As String) As String\n    ' Remove the "Basic " prefix\n    Dim encodedCredentials As String = authHeader.Substring(6)\n    \n    ' Decode the base64 encoded string\n    Dim decodedBytes As Byte() = Convert.FromBase64String(encodedCredentials)\n    Dim decodedCredentials As String = Encoding.UTF8.GetString(decodedBytes)\n    \n    Return decodedCredentials\nEnd Function\n\n' Example usage\nDim EncodedAuth As String = Context.Request.Headers.GetValues("Authorization")(0)\nDim credentials As String = DecodeBasicAuthHeader(EncodedAuth)\nConsole.WriteLine(credentials)