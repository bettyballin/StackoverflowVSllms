Imports System.Net\nImports System.Text\n\nPublic Class SimpleWebServer\n\n    Private listener As HttpListener\n\n    Public Sub Start()\n        listener = New HttpListener()\n        listener.Prefixes.Add("http://localhost:1234/")\n        listener.Start()\n        Console.WriteLine("Listening on http://localhost:1234/")\n\n        While True\n            Dim context As HttpListenerContext = listener.GetContext()\n            ProcessRequest(context)\n        End While\n    End Sub\n\n    Private Sub ProcessRequest(context As HttpListenerContext)\n        Dim response As HttpListenerResponse = context.Response\n        response.ContentType = "text/html"\n        Dim buffer() As Byte = Encoding.UTF8.GetBytes("<html><body><h1>Status Page</h1><p>Your service is running!</p></body></html>")\n        response.ContentLength64 = buffer.Length\n        Dim output As System.IO.Stream = response.OutputStream\n        output.Write(buffer, 0, buffer.Length)\n        output.Close()\n    End Sub\n\n    Public Sub [Stop]()\n        listener.Stop()\n        listener.Close()\n    End Sub\n\nEnd Class\n\nModule Module1\n    Sub Main()\n        Dim server As New SimpleWebServer()\n        server.Start()\n    End Sub\nEnd Module