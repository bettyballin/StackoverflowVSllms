Sub MergeCSVFiles()\n    Dim ws As Worksheet\n    Dim folderPath As String\n    Dim fileName As String\n    Dim lastRow As Long\n    Dim i As Integer\n    \n    ' Set the folder path where CSV files are stored\n    folderPath = "C:\Path\To\Your\CSV\Files\" ' Change this to your folder path\n    \n    ' Create a new worksheet to import data\n    Set ws = ThisWorkbook.Sheets.Add\n    ws.Name = "MergedData"\n    \n    ' Get the first CSV file in the folder\n    fileName = Dir(folderPath & "*.csv")\n    \n    ' Loop through all CSV files in the folder\n    Do While fileName <> ""\n        ' Import CSV file data into the worksheet\n        With ws.QueryTables.Add(Connection:="TEXT;" & folderPath & fileName, Destination:=ws.Cells(1, 1))\n            .TextFileParseType = xlDelimited\n            .TextFileConsecutiveDelimiter = False\n            .TextFileTabDelimiter = False\n            .TextFileSemicolonDelimiter = False\n            .TextFileCommaDelimiter = True\n            .TextFilePlatform = xlWindows\n            .TextFileStartRow = 1\n            .TextFileColumnDataTypes = Array(1)\n            .Refresh BackgroundQuery:=False\n        End With\n        \n        ' Find the last row with data in the worksheet\n        lastRow = ws.Cells(ws.Rows.Count, "A").End(xlUp).Row\n        \n        ' Get the next CSV file in the folder\n        fileName = Dir\n    Loop\n    \n    ' Remove duplicate headers if necessary\n    For i = ws.Cells(1, 1).CurrentRegion.Rows.Count To 2 Step -1\n        If ws.Cells(i, 1).Value = ws.Cells(1, 1).Value Then\n            ws.Rows(i).Delete\n        End If\n    Next i\n    \n    MsgBox "CSV files have been merged successfully!", vbInformation\nEnd Sub