Public Class Form1\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Example data for the DataGridView\n        DataGridView1.DataSource = GetData()\n\n        ' Add CellFormatting event handler\n        AddHandler DataGridView1.CellFormatting, AddressOf DataGridView1_CellFormatting\n    End Sub\n\n    Private Function GetData() As DataTable\n        ' Create some example data\n        Dim dt As New DataTable()\n        dt.Columns.Add("ID", GetType(Integer))\n        dt.Columns.Add("Name", GetType(String))\n\n        dt.Rows.Add(1, "John Doe")\n        dt.Rows.Add(2, "Jane Smith")\n        dt.Rows.Add(3, "Jim Brown")\n\n        Return dt\n    End Function\n\n    Private Sub DataGridView1_CellFormatting(sender As Object, e As DataGridViewCellFormattingEventArgs)\n        ' Set the tooltip for each cell in the row\n        Dim dataGridView As DataGridView = CType(sender, DataGridView)\n        If e.RowIndex >= 0 And e.ColumnIndex >= 0 Then\n            Dim cell As DataGridViewCell = dataGridView.Rows(e.RowIndex).Cells(e.ColumnIndex)\n            cell.ToolTipText = $"Row {e.RowIndex + 1}, Column {e.ColumnIndex + 1}: {cell.Value}"\n        End If\n    End Sub\nEnd Class