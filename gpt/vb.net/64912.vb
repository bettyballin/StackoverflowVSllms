Imports System\nImports System.Collections.Generic\nImports System.Globalization\n\nModule Program\n    Sub Main()\n        ' Sample word list\n        Dim words As String() = {"apple", "banana", "cherry", "date", "elderberry"}\n\n        ' Create a comparer for "en-US" culture\n        Dim comparer As StringComparer = StringComparer.Create(New CultureInfo("en-US"), False)\n\n        ' Sort the array using the comparer\n        Array.Sort(words, comparer)\n\n        ' Perform a binary search using the same comparer\n        Dim index As Integer = Array.BinarySearch(words, "cherry", comparer)\n\n        Console.WriteLine("Sorted array:")\n        For Each word As String In words\n            Console.WriteLine(word)\n        Next\n\n        Console.WriteLine(vbCrLf & "Index of 'cherry': " & index)\n    End Sub\nEnd Module