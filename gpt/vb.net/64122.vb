Imports System.Linq\n\nModule Module1\n    Sub Main()\n        Dim db As New LogTimeDataContext()\n\n        Dim LogUser = From lu In db.Users\n                      Join lt In db.Log_Times On lu.UserID Equals lt.UserID\n                      Group By lu.Name Into Group\n                      Select Name, TotalDuration = TimeSpan.FromTicks(Group.Sum(Function(g) (g.TimeOut - g.TimeIn).Ticks))\n\n        Dim result = LogUser.ToList().Select(Function(x) New With {\n            .UserName = x.Name,\n            .TotalDuration = $"{Math.Floor(x.TotalDuration.TotalHours)} Hours, {x.TotalDuration.Minutes} Minutes"\n        })\n\n        Gridview1.DataSource = result\n        Gridview1.DataBind()\n    End Sub\nEnd Module