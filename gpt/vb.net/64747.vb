Sub AddDateCreatedColumn()\n    Dim db As DAO.Database\n    Dim strSQL As String\n\n    Set db = CurrentDb\n\n    ' Add the new column with a default value\n    strSQL = "ALTER TABLE tblLogs ADD COLUMN date_created DATETIME;"\n    db.Execute strSQL\n\n    ' Set the default value using DAO TableDef\n    Dim tdf As DAO.TableDef\n    Dim fld As DAO.Field\n\n    Set tdf = db.TableDefs("tblLogs")\n    Set fld = tdf.Fields("date_created")\n\n    fld.DefaultValue = "=Now()"\n\n    ' Clean up\n    Set fld = Nothing\n    Set tdf = Nothing\n    Set db = Nothing\nEnd Sub