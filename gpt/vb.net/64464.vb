Imports System.Runtime.InteropServices\n\nModule Module1\n\n    <DllImport("gdi32.dll")>\n    Private Function SetDeviceGammaRamp(hdc As IntPtr, lpRamp As IntPtr) As Boolean\n    End Function\n\n    <DllImport("user32.dll")>\n    Private Function GetDC(hWnd As IntPtr) As IntPtr\n    End Function\n\n    <DllImport("user32.dll")>\n    Private Function ReleaseDC(hWnd As IntPtr, hDC As IntPtr) As Integer\n    End Function\n\n    Structure RAMP\n        <MarshalAs(UnmanagedType.ByValArray, SizeConst:=256)>\n        Public Red As UShort()\n        <MarshalAs(UnmanagedType.ByValArray, SizeConst:=256)>\n        Public Green As UShort()\n        <MarshalAs(UnmanagedType.ByValArray, SizeConst:=256)>\n        Public Blue As UShort()\n    End Structure\n\n    Sub Main()\n        Dim hdc As IntPtr = GetDC(IntPtr.Zero)\n        Dim ramp As New RAMP With {\n            .Red = New UShort(255) {},\n            .Green = New UShort(255) {},\n            .Blue = New UShort(255) {}\n        }\n\n        For i As Integer = 0 To 255\n            ramp.Red(i) = CUShort(i * 256)\n            ramp.Green(i) = CUShort(i * 128)  ' Example to reduce blue light\n            ramp.Blue(i) = CUShort(i * 64)    ' Example to reduce blue light\n        Next\n\n        SetDeviceGammaRamp(hdc, Marshal.AllocHGlobal(Marshal.SizeOf(ramp)))\n        ReleaseDC(IntPtr.Zero, hdc)\n    End Sub\n\nEnd Module