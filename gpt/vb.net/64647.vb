Private Sub btnBold_Click(sender As Object, e As EventArgs) Handles btnBold.Click\n    If Not String.IsNullOrEmpty(RichTextBox1.SelectedText) Then\n        Dim currentFont As Font = RichTextBox1.SelectionFont\n        Dim newFontStyle As FontStyle\n\n        ' Toggle bold style\n        If currentFont IsNot Nothing Then\n            If currentFont.Style.HasFlag(FontStyle.Bold) Then\n                newFontStyle = currentFont.Style And Not FontStyle.Bold\n            Else\n                newFontStyle = currentFont.Style Or FontStyle.Bold\n            End If\n\n            RichTextBox1.SelectionFont = New Font(currentFont, newFontStyle)\n        End If\n    End If\nEnd Sub