Public Class ChatForm\n    Private Sub ChatForm_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Initialize the RichTextBox\n        Dim chatBox As New RichTextBox()\n        chatBox.Dock = DockStyle.Fill\n        chatBox.ReadOnly = True\n        chatBox.Multiline = True\n        chatBox.WordWrap = True\n        chatBox.ScrollBars = RichTextBoxScrollBars.Vertical\n        \n        ' Add the RichTextBox to the form\n        Me.Controls.Add(chatBox)\n\n        ' Example of adding a message\n        AddChatMessage(chatBox, "User1", "Hello, how are you?")\n        AddChatMessage(chatBox, "User2", "I'm good, thanks! How about you?")\n    End Sub\n\n    Private Sub AddChatMessage(rtb As RichTextBox, username As String, message As String)\n        ' Append the username\n        rtb.SelectionFont = New Font(rtb.Font, FontStyle.Bold)\n        rtb.AppendText(username & ": ")\n\n        ' Append the message\n        rtb.SelectionFont = New Font(rtb.Font, FontStyle.Regular)\n        rtb.AppendText(message & Environment.NewLine)\n    End Sub\nEnd Class