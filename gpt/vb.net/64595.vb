Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click\n    ' Check if there is a current cell selected\n    If DataGridView1.CurrentCell IsNot Nothing Then\n        Dim currentRowIndex As Integer = DataGridView1.CurrentCell.RowIndex\n        Dim currentColumnIndex As Integer = DataGridView1.CurrentCell.ColumnIndex\n        Dim nextRowIndex As Integer = currentRowIndex + 1\n        \n        ' Ensure the next row index is within the valid range\n        If nextRowIndex < DataGridView1.Rows.Count Then\n            ' Set the current cell to the cell in the next row but same column\n            DataGridView1.CurrentCell = DataGridView1.Rows(nextRowIndex).Cells(currentColumnIndex)\n        Else\n            MessageBox.Show("You are already at the last row.")\n        End If\n    Else\n        MessageBox.Show("No cell is currently selected.")\n    End If\nEnd Sub