Imports System.Drawing\nImports System.Windows.Forms\n\nPublic Class Form1\n    Inherits Form\n\n    Public Sub New()\n        Me.Text = "Pixel Selection Form"\n        Me.Size = New Size(800, 600)\n        Me.DoubleBuffered = True\n        Me.BackColor = Color.White\n    End Sub\n\n    Protected Overrides Sub OnPaint(ByVal e As PaintEventArgs)\n        MyBase.OnPaint(e)\n        Dim g As Graphics = e.Graphics\n\n        ' Example: Draw a gradient background\n        Dim rect As New Rectangle(0, 0, Me.ClientSize.Width, Me.ClientSize.Height)\n        Using brush As New LinearGradientBrush(rect, Color.Red, Color.Blue, LinearGradientMode.Horizontal)\n            g.FillRectangle(brush, rect)\n        End Using\n    End Sub\n\n    Public Sub DetectBlackPixels()\n        Dim bmp As New Bitmap(Me.ClientSize.Width, Me.ClientSize.Height)\n        Me.DrawToBitmap(bmp, New Rectangle(0, 0, Me.ClientSize.Width, Me.ClientSize.Height))\n\n        For y As Integer = 0 To bmp.Height - 1\n            For x As Integer = 0 To bmp.Width - 1\n                Dim pixelColor As Color = bmp.GetPixel(x, y)\n                If pixelColor.ToArgb() = Color.Black.ToArgb() Then\n                    ' Do something with the black pixel\n                    Console.WriteLine($"Black pixel found at ({x}, {y})")\n                End If\n            Next\n        Next\n    End Sub\n\n    Protected Overrides Sub OnMouseClick(ByVal e As MouseEventArgs)\n        MyBase.OnMouseClick(e)\n        DetectBlackPixels()\n    End Sub\nEnd Class\n\nModule Module1\n    Sub Main()\n        Application.EnableVisualStyles()\n        Application.Run(New Form1())\n    End Sub\nEnd Module