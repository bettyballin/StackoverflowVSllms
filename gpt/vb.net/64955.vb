Imports System.IO\n\nPublic Class Form1\n\n    ' Method to load image into PictureBox from file using MemoryStream\n    Private Sub LoadImage(filePath As String)\n        Using fs As New FileStream(filePath, FileMode.Open, FileAccess.Read)\n            Dim img As Image = Image.FromStream(fs)\n            PictureBox2.Image = New Bitmap(img)\n        End Using\n    End Sub\n\n    ' Button click event to clear the PictureBox and delete the file\n    Private Sub ClearButton_Click(sender As Object, e As EventArgs) Handles ClearButton.Click\n        ' Dispose of the current image in the PictureBox\n        If PictureBox2.Image IsNot Nothing Then\n            PictureBox2.Image.Dispose()\n            PictureBox2.Image = Nothing\n        End If\n\n        ' Delete the file\n        Dim filePath As String = "tempImage.jpg"\n        If File.Exists(filePath) Then\n            File.Delete(filePath)\n        End If\n    End Sub\n\n    ' Example method to load the image (e.g., called on form load or another button click)\n    Private Sub LoadImageButton_Click(sender As Object, e As EventArgs) Handles LoadImageButton.Click\n        Dim filePath As String = "tempImage.jpg"\n        If File.Exists(filePath) Then\n            LoadImage(filePath)\n        End If\n    End Sub\n\nEnd Class