Module StackLogger\n    Private callStack As Collection\n\n    Public Sub InitializeStack()\n        Set callStack = New Collection\n    End Sub\n\n    Public Sub LogEntry(functionName As String)\n        callStack.Add functionName\n    End Sub\n\n    Public Sub LogExit()\n        callStack.Remove callStack.Count\n    End Sub\n\n    Public Function GetCallStack() As String\n        Dim result As String\n        Dim funcName As Variant\n        \n        result = "Call Stack:" & vbCrLf\n        For Each funcName In callStack\n            result = result & funcName & vbCrLf\n        Next funcName\n        \n        GetCallStack = result\n    End Function\nEnd Module