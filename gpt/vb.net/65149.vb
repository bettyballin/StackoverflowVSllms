Imports System.Reflection\n\nModule SpellCheckModule\n    Sub Main()\n        Dim textToCheck As String = "Ths is a smple txt with speling erors."\n        Dim correctedText As String = SpellCheckText(textToCheck)\n        Console.WriteLine("Corrected Text: " & correctedText)\n    End Sub\n\n    Function SpellCheckText(ByVal text As String) As String\n        Dim wordApp As Object = Nothing\n        Dim wordDoc As Object = Nothing\n\n        Try\n            wordApp = CreateObject("Word.Application")\n            wordDoc = wordApp.Documents.Add()\n            wordDoc.Words(1).Text = text\n\n            ' Perform spell check\n            wordDoc.CheckSpelling()\n\n            ' Get corrected text\n            Dim correctedText As String = wordDoc.Words(1).Text\n\n            Return correctedText\n        Catch ex As Exception\n            Console.WriteLine("Error: " & ex.Message)\n            Return text\n        Finally\n            ' Clean up\n            If Not wordDoc Is Nothing Then\n                wordDoc.Close(False)\n                System.Runtime.InteropServices.Marshal.ReleaseComObject(wordDoc)\n            End If\n\n            If Not wordApp Is Nothing Then\n                wordApp.Quit(False)\n                System.Runtime.InteropServices.Marshal.ReleaseComObject(wordApp)\n            End If\n\n            wordDoc = Nothing\n            wordApp = Nothing\n            GC.Collect()\n        End Try\n    End Function\nEnd Module