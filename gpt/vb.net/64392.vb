Imports System.Data.SqlClient\nImports System.IO\n\n' Function to execute the data import\nPrivate Sub ImportData(strProduct As String, strFileName As String)\n    Dim connectionString As String = "Server=server;Database=HedgeFileBuilders;User Id=user;Password=passkey;"\n    Dim tableName As String = "HedgeInput_" & strProduct & "_VALIDATOR"\n    \n    ' Truncate the table\n    Using conn As New SqlConnection(connectionString)\n        conn.Open()\n        Using cmd As New SqlCommand("TRUNCATE TABLE " & tableName, conn)\n            cmd.ExecuteNonQuery()\n        End Using\n    End Using\n\n    ' Read the data from the CSV file\n    Dim dt As New DataTable()\n    Using reader As New StreamReader(strFileName)\n        Dim header As String() = reader.ReadLine().Split(","c)\n        For Each column As String In header\n            dt.Columns.Add(column.Trim())\n        Next\n        While Not reader.EndOfStream\n            Dim row As String() = reader.ReadLine().Split(","c)\n            dt.Rows.Add(row)\n        End While\n    End Using\n\n    ' Import data using SqlBulkCopy\n    Using bulkCopy As New SqlBulkCopy(connectionString)\n        bulkCopy.DestinationTableName = tableName\n        bulkCopy.WriteToServer(dt)\n    End Using\nEnd Sub\n\n' Example usage\nTry\n    ImportData("YourProduct", "path_to_your_file.csv")\n    MessageBox.Show("Data imported successfully!", "Success", MessageBoxButtons.OK, MessageBoxIcon.Information)\nCatch ex As Exception\n    MessageBox.Show("ERROR: An error occurred while importing the data. " & ex.Message, "Contact System Administrator", MessageBoxButtons.OK, MessageBoxIcon.Error)\nEnd Try