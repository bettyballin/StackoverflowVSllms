Imports System.Security.Cryptography\nImports System.Text\n\nModule LicenseManager\n\n    ' Generate a simple license key based on user information\n    Public Function GenerateLicenseKey(userInfo As String) As String\n        Using sha256 As SHA256 = SHA256.Create()\n            Dim bytes As Byte() = Encoding.UTF8.GetBytes(userInfo)\n            Dim hash As Byte() = sha256.ComputeHash(bytes)\n            Return Convert.ToBase64String(hash)\n        End Using\n    End Function\n\n    ' Validate the license key\n    Public Function ValidateLicenseKey(userInfo As String, licenseKey As String) As Boolean\n        Dim generatedKey As String = GenerateLicenseKey(userInfo)\n        Return generatedKey.Equals(licenseKey)\n    End Function\n\nEnd Module