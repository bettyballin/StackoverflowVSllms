Public Class Form1\n    Private countdownTime As TimeSpan = TimeSpan.FromMinutes(4)\n    Private WithEvents countdownTimer As New Timer\n\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        countdownTimer.Interval = 1000 ' Timer interval set to 1 second\n        countdownTimer.Start()\n    End Sub\n\n    Private Sub countdownTimer_Tick(sender As Object, e As EventArgs) Handles countdownTimer.Tick\n        If countdownTime.TotalSeconds > 0 Then\n            countdownTime = countdownTime.Subtract(TimeSpan.FromSeconds(1))\n            UpdateTextBox()\n        Else\n            countdownTimer.Stop()\n            MessageBox.Show("Countdown finished!")\n        End If\n    End Sub\n\n    Private Sub UpdateTextBox()\n        ' Format the TimeSpan to HHMMSS format\n        Dim formattedTime As String = countdownTime.Hours.ToString("D2") & countdownTime.Minutes.ToString("D2") & countdownTime.Seconds.ToString("D2")\n        TextBox1.Text = formattedTime\n    End Sub\nEnd Class