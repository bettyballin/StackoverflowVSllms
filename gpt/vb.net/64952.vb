Public Class MyForm\n    Inherits Form\n\n    Public Sub New()\n        ' Initialize your form here\n        Me.Text = "MyForm"\n    End Sub\n\n    ' Handle the Deactivate event\n    Private Sub MyForm_Deactivate(sender As Object, e As EventArgs) Handles Me.Deactivate\n        Me.Hide() ' Hide the form when it loses focus\n    End Sub\n\n    ' Optional: Method to show the form\n    Public Sub ShowForm()\n        Me.Show()\n        Me.Activate()\n    End Sub\n\n    ' Entry point for the application\n    Public Shared Sub Main()\n        Application.EnableVisualStyles()\n        Application.Run(New MyForm())\n    End Sub\nEnd Class