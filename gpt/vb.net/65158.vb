Imports System.Linq\nImports System.Data\n\nModule Module1\n    Sub Main()\n        ' Sample data for Table A\n        Dim tableA As New DataTable()\n        tableA.Columns.Add("PROJECT#", GetType(Integer))\n        tableA.Columns.Add("QUANTITY", GetType(Integer))\n        tableA.Rows.Add(12345, 100)\n        tableA.Rows.Add(12345, 200)\n        tableA.Rows.Add(12345, 300)\n\n        ' Sample data for Table B\n        Dim tableB As New DataTable()\n        tableB.Columns.Add("PROJECT#", GetType(Integer))\n        tableB.Columns.Add("CUSTOMER", GetType(String))\n        tableB.Rows.Add(12345, "ABC Inc.")\n\n        ' Create the merged table\n        Dim mergedTable As New DataTable()\n        mergedTable.Columns.Add("PROJECT#", GetType(Integer))\n        mergedTable.Columns.Add("QUANTITY", GetType(Integer))\n        mergedTable.Columns.Add("CUSTOMER", GetType(String))\n\n        ' Perform the merge\n        Dim query = From a In tableA.AsEnumerable()\n                    Join b In tableB.AsEnumerable()\n                    On a.Field(Of Integer)("PROJECT#") Equals b.Field(Of Integer)("PROJECT#")\n                    Select mergedTable.LoadDataRow(New Object() {a.Field(Of Integer)("PROJECT#"), a.Field(Of Integer)("QUANTITY"), b.Field(Of String)("CUSTOMER")}, False)\n\n        ' Execute the query to fill the merged table\n        query.CopyToDataTable()\n\n        ' Display the merged table\n        For Each row As DataRow In mergedTable.Rows\n            Console.WriteLine(String.Join(", ", row.ItemArray))\n        Next\n    End Sub\nEnd Module