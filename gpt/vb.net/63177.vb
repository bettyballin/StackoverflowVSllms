Private Sub ValidateXML()\n       Dim objXMLDoc As MSXML2.DOMDocument60\n       Set objXMLDoc = New MSXML2.DOMDocument60\n       \n       ' Enable validation against DTD\n       objXMLDoc.validateOnParse = True\n       \n       ' Load the XML document\n       If objXMLDoc.Load("sample.xml") Then\n           ' Check for validation errors\n           If objXMLDoc.parseError.errorCode <> 0 Then\n               MsgBox "Error: " & objXMLDoc.parseError.reason\n           Else\n               MsgBox "XML is valid and parsed successfully!"\n               ' Proceed with parsing the XML document\n           End If\n       Else\n           MsgBox "Failed to load XML document."\n       End If\n   End Sub