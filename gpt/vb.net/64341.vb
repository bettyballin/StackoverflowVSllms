Public Class Form1\n    Private Sub RichTextBox1_VScroll(sender As Object, e As EventArgs) Handles RichTextBox1.VScroll\n        If IsScrollBarAtBottom(RichTextBox1) Then\n            MessageBox.Show("Scrollbar is at the end.")\n        Else\n            MessageBox.Show("Scrollbar is not at the end.")\n        End If\n    End Sub\n\n    Private Function IsScrollBarAtBottom(rtb As RichTextBox) As Boolean\n        ' Get the number of visible lines in the RichTextBox\n        Dim visibleLines As Integer = rtb.ClientSize.Height / rtb.Font.Height\n\n        ' Get the total number of lines in the RichTextBox\n        Dim totalLines As Integer = rtb.GetLineFromCharIndex(rtb.TextLength) + 1\n\n        ' Get the first visible line in the RichTextBox\n        Dim firstVisibleLine As Integer = rtb.GetLineFromCharIndex(rtb.GetCharIndexFromPosition(New Point(0, rtb.ClientRectangle.Height)))\n\n        ' Check if the scrollbar is at the bottom\n        Return (firstVisibleLine + visibleLines) >= totalLines\n    End Function\nEnd Class