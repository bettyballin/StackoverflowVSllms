Dim xml As String = "<xml>" & vbCrLf &\n                    "  <author>Joe the Magnificent</author>" & vbCrLf &\n                    "  <title>Joe Goes Home</title>" & vbCrLf &\n                    "</xml>"\n\nTry\n    Dim author As String = String.Empty\n    Dim title As String = String.Empty\n\n    Dim xDoc As New XmlDocument()\n    xDoc.LoadXml(xml)\n\n    Dim xAuthor As XmlElement = xDoc.SelectSingleNode("//author")\n    Dim xTitle As XmlElement = xDoc.SelectSingleNode("//title")\n\n    If xAuthor IsNot Nothing Then\n        author = xAuthor.InnerText\n    End If\n\n    If xTitle IsNot Nothing Then\n        title = xTitle.InnerText\n    End If\n\n    ShowMessage(author, title)\nCatch ex As Exception\n    Console.WriteLine("Error processing XML: " & ex.Message)\nEnd Try