Imports System.Xml.Linq\n\nModule Module1\n    Sub Main()\n        Dim xml As String = "<MyXML>" & _\n                            "  <event type='MyEvent' uid='3'>" & _\n                            "    <start>2009-02-01T12:00:00</start>" & _\n                            "    <stop>2009-02-01T12:00:30</stop>" & _\n                            "    <New>1</New>" & _\n                            "    <x>20</x>" & _\n                            "    <y>60</y>" & _\n                            "    <!--Whatever-->" & _\n                            "  </event>" & _\n                            "  <event type='MyEvent' uid='3'>" & _\n                            "    <start>2009-02-01T11:00:00</start>" & _\n                            "    <stop>2009-02-01T11:00:30</stop>" & _\n                            "    <New>3</New>" & _\n                            "    <x>21</x>" & _\n                            "    <y>67</y>" & _\n                            "    <!--Second Whatever-->" & _\n                            "  </event>" & _\n                            "</MyXML>"\n\n        Dim doc As XElement = XElement.Parse(xml)\n\n        ' Loop through each event element\n        For Each evt As XElement In doc.<event>\n            ' Loop through each node in the event element\n            For Each node As XNode In evt.Nodes()\n                If TypeOf node Is XComment Then\n                    Dim comment As XComment = CType(node, XComment)\n                    Console.WriteLine(comment.Value)\n                End If\n            Next\n        Next\n    End Sub\nEnd Module