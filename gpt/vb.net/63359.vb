' Define a delegate\n    Public Delegate Sub MyDelegate(ByVal message As String)\n\n    ' Define a class with a method that matches the delegate signature\n    Public Class MyClass\n        Public Sub ShowMessage(ByVal message As String)\n            Console.WriteLine(message)\n        End Sub\n    End Class\n\n    ' Main Module\n    Module Module1\n        Sub Main()\n            ' Create an instance of the class\n            Dim obj As New MyClass()\n\n            ' Create a delegate instance\n            Dim del As MyDelegate = AddressOf obj.ShowMessage\n\n            ' Call the delegate\n            del.Invoke("Hello, VB.NET!")\n        End Sub\n    End Module