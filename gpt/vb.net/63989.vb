Imports System.Xml\n\nModule Module1\n    Sub Main()\n        ' Example XML string\n        Dim xmlString As String = "<a>" & vbCrLf & "    <b>zyx</b>" & vbCrLf & "    <b>wvu</b>" & vbCrLf & "    <b>tsr</b>" & vbCrLf & "    <b>qpo</b>" & vbCrLf & "</a>"\n\n        ' Load the XML string into an XmlDocument\n        Dim xmlDoc As New XmlDocument()\n        xmlDoc.LoadXml(xmlString)\n\n        ' XPath to find the node\n        Dim xpath As String = "a/b[.='tsr']"\n        Dim selectedNode As XmlNode = xmlDoc.SelectSingleNode(xpath)\n\n        If selectedNode IsNot Nothing Then\n            ' Get the XML string of the node\n            Dim nodeXmlString As String = selectedNode.OuterXml\n\n            ' Find the index of the node's XML string in the original XML string\n            Dim index As Integer = xmlString.IndexOf(nodeXmlString)\n\n            ' Output the index\n            Console.WriteLine("String index of the node: " & index)\n        Else\n            Console.WriteLine("Node not found.")\n        End If\n    End Sub\nEnd Module