Imports System.Net\nImports System.Net.Sockets\nImports System.Text\n\nPublic Class UdpChatApp\n    Private Const delimiter As String = "|"\n\n    ' Method to create the packet\n    Private Function CreatePacket(id As String, username As String, ipAddress As String, command As String, message As String) As String\n        Return String.Join(delimiter, id, username, ipAddress, command, message)\n    End Function\n\n    ' Method to send the packet\n    Public Sub SendPacket(id As String, username As String, ipAddress As String, command As String, message As String, targetIp As String, targetPort As Integer)\n        Dim udpClient As New UdpClient()\n        Dim packet As String = CreatePacket(id, username, ipAddress, command, message)\n        Dim packetBytes As Byte() = Encoding.UTF8.GetBytes(packet)\n        Dim targetEndpoint As New IPEndPoint(IPAddress.Parse(targetIp), targetPort)\n        udpClient.Send(packetBytes, packetBytes.Length, targetEndpoint)\n        udpClient.Close()\n    End Sub\n\n    ' Method to receive and parse the packet\n    Public Sub ReceivePacket(localPort As Integer)\n        Dim udpClient As New UdpClient(localPort)\n        Dim remoteEndpoint As New IPEndPoint(IPAddress.Any, localPort)\n        Dim receivedBytes As Byte() = udpClient.Receive(remoteEndpoint)\n        Dim receivedPacket As String = Encoding.UTF8.GetString(receivedBytes)\n        udpClient.Close()\n\n        ' Split the packet to get individual parts\n        Dim packetParts As String() = receivedPacket.Split(New String() {delimiter}, StringSplitOptions.None)\n        Dim id As String = packetParts(0)\n        Dim username As String = packetParts(1)\n        Dim ipAddress As String = packetParts(2)\n        Dim command As String = packetParts(3)\n        Dim message As String = packetParts(4)\n\n        ' Handle the received data (example)\n        If command = "join" Then\n            Console.WriteLine($"{username} has joined from {ipAddress}")\n        ElseIf command = "leave" Then\n            Console.WriteLine($"{username} has left")\n        Else\n            Console.WriteLine($"Message from {username}: {message}")\n        End If\n    End Sub\nEnd Class