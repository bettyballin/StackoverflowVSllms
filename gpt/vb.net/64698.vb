Private Sub NewRecordButton_Click()\n        On Error GoTo ErrorHandler\n\n        Dim customerID As String\n        customerID = Me.Customer_ID.Value\n\n        ' Check if the customer ID already exists\n        If Not IsNull(DLookup("Customer_ID", "CustomerTable", "Customer_ID='" & customerID & "'")) Then\n            MsgBox "This Customer ID already exists. Please enter a unique Customer ID."\n            Exit Sub\n        End If\n\n        ' Move to a new record\n        DoCmd.GoToRecord , , acNewRec\n\n        ' Save the new record immediately\n        DoCmd.RunCommand acCmdSaveRecord\n\n        Exit Sub\n\n    ErrorHandler:\n        MsgBox "Error " & Err.Number & ": " & Err.Description\n    End Sub