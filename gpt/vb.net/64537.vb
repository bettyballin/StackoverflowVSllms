Sub DeleteAllData()\n    Dim db As DAO.Database\n    Dim tbl As DAO.TableDef\n    Dim sql As String\n\n    Set db = CurrentDb()\n\n    ' Loop through all tables in the database\n    For Each tbl In db.TableDefs\n        ' Skip system tables and other non-user tables\n        If Not tbl.Name Like "MSys*" And Not tbl.Name Like "~*" Then\n            ' Create SQL to delete all data in the table\n            sql = "DELETE FROM " & tbl.Name\n            ' Execute the SQL\n            db.Execute sql, dbFailOnError\n        End If\n    Next tbl\n\n    Set db = Nothing\n\n    MsgBox "All data deleted from all tables.", vbInformation\nEnd Sub