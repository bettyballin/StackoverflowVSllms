Sub ExportWorksheets()\n    Dim xlApp As Excel.Application\n    Dim sourceWorkbook As Excel.Workbook\n    Dim worksheet As Excel.Worksheet\n    Dim newWorkbook As Excel.Workbook\n    Dim filePath As String\n    Dim wsName As String\n    Dim sourcePath As String\n\n    ' Set the path of the source workbook\n    sourcePath = "C:\path\to\your\source\workbook.xlsx"\n    \n    ' Open the source workbook\n    Set xlApp = New Excel.Application\n    Set sourceWorkbook = xlApp.Workbooks.Open(sourcePath)\n\n    ' Loop through each worksheet in the source workbook\n    For Each worksheet In sourceWorkbook.Worksheets\n        ' Create a new workbook for each worksheet\n        Set newWorkbook = xlApp.Workbooks.Add\n        \n        ' Copy the worksheet to the new workbook\n        worksheet.Copy Before:=newWorkbook.Worksheets(1)\n        \n        ' Delete the default sheet created in the new workbook\n        newWorkbook.Sheets(2).Delete\n        \n        ' Set the file path for the new workbook\n        wsName = worksheet.Name\n        filePath = "C:\path\to\save\" & wsName & ".xlsx"\n        \n        ' Save the new workbook\n        newWorkbook.SaveAs filePath\n        \n        ' Close the new workbook\n        newWorkbook.Close SaveChanges:=False\n    Next worksheet\n\n    ' Close the source workbook\n    sourceWorkbook.Close SaveChanges:=False\n    \n    ' Quit the Excel application\n    xlApp.Quit\nEnd Sub