Private Sub Form_Load()\n    ' Set up the DataGrid\n    With DataGrid1\n        .Columns.Add "Text Column", "", 1000\n        .Columns.Add "Combo Column", "", 1000\n        .Rows = 10\n    End With\n\n    ' Populate the ComboBox with some items\n    ComboBox1.AddItem "Option 1"\n    ComboBox1.AddItem "Option 2"\n    ComboBox1.AddItem "Option 3"\n\n    ' Hide the ComboBox initially\n    ComboBox1.Visible = False\nEnd Sub\n\nPrivate Sub DataGrid1_RowColChange(LastRow As Variant, ByVal LastCol As Integer)\n    ' Check if the current column is the combo box column\n    If DataGrid1.Col = 1 Then\n        ' Position the ComboBox over the cell\n        ComboBox1.Move DataGrid1.Left + DataGrid1.Columns(0).Width, _\n                      DataGrid1.Top + (DataGrid1.RowHeight * DataGrid1.Row), _\n                      DataGrid1.Columns(1).Width, DataGrid1.RowHeight\n        ComboBox1.Visible = True\n        ComboBox1.SetFocus\n    Else\n        ComboBox1.Visible = False\n    End If\nEnd Sub\n\nPrivate Sub ComboBox1_LostFocus()\n    ' Hide ComboBox when it loses focus\n    ComboBox1.Visible = False\nEnd Sub\n\nPrivate Sub ComboBox1_Click()\n    ' Set the selected value in the grid when an item is selected from the ComboBox\n    DataGrid1.Text = ComboBox1.Text\n    ComboBox1.Visible = False\nEnd Sub