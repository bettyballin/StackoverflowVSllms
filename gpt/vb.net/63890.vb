<%@ Language=vbscript %>\n<%\nSet db1 = Server.CreateObject("ADODB.Connection")\ndb1.Open "Provider=MSDASQL;DSN=SHOPWEB;"\n\nsqltxt = "SELECT gID, iDesc, iLength FROM ShopItems WHERE catID=22 ORDER BY gID ASC"\nSet rs1 = db1.Execute(sqltxt)\n\nIf Not rs1.EOF Then\n    Do Until rs1.EOF\n        gID = rs1("gID")\n        iDesc = rs1("iDesc")\n        iLength = rs1("iLength")\n        \n        Response.Write("<br>gID: " & gID & "<br>")\n        Response.Write("<br>iDesc: " & iDesc & "<br>")\n        Response.Write("<br>iLength: " & iLength & "<br>")\n        \n        rs1.MoveNext\n    Loop\nEnd If\n\nrs1.Close\nSet rs1 = Nothing\ndb1.Close\nSet db1 = Nothing\n%>