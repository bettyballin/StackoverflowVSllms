Sub RelinkTables(newBackendPath As String)\n    Dim db As DAO.Database\n    Dim tdf As DAO.TableDef\n    \n    Set db = CurrentDb\n    \n    For Each tdf In db.TableDefs\n        ' Check if the table is a linked table\n        If Len(tdf.Connect) > 0 Then\n            ' Update the connection string with the new backend path\n            tdf.Connect = ";DATABASE=" & newBackendPath\n            tdf.RefreshLink\n        End If\n    Next tdf\n    \n    Set tdf = Nothing\n    Set db = Nothing\n    \n    MsgBox "Tables have been relinked to " & newBackendPath\nEnd Sub