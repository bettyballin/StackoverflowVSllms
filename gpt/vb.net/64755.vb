Imports System.Net.Mail\n\nSub SendEmail()\n    Try\n        Dim smtpClient As New SmtpClient("smtp.mail.yahoo.com")\n        smtpClient.Port = 587\n        smtpClient.Credentials = New System.Net.NetworkCredential("your_yahoo_email@yahoo.com", "your_password")\n        smtpClient.EnableSsl = True\n\n        Dim mail As New MailMessage()\n        mail.From = New MailAddress("your_yahoo_email@yahoo.com")\n        mail.To.Add("recipient_email@example.com")\n        mail.Subject = "Test Mail"\n        mail.Body = "This is a test mail from VB.NET"\n\n        smtpClient.Send(mail)\n        Console.WriteLine("Mail Sent Successfully")\n    Catch ex As Exception\n        Console.WriteLine("Error: " & ex.Message)\n    End Try\nEnd Sub