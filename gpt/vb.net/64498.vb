Private Sub cboUser_AfterUpdate()\n       Dim strFilter As String\n       If IsNull(Me.cboUser) Then\n           ' If no user is selected, show all records\n           Me.[Users subform].Form.Filter = ""\n           Me.[Users subform].Form.FilterOn = False\n       Else\n           ' Filter subform to show selected user's records\n           strFilter = "UserID = " & Me.cboUser\n           Me.[Users subform].Form.Filter = strFilter\n           Me.[Users subform].Form.FilterOn = True\n       End If\n   End Sub