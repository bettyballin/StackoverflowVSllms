Imports System\nImports System.Windows.Forms\n\nPublic Class PercentFormatter\n    Inherits Form\n\n    Private textBox As TextBox\n    Private label As Label\n\n    Public Sub New()\n        textBox = New TextBox() With {.Location = New Drawing.Point(15, 15), .Width = 100}\n        label = New Label() With {.Location = New Drawing.Point(15, 50), .Width = 100}\n        Dim button As New Button() With {.Text = "Format", .Location = New Drawing.Point(130, 12)}\n        AddHandler button.Click, AddressOf Me.FormatAsPercent\n\n        Controls.Add(textBox)\n        Controls.Add(label)\n        Controls.Add(button)\n    End Sub\n\n    Private Sub FormatAsPercent(ByVal sender As Object, ByVal e As EventArgs)\n        Dim value As Double\n        If Double.TryParse(textBox.Text, value) Then\n            label.Text = value.ToString("P")\n        Else\n            label.Text = "Invalid input"\n        End If\n    End Sub\n\n    <STAThread>\n    Public Shared Sub Main()\n        Application.Run(New PercentFormatter())\n    End Sub\nEnd Class