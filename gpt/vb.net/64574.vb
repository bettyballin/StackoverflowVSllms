Const ADS_SCOPE_SUBTREE = 2\n\n' Function to get the DialIn permission setting of a user\nFunction GetDialInPermission(userName)\n    Dim objConnection, objCommand, objRecordSet\n    Dim userDN, dialInPermission\n\n    ' Create the ADO connection and command objects\n    Set objConnection = CreateObject("ADODB.Connection")\n    Set objCommand = CreateObject("ADODB.Command")\n\n    ' Set the provider and open the connection\n    objConnection.Provider = "ADsDSOObject"\n    objConnection.Open "Active Directory Provider"\n\n    ' Set the command properties\n    objCommand.ActiveConnection = objConnection\n    objCommand.Properties("Page Size") = 1000\n    objCommand.Properties("Searchscope") = ADS_SCOPE_SUBTREE\n\n    ' Set the LDAP query to find the user\n    objCommand.CommandText = "SELECT distinguishedName, msNPAllowDialin FROM 'LDAP://dc=yourdomain,dc=com' WHERE sAMAccountName='" & userName & "'"\n\n    ' Execute the query\n    Set objRecordSet = objCommand.Execute\n\n    ' Check if we found the user\n    If Not objRecordSet.EOF Then\n        ' Get the distinguished name and msNPAllowDialin attribute\n        userDN = objRecordSet.Fields("distinguishedName").Value\n        dialInPermission = objRecordSet.Fields("msNPAllowDialin").Value\n\n        ' Determine the dial-in permission setting\n        Select Case dialInPermission\n            Case True\n                GetDialInPermission = "Allow Access"\n            Case False\n                GetDialInPermission = "Deny Access"\n            Case Else\n                GetDialInPermission = "Control access through remote access policy"\n        End Select\n    Else\n        GetDialInPermission = "User not found"\n    End If\n\n    ' Clean up\n    objRecordSet.Close\n    objConnection.Close\n    Set objRecordSet = Nothing\n    Set objCommand = Nothing\n    Set objConnection = Nothing\nEnd Function\n\n' Example usage\nDim userName, dialInSetting\nuserName = "johndoe" ' Replace with the username you want to query\ndialInSetting = GetDialInPermission(userName)\nWScript.Echo "The Dial-In permission setting for " & userName & " is: " & dialInSetting