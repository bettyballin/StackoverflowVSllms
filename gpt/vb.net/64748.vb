Public Function ConcatenateValues(strA As String) As String\n    Dim rs As DAO.Recordset\n    Dim result As String\n\n    Set rs = CurrentDb.OpenRecordset("SELECT B FROM TBL WHERE A = '" & strA & "'", dbOpenSnapshot)\n\n    Do While Not rs.EOF\n        If Len(result) > 0 Then\n            result = result & ","\n        End If\n        result = result & rs!B\n        rs.MoveNext\n    Loop\n\n    rs.Close\n    Set rs = Nothing\n\n    ConcatenateValues = result\nEnd Functio