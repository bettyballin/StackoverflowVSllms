Public Shared Sub send(ByVal recipent As String, ByVal from As String, ByVal subject As String, ByVal body As String)\n    Try\n        Dim mailMessage As New System.Net.Mail.MailMessage()\n        \n        mailMessage.From = New System.Net.Mail.MailAddress(from)\n        mailMessage.To.Add(New System.Net.Mail.MailAddress(recipent))\n        \n        mailMessage.Subject = subject\n        mailMessage.Body = body\n        mailMessage.IsBodyHtml = True\n        mailMessage.Priority = System.Net.Mail.MailPriority.Normal\n\n        Dim smtp As New System.Net.Mail.SmtpClient(MAIL_SERVER)\n        smtp.Port = 587 ' Or the port your SMTP server uses\n        smtp.EnableSsl = True ' Or False depending on your SMTP server settings\n        smtp.Credentials = New System.Net.NetworkCredential("your_username", "your_password")\n\n        Try\n            smtp.Send(mailMessage)\n        Catch smtpEx As System.Net.Mail.SmtpException\n            critical_error("SMTP Exception: " + smtpEx.ToString(), "send() in Util_Email")\n        Catch ex As System.Exception\n            critical_error("General Exception: " + ex.ToString(), "send() in Util_Email")\n        End Try\n\n    Catch e As System.Exception\n        critical_error(e, "send() in Util_Email")\n    End Try\nEnd Sub