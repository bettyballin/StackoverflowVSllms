Imports Microsoft.Win32\n\nModule Module1\n    Sub Main()\n        ' Define the file extension and the icon path\n        Dim ext As String = ".myext"\n        Dim iconPath As String = "C:\Path\To\Your\Icon.ico"\n\n        ' Open or create the registry key for the file extension\n        Using key As RegistryKey = Registry.ClassesRoot.CreateSubKey(ext)\n            If key IsNot Nothing Then\n                ' Set the default value of the key to a unique identifier (ProgID)\n                key.SetValue("", "MyAppFileType")\n            End If\n        End Using\n\n        ' Open or create the registry key for the ProgID\n        Using key As RegistryKey = Registry.ClassesRoot.CreateSubKey("MyAppFileType\DefaultIcon")\n            If key IsNot Nothing Then\n                ' Set the default value of the key to the icon path\n                key.SetValue("", iconPath)\n            End If\n        End Using\n\n        ' Notify the system that file associations have changed\n        SHChangeNotify(&H8000000, &H1000, IntPtr.Zero, IntPtr.Zero)\n    End Sub\n\n    ' P/Invoke declaration for SHChangeNotify\n    <Runtime.InteropServices.DllImport("shell32.dll")> _\n    Public Shared Sub SHChangeNotify(wEventId As Integer, uFlags As Integer, dwItem1 As IntPtr, dwItem2 As IntPtr)\n    End Sub\nEnd Module