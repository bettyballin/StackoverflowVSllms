Imports BinaryComponents.SuperList\n\nPublic Class DynamicGridHandler\n\n    Private _SuperList As New SuperList() ' Assuming _SuperList is properly initialized\n    Private ColumnValueAccessors As New Dictionary(Of String, Func(Of Object, Object))\n\n    ' Method to add a new column dynamically\n    Private Sub AddColumn(columnName As String, valueAccessor As Func(Of Object, Object))\n        Dim newColumn As New Column(columnName, columnName, 110, AddressOf GenericItemValueAccessor)\n        ColumnValueAccessors(columnName) = valueAccessor\n        _SuperList.Columns.Add(newColumn)\n    End Sub\n\n    ' Generic ItemValueAccessor function\n    Private Function GenericItemValueAccessor(ByVal rowItem As Object) As Object\n        Dim columnName As String = DirectCast(rowItem, Column).Name\n        If ColumnValueAccessors.ContainsKey(columnName) Then\n            Return ColumnValueAccessors(columnName).Invoke(rowItem)\n        End If\n        Return Nothing\n    End Function\n\n    ' Example usage\n    Public Sub SetupGrid()\n        ' Adding columns with specific value accessors\n        AddColumn("CC", Function(rowItem) CType(rowItem, SrToDoAndException).ToDo.CCs.ToString())\n        ' Add more columns as needed...\n    End Sub\n\nEnd Class\n\n' Assuming SrToDoAndException and ToDo classes are defined as follows:\nPublic Class SrToDoAndException\n    Public Property ToDo As ToDo\nEnd Class\n\nPublic Class ToDo\n    Public Property CCs As String\nEnd Class