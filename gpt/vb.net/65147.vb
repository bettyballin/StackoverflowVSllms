Imports System.Text.RegularExpressions\n\nModule XMLNodeNameCleaner\n    Function CleanNodeName(ByVal input As String) As String\n        ' Define a regex pattern to match invalid XML node name characters\n        Dim pattern As String = "[^a-zA-Z0-9_]"\n        \n        ' Replace invalid characters with underscore\n        Dim cleanedName As String = Regex.Replace(input, pattern, "_")\n        \n        ' Ensure the name does not start with a digit\n        If Char.IsDigit(cleanedName(0)) Then\n            cleanedName = "_" & cleanedName\n        End If\n        \n        Return cleanedName\n    End Function\n    \n    Sub Main()\n        Dim originalName As String = "Invalid Node Name 123"\n        Dim cleanedName As String = CleanNodeName(originalName)\n        \n        Console.WriteLine($"Original Name: {originalName}")\n        Console.WriteLine($"Cleaned Name: {cleanedName}")\n    End Sub\nEnd Module