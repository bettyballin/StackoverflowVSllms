Public Class MainForm\n    Dim f As Form\n    Dim acceptDescription As Button\n    Dim rejectDescription As Button\n    Dim descriptionCombo As ComboBox\n\n    Public Sub New()\n        ' Initialization\n        InitializeComponent()\n\n        ' Create the form\n        f = New Form\n\n        ' Create the buttons\n        acceptDescription = New Button\n        acceptDescription.Text = "Accept"\n        AddHandler acceptDescription.Click, AddressOf handleAcceptedDescription\n\n        rejectDescription = New Button\n        rejectDescription.Text = "Reject"\n        AddHandler rejectDescription.Click, AddressOf handleRejectedDescription\n\n        ' Create the ComboBox\n        descriptionCombo = New ComboBox\n        descriptionCombo.Items.AddRange(New String() {"Option 1", "Option 2", "Option 3"})\n\n        ' Add controls to the form\n        f.Controls.Add(acceptDescription)\n        f.Controls.Add(rejectDescription)\n        f.Controls.Add(descriptionCombo)\n\n        ' Show the form\n        f.Show()\n    End Sub\n\n    Private Sub handleAcceptedDescription(ByVal sender As System.Object, ByVal e As System.EventArgs)\n        ' Reference the chosen ComboBox value here\n        Dim acceptedDescription As String = descriptionCombo.SelectedItem.ToString()\n        MessageBox.Show("Accepted: " & acceptedDescription)\n    End Sub\n\n    Private Sub handleRejectedDescription(ByVal sender As System.Object, ByVal e As System.EventArgs)\n        ' Close the runtime created form\n        f.Close()\n        ' Return user to main form\n        Me.Focus()\n    End Sub\nEnd Class