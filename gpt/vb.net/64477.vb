Imports System.Net\n\nPublic Sub CheckForUpdate()\n    Dim url As String = "http://(website...)/slotshuffle2.0.zip"\n    Dim request As HttpWebRequest = CType(WebRequest.Create(url), HttpWebRequest)\n    request.Method = "HEAD"\n\n    Try\n        Using response As HttpWebResponse = CType(request.GetResponse(), HttpWebResponse)\n            If response.StatusCode = HttpStatusCode.OK Then\n                MessageBox.Show("New version available: " + url, "Update Available", MessageBoxButtons.OK, MessageBoxIcon.Information)\n            Else\n                MessageBox.Show("No new version, check back later", "No Update", MessageBoxButtons.OK, MessageBoxIcon.Information)\n            End If\n        End Using\n    Catch ex As WebException\n        MessageBox.Show("No new version, check back later", "No Update", MessageBoxButtons.OK, MessageBoxIcon.Information)\n    End Try\nEnd Sub