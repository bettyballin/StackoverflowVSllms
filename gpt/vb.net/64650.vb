Public Class Form1\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Load the document background image\n        PictureBox1.Image = Image.FromFile("path_to_your_document_background.jpg")\n\n        ' Apply color tint\n        ApplyColorTint(PictureBox1, Color.FromArgb(100, Color.Yellow))\n    End Sub\n\n    Private Sub ApplyColorTint(pictureBox As PictureBox, color As Color)\n        Dim bmp As New Bitmap(pictureBox.Image)\n        Dim g As Graphics = Graphics.FromImage(bmp)\n\n        ' Create a color matrix and set the color tint\n        Dim colorMatrix As New Imaging.ColorMatrix()\n        colorMatrix.Matrix00 = CSng(color.R / 255.0)\n        colorMatrix.Matrix11 = CSng(color.G / 255.0)\n        colorMatrix.Matrix22 = CSng(color.B / 255.0)\n        colorMatrix.Matrix33 = CSng(color.A / 255.0)\n\n        ' Create image attributes and set the color matrix\n        Dim imgAttributes As New Imaging.ImageAttributes()\n        imgAttributes.SetColorMatrix(colorMatrix, Imaging.ColorMatrixFlag.Default, Imaging.ColorAdjustType.Bitmap)\n\n        ' Draw the tinted image\n        g.DrawImage(bmp, New Rectangle(0, 0, bmp.Width, bmp.Height), 0, 0, bmp.Width, bmp.Height, _\n            GraphicsUnit.Pixel, imgAttributes)\n        g.Dispose()\n\n        ' Set the tinted image back to the PictureBox\n        pictureBox.Image = bmp\n    End Sub\nEnd Class