Private Sub ListFilesInDirectory(ByVal folderPath As String)\n    Dim fileName As String\n    \n    ' Get the first file in the folder.\n    fileName = Dir(folderPath & "\*.*")\n    \n    ' Loop through all the files in the folder.\n    Do While fileName <> ""\n        Debug.Print fileName ' Print file name to the Immediate Window (Ctrl+G to view)\n        \n        ' Get the next file in the folder.\n        fileName = Dir\n    Loop\nEnd Sub