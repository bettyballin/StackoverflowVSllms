Imports System.Drawing\nImports System.Windows.Forms\n\nPublic Class CustomForm\n    Inherits Form\n\n    Public Sub New()\n        ' Remove the form border\n        Me.FormBorderStyle = FormBorderStyle.None\n\n        ' Set the form to be draggable\n        AddHandler Me.MouseDown, AddressOf CustomForm_MouseDown\n    End Sub\n\n    Protected Overrides Sub OnPaint(ByVal e As PaintEventArgs)\n        MyBase.OnPaint(e)\n\n        ' Get the graphics object\n        Dim g As Graphics = e.Graphics\n\n        ' Draw the custom form background\n        g.Clear(Color.LightBlue)\n\n        ' Draw a custom border\n        Dim borderColor As Color = Color.DarkBlue\n        Dim borderWidth As Integer = 5\n        Dim borderRect As New Rectangle(0, 0, Me.ClientSize.Width - 1, Me.ClientSize.Height - 1)\n        Using pen As New Pen(borderColor, borderWidth)\n            g.DrawRectangle(pen, borderRect)\n        End Using\n\n        ' Draw a title bar\n        Dim titleBarHeight As Integer = 30\n        Dim titleBarRect As New Rectangle(0, 0, Me.ClientSize.Width, titleBarHeight)\n        g.FillRectangle(Brushes.DarkBlue, titleBarRect)\n\n        ' Draw the title text\n        Dim titleText As String = "Custom Form"\n        Using font As New Font("Arial", 12, FontStyle.Bold)\n            Dim textColor As Color = Color.White\n            Using textBrush As New SolidBrush(textColor)\n                g.DrawString(titleText, font, textBrush, New Point(10, 5))\n            End Using\n        End Using\n    End Sub\n\n    Private Sub CustomForm_MouseDown(ByVal sender As Object, ByVal e As MouseEventArgs)\n        If e.Button = MouseButtons.Left Then\n            ' Allow the form to be dragged\n            ReleaseCapture()\n            SendMessage(Me.Handle, &H112&, &HF012&, 0)\n        End If\n    End Sub\n\n    ' Import necessary functions for dragging the form\n    <System.Runtime.InteropServices.DllImport("user32.dll")>\n    Private Shared Sub ReleaseCapture()\n    End Sub\n\n    <System.Runtime.InteropServices.DllImport("user32.dll")>\n    Private Shared Function SendMessage(ByVal hWnd As IntPtr, ByVal Msg As Integer, ByVal wParam As Integer, ByVal lParam As Integer) As Integer\n    End Function\n\nEnd Class