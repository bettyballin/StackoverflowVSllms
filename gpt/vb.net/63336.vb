Private Function GetCcB() As Collection(Of Reports_ucColumn)\n    Dim cc As New Collection(Of Reports_ucColumn)\n    cc.Add(Me.ucColumn0)\n    cc.Add(Me.ucColumn1)\n    cc.Add(Me.ucColumn2)\n    Return cc\nEnd Function\n\n' Store the collection in a variable\nDim userControls As Collection(Of Reports_ucColumn) = GetCcB()\n\n' Use the stored collection within the loop\nFor i As Integer = 0 To csB.Count - 1\n    If csB(i).Contains("Invalid") Or csB(i).Contains("Duplicate") Then\n        userControls.Item(i).isValid = False\n        userControls.Item(i).title = csB(i)\n        If csB(i).Contains("Invalid") Then \n            userControls.Item(i).errCode = "005W"\n        Else \n            userControls.Item(i).errCode = "005W" 'todo - change this once we get a duplicate col err code\n        End If\n    Else\n        userControls.Item(i).isValid = True\n        userControls.Item(i).title = csB(i)\n        userControls.Item(i).errCode = String.Empty\n    End If\nNext