Dim context As New YourDataContext()\n\nDim query = From entity In context.Entities\n            Join entitytag In context.EntityTags On entity.Id Equals entitytag.EntityId\n            Join tag In context.Tags On entitytag.TagId Equals tag.Id\n            Group entitytag By entityName = entity.Name Into Group\n            Select New With {\n                .EntityName = entityName,\n                .Tags = String.Join("; ", Group.Select(Function(et) et.Tag.Name))\n            }\n\nFor Each item In query\n    Console.WriteLine($"{item.EntityName}, {item.Tags}")\nNext