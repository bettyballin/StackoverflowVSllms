Public Class MainForm\n    Private notifyIcon As New NotifyIcon()\n\n    Public Sub New()\n        ' Initialize the NotifyIcon\n        notifyIcon.Icon = SystemIcons.Application\n        notifyIcon.Visible = True\n        notifyIcon.Text = "My Application"\n        \n        ' Initialize the form\n        InitializeComponent()\n\n        ' Add handler for FormClosed event\n        AddHandler Me.FormClosed, AddressOf MainForm_FormClosed\n    End Sub\n\n    Private Sub MainForm_FormClosed(sender As Object, e As FormClosedEventArgs)\n        ' Dispose of the NotifyIcon to remove it from the system tray\n        notifyIcon.Visible = False\n        notifyIcon.Dispose()\n    End Sub\nEnd Class