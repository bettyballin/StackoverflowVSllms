For Each ctrl As Control In Me.Controls\n    If TypeOf ctrl Is TextBox Then\n        Dim txtBox As TextBox = CType(ctrl, TextBox)\n        If String.IsNullOrEmpty(txtBox.Text) Then\n            ' One of the textboxes is empty, handle accordingly\n            MessageBox.Show("Please fill in all textboxes.")\n            Exit Sub\n        End If\n    End If\nNext\n\n' All textboxes have been filled\nMessageBox.Show("All textboxes have been filled.")