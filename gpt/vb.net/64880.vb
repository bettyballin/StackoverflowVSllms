' Create the Splitter control\nDim splitter As New Splitter()\n\n' Set the width of the splitter to make it more apparent\nsplitter.Width = 8\n\n' Optionally, set the back color to a neutral color to make it visible\nsplitter.BackColor = Color.LightGray\n\n' Add the splitter to the form\nMe.Controls.Add(splitter)\n\n' Create a Paint event handler to draw a grip on the splitter\nAddHandler splitter.Paint, AddressOf splitter_Paint\n\n' Define the Paint event handler\nPrivate Sub splitter_Paint(ByVal sender As Object, ByVal e As PaintEventArgs)\n    Dim splitterControl As Splitter = CType(sender, Splitter)\n    Dim gripSize As Integer = 3\n\n    ' Draw the grip (three dots in the middle of the splitter)\n    For i As Integer = 1 To 3\n        e.Graphics.FillRectangle(Brushes.Black, New Rectangle(splitterControl.Width / 2 - gripSize / 2, splitterControl.Height / 4 * i - gripSize / 2, gripSize, gripSize))\n    Next\nEnd Sub