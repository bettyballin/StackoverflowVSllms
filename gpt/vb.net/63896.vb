<WebMethod()> _\nPublic Sub GetDate()\n    ' Create JSON response\n    Dim sb As New StringBuilder()\n    Dim sw As New IO.StringWriter(sb)\n    Using jw As New JsonTextWriter(sw)\n        With jw\n            .WriteStartObject()\n            .WritePropertyName("DateTime")\n            .WriteValue(DateTime.Now.ToString("o")) ' Use ISO 8601 format for date\n            .WriteEndObject()\n        End With\n    End Using\n    Dim jsonResponse As String = sb.ToString()\n\n    ' Set the response content type and write JSON directly to the response stream\n    Context.Response.ContentType = "application/json"\n    Context.Response.Write(jsonResponse)\nEnd Sub