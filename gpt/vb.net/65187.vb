Imports System.DirectoryServices\nImports System.DirectoryServices.AccountManagement\n\nModule Module1\n    Sub Main()\n        Dim username As String = Environment.UserName\n        Dim fullName As String = GetFullName(username)\n        Console.WriteLine("Full Name: " & fullName)\n    End Sub\n\n    Function GetFullName(ByVal username As String) As String\n        Try\n            Using context As New PrincipalContext(ContextType.Domain)\n                Dim user As UserPrincipal = UserPrincipal.FindByIdentity(context, username)\n                If user IsNot Nothing Then\n                    Return user.DisplayName\n                End If\n            End Using\n        Catch ex As Exception\n            Console.WriteLine("Error: " & ex.Message)\n        End Try\n\n        Return String.Empty\n    End Function\nEnd Module