Function IsDaylightSavingTime(inputDate As Date) As Boolean\n    ' This function checks whether the given date is in Daylight Savings Time (DST)\n    Dim stdTime As Date\n    Dim dstTime As Date\n\n    ' Obtain the offset of the time zone in standard time and daylight saving time\n    stdTime = DateSerial(Year(inputDate), 1, 1)\n    dstTime = DateSerial(Year(inputDate), 7, 1)\n\n    ' Compare the time zone offsets\n    IsDaylightSavingTime = (DateDiff("h", stdTime, dstTime) <> DateDiff("h", stdTime, inputDate))\nEnd Function\n\nSub TestDST()\n    Dim testDate As Date\n    testDate = #3/10/2023# ' Example date\n\n    If IsDaylightSavingTime(testDate) Then\n        MsgBox "The date " & testDate & " is in Daylight Savings Time."\n    Else\n        MsgBox "The date " & testDate & " is not in Daylight Savings Time."\n    End If\nEnd Sub