Imports System.Configuration\nImports System.Security.Cryptography\nImports System.Text\n\nPublic Class ConnectionForm\n    ' This method will be called when the user submits the connection details\n    Private Sub SaveConnectionString(server As String, database As String, user As String, password As String)\n        Dim connectionString As String = $"Server={server};Database={database};User Id={user};Password={password};"\n        ' Encrypt the connection string before saving\n        Dim encryptedConnectionString As String = Encrypt(connectionString)\n        My.Settings.ConnectionString = encryptedConnectionString\n        My.Settings.Save()\n    End Sub\n\n    Private Function Encrypt(input As String) As String\n        ' Encryption logic goes here\n        ' For demonstration, here's a simple (not secure) example:\n        Dim bytes As Byte() = Encoding.UTF8.GetBytes(input)\n        Return Convert.ToBase64String(bytes)\n    End Function\n\n    Private Function Decrypt(input As String) As String\n        ' Decryption logic goes here\n        Dim bytes As Byte() = Convert.FromBase64String(input)\n        Return Encoding.UTF8.GetString(bytes)\n    End Function\nEnd Class