Private Sub ExampleProc2(ParamArray Fields() As Variant)\n    Dim intCancel As Integer\n    Dim varV As Variant\n    Dim ctl As Control\n    Dim strEventProc As String\n    \n    For Each varV In Fields\n        Set ctl = Me.Controls(varV)\n        ctl.Value = Null\n        intCancel = False\n        strEventProc = ctl.Name & "_BeforeUpdate"\n        CallByName Me, strEventProc, VbMethod, intCancel\n        \n        ' If the event sets intCancel to True, handle it accordingly\n        If intCancel Then\n            MsgBox "Update canceled for " & ctl.Name\n            Exit Sub\n        End If\n    Next\nEnd Sub