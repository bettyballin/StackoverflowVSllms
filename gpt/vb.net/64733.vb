Sub StandardizeFort()\n    Dim db As DAO.Database\n    Dim qdf As DAO.QueryDef\n    \n    Set db = CurrentDb\n    \n    ' Update Ft. to Fort\n    Set qdf = db.CreateQueryDef("", "UPDATE YourTable SET YourField = REPLACE(YourField, 'Ft.', 'Fort') WHERE YourField LIKE '*Ft.*';")\n    qdf.Execute\n    \n    ' Update Ft to Fort\n    Set qdf = db.CreateQueryDef("", "UPDATE YourTable SET YourField = REPLACE(YourField, 'Ft', 'Fort') WHERE YourField LIKE '*Ft*';")\n    qdf.Execute\n    \n    ' Update Fort to Fort (for uniformity in case of different cases)\n    Set qdf = db.CreateQueryDef("", "UPDATE YourTable SET YourField = REPLACE(YourField, 'Fort', 'Fort') WHERE YourField LIKE '*Fort*';")\n    qdf.Execute\n    \n    Set qdf = Nothing\n    Set db = Nothing\nEnd Sub