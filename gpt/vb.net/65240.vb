' Initialize the array\nDim myArray() As Integer = {}\n\n' Function to add a new element to the array\nSub AddElement(ByRef arr() As Integer, ByVal newElement As Integer)\n    ' Resize the array to size + 1\n    ReDim Preserve arr(arr.Length)\n    ' Add the new element to the last index\n    arr(arr.Length - 1) = newElement\nEnd Sub\n\n' Example usage\nAddElement(myArray, 10)\nAddElement(myArray, 20)\nAddElement(myArray, 30)\n\n' Print the array elements\nFor Each element As Integer In myArray\n    Console.WriteLine(element)\nNext