' Assuming you have a DataGridView named DataGridView1 and a BindingSource named BindingSource1\n\n' Function to sort DataGridView based on user input from the sort dialog\nPrivate Sub SortDataGridView(sortString As String)\n    Try\n        ' Set the sort property of the BindingSource\n        BindingSource1.Sort = sortString\n        \n        ' Refresh the DataGridView to reflect the changes\n        DataGridView1.Refresh()\n        \n    Catch ex As Exception\n        MessageBox.Show("Error sorting data: " & ex.Message)\n    End Try\nEnd Sub\n\n' Example usage: sorting by Column1 ASC, then Column2 DESC, then Column3 ASC\nPrivate Sub ButtonSort_Click(sender As Object, e As EventArgs) Handles ButtonSort.Click\n    Dim sortString As String = "Column1 ASC, Column2 DESC, Column3 ASC"\n    SortDataGridView(sortString)\nEnd Sub