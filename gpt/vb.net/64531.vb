Sub GenerateCreateTableDDL()\n    Dim db As DAO.Database\n    Dim tableDef As DAO.TableDef\n    Dim fld As DAO.Field\n    Dim idx As DAO.Index\n    Dim ddl As String\n\n    Set db = CurrentDb\n\n    For Each tableDef In db.TableDefs\n        If Left(tableDef.Name, 4) <> "MSys" Then ' Exclude system tables\n            ddl = "CREATE TABLE " & tableDef.Name & " (" & vbCrLf\n\n            ' Add fields to the DDL\n            For Each fld In tableDef.Fields\n                ddl = ddl & "    " & fld.Name & " " & GetFieldType(fld.Type, fld.Size) & "," & vbCrLf\n            Next fld\n\n            ' Remove last comma and add closing parenthesis\n            ddl = Left(ddl, Len(ddl) - 3) & vbCrLf & ");" & vbCrLf & vbCrLf\n\n            ' Print or save the DDL statement\n            Debug.Print ddl\n        End If\n    Next tableDef\n\n    Set db = Nothing\nEnd Sub\n\nFunction GetFieldType(fieldType As Integer, fieldSize As Integer) As String\n    Select Case fieldType\n        Case dbBoolean\n            GetFieldType = "BOOLEAN"\n        Case dbByte\n            GetFieldType = "TINYINT"\n        Case dbInteger\n            GetFieldType = "SMALLINT"\n        Case dbLong\n            GetFieldType = "INTEGER"\n        Case dbCurrency\n            GetFieldType = "DECIMAL(18, 4)"\n        Case dbSingle\n            GetFieldType = "FLOAT"\n        Case dbDouble\n            GetFieldType = "DOUBLE"\n        Case dbDate\n            GetFieldType = "DATE"\n        Case dbText\n            GetFieldType = "VARCHAR(" & fieldSize & ")"\n        Case dbMemo\n            GetFieldType = "TEXT"\n        Case dbGUID\n            GetFieldType = "GUID"\n        Case Else\n            GetFieldType = "TEXT"\n    End Select\nEnd Functio