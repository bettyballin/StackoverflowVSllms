Dim input As String\nDim number As Double\nDim values As Double = 0\n\nWhile True\n    input = InputBox("Enter numbers to add, enter -1 to stop")\n\n    ' Check if the input is empty (user pressed 'Cancel')\n    If input = "" Then\n        Exit While\n    End If\n\n    ' Try to convert the input to a Double\n    If Double.TryParse(input, number) Then\n        ' Exit the loop if the user enters -1\n        If number = -1 Then\n            Exit While\n        End If\n        values += number\n    Else\n        MessageBox.Show("Please enter a valid number.")\n    End If\nEnd While\n\n' Output the total sum\nMessageBox.Show("The total sum is: " & values)