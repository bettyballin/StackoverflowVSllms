Protected Sub DetailsView1_ItemCommand(sender As Object, e As DetailsViewCommandEventArgs) Handles DetailsView1.ItemCommand\n    If e.CommandName = "AddToCart" Then\n        ' Retrieve the ArtID from the DataKey of the DetailsView\n        Dim artID As String = DetailsView1.DataKey("ArtID").ToString()\n        \n        ' Create a new cookie\n        Dim CartArtID As New HttpCookie("CartArtID")\n        CartArtID.Value = artID\n        CartArtID.Expires = DateTime.Now.AddDays(0.5)\n        \n        ' Add the cookie to the response\n        Response.Cookies.Add(CartArtID)\n        \n        ' Redirect to the Purchase page\n        Response.Redirect("Purchase.aspx")\n    End If\nEnd Sub