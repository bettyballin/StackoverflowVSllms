Sub ChangeRequiredProperty()\n    Dim db As DAO.Database\n    Dim tdf As DAO.TableDef\n    Dim fld As DAO.Field\n    \n    ' Set reference to the current database\n    Set db = CurrentDb()\n    \n    ' Set reference to the table containing the field\n    Set tdf = db.TableDefs("MyTbl")\n    \n    ' Set reference to the field\n    Set fld = tdf.Fields("MyCol")\n    \n    ' Change the Required property to False\n    fld.Required = False\n    \n    ' Clean up\n    Set fld = Nothing\n    Set tdf = Nothing\n    Set db = Nothing\n    \n    MsgBox "Required property changed to False"\nEnd Sub