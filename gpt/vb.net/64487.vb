Public Sub CheckConditions()\n    Dim db As DAO.Database\n    Dim rsConditions As DAO.Recordset\n    Dim rsRecords As DAO.Recordset\n    Dim rsReport As DAO.Recordset\n    Dim strSQL As String\n    Dim strCondition As String\n    Dim strError As String\n    Dim blnError As Boolean\n    \n    ' Open the database and recordsets\n    Set db = CurrentDb()\n    Set rsConditions = db.OpenRecordset("SELECT * FROM querycrit")\n    Set rsRecords = db.OpenRecordset("SELECT * FROM records")\n    Set rsReport = db.OpenRecordset("SELECT * FROM ErrorReport", dbOpenDynaset, dbAppendOnly)\n    \n    ' Loop through each condition\n    Do While Not rsConditions.EOF\n        strCondition = rsConditions!query\n        strError = rsConditions!error\n        \n        ' Loop through each record in the records table\n        rsRecords.MoveFirst\n        Do While Not rsRecords.EOF\n            ' Check the condition\n            blnError = Eval(strCondition)\n            \n            ' If the condition is met, log the error\n            If blnError Then\n                rsReport.AddNew\n                rsReport!RecordID = rsRecords!id\n                rsReport!ErrorMessage = strError\n                rsReport.Update\n            End If\n            \n            rsRecords.MoveNext\n        Loop\n        \n        rsConditions.MoveNext\n    Loop\n    \n    ' Clean up\n    rsConditions.Close\n    rsRecords.Close\n    rsReport.Close\n    Set rsConditions = Nothing\n    Set rsRecords = Nothing\n    Set rsReport = Nothing\n    Set db = Nothing\n    \n    MsgBox "Condition check complete. Errors logged to ErrorReport table."\nEnd Sub