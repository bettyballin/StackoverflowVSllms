Dim client As TcpClient = Nothing\nclient = listener.AcceptTcpClient()\n\nDo While True\n    Try\n        Dim stream As NetworkStream = client.GetStream()\n        If stream.DataAvailable Then\n            Dim bytes(1024) As Byte\n            Dim numCharRead As Integer = stream.Read(bytes, 0, bytes.Length)\n            If numCharRead = 0 Then\n                Exit Do ' Connection was closed\n            End If\n            Dim strRead As String = System.Text.Encoding.ASCII.GetString(bytes, 0, numCharRead)\n        Else\n            ' Optionally add a small sleep to avoid busy-waiting\n            System.Threading.Thread.Sleep(100)\n        End If\n    Catch ex As IOException\n        Exit Do ' IOException indicates the client has disconnected\n    End Try\nLoop