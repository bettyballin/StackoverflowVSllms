Public Class MainForm\n    Private WithEvents exporter As New PDFExporter\n    Private userOverwriteChoice As Boolean? = Nothing\n\n    Private Sub MainForm_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Start the PDF export process\n        exporter.ExportPDFs()\n    End Sub\n\n    Private Sub exporter_FileExists(sender As Object, e As FileExistsEventArgs) Handles exporter.FileExists\n        If userOverwriteChoice Is Nothing Then\n            ' Prompt the user only once\n            Dim result As DialogResult = MessageBox.Show($"The file {e.PDFFile} already exists. Overwrite all existing files?", "File Exists", MessageBoxButtons.YesNo)\n            userOverwriteChoice = (result = DialogResult.Yes)\n        End If\n\n        ' Set the Overwrite property based on the user's choice\n        e.Overwrite = userOverwriteChoice.Value\n    End Sub\nEnd Class