Public Class Form1\n    Private mainMenu As MainMenu\n    Private fileMenu As MenuItem\n    Private editMenu As MenuItem\n    Private helpMenu As MenuItem\n\n    Public Sub New()\n        ' This call is required by the designer.\n        InitializeComponent()\n\n        ' Initialize the MainMenu and MenuItems\n        mainMenu = New MainMenu()\n\n        fileMenu = New MenuItem("File")\n        editMenu = New MenuItem("Edit")\n        helpMenu = New MenuItem("Help")\n\n        ' Add MenuItems to the MainMenu\n        mainMenu.MenuItems.Add(fileMenu)\n        mainMenu.MenuItems.Add(editMenu)\n        mainMenu.MenuItems.Add(helpMenu)\n\n        ' Assign the MainMenu to the form\n        Me.Menu = mainMenu\n\n        ' Add sub-items to the File menu\n        fileMenu.MenuItems.Add(New MenuItem("New"))\n        fileMenu.MenuItems.Add(New MenuItem("Open"))\n        fileMenu.MenuItems.Add(New MenuItem("Save"))\n        fileMenu.MenuItems.Add(New MenuItem("Exit", AddressOf Me.OnExit))\n\n        ' Add sub-items to the Edit menu\n        editMenu.MenuItems.Add(New MenuItem("Cut"))\n        editMenu.MenuItems.Add(New MenuItem("Copy"))\n        editMenu.MenuItems.Add(New MenuItem("Paste"))\n\n        ' Add sub-items to the Help menu\n        helpMenu.MenuItems.Add(New MenuItem("About"))\n    End Sub\n\n    ' Event handler for Exit menu item\n    Private Sub OnExit(ByVal sender As Object, ByVal e As EventArgs)\n        Me.Close()\n    End Sub\nEnd Class