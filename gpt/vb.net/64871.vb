' Import the necessary namespace for reflection\nImports System.Reflection\n\n' Method to dynamically assign an image from My.Resources\nPublic Sub SetImageDynamically(pictureBox As PictureBox, imageName As String)\n    ' Get the type of the My.Resources\n    Dim resourceType As Type = GetType(My.Resources)\n\n    ' Use reflection to get the property info for the specified image name\n    Dim propertyInfo As PropertyInfo = resourceType.GetProperty(imageName, BindingFlags.Static Or BindingFlags.NonPublic Or BindingFlags.Public)\n\n    ' Check if the property exists and is not Nothing\n    If propertyInfo IsNot Nothing Then\n        ' Get the image from the resource property\n        Dim selectedImage As Image = DirectCast(propertyInfo.GetValue(Nothing, Nothing), Image)\n\n        ' Assign the image to the PictureBox\n        pictureBox.Image = selectedImage\n    Else\n        ' Handle the case where the image name does not exist in My.Resources\n        MessageBox.Show("Image not found in resources.")\n    End If\nEnd Sub\n\n' Usage example:\nSetImageDynamically(UltraPictureBox1, "zoo_picture_1")