Public Class Form1\n    ' This event is triggered when the form loads\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        ' Initialize the TextBox with 0\n        TextBox1.Text = "0"\n    End Sub\n\n    ' This event is triggered when the button is clicked\n    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click\n        ' Convert the current text in the TextBox to an integer\n        Dim currentValue As Integer = Integer.Parse(TextBox1.Text)\n        ' Increment the value by 1\n        currentValue += 1\n        ' Update the TextBox with the new value\n        TextBox1.Text = currentValue.ToString()\n    End Sub\nEnd Class