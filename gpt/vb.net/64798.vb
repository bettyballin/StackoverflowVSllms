Imports System.Net.Sockets\n\nModule Module1\n    Sub Main()\n        Try\n            ' Create an instance of the IrDAClient\n            Dim irClient As New IrDAClient()\n\n            ' Connect to the IrDA server\n            irClient.Connect()\n\n            ' Get the network stream\n            Dim irStream As NetworkStream = irClient.GetStream()\n\n            ' Example: Sending data\n            Dim sendData As Byte() = System.Text.Encoding.ASCII.GetBytes("Hello, IrDA!")\n            irStream.Write(sendData, 0, sendData.Length)\n\n            ' Example: Receiving data\n            Dim receiveData(256) As Byte\n            Dim bytesRead As Integer = irStream.Read(receiveData, 0, receiveData.Length)\n            Dim receivedMessage As String = System.Text.Encoding.ASCII.GetString(receiveData, 0, bytesRead)\n            Console.WriteLine("Received: " & receivedMessage)\n\n            ' Close the stream and client\n            irStream.Close()\n            irClient.Close()\n        Catch ex As Exception\n            Console.WriteLine("Error: " & ex.Message)\n        End Try\n    End Sub\nEnd Module