Imports System\nImports System.Text\n\nPublic Module HexDecoder\n    Public Sub Main()\n        Dim hexString As String = "0x4400450043004C00410052004500" ' Example string\n        Dim decodedString As String = DecodeHexString(hexString)\n        Console.WriteLine(decodedString)\n    End Sub\n\n    Public Function DecodeHexString(hex As String) As String\n        ' Remove the leading "0x" if present\n        If hex.StartsWith("0x", StringComparison.OrdinalIgnoreCase) Then\n            hex = hex.Substring(2)\n        End If\n\n        ' Convert hex string to byte array\n        Dim bytes((hex.Length \ 2) - 1) As Byte\n        For i As Integer = 0 To hex.Length - 1 Step 2\n            bytes(i \ 2) = Convert.ToByte(hex.Substring(i, 2), 16)\n        Next\n\n        ' Convert byte array to string using Unicode encoding\n        Return Encoding.Unicode.GetString(bytes)\n    End Function\nEnd Module