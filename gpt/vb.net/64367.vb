Imports System.Net.Mail\n\nModule Module1\n    Sub Main()\n        Try\n            Dim smtpClient As New SmtpClient("smtp.yourserver.com")\n            smtpClient.Port = 587 ' or your SMTP port\n            smtpClient.Credentials = New System.Net.NetworkCredential("yourusername", "yourpassword")\n            smtpClient.EnableSsl = True\n\n            Dim mail As New MailMessage()\n            mail.From = New MailAddress("you@yourdomain.com")\n            mail.To.Add("recipient@theirdomain.com")\n            mail.Subject = "Test Mail"\n            mail.Body = "This is a test email sent from VB.Net"\n\n            smtpClient.Send(mail)\n            Console.WriteLine("Mail Sent Successfully")\n        Catch ex As Exception\n            Console.WriteLine("Error: " & ex.Message)\n        End Try\n    End Sub\nEnd Module