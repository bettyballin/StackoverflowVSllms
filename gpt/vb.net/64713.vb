Private Sub Form_AfterInsert()\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n    Dim invoiceAmount As Integer\n    Dim custNumber As Integer\n\n    ' Get the inserted values\n    invoiceAmount = Me.Inv_Amt\n    custNumber = Me.cust_num\n\n    ' Update the customer table\n    Set db = CurrentDb\n    Set rs = db.OpenRecordset("SELECT * FROM customer WHERE Id = " & custNumber)\n    \n    If Not rs.EOF Then\n        rs.Edit\n        rs!amount = invoiceAmount\n        rs.Update\n    End If\n\n    rs.Close\n    Set rs = Nothing\n    Set db = Nothing\nEnd Sub