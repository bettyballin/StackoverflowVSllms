Imports Microsoft.SqlServer.Management.Smo\nImports Microsoft.SqlServer.Management.Common\nImports System.Text\nImports System.IO\nImports System.Text.RegularExpressions\n\nModule Module1\n    Sub Main()\n        Dim server As New Server(New ServerConnection("your_server_name"))\n        Dim db As Database = server.Databases("your_database_name")\n\n        Dim scr As New Scripter(server)\n        Dim opt As New ScriptingOptions With {\n            .Encoding = Encoding.ASCII,\n            .DriAll = True,\n            .ClusteredIndexes = True,\n            .Default = True,\n            .Indexes = True,\n            .IncludeHeaders = True,\n            .AppendToFile = True\n        }\n\n        Dim script As String = scr.EnumScript(New Urn() {db.Tables("AAAExampleData").Urn}, opt).Aggregate(Function(a, b) a & vbCrLf & b)\n\n        ' Define the regex pattern to match the date in the comments\n        Dim pattern As String = "/\*\*\*\*\* Object:.*? Script Date: (\d{2})/(\d{2})/(\d{4}) (\d{2}:\d{2}:\d{2}) \*\*\*\*\*/"\n        ' Replace the date format in the comments\n        Dim formattedScript As String = Regex.Replace(script, pattern, AddressOf DateReplacer)\n\n        ' Output the formatted script\n        File.WriteAllText("output_script.sql", formattedScript, Encoding.ASCII)\n    End Sub\n\n    Function DateReplacer(match As Match) As String\n        ' Convert to Australian date format (dd/MM/yyyy)\n        Dim day As String = match.Groups(2).Value\n        Dim month As String = match.Groups(1).Value\n        Dim year As String = match.Groups(3).Value\n        Dim time As String = match.Groups(4).Value\n        Return $"/****** Object:  Table [dbo].[AAAExampleData]    Script Date: {day}/{month}/{year} {time} ******/"\n    End Function\nEnd Module