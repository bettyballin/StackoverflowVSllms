Private Sub DataGridView1_CellMouseDown(sender As Object, e As DataGridViewCellMouseEventArgs) Handles DataGridView1.CellMouseDown\n    If e.Button = MouseButtons.Right AndAlso e.ColumnIndex = 1 AndAlso e.RowIndex >= 0 Then\n        DataGridView1.CurrentCell = DataGridView1(e.ColumnIndex, e.RowIndex)\n        DataGridView1.BeginEdit(True)\n    End If\nEnd Sub\n\nPrivate Sub DataGridView1_EditingControlShowing(sender As Object, e As DataGridViewEditingControlShowingEventArgs) Handles DataGridView1.EditingControlShowing\n    If TypeOf e.Control Is TextBox Then\n        Dim textBox As TextBox = DirectCast(e.Control, TextBox)\n        AddHandler textBox.ContextMenuStripChanged, AddressOf TextBox_ContextMenuStripChanged\n    End If\nEnd Sub\n\nPrivate Sub TextBox_ContextMenuStripChanged(sender As Object, e As EventArgs)\n    Dim textBox As TextBox = DirectCast(sender, TextBox)\n\n    ' Save the original system context menu\n    Dim systemContextMenu As ContextMenuStrip = textBox.ContextMenuStrip\n\n    Dim mergedContextMenu As New ContextMenuStrip()\n\n    ' Add system context menu items\n    For Each item As ToolStripItem In systemContextMenu.Items\n        mergedContextMenu.Items.Add(item.Clone())\n    Next\n\n    ' Add a separator if there are items in the system context menu\n    If mergedContextMenu.Items.Count > 0 Then\n        mergedContextMenu.Items.Add(New ToolStripSeparator())\n    End If\n\n    ' Add custom context menu items\n    For Each item As ToolStripItem In ContextMenuStrip1.Items\n        mergedContextMenu.Items.Add(item.Clone())\n    Next\n\n    ' Assign the merged context menu to the TextBox\n    textBox.ContextMenuStrip = mergedContextMenu\nEnd Sub