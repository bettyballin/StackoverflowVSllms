Imports Newtonsoft.Json\nImports System.Collections.Generic\nImports System.Configuration\n\nPublic Class SettingsHelper\n\n    ' Serialize the dictionary to a JSON string and store it in application settings\n    Public Shared Sub SaveDictionaryToSettings(dict As Dictionary(Of String, String))\n        Dim json As String = JsonConvert.SerializeObject(dict)\n        My.Settings.DictionarySetting = json\n        My.Settings.Save()\n    End Sub\n\n    ' Retrieve the dictionary from application settings by deserializing the JSON string\n    Public Shared Function GetDictionaryFromSettings() As Dictionary(Of String, String)\n        Dim json As String = My.Settings.DictionarySetting\n        If String.IsNullOrEmpty(json) Then\n            Return New Dictionary(Of String, String)()\n        End If\n        Return JsonConvert.DeserializeObject(Of Dictionary(Of String, String))(json)\n    End Function\n\nEnd Class