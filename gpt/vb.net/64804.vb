Imports NAudio.Wave\nImports System.Timers\n\nModule Module1\n    Private waveOut As WaveOutEvent\n    Private mp3Reader As Mp3FileReader\n    Private timer As Timers.Timer\n\n    Sub Main()\n        ' Initialize the MP3 player\n        Dim filePath As String = "path_to_your_mp3_file.mp3"\n        mp3Reader = New Mp3FileReader(filePath)\n        waveOut = New WaveOutEvent()\n\n        ' Assign the MP3 file to the player\n        waveOut.Init(mp3Reader)\n\n        ' Start the timer to track elapsed time\n        timer = New Timers.Timer(100) ' Set the interval to 100 ms\n        AddHandler timer.Elapsed, AddressOf OnTimedEvent\n        timer.Start()\n\n        ' Play the MP3 file\n        waveOut.Play()\n\n        ' Wait for the user to stop the playback\n        Console.WriteLine("Press any key to stop playback...")\n        Console.ReadKey()\n\n        ' Clean up resources\n        timer.Stop()\n        waveOut.Stop()\n        mp3Reader.Dispose()\n        waveOut.Dispose()\n    End Sub\n\n    Private Sub OnTimedEvent(source As Object, e As ElapsedEventArgs)\n        Dim currentTime As TimeSpan = mp3Reader.CurrentTime\n        Console.WriteLine($"Current Time: {currentTime.TotalMilliseconds} ms")\n    End Sub\nEnd Module