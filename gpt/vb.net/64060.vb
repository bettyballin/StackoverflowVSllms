Imports System.Runtime.InteropServices\n\nPublic Class WordAutomation\n\n    <DllImport("user32.dll", SetLastError:=True)>\n    Private Shared Function FindWindow(ByVal lpClassName As String, ByVal lpWindowName As String) As IntPtr\n    End Function\n\n    <DllImport("user32.dll", SetLastError:=True)>\n    Private Shared Function GetWindowText(ByVal hWnd As IntPtr, ByVal lpString As System.Text.StringBuilder, ByVal nMaxCount As Integer) As Integer\n    End Function\n\n    Public Shared Function LocateWordWindow() As IntPtr\n        ' Find the Word application window by its class name.\n        ' The class name for Word application windows is generally "OpusApp".\n        Dim wordWindowHandle As IntPtr = FindWindow("OpusApp", Nothing)\n\n        If wordWindowHandle = IntPtr.Zero Then\n            Throw New Exception("Microsoft Word window not found.")\n        End If\n\n        Return wordWindowHandle\n    End Function\n\n    Public Shared Function GetWindowTitle(ByVal hWnd As IntPtr) As String\n        Dim title As New System.Text.StringBuilder(256)\n        GetWindowText(hWnd, title, title.Capacity)\n        Return title.ToString()\n    End Function\n\n    Public Shared Sub Main()\n        Try\n            Dim wordWindowHandle As IntPtr = LocateWordWindow()\n            Dim windowTitle As String = GetWindowTitle(wordWindowHandle)\n            Console.WriteLine("Word window found with title: " & windowTitle)\n            ' Additional code to grab text from the Word window can be added here.\n        Catch ex As Exception\n            Console.WriteLine("Error: " & ex.Message)\n        End Try\n    End Sub\n\nEnd Class