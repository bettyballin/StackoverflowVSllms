Imports Microsoft.Win32\n\nPublic Class Form1\n    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        FillComboBoxWithFileTypes()\n    End Sub\n\n    Private Sub FillComboBoxWithFileTypes()\n        Dim regKey As RegistryKey = Registry.ClassesRoot\n        Dim subKeys As String() = regKey.GetSubKeyNames()\n\n        For Each subKey As String In subKeys\n            If subKey.StartsWith(".") Then\n                Dim fileTypeKey As RegistryKey = regKey.OpenSubKey(subKey)\n                If fileTypeKey IsNot Nothing Then\n                    Dim fileTypeDesc As String = TryCast(fileTypeKey.GetValue(""), String)\n                    If Not String.IsNullOrEmpty(fileTypeDesc) Then\n                        Dim fileTypeDescKey As RegistryKey = regKey.OpenSubKey(fileTypeDesc)\n                        If fileTypeDescKey IsNot Nothing Then\n                            Dim fileTypeName As String = TryCast(fileTypeDescKey.GetValue(""), String)\n                            If Not String.IsNullOrEmpty(fileTypeName) Then\n                                ComboBox1.Items.Add(fileTypeName)\n                            End If\n                        End If\n                    End If\n                End If\n            End If\n        Next\n    End Sub\nEnd Class