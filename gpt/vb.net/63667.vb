' Function to escape apostrophes in a string\nFunction EscapeApostrophes(input As String) As String\n    Return input.Replace("'", "''")\nEnd Function\n\n' Example user input\nDim userInput As String = "US Engineering Lumburg's LU"\n\n' Split user input into individual terms\nDim terms As String() = userInput.Split(" "c)\n\n' Escape apostrophes in each term\nFor i As Integer = 0 To terms.Length - 1\n    terms(i) = EscapeApostrophes(terms(i))\nNext\n\n' Build the query string\nDim queryParts As New List(Of String)\nFor Each term As String In terms\n    queryParts.Add(String.Format("(Country LIKE '%{0}%' OR Department LIKE '%{0}%' OR Project LIKE '%{0}%')", term))\nNext\n\nDim queryString As String = String.Join(" OR ", queryParts)\n\n' Include NULL checks for each column if needed\nDim nullChecks As String = "(Country IS NULL OR Department IS NULL OR Project IS NULL)"\nqueryString = String.Format("({0}) OR {1}", queryString, nullChecks)\n\n' Example DataTable\nDim dt As New DataTable()\ndt.Columns.Add("Country", GetType(String))\ndt.Columns.Add("Department", GetType(String))\ndt.Columns.Add("Project", GetType(String))\n\n' Perform the Select with the constructed query string\nDim results As DataRow() = dt.Select(queryString)\n\n' Iterate over results\nFor Each row As DataRow In results\n    Console.WriteLine(String.Format("Country: {0}, Department: {0}, Project: {0}", row("Country"), row("Department"), row("Project")))\nNext