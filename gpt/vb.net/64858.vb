Imports System.Windows.Forms\nImports System.Runtime.InteropServices\n\nPublic Class MainForm\n    Inherits Form\n\n    Private contextMenu As ContextMenu\n\n    Public Sub New()\n        ' Initialize context menu\n        contextMenu = New ContextMenu()\n        Dim menuItem1 = New MenuItem("MenuItem1")\n        Dim menuItem2 = New MenuItem("MenuItem2")\n        Dim subMenuItem1 = New MenuItem("SubMenuItem1")\n        Dim subMenuItem2 = New MenuItem("SubMenuItem2")\n        Dim subSubMenuItem1 = New MenuItem("SubSubMenuItem1")\n        subMenuItem2.MenuItems.Add(subSubMenuItem1)\n        menuItem2.MenuItems.Add(subMenuItem1)\n        menuItem2.MenuItems.Add(subMenuItem2)\n        Dim menuItem3 = New MenuItem("MenuItem3")\n        contextMenu.MenuItems.Add(menuItem1)\n        contextMenu.MenuItems.Add(menuItem2)\n        contextMenu.MenuItems.Add(menuItem3)\n\n        ' Add KeyUp event handler\n        AddHandler Me.KeyUp, AddressOf MainForm_KeyUp\n    End Sub\n\n    Private Sub MainForm_KeyUp(sender As Object, e As KeyEventArgs)\n        If e.KeyCode = Keys.F12 Then ' Choose an appropriate key\n            contextMenu.Show(Me, Me.PointToClient(Cursor.Position))\n            ' Simulate key presses to navigate through the menu\n            SendKeys.SendWait("{DOWN}") ' Navigate to MenuItem2\n            SendKeys.SendWait("{RIGHT}") ' Open SubMenu\n            SendKeys.SendWait("{DOWN}") ' Navigate to SubMenuItem1\n        End If\n    End Sub\n\n    <STAThread>\n    Public Shared Sub Main()\n        Application.EnableVisualStyles()\n        Application.Run(New MainForm())\n    End Sub\nEnd Class