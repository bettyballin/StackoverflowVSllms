Imports System.Data.OleDb\n\nPublic Sub GetColumnNames(file As String)\n    Dim filePath As String = IO.Path.GetDirectoryName(file)\n    Dim connectionString As String = "Provider=VFPOLEDB.1;Data Source=" & filePath & ";Collating Sequence=MACHINE"\n\n    Using myOledbConnection As New OleDbConnection(connectionString)\n        myOledbConnection.Open()\n\n        Dim commandText As String = "SELECT * FROM [" & file & "] WHERE 1 = 0"\n        Using myOledbCommand As New OleDbCommand(commandText, myOledbConnection)\n            Using reader As OleDbDataReader = myOledbCommand.ExecuteReader(CommandBehavior.SchemaOnly)\n                Dim schemaTable As DataTable = reader.GetSchemaTable()\n\n                If schemaTable IsNot Nothing Then\n                    For Each row As DataRow In schemaTable.Rows\n                        Console.WriteLine(row("ColumnName").ToString())\n                    Next\n                End If\n            End Using\n        End Using\n    End Using\nEnd Sub