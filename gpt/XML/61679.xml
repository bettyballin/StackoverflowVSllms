<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    <xsl:output method="html" indent="yes"/>\n    \n    <xsl:template match="/grid">\n        <table class="grid">\n            <xsl:apply-templates/>\n        </table>\n    </xsl:template>\n\n    <xsl:template match="headingRow">\n        <tr>\n            <xsl:apply-templates/>\n        </tr>\n    </xsl:template>\n\n    <xsl:template match="row">\n        <tr>\n            <xsl:apply-templates/>\n        </tr>\n    </xsl:template>\n\n    <xsl:template match="cell">\n        <xsl:choose>\n            <xsl:when test="@type='price'">\n                <td>\n                    <span class="currency_symbol"><xsl:value-of select="substring(., 1, 1)"/></span>\n                    <span class="decimal_number"><xsl:value-of select="substring(., 2)"/></span>\n                </td>\n            </xsl:when>\n            <xsl:otherwise>\n                <td><xsl:value-of select="."/></td>\n            </xsl:otherwise>\n        </xsl:choose>\n    </xsl:template>\n\n    <xsl:template match="headingRow/cell">\n        <th><xsl:value-of select="."/></th>\n    </xsl:template>\n</xsl:stylesheet>