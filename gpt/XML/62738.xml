<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"\n           xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning"\n           elementFormDefault="qualified"\n           vc:minVersion="1.1">\n    \n    <xs:element name="boat">\n        <xs:complexType>\n            <xs:sequence>\n                <xs:element name="type" type="xs:string"/>\n                <xs:element name="foot" type="xs:int"/>\n            </xs:sequence>\n            <xs:assert test="(type = 'shark' and foot >= 15 and foot <= 30) or \n                             (type = 'yatch' and foot >= 30 and foot <= 60) or \n                             (type != 'shark' and type != 'yatch')"/>\n        </xs:complexType>\n    </xs:element>\n    \n</xs:schema>