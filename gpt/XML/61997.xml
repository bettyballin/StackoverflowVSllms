<subsystem xmlns="urn:jboss:domain:web:1.5">\n       <connector name="https" protocol="HTTP/1.1" scheme="https" socket-binding="https" secure="true">\n           <ssl name="fooSSL" key-alias="foo" password="password" certificate-key-file="${jboss.server.config.dir}/foo.keystore" />\n           <ssl name="barSSL" key-alias="bar" password="password" certificate-key-file="${jboss.server.config.dir}/bar.keystore" />\n       </connector>\n       <server name="default-server">\n           <host name="default-host" alias="foo.com">\n               <location name="/" handler="welcome-content"/>\n               <sni name="foo.com" ssl-context="fooSSL" />\n           </host>\n           <host name="bar-host" alias="bar.com">\n               <location name="/" handler="welcome-content"/>\n               <sni name="bar.com" ssl-context="barSSL" />\n           </host>\n       </server>\n   </subsystem>