<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <rule name="Rewrite abc.xyz.com to xyz.com/sites/abc" stopProcessing="true">\n                    <match url="^(.*)$" />\n                    <conditions>\n                        <add input="{HTTP_HOST}" pattern="^abc\.xyz\.com$" />\n                    </conditions>\n                    <action type="Rewrite" url="http://xyz.com/sites/abc/{R:1}" appendQueryString="true" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>