<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    <xsl:output method="html" indent="yes" encoding="UTF-8"/>\n    \n    <xsl:template match="/">\n        <html>\n            <head>\n                <title>Formatted Content</title>\n            </head>\n            <body>\n                <div>\n                    <xsl:variable name="formattedContent">\n                        <xsl:value-of select="content" />\n                    </xsl:variable>\n                    <xsl:value-of select="str:replace($formattedContent, '_', '<u>')" disable-output-escaping="yes"/>\n                    <!-- Add more replacements as necessary for other wiki-style formatting -->\n                </div>\n            </body>\n        </html>\n    </xsl:template>\n\n    <!-- Define the string replace function -->\n    <xsl:template name="str:replace">\n        <xsl:param name="input" />\n        <xsl:param name="search" />\n        <xsl:param name="replace" />\n        <xsl:choose>\n            <xsl:when test="contains($input, $search)">\n                <xsl:value-of select="concat(substring-before($input, $search), $replace, str:replace(substring-after($input, $search), $search, $replace))" />\n            </xsl:when>\n            <xsl:otherwise>\n                <xsl:value-of select="$input" />\n            </xsl:otherwise>\n        </xsl:choose>\n    </xsl:template>\n</xsl:stylesheet>