<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <rule name="Replace encoded spaces with dashes" stopProcessing="true">\n                    <match url="^(.*)%20(.*)$" />\n                    <action type="Redirect" url="{R:1}-{R:2}" redirectType="Permanent" />\n                    <conditions>\n                        <add input="{REQUEST_URI}" pattern="%20" />\n                    </conditions>\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>