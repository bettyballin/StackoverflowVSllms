<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="BlockBadUserAgents" stopProcessing="true">\n          <match url=".*" />\n          <conditions>\n            <add input="{HTTP_USER_AGENT}" pattern="BadBot|AnotherBadBot|YetAnotherBadBot" />\n          </conditions>\n          <action type="CustomResponse" statusCode="403" statusReason="Forbidden" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>