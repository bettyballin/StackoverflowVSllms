<project name="build-rpm" default="create-rpm" basedir=".">\n    <property name="linux.host" value="your.linux.machine"/>\n    <property name="linux.user" value="username"/>\n    <property name="linux.password" value="password"/>\n    <property name="remote.dir" value="/tmp/build"/>\n    <property name="local.dir" value="dist"/>\n\n    <!-- Copy build files to Linux machine -->\n    <target name="copy-files">\n        <scp todir="${linux.user}@${linux.host}:${remote.dir}" password="${linux.password}">\n            <fileset dir="${local.dir}">\n                <include name="**/*"/>\n            </fileset>\n        </scp>\n    </target>\n\n    <!-- Execute RPM build command on Linux machine -->\n    <target name="build-rpm" depends="copy-files">\n        <sshexec host="${linux.host}" username="${linux.user}" password="${linux.password}" command="cd ${remote.dir} && rpmbuild -ba your.spec.file"/>\n    </target>\n\n    <!-- Copy resulting RPM back to Windows -->\n    <target name="retrieve-rpm" depends="build-rpm">\n        <scp file="${linux.user}@${linux.host}:${remote.dir}/RPMS/your-package.rpm" todir="${local.dir}" password="${linux.password}"/>\n    </target>\n\n    <target name="create-rpm" depends="retrieve-rpm"/>\n</project>