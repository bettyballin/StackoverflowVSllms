<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="Rewrite to friendly URL">\n          <match url="^oldpage\.aspx$" />\n          <action type="Rewrite" url="newpage.aspx" />\n        </rule>\n        <rule name="Redirect to new URL">\n          <match url="^oldpage/(.*)" />\n          <action type="Redirect" url="newpage/{R:1}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>