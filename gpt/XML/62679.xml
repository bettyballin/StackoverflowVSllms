<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    \n    <!-- Define a key to group problems by file -->\n    <xsl:key name="files" match="Problem" use="File"/>\n    \n    <xsl:template match="/">\n        <html>\n            <body>\n                <!-- Iterate over distinct files -->\n                <xsl:for-each select="//Problem[generate-id() = generate-id(key('files', File)[1])]">\n                    <h1>\n                        <xsl:value-of select="File"/>\n                    </h1>\n                    <!-- Iterate over problems with the same file -->\n                    <xsl:for-each select="key('files', File)">\n                        <p>\n                            <xsl:value-of select="Description"/>\n                        </p>\n                    </xsl:for-each>\n                </xsl:for-each>\n            </body>\n        </html>\n    </xsl:template>\n    \n</xsl:stylesheet>