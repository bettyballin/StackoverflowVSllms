<beans xmlns="http://www.springframework.org/schema/beans"\n       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"\n       xmlns:jaxws="http://cxf.apache.org/jaxws"\n       xsi:schemaLocation="\n           http://www.springframework.org/schema/beans\n           http://www.springframework.org/schema/beans/spring-beans.xsd\n           http://cxf.apache.org/jaxws\n           http://cxf.apache.org/schemas/jaxws.xsd">\n\n    <!-- Define the CXF client -->\n    <jaxws:client id="myServiceClient" serviceClass="com.example.MyService"\n                  address="https://example.com/myService"/>\n\n    <!-- Configure the HTTP conduit for TLS/SSL -->\n    <bean id="myConduit" class="org.apache.cxf.transport.http.HTTPConduit">\n        <property name="tlsClientParameters">\n            <bean class="org.apache.cxf.configuration.jsse.TLSClientParameters">\n                <property name="keyManagers">\n                    <bean class="org.apache.cxf.configuration.jsse.KeyManagerFactoryBean">\n                        <property name="keyStore" ref="keyStore"/>\n                        <property name="keyPassword" value="your-key-password"/>\n                    </bean>\n                </property>\n                <property name="trustManagers">\n                    <bean class="org.apache.cxf.configuration.jsse.TrustManagerFactoryBean">\n                        <property name="trustStore" ref="trustStore"/>\n                    </bean>\n                </property>\n            </bean>\n        </property>\n    </bean>\n    \n    <!-- Define the keyStore -->\n    <bean id="keyStore" class="org.springframework.core.io.ClassPathResource">\n        <constructor-arg value="path/to/your/keystore.p12"/>\n    </bean>\n\n    <!-- Define the trustStore -->\n    <bean id="trustStore" class="org.springframework.core.io.ClassPathResource">\n        <constructor-arg value="path/to/your/truststore.jks"/>\n    </bean>\n\n</beans>