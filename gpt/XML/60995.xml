<web-app>\n    <!-- Define security constraint for static content -->\n    <security-constraint>\n        <web-resource-collection>\n            <web-resource-name>Protected Static Resources</web-resource-name>\n            <url-pattern>/static/*</url-pattern> <!-- Adjust the pattern to match your static content path -->\n        </web-resource-collection>\n        <auth-constraint>\n            <role-name>USER</role-name> <!-- Define the role required to access the static content -->\n        </auth-constraint>\n    </security-constraint>\n\n    <!-- Define login configuration -->\n    <login-config>\n        <auth-method>BASIC</auth-method>\n        <realm-name>Protected Area</realm-name>\n    </login-config>\n\n    <!-- Define security role -->\n    <security-role>\n        <role-name>USER</role-name>\n    </security-role>\n</web-app>