<configuration>\n   <system.webServer>\n      <handlers>\n         <add name="PHP_via_FastCGI" path="*.php" \n              verb="GET,HEAD,POST" \n              modules="FastCgiModule" \n              scriptProcessor="C:\Path\To\php-cgi.exe" \n              resourceType="Either" />\n      </handlers>\n      <fastCgi>\n         <application fullPath="C:\Path\To\php-cgi.exe" \n                      arguments="" \n                      maxInstances="4">\n            <environmentVariables>\n               <environmentVariable name="PHPRC" value="C:\Path\To\php\directory" />\n            </environmentVariables>\n         </application>\n      </fastCgi>\n   </system.webServer>\n</configuration>