<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n    <xsl:output method="xml" indent="yes"/>\n\n    <xsl:template match="/">\n        <xsl:apply-templates/>\n    </xsl:template>\n\n    <!-- Copy all elements and attributes -->\n    <xsl:template match="*|@*|text()|comment()">\n        <xsl:copy>\n            <xsl:apply-templates select="*|@*|text()|comment()|processing-instruction()"/>\n        </xsl:copy>\n    </xsl:template>\n\n    <!-- Match the specific processing instruction and modify it -->\n    <xsl:template match="processing-instruction('define')">\n        <xsl:if test="contains(., 'ProductVersion')">\n            <xsl:processing-instruction name="define">\n                ProductVersion = "2.0.0"\n            </xsl:processing-instruction>\n        </xsl:if>\n        <xsl:if test="not(contains(., 'ProductVersion'))">\n            <xsl:copy/>\n        </xsl:if>\n    </xsl:template>\n\n</xsl:stylesheet>