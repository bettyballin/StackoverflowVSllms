<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <rule name="Redirect to start.html" stopProcessing="true">\n                    <match url=".*" />\n                    <conditions>\n                        <add input="{HTTP_HOST}" pattern="^(www\.)?(domain1\.com|domain2\.com|domain3\.com)$" />\n                    </conditions>\n                    <action type="Redirect" url="http://abc.com/start.html" redirectType="Permanent" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>