<project name="BCPExample" default="bcp-task" basedir=".">\n    <target name="bcp-task">\n        <echo message="Starting BCP task..."/>\n\n        <!-- Define the necessary properties -->\n        <property name="server" value="your-server-name"/>\n        <property name="database" value="your-database-name"/>\n        <property name="username" value="your-username"/>\n        <property name="password" value="your-password"/>\n        <property name="table" value="your-table-name"/>\n        <property name="outputfile" value="output-file-path"/>\n        \n        <!-- Run the bcp command using the exec task -->\n        <exec program="bcp">\n            <arg value="${database}.${table} out ${outputfile} -S ${server} -U ${username} -P ${password} -c"/>\n        </exec>\n        \n        <echo message="BCP task completed."/>\n    </target>\n</project>