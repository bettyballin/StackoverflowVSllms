<project name="SampleProject" default="build" basedir=".">\n       <property name="src.dir" value="src"/>\n       <property name="build.dir" value="build"/>\n       <property name="target.dir" value="target"/>\n       <property name="debug.symbol" value="DEBUG"/>\n\n       <!-- Clean target -->\n       <target name="clean">\n           <delete dir="${build.dir}"/>\n       </target>\n\n       <!-- Compile target -->\n       <target name="compile" depends="clean">\n           <mkdir dir="${build.dir}"/>\n           <vbc debug="${debug.symbol == 'DEBUG'}" target="exe" output="${target.dir}\MyApp.exe">\n               <sources>\n                   <include name="${src.dir}\**\*.vb"/>\n               </sources>\n               <define name="${debug.symbol}"/>\n           </vbc>\n       </target>\n\n       <!-- Default build target -->\n       <target name="build" depends="compile">\n           <echo message="Build completed."/>\n       </target>\n\n       <!-- Debug build target -->\n       <target name="debug" depends="clean">\n           <property name="debug.symbol" value="DEBUG"/>\n           <antcall target="build"/>\n       </target>\n\n       <!-- Production build target -->\n       <target name="prod" depends="clean">\n           <property name="debug.symbol" value=""/>\n           <antcall target="build"/>\n       </target>\n   </project>