<project name="wordpress-deploy" default="deploy">\n    <property name="prod.db_name" value="wordpress" />\n    <property name="prod.db_user" value="root" />\n    <property name="prod.db_password" value="toor" />\n    <property name="prod.db_host" value="prod.host.com" />\n\n    <target name="deploy">\n        <copy file="wp-config-sample.php" tofile="wp-config.php" />\n        <replace file="wp-config.php">\n            <replacefilter token="DB_NAME_HERE" value="${prod.db_name}" />\n            <replacefilter token="DB_USER_HERE" value="${prod.db_user}" />\n            <replacefilter token="DB_PASSWORD_HERE" value="${prod.db_password}" />\n            <replacefilter token="DB_HOST_HERE" value="${prod.db_host}" />\n        </replace>\n    </target>\n</project>