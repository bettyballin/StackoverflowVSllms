<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <!-- Rule for root URL -->\n        <rule name="Root URL">\n          <match url="^$" />\n          <action type="Rewrite" url="/index.php" />\n        </rule>\n        \n        <!-- Rule for other pages -->\n        <rule name="Rewrite to index.php">\n          <match url="^([^/.]+)/?.html$" />\n          <action type="Rewrite" url="/index.php?page={R:1}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>