<project name="main-project" default="run" xmlns:ac="antlib:net.sf.antcontrib">\n\n    <!-- Define a property with a comma-separated list of sub-project directories -->\n    <property name="subprojects" value="projectA,projectB,projectC"/>\n\n    <!-- Import the ant-contrib tasks -->\n    <taskdef resource="net/sf/antcontrib/antcontrib.properties">\n        <classpath>\n            <pathelement location="path/to/ant-contrib.jar"/>\n        </classpath>\n    </taskdef>\n\n    <!-- Define the target to run -->\n    <target name="run">\n        <!-- Iterate over each sub-project -->\n        <ac:foreach target="run-subproject" list="${subprojects}" param="subproject"/>\n    </target>\n\n    <!-- Define a target that runs for each sub-project -->\n    <target name="run-subproject" depends="">\n        <subant target="run" failonerror="true" verbose="true">\n            <fileset dir="${subproject}" includes="build.xml"/>\n        </subant>\n    </target>\n    \n</project>