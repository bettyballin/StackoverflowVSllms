<web-app>\n    <!-- Security Constraint -->\n    <security-constraint>\n        <web-resource-collection>\n            <web-resource-name>all</web-resource-name>\n            <url-pattern>/secured/*</url-pattern>\n        </web-resource-collection>\n        <auth-constraint>\n            <role-name>user</role-name>\n        </auth-constraint>\n    </security-constraint>\n    \n    <!-- Login Configuration -->\n    <login-config>\n        <auth-method>GOOGLE-APPENGINE</auth-method>\n    </login-config>\n    \n    <!-- Security Role -->\n    <security-role>\n        <role-name>user</role-name>\n    </security-role>\n</web-app>