<plugin>\n    <groupId>org.apache.maven.plugins</groupId>\n    <artifactId>maven-antrun-plugin</artifactId>\n    <version>1.8</version>\n    <executions>\n        <execution>\n            <phase>package</phase>\n            <configuration>\n                <target>\n                    <taskdef resource="proguard/ant/task.properties" classpathref="maven.dependency.classpath"/>\n                    <proguard>\n                        <injar file="${project.build.directory}/${project.build.finalName}.jar" />\n                        <outjar file="${project.build.directory}/${project.build.finalName}-obfuscated.jar" />\n                        <libraryjar file="${java.home}/lib/rt.jar" />\n                        <keep class="your.package.name.**" />\n                        <keepclassmembers class="your.package.name.**" />\n                    </proguard>\n                </target>\n            </configuration>\n            <goals>\n                <goal>run</goal>\n            </goals>\n        </execution>\n    </executions>\n</plugin>