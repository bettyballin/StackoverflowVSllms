<web-app>\n    <!-- Session timeout configuration -->\n    <session-config>\n        <session-timeout>30</session-timeout> <!-- in minutes -->\n    </session-config>\n\n    <!-- Security constraint for secure1 folder -->\n    <security-constraint>\n        <web-resource-collection>\n            <web-resource-name>Secure Area 1</web-resource-name>\n            <url-pattern>/secure1/*</url-pattern>\n        </web-resource-collection>\n        <auth-constraint>\n            <role-name>USER</role-name>\n        </auth-constraint>\n    </security-constraint>\n\n    <!-- Security constraint for secure2 folder -->\n    <security-constraint>\n        <web-resource-collection>\n            <web-resource-name>Secure Area 2</web-resource-name>\n            <url-pattern>/secure2/*</url-pattern>\n        </web-resource-collection>\n        <auth-constraint>\n            <role-name>USER</role-name>\n        </auth-constraint>\n    </security-constraint>\n\n    <!-- Security constraint for secure3 folder -->\n    <security-constraint>\n        <web-resource-collection>\n            <web-resource-name>Secure Area 3</web-resource-name>\n            <url-pattern>/secure3/*</url-pattern>\n        </web-resource-collection>\n        <auth-constraint>\n            <role-name>USER</role-name>\n        </auth-constraint>\n    </security-constraint>\n\n    <!-- Login configuration -->\n    <login-config>\n        <auth-method>FORM</auth-method>\n        <form-login-config>\n            <form-login-page>/login.jsp</form-login-page>\n            <form-error-page>/login-error.jsp</form-error-page>\n        </form-login-config>\n    </login-config>\n    \n    <!-- Security roles -->\n    <security-role>\n        <role-name>USER</role-name>\n    </security-role>\n</web-app>