<?xml version="1.0" encoding="UTF-8"?>\n<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"\n           xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning"\n           vc:minVersion="1.1">\n\n    <xs:element name="root">\n        <xs:complexType>\n            <xs:sequence>\n                <xs:element name="element" maxOccurs="unbounded">\n                    <xs:complexType>\n                        <xs:sequence>\n                            <xs:element name="bar" minOccurs="0"/>\n                            <xs:element name="world" minOccurs="0"/>\n                        </xs:sequence>\n                        <xs:attribute name="attribute" type="xs:string" use="required"/>\n                        <xs:assert test="(attribute = 'foo' and count(bar) = 1 and count(world) = 0) or\n                                         (attribute = 'hello' and count(bar) = 0 and count(world) = 1)"/>\n                    </xs:complexType>\n                </xs:element>\n            </xs:sequence>\n        </xs:complexType>\n    </xs:element>\n\n</xs:schema>