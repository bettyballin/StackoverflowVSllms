<project name="ReadSQLIntoProperty" default="read-sql" xmlns:taskdef="antlib:org.apache.tools.ant.taskdefs.optional">\n    <!-- Load the JDBC driver -->\n    <taskdef name="sqlexec" classname="org.apache.tools.ant.taskdefs.SQLExec"/>\n\n    <!-- Define the target -->\n    <target name="read-sql">\n        <!-- Execute SQL query and write result to a temporary file -->\n        <sqlexec driver="com.mysql.jdbc.Driver"\n                 url="jdbc:mysql://localhost:3306/yourdatabase"\n                 userid="yourusername"\n                 password="yourpassword"\n                 src="query.sql"\n                 print="true"\n                 output="output.txt"/>\n        \n        <!-- Read the first line of the output file into a property -->\n        <loadfile property="service.pack.number" srcFile="output.txt" />\n        \n        <!-- Print the property value -->\n        <echo>Service Pack Number: ${service.pack.number}</echo>\n    </target>\n\n    <!-- Define the SQL query in a separate file -->\n    <target name="create-sql-file" depends="clean">\n        <echo file="query.sql">SELECT SP_NUMBER FROM SERVICE_PACK;</echo>\n    </target>\n\n    <!-- Clean up temporary files -->\n    <target name="clean">\n        <delete file="output.txt"/>\n        <delete file="query.sql"/>\n    </target>\n</project>