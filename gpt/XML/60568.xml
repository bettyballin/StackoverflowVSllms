<!-- tabledisplay.xsl -->\n<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    <xsl:output method="html" indent="yes"/>\n    \n    <xsl:template match="/">\n        <html>\n            <head>\n                <title>XML Data Display</title>\n                <style>\n                    table { border-collapse: collapse; width: 100%; }\n                    th, td { border: 1px solid black; padding: 8px; text-align: left; }\n                </style>\n            </head>\n            <body>\n                <h2>XML Data Table</h2>\n                <table>\n                    <thead>\n                        <tr>\n                            <!-- Assuming XML has elements named 'column1', 'column2', etc. -->\n                            <th>Column 1</th>\n                            <th>Column 2</th>\n                            <!-- Add more columns as needed -->\n                        </tr>\n                    </thead>\n                    <tbody>\n                        <xsl:for-each select="root/row"> <!-- Adjust path according to your XML structure -->\n                            <tr>\n                                <td><xsl:value-of select="column1"/></td>\n                                <td><xsl:value-of select="column2"/></td>\n                                <!-- Add more columns as needed -->\n                            </tr>\n                        </xsl:for-each>\n                    </tbody>\n                </table>\n            </body>\n        </html>\n    </xsl:template>\n</xsl:stylesheet>