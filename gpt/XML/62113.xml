<project name="merge-webxml" default="merge" basedir=".">\n    \n    <target name="merge">\n        <!-- Paths to the main web.xml and the fragment -->\n        <property name="main.webxml" value="path/to/main/web.xml"/>\n        <property name="fragment.webxml" value="path/to/fragment/web.xml"/>\n        <property name="merged.webxml" value="path/to/merged/web.xml"/>\n        \n        <!-- Merge the main web.xml and the fragment -->\n        <concat destfile="${merged.webxml}">\n            <fileset file="${main.webxml}"/>\n            <fileset file="${fragment.webxml}"/>\n        </concat>\n        \n        <!-- Replace the original web.xml with the merged one (optional) -->\n        <move file="${merged.webxml}" tofile="${main.webxml}" />\n    </target>\n    \n</project>