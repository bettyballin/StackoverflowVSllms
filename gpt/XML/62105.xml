<ruleSet>\n  <rule>\n    <name>Validate TextBox</name>\n    <condition>\n      <expression>\n        <left>\n          <field>currentView</field>\n        </left>\n        <operator>equals</operator>\n        <right>\n          <literal>View1</literal>\n        </right>\n      </expression>\n    </condition>\n    <actions>\n      <validationAction>\n        <message>Text box cannot be empty</message>\n        <condition>\n          <expression>\n            <left>\n              <field>TextBoxField</field>\n            </left>\n            <operator>isBlank</operator>\n          </expression>\n        </condition>\n      </validationAction>\n    </actions>\n  </rule>\n</ruleSet>