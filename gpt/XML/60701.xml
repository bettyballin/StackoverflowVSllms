<Configure id="Server" class="org.eclipse.jetty.server.Server">\n       <Call name="addConnector">\n           <Arg>\n               <New class="org.eclipse.jetty.server.ServerConnector">\n                   <Arg name="server">\n                       <Ref refid="Server"/>\n                   </Arg>\n                   <Arg name="factories">\n                       <Array type="org.eclipse.jetty.server.ConnectionFactory">\n                           <Item>\n                               <New class="org.eclipse.jetty.server.SslConnectionFactory">\n                                   <Arg name="next">http/1.1</Arg>\n                                   <Arg name="sslContextFactory">\n                                       <New class="org.eclipse.jetty.util.ssl.SslContextFactory$Server">\n                                           <Set name="keyStorePath"><Property name="jetty.keystore.path" default="keystore.jks" /></Set>\n                                           <Set name="keyStorePassword"><Property name="jetty.keystore.password" default="changeit" /></Set>\n                                           <Set name="keyManagerPassword"><Property name="jetty.keymanager.password" default="changeit" /></Set>\n                                           <Set name="trustStorePath"><Property name="jetty.truststore.path" default="truststore.jks" /></Set>\n                                           <Set name="trustStorePassword"><Property name="jetty.truststore.password" default="changeit" /></Set>\n                                           <Set name="needClientAuth">true</Set>\n                                       </New>\n                                   </Arg>\n                               </New>\n                           </Item>\n                           <Item>\n                               <New class="org.eclipse.jetty.server.HttpConnectionFactory">\n                                   <Arg name="config">\n                                       <New class="org.eclipse.jetty.server.HttpConfiguration">\n                                           <Set name="secureScheme">https</Set>\n                                           <Set name="securePort">8443</Set>\n                                           <Set name="outputBufferSize">32768</Set>\n                                           <Set name="requestHeaderSize">8192</Set>\n                                           <Set name="responseHeaderSize">8192</Set>\n                                           <Set name="sendServerVersion">true</Set>\n                                           <Set name="sendDateHeader">true</Set>\n                                           <Set name="headerCacheSize">512</Set>\n                                           <Set name="secureRequestCustomizer">\n                                               <New class="org.eclipse.jetty.server.SecureRequestCustomizer"/>\n                                           </Set>\n                                       </New>\n                                   </Arg>\n                               </New>\n                           </Item>\n                       </Array>\n                   </Arg>\n                   <Set name="port">8443</Set>\n               </New>\n           </Arg>\n       </Call>\n   </Configure>