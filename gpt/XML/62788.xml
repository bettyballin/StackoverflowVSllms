<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">\n    <xsl:output method="text" encoding="UTF-8"/>\n\n    <!-- Main template to match the root node -->\n    <xsl:template match="/">\n        <xsl:apply-templates/>\n    </xsl:template>\n\n    <!-- Template to match unordered list items -->\n    <xsl:template match="ul">\n        <xsl:apply-templates/>\n    </xsl:template>\n\n    <!-- Template to match list items and handle nesting level -->\n    <xsl:template match="li">\n        <xsl:param name="level" select="0"/>\n        <xsl:variable name="new-level" select="$level + 1"/>\n\n        <xsl:text>\n</xsl:text>\n        <xsl:for-each select="1 to $level">\n            <xsl:text>  </xsl:text> <!-- Two spaces per nesting level -->\n        </xsl:for-each>\n        <xsl:text>* </xsl:text>\n        <xsl:apply-templates select="node()[not(self::ul)]"/>\n        <xsl:text>\n</xsl:text>\n\n        <xsl:apply-templates select="ul/li">\n            <xsl:with-param name="level" select="$new-level"/>\n        </xsl:apply-templates>\n    </xsl:template>\n\n    <!-- Template to handle text nodes -->\n    <xsl:template match="text()">\n        <xsl:value-of select="normalize-space()"/>\n    </xsl:template>\n</xsl:stylesheet>