<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    <xsl:output method="html" indent="yes" />\n    \n    <xsl:key name="alphabetKey" match="database" use="substring(title_display, 1, 1)" />\n    \n    <xsl:template match="/">\n        <xsl:for-each select="databases/database[generate-id() = generate-id(key('alphabetKey', substring(title_display, 1, 1))[1])]">\n            <h2>\n                <xsl:value-of select="substring(title_display, 1, 1)" />\n            </h2>\n            <div class="{translate(substring(title_display, 1, 1), 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz')}-content">\n                <ul>\n                    <xsl:for-each select="key('alphabetKey', substring(title_display, 1, 1))">\n                        <li>\n                            <xsl:value-of select="title_display" />\n                        </li>\n                    </xsl:for-each>\n                </ul>\n            </div>\n        </xsl:for-each>\n    </xsl:template>\n</xsl:stylesheet>