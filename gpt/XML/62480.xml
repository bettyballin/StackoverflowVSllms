<hibernate-mapping>\n    <class name="com.example.Course" table="course">\n        <id name="id" column="cid">\n            <generator class="native"/>\n        </id>\n        <property name="name" column="name" type="string"/>\n        \n        <set name="tutorials" cascade="all-delete-orphan">\n            <key column="course_id"/>\n            <one-to-many class="com.example.Tutorial"/>\n        </set>\n        \n        <set name="applications" cascade="all-delete-orphan">\n            <key column="course_id"/>\n            <one-to-many class="com.example.Application"/>\n        </set>\n        \n    </class>\n</hibernate-mapping>