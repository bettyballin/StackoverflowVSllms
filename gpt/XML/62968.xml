<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="RemoveExtraSlashes" stopProcessing="true">\n          <match url="(.*)\/{2,}(.*)" />\n          <conditions>\n            <add input="{REQUEST_URI}" pattern=".*\/{2,}.*" />\n          </conditions>\n          <action type="Redirect" url="/{R:1}/{R:2}" redirectType="Permanent" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>