<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <rule name="HTTPS to HTTP routing" stopProcessing="true">\n                    <match url="^subdirectory/(.*)" />\n                    <conditions>\n                        <add input="{HTTPS}" pattern="on" ignoreCase="true" />\n                    </conditions>\n                    <action type="Rewrite" url="http://internal-server:port/{R:1}" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>