<project name="RunSQLScripts" default="run-sql-scripts" xmlns:ac="antlib:net.sf.antcontrib">\n    <!-- Define the ant-contrib tasks -->\n    <taskdef resource="net/sf/antcontrib/antlib.xml">\n        <classpath>\n            <pathelement location="path/to/ant-contrib.jar" />\n        </classpath>\n    </taskdef>\n\n    <target name="run-sql-scripts">\n        <!-- Define the directory containing SQL files -->\n        <property name="sql.dir" value="path/to/sql/files" />\n\n        <!-- List all SQL files in the directory -->\n        <ac:for list="${sql.dir}/*.sql" param="sqlfile">\n            <sequential>\n                <!-- Execute each SQL file using sqlplus -->\n                <exec executable="sqlplus">\n                    <arg value="${id}/${pw}@${db.instance}" />\n                    <arg value="@${sqlfile}" />\n                </exec>\n            </sequential>\n        </ac:for>\n    </target>\n</project>