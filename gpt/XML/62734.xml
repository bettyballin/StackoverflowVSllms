<configuration>\n    <system.webServer>\n        <rewrite>\n            <rules>\n                <!-- Rewrite to Version 1 Application -->\n                <rule name="Version1" stopProcessing="true">\n                    <match url="^folderinversion1/(.*)" />\n                    <conditions>\n                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />\n                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />\n                    </conditions>\n                    <action type="Rewrite" url="http://localhost:8080/folderinversion1/{R:1}" />\n                </rule>\n                \n                <!-- Default to Latest Version Application -->\n                <rule name="LatestVersion" stopProcessing="true">\n                    <match url="(.*)" />\n                    <conditions>\n                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />\n                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />\n                    </conditions>\n                    <action type="Rewrite" url="http://localhost:8081/{R:1}" />\n                </rule>\n            </rules>\n        </rewrite>\n    </system.webServer>\n</configuration>