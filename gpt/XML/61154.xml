<!-- Entity.hbm.xml -->\n<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">\n  <class name="YourNamespace.Entity" table="Entity">\n    <id name="EntityId" column="EntityId" />\n    <bag name="VarcharValues" inverse="true" cascade="all">\n      <key column="EntityId" />\n      <one-to-many class="YourNamespace.EntityVarchar" />\n    </bag>\n    <bag name="FloatValues" inverse="true" cascade="all">\n      <key column="EntityId" />\n      <one-to-many class="YourNamespace.EntityFloat" />\n    </bag>\n  </class>\n</hibernate-mapping>\n\n<!-- EntityVarchar.hbm.xml -->\n<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">\n  <class name="YourNamespace.EntityVarchar" table="EntityVarchar">\n    <id name="Id" column="Id" />\n    <many-to-one name="Entity" class="YourNamespace.Entity" column="EntityId" />\n    <property name="VarcharValue" column="VarcharValue" />\n  </class>\n</hibernate-mapping>\n\n<!-- EntityFloat.hbm.xml -->\n<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">\n  <class name="YourNamespace.EntityFloat" table="EntityFloat">\n    <id name="Id" column="Id" />\n    <many-to-one name="Entity" class="YourNamespace.Entity" column="EntityId" />\n    <property name="FloatValue" column="FloatValue" />\n  </class>\n</hibernate-mapping>