<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"\n    xmlns:ns="http://example.com/namespace"\n    exclude-result-prefixes="ns">\n\n    <!-- Identity template to copy elements by default -->\n    <xsl:template match="@*|node()">\n        <xsl:copy>\n            <xsl:apply-templates select="@*|node()"/>\n        </xsl:copy>\n    </xsl:template>\n\n    <!-- Rename Addresses under Business to BusinessAddresses -->\n    <xsl:template match="ns:Business/ns:Addresses">\n        <BusinessAddresses>\n            <xsl:apply-templates select="@*|node()"/>\n        </BusinessAddresses>\n    </xsl:template>\n\n    <!-- Rename Address under Business to BusinessAddress -->\n    <xsl:template match="ns:Business/ns:Addresses/ns:Address">\n        <BusinessAddress>\n            <xsl:apply-templates select="@*|node()"/>\n        </BusinessAddress>\n    </xsl:template>\n\n    <!-- Rename Addresses under Contact to ContactAddresses -->\n    <xsl:template match="ns:Contact/ns:Addresses">\n        <ContactAddresses>\n            <xsl:apply-templates select="@*|node()"/>\n        </ContactAddresses>\n    </xsl:template>\n\n    <!-- Rename Address under Contact to ContactAddress -->\n    <xsl:template match="ns:Contact/ns:Addresses/ns:Address">\n        <ContactAddress>\n            <xsl:apply-templates select="@*|node()"/>\n        </ContactAddress>\n    </xsl:template>\n\n</xsl:stylesheet>