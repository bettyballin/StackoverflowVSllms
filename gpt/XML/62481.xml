<project name="YourProject" default="build" basedir=".">\n\n    <!-- Set the target framework to .NET 2.0 -->\n    <property name="nant.settings.currentframework" value="net-2.0" />\n\n    <!-- Specify the path to the VB9 compiler -->\n    <property name="vbc.exe.path" value="C:\Program Files (x86)\Microsoft Visual Studio 9.0\VB\Bin\vbc.exe" />\n\n    <!-- Define the build target -->\n    <target name="build">\n        <vbc\n            srcdir="src"\n            destdir="bin"\n            target="library"\n            framework="net-2.0"\n            vbcpath="${vbc.exe.path}">\n            <sources>\n                <include name="**/*.vb" />\n            </sources>\n        </vbc>\n    </target>\n\n</project>