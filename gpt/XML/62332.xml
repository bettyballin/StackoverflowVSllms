<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n  <!-- Identity transform to copy all nodes and attributes by default -->\n  <xsl:template match="@*|node()">\n    <xsl:copy>\n      <xsl:apply-templates select="@*|node()"/>\n    </xsl:copy>\n  </xsl:template>\n\n  <!-- Template to match the root html element -->\n  <xsl:template match="html">\n    <xsl:copy>\n      <xsl:apply-templates select="@*|node()"/>\n    </xsl:copy>\n  </xsl:template>\n\n  <!-- Template to handle the first body element -->\n  <xsl:template match="body[1]">\n    <xsl:copy>\n      <xsl:apply-templates select="@*|node()"/>\n      <xsl:apply-templates select="following-sibling::body/node()"/>\n    </xsl:copy>\n  </xsl:template>\n\n  <!-- Template to ignore subsequent body elements -->\n  <xsl:template match="body[position() > 1]">\n    <!-- Do nothing, effectively removing the subsequent body tags -->\n  </xsl:template>\n\n</xsl:stylesheet>