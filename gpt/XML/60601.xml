<web-app>\n    <!-- Define your servlet -->\n    <servlet>\n        <servlet-name>name</servlet-name>\n        <servlet-class>com.example.YourServlet</servlet-class>\n    </servlet>\n\n    <!-- Map all requests to your servlet -->\n    <servlet-mapping>\n        <servlet-name>name</servlet-name>\n        <url-pattern>/*</url-pattern>\n    </servlet-mapping>\n\n    <!-- Additionally, map .jsp requests to your servlet -->\n    <servlet-mapping>\n        <servlet-name>name</servlet-name>\n        <url-pattern>*.jsp</url-pattern>\n    </servlet-mapping>\n</web-app>