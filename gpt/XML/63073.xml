<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">\n  <UsingTask TaskName="Exec" AssemblyFile="$(MSBuildBinPath)\Microsoft.Build.Tasks.Core.dll" />\n\n  <Target Name="ConvertHtmlToMht">\n    <!-- Path to wkhtmltopdf executable -->\n    <PropertyGroup>\n      <WkHtmlToPdfPath>C:\Program Files\wkhtmltopdf\bin\wkhtmltopdf.exe</WkHtmlToPdfPath>\n      <InputHtmlFile>path\to\your\input.html</InputHtmlFile>\n      <OutputMhtFile>path\to\your\output.mht</OutputMhtFile>\n    </PropertyGroup>\n\n    <!-- Execute the wkhtmltopdf command to convert HTML to MHT -->\n    <Exec Command="$(WkHtmlToPdfPath) --format mht $(InputHtmlFile) $(OutputMhtFile)" />\n  </Target>\n</Project>