<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n    <xsl:template match="/form">\n        <form id="myForm" action="submit.php" method="post">\n            <xsl:for-each select="field">\n                <label for="{@name}"><xsl:value-of select="@name"/>:</label>\n                <input type="{@type}" id="{@name}" name="{@name}" \n                       <xsl:if test="@required='true'">required</xsl:if> \n                       <xsl:if test="@minLength"><xsl:value-of select="concat('minlength=', @minLength)"/></xsl:if>\n                       <xsl:if test="@maxLength"><xsl:value-of select="concat('maxlength=', @maxLength)"/></xsl:if> />\n                <br/>\n            </xsl:for-each>\n            <input type="submit" value="Submit"/>\n        </form>\n    </xsl:template>\n</xsl:stylesheet>