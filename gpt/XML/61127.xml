<project name="YourProjectName" default="build-war" basedir=".">\n    <property name="src.dir" value="src"/>\n    <property name="build.dir" value="build"/>\n    <property name="dist.dir" value="dist"/>\n    <property name="war.name" value="YourProjectName.war"/>\n\n    <target name="clean">\n        <delete dir="${build.dir}"/>\n        <delete dir="${dist.dir}"/>\n    </target>\n\n    <target name="compile">\n        <mkdir dir="${build.dir}"/>\n        <javac srcdir="${src.dir}" destdir="${build.dir}"/>\n    </target>\n\n    <target name="build-war" depends="clean, compile">\n        <mkdir dir="${dist.dir}"/>\n        <war destfile="${dist.dir}/${war.name}" webxml="WebContent/WEB-INF/web.xml">\n            <fileset dir="WebContent"/>\n            <classes dir="${build.dir}"/>\n        </war>\n    </target>\n</project>