<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n  <xsl:key name="statusKey" match="item" use="status"/>\n\n  <xsl:template match="/root">\n    <root>\n      <xsl:for-each select="item[generate-id() = generate-id(key('statusKey', status)[1])]">\n        <items>\n          <status><xsl:value-of select="status"/></status>\n          <xsl:for-each select="key('statusKey', status)">\n            <name><xsl:value-of select="name"/></name>\n          </xsl:for-each>\n        </items>\n      </xsl:for-each>\n    </root>\n  </xsl:template>\n\n</xsl:stylesheet>