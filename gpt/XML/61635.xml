<?xml version="1.0" encoding="utf-8" ?>\n    <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"\n          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">\n\n      <targets>\n        <!-- File target to log to a file with rolling over based on size -->\n        <target xsi:type="File" name="fileTarget" fileName="logs/logfile.log"\n                archiveFileName="logs/archives/logfile.{#}.log" \n                archiveEvery="Day" \n                archiveNumbering="Rolling" \n                maxArchiveFiles="7" \n                layout="${longdate}|${level:uppercase=true}|${logger}|${message}" \n                archiveAboveSize="10485760" /> <!-- 10 MB -->\n      </targets>\n\n      <rules>\n        <!-- Log all messages with severity level of Info or higher to the file -->\n        <logger name="*" minlevel="Info" writeTo="fileTarget" />\n      </rules>\n    </nlog>