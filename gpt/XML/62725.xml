<rule name="AddUserHeaders" stopProcessing="true">\n     <match url=".*" />\n     <conditions>\n       <add input="{AUTH_USER}" pattern="(.+)" />\n     </conditions>\n     <action type="Rewrite" value="{R:0}" />\n     <serverVariables>\n       <set name="HTTP_X-Forwarded-User" value="{C:1}" />\n       <set name="HTTP_X-Forwarded-Roles" value="UserRole" /> <!-- Adjust as necessary -->\n     </serverVariables>\n   </rule>