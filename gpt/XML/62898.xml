<project name="MyRCPApp" default="build-setup" basedir=".">\n\n    <!-- Define properties -->\n    <property name="innosetup.compiler" value="C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe"/>\n    <property name="build.dir" value="build"/>\n    <property name="dist.dir" value="${build.dir}/dist"/>\n    <property name="setup.script" value="${dist.dir}/setup.iss"/>\n\n    <!-- Clean target -->\n    <target name="clean">\n        <delete dir="${build.dir}"/>\n    </target>\n\n    <!-- Compile and package the RCP application -->\n    <target name="compile">\n        <!-- Add your compilation steps here -->\n    </target>\n\n    <!-- Generate Inno Setup script -->\n    <target name="generate-setup-script" depends="compile">\n        <mkdir dir="${dist.dir}"/>\n        <echo file="${setup.script}">\n; Script generated by Ant\n[Setup]\nAppName=MyRCPApp\nAppVersion=1.0\nDefaultDirName={pf}\\MyRCPApp\nDefaultGroupName=MyRCPApp\nOutputDir={dist.dir}\nOutputBaseFilename=SetupMyRCPApp\n\n[Files]\nSource: "path\\to\\your\\application\\files\\*"; DestDir: "{app}"; Flags: ignoreversion\n        </echo>\n    </target>\n\n    <!-- Compile the Inno Setup script -->\n    <target name="compile-setup" depends="generate-setup-script">\n        <exec executable="${innosetup.compiler}">\n            <arg value="/cc"/>\n            <arg value="${setup.script}"/>\n        </exec>\n    </target>\n\n    <!-- Default target to build setup -->\n    <target name="build-setup" depends="clean, compile-setup"/>\n    \n</project>