<rewrite>\n  <rules>\n    <rule name="Force PNG Download" stopProcessing="true">\n      <match url="*.png" />\n      <conditions>\n        <add input="{REQUEST_METHOD}" pattern="GET" />\n      </conditions>\n      <action type="Rewrite" url="{R:0}" />\n      <headers>\n        <add name="Content-Disposition" value="attachment; filename=&quot;image.png&quot;" />\n      </headers>\n    </rule>\n  </rules>\n</rewrite>