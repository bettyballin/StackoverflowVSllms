<?xml version="1.0" encoding="UTF-8"?>\n<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"\n           targetNamespace="http://example.com"\n           xmlns:tns="http://example.com"\n           elementFormDefault="qualified">\n\n  <!-- Define the root element -->\n  <xs:element name="root">\n    <xs:complexType>\n      <xs:sequence>\n        <xs:element ref="tns:element" maxOccurs="unbounded"/>\n      </xs:sequence>\n    </xs:complexType>\n  </xs:element>\n\n  <!-- Define the element with conditional type -->\n  <xs:element name="element">\n    <xs:alternative test="@attribute='foo'" type="tns:fooType"/>\n    <xs:alternative test="@attribute='hello'" type="tns:helloType"/>\n  </xs:element>\n\n  <!-- Define the types for each alternative -->\n  <xs:complexType name="fooType">\n    <xs:sequence>\n      <xs:element name="bar"/>\n    </xs:sequence>\n  </xs:complexType>\n\n  <xs:complexType name="helloType">\n    <xs:sequence>\n      <xs:element name="world"/>\n    </xs:sequence>\n  </xs:complexType>\n</xs:schema>