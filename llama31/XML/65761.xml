<!-- In your web.config file, add the following configuration -->\n<system.webServer>\n  <tracing>\n    <traceFailedRequests>\n      <add path="*">\n        <traceAreas>\n          <add provider="ASPNET" areas="Infrastructure,Module,Page,AppServices" verbosity="Verbose" />\n        </traceAreas>\n        <failureDefinitions statusCodes="400-999" />\n      </add>\n    </traceFailedRequests>\n  </tracing>\n</system.webServer>