<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="Pretty URLs" stopProcessing="true">\n          <match url="^(.*)$" />\n          <conditions>\n            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />\n            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />\n          </conditions>\n          <action type="Rewrite" url="index.php?p={R:1}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>