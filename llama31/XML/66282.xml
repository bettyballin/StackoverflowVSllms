<?xml version="1.0" encoding="UTF-8"?>\n<project name="deployment" default="deploy">\n    <property name="svn.username" value="your_svn_username"/>\n    <property name="svn.password" value="your_svn_password"/>\n    <property name="svn.repository" value="https://your_svn_repository.com/repo/trunk"/>\n    <property name="deploy.dir" value="/path/to/deploy/dir"/>\n\n    <target name="deploy">\n        <svn>\n            <export\n                uri="${svn.repository}"\n                todir="${deploy.dir}"\n                username="${svn.username}"\n                password="${svn.password}"\n            />\n        </svn>\n        <echo msg="Deployed revision ${svn.revision} to ${deploy.dir}"/>\n    </target>\n</project>