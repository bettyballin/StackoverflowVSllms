<project name="My PHP Project" default="build" basedir=".">\n    <property name="src.dir" value="src"/>\n    <property name="build.dir" value="build"/>\n    <property name="dist.dir" value="dist"/>\n\n    <target name="clean">\n        <delete dir="${build.dir}"/>\n        <delete dir="${dist.dir}"/>\n    </target>\n\n    <target name="prepare">\n        <mkdir dir="${build.dir}"/>\n        <mkdir dir="${dist.dir}"/>\n    </target>\n\n    <target name="build" depends="prepare">\n        <copy todir="${build.dir}">\n            <fileset dir="${src.dir}">\n                <include name="**/*.php"/>\n            </fileset>\n        </copy>\n    </target>\n\n    <target name="dist" depends="build">\n        <zip zipfile="${dist.dir}/my-php-project.zip">\n            <fileset dir="${build.dir}">\n                <include name="**/*.php"/>\n            </fileset>\n        </zip>\n    </target>\n</project>