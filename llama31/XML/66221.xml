<filter>\n  <filter-name>RemoteAddrFilter</filter-name>\n  <filter-class>org.apache.catalina.filters.RemoteAddrFilter</filter-class>\n  <init-param>\n    <param-name>allow</param-name>\n    <param-value>127.0.0.1</param-value> <!-- allow requests from localhost -->\n  </init-param>\n  <init-param>\n    <param-name>deny</param-name>\n    <param-value>192.168.1.*</param-value> <!-- deny requests from 192.168.1.* network -->\n  </init-param>\n</filter>\n\n<filter-mapping>\n  <filter-name>RemoteAddrFilter</filter-name>\n  <url-pattern>/a/b/*</url-pattern>\n</filter-mapping>