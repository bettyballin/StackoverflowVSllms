<service name="MyService">\n    <!-- RESTful HTTP endpoint -->\n    <endpoint address="http://example.com/api"\n              binding="webHttpBinding"\n              contract="IMyService" />\n    <!-- TCP endpoint -->\n    <endpoint address="net.tcp://example.com:8080/api"\n              binding="netTcpBinding"\n              contract="IMyService" />\n    <!-- Named Pipe endpoint -->\n    <endpoint address="net.pipe://example.com/api"\n              binding="netNamedPipeBinding"\n              contract="IMyService" />\n</service>