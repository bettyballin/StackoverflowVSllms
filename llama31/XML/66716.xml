<!-- deploy.xml -->\n<project name="deploy" default="deploy">\n  <target name="deploy">\n    <!-- SSH task to execute a command on the remote server -->\n    <ssh username="username" password="password" host="example.com" command="ls -l" />\n    \n    <!-- SCP task to transfer a file from local to remote -->\n    <scp username="username" password="password" host="example.com" localfile="path/to/local/file" remotefile="path/to/remote/file" />\n  </target>\n</project>