<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n  <xsl:key name="files" match="Problem" use="File"/>\n\n  <xsl:template match="/">\n    <html>\n      <body>\n        <xsl:apply-templates select="//Problem[generate-id() = generate-id(key('files', File)[1])]"/>\n      </body>\n    </html>\n  </xsl:template>\n\n  <xsl:template match="Problem">\n    <h1><xsl:value-of select="File"/></h1>\n    <xsl:for-each select="key('files', File)">\n      <p><xsl:value-of select="Description"/></p>\n    </xsl:for-each>\n  </xsl:template>\n</xsl:stylesheet>