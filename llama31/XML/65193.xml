<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">\n  <PropertyGroup>\n    <DeployDir>$(RemoteServer)</DeployDir>\n  </PropertyGroup>\n  <ItemGroup>\n    <UpdatedFiles Include="$(ProjectDir)**\*.cshtml;$(ProjectDir)**\*.cs" />\n  </ItemGroup>\n  <Target Name="Deploy">\n    <AspNetCompiler\n      VirtualPath="/"\n      PhysicalPath="$(ProjectDir)"\n      TargetPath="$(DeployDir)"\n      Updateable="true"\n      Force="true"\n      Debug="false"\n    />\n    <Copy\n      SourceFiles="@(UpdatedFiles)"\n      DestinationFiles="@(UpdatedFiles->'$(DeployDir)\%(RecursiveDir)%(Filename)%(Extension)')"\n    />\n  </Target>\n</Project>