<target name="create-setup-package">\n  <!-- Generate the Inno Setup script file (.iss) -->\n  <echo file="setup.iss">\n    [Setup]\n    AppName=${project.name}\n    AppVersion=${project.version}\n    OutputDir=output\n    ...\n  </echo>\n\n  <!-- Compile the Inno Setup script file using iscc.exe -->\n  <exec dir="." executable="iscc.exe">\n    <arg value="/O"/>\n    <arg value="setup.iss"/>\n  </exec>\n</target>