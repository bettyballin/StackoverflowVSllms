<rewrite>\n    <rules>\n        <rule name="Redirect to www" stopProcessing="true">\n            <match url="(.*)" />\n            <conditions>\n                <add input="{HTTP_HOST}" pattern="^somesite\.com$" />\n            </conditions>\n            <action type="Redirect" url="https://www.somesite.com/{R:1}" />\n        </rule>\n    </rules>\n</rewrite>