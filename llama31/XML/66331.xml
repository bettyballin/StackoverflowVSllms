<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n  \n  <xsl:template match="/databases">\n    <xsl:apply-templates select="database" group-by="substring(title_display, 1, 1)"/>\n  </xsl:template>\n  \n  <xsl:template match="database" group-by="substring(title_display, 1, 1)">\n    <h2><xsl:value-of select="current-grouping-key()"/></h2>\n    <div class="{lower-case(current-grouping-key())}-content">\n      <ul>\n        <xsl:apply-templates select="current-group()" mode="item"/>\n      </ul>\n    </div>\n  </xsl:template>\n  \n  <xsl:template match="database" mode="item">\n    <li><xsl:value-of select="title_display"/></li>\n  </xsl:template>\n  \n</xsl:stylesheet>