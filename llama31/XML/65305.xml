<rewrite>\n    <rules>\n        <rule name="We're Not Open" stopProcessing="true">\n            <match url="(.*)" />\n            <conditions>\n                <add input="{HTTP_HOST}" matchType="Pattern" pattern="^yourwebsite.com$" />\n                <add input="{REMOTE_ADDR}" matchType="Pattern" negate="true" pattern="^client_IP_address$" />\n            </conditions>\n            <action type="Redirect" url="/not-open.html" />\n        </rule>\n    </rules>\n</rewrite>