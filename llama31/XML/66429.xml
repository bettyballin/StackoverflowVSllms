<rewrite>\n    <rules>\n        <rule name="Route to Application Server">\n            <match url="^subdirectory/(.*)" />\n            <conditions>\n                <add input="{HTTPS}" pattern="on" />\n            </conditions>\n            <action type="Rewrite" url="http://application-server:port/{R:1}" />\n            <serverVariables>\n                <set name="HTTP_X_ORIGINAL_SCHEME" value="https" />\n            </serverVariables>\n        </rule>\n    </rules>\n</rewrite>