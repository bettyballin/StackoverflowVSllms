<rewrite>\n  <rules>\n    <rule name="Add script tag" preCondition="IsHTML">\n      <match pattern="(.*)" />\n      <action type="Rewrite" value="{R:0}"></action>\n      <headers>\n        <add name="X-Script-Tag" value="&lt;script src='your-script.js'&gt;&lt;/script&gt;" />\n      </headers>\n    </rule>\n  </rules>\n  <preConditions>\n    <preCondition name="IsHTML">\n      <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html" />\n    </preCondition>\n  </preConditions>\n</rewrite>