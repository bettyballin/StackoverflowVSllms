// build.xml (Phing build file)\n<project name="My Project" default="build">\n  <target name="checkout">\n    <svncheckout repository="https://svn.example.com/myproject" />\n  </target>\n  <target name="install-db">\n    <sql src="install.sql" />\n  </target>\n  <target name="generate-config">\n    <template src="config.tpl" dest="config.php" />\n  </target>\n  <target name="run-tests">\n    <phpunit testdir="tests" />\n  </target>\n  <target name="generate-docs">\n    <phpdoc src="src" dest="docs" />\n  </target>\n  <target name="run-coverage">\n    <phpunit testdir="tests" coverage="true" />\n  </target>\n  <target name="build" depends="checkout, install-db, generate-config, run-tests, generate-docs, run-coverage" />\n</project>