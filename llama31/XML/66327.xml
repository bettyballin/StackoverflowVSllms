<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n  \n  <!-- Define the root element of the output document -->\n  <xsl:template match="/">\n    <collection>\n      <!-- Copy the customer elements from the first XML document -->\n      <xsl:copy-of select="document('customer.xml')/customer"/>\n      \n      <!-- Copy the purchase order elements from the second XML document -->\n      <xsl:copy-of select="document('purchase_order.xml')/purchase_order"/>\n      \n      <!-- Copy the line item elements from the third XML document -->\n      <xsl:copy-of select="document('line_item.xml')/line_item"/>\n    </collection>\n  </xsl:template>\n  \n</xsl:stylesheet>