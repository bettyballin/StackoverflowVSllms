<beans>\n  <!-- LDAP configuration -->\n  <bean id="ldap" class="com.example.LDAP">\n    <property name="url" value="ldap://ldap.example.com:389"/>\n    <property name="baseDN" value="dc=example,dc=com"/>\n    <property name="bindDN" value="cn=admin,dc=example,dc=com"/>\n    <property name="password" value="password"/>\n  </bean>\n\n  <!-- WSG configuration -->\n  <bean id="wsg" class="com.example.WSG">\n    <property name="ldap" ref="ldap"/>\n    <property name="crm" ref="crm"/>\n  </bean>\n\n  <!-- CRM configuration (optional) -->\n  <bean id="crm" class="com.example.CRM">\n    <property name="url" value="https://crm.example.com"/>\n    <property name="username" value="crmuser"/>\n    <property name="password" value="crmpassword"/>\n  </bean>\n</beans>