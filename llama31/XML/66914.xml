<rewrite>\n  <rules>\n    <rule name="RewriteHost" stopProcessing="true">\n      <match url="(.*)" />\n      <conditions>\n        <add input="{HTTP_HOST}" pattern="^abc\.xyz\.com$" />\n      </conditions>\n      <action type="Rewrite" url="http://xyz.com/sites/abc/{R:1}" />\n      <serverVariables>\n        <set name="HTTP_HOST" value="xyz.com" />\n      </serverVariables>\n    </rule>\n  </rules>\n</rewrite>