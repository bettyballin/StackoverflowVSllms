<?xml version="1.0" encoding="utf-8"?>\n<nlog>\n  <targets>\n    <target name="logfile" xsi:type="FileTarget">\n      <fileName>${basedir}/logs/myapp.log</fileName>\n      <archiveFileName>${basedir}/logs/myapp.{#}.log</archiveFileName>\n      <archiveAboveSize>10485760</archiveAboveSize> <!-- 10MB -->\n      <archiveNumbering>Sequence</archiveNumbering>\n      <maxArchiveFiles>10</maxArchiveFiles>\n      <layout xsi:type="JsonLayout">\n        <attribute name="timestamp" type="DateTime" layout="${longdate}" />\n        <attribute name="category" type="String" layout="${logger}" />\n        <attribute name="severity" type="String" layout="${level}" />\n        <attribute name="message" type="String" layout="${message}" />\n      </layout>\n    </target>\n  </targets>\n  <rules>\n    <logger name="*" minlevel="Info" writeTo="logfile" />\n  </rules>\n</nlog>