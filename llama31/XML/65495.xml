<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="Redirect to www" stopProcessing="true">\n          <match url=".*" />\n          <conditions>\n            <add input="{HTTP_HOST}" pattern="^mydomain\.com$" />\n          </conditions>\n          <action type="Redirect" url="https://www.mydomain.com/{R:0}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>