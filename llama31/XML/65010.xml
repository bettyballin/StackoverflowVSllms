<rewrite>\n    <rules>\n        <rule name="Reports Domain Redirect" stopProcessing="true">\n            <match url="^(.*)$" />\n            <conditions>\n                <add input="{HTTP_HOST}" pattern="^reportsdomain$" />\n            </conditions>\n            <action type="Redirect" url="http://maindomain/reports/{R:1}" />\n        </rule>\n    </rules>\n</rewrite>