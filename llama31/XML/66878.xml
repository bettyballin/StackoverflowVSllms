<!-- build.xml -->\n\n<project name="RCP Build" default="build" basedir=".">\n\n  <!-- Import the PDE build scripts -->\n  <import file="${eclipse.home}/plugins/org.eclipse.pde.build_${pde.version}/scripts/build.xml"/>\n\n  <!-- Define the build target -->\n  <target name="build">\n    <!-- Create the output directory -->\n    <mkdir dir="${outputDirectory}"/>\n\n    <!-- Build the feature -->\n    <antcall target="build-feature">\n      <param name="featureId" value="${featureId}"/>\n      <param name="buildType" value="${buildType}"/>\n    </antcall>\n\n    <!-- Create the JNLP file -->\n    <antcall target="create-jnlp">\n      <param name="jnlpFile" value="${jnlpFile}"/>\n      <param name="featureId" value="${featureId}"/>\n    </antcall>\n  </target>\n\n  <!-- Define the create-jnlp target -->\n  <target name="create-jnlp">\n    <!-- Create the JNLP file -->\n    <echo file="${jnlpFile}">\n      <![CDATA[\n      <?xml version="1.0" encoding="UTF-8"?>\n      <jnlp spec="1.0+">\n        <information>\n          <title>RCP Application</title>\n          <vendor>Example</vendor>\n        </information>\n        <resources>\n          <jar href="rcp.jar" main="true"/>\n        </resources>\n        <application-desc main-class="com.example.rcp.Application"/>\n      </jnlp>\n      ]]>\n    </echo>\n  </target>\n</project>