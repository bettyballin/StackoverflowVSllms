<configuration>\n  <system.webServer>\n    <rewrite>\n      <rules>\n        <rule name="Internal Portal" stopProcessing="true">\n          <match url="(.*)" />\n          <conditions>\n            <add input="{HTTP_HOST}" pattern="^internalportal$" />\n            <add input="{REMOTE_ADDR}" pattern="^10\.\d{1,3}\.\d{1,3}\.\d{1,3}$" />\n          </conditions>\n          <action type="Rewrite" url="http://internalportal/{R:1}" />\n        </rule>\n      </rules>\n    </rewrite>\n  </system.webServer>\n</configuration>