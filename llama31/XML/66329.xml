<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0"\n  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n  <!-- Define a function to convert meters to micrometers -->\n  <xsl:function name="convert-to-um">\n    <xsl:param name="value"/>\n    <xsl:value-of select="$value * 1000000"/>\n  </xsl:function>\n\n  <!-- Define a function to convert Newtons to millinewtons -->\n  <xsl:function name="convert-to-mN">\n    <xsl:param name="value"/>\n    <xsl:value-of select="$value * 1000"/>\n  </xsl:function>\n\n  <!-- Template to process the XML document -->\n  <xsl:template match="/">\n    <html>\n      <body>\n        <!-- Extract the value from the XML document and convert it -->\n        <xsl:value-of select="convert-to-um(/root/value[@unit='m'])"/> um\n        <xsl:value-of select="convert-to-mN(/root/value[@unit='N'])"/> mN\n      </body>\n    </html>\n  </xsl:template>\n</xsl:stylesheet>