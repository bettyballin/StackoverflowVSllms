<?xml version="1.0" encoding="UTF-8"?>\n<xsl:stylesheet version="1.0" \n  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">\n\n  <!-- Define the colors to use -->\n  <xsl:variable name="color1">#FFFFFF</xsl:variable>\n  <xsl:variable name="color2">#CCCCCC</xsl:variable>\n\n  <!-- Match the itemlist element -->\n  <xsl:template match="itemlist">\n    <table>\n      <xsl:apply-templates select="item"/>\n    </table>\n  </xsl:template>\n\n  <!-- Match each item element -->\n  <xsl:template match="item">\n    <xsl:variable name="group" select="@group"/>\n    <xsl:variable name="color">\n      <xsl:choose>\n        <xsl:when test="$group mod 2 = 0">\n          <xsl:value-of select="$color1"/>\n        </xsl:when>\n        <xsl:otherwise>\n          <xsl:value-of select="$color2"/>\n        </xsl:otherwise>\n      </xsl:choose>\n    </xsl:variable>\n    <tr style="background-color: {$color}">\n      <td><xsl:value-of select="."/></td>\n    </tr>\n  </xsl:template>\n\n</xsl:stylesheet>