<?xml version="1.0" encoding="UTF-8"?>\n<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"\n           targetNamespace="http://example.com/boats"\n           xmlns:tns="http://example.com/boats"\n           elementFormDefault="qualified">\n\n  <xs:element name="boat">\n    <xs:complexType>\n      <xs:sequence>\n        <xs:element name="type" type="tns:boatType"/>\n        <xs:element name="foot" type="xs:int"/>\n      </xs:sequence>\n    </xs:complexType>\n  </xs:element>\n\n  <xs:simpleType name="boatType">\n    <xs:restriction base="xs:string">\n      <xs:pattern value="shark|yatch|.*"/>\n    </xs:restriction>\n  </xs:simpleType>\n\n  <xs:alternative test="@type='shark'">\n    <xs:assertion test="@foot >= 15 and @foot <= 30"/>\n  </xs:alternative>\n\n  <xs:alternative test="@type='yatch'">\n    <xs:assertion test="@foot >= 30 and @foot <= 60"/>\n  </xs:alternative>\n\n</xs:schema>