Imports System.Data.SqlClient\n\n' Create a connection string\nDim connectionString As String = "Server=myServer;Database=myDatabase;User Id=myUser;Password=myPassword;"\n\n' Create a SqlConnection object\nUsing connection As New SqlConnection(connectionString)\n    connection.Open()\n\n    ' Create a SqlCommand object to update data\n    Dim updateCommand As New SqlCommand("UPDATE myTable SET myColumn = @myValue WHERE myId = @myId", connection)\n    updateCommand.Parameters.AddWithValue("@myValue", "New Value")\n    updateCommand.Parameters.AddWithValue("@myId", 1)\n\n    ' Execute the update command\n    updateCommand.ExecuteNonQuery()\n\n    ' Create a SqlCommand object to insert data\n    Dim insertCommand As New SqlCommand("INSERT INTO myTable (myColumn) VALUES (@myValue)", connection)\n    insertCommand.Parameters.AddWithValue("@myValue", "New Value")\n\n    ' Execute the insert command\n    insertCommand.ExecuteNonQuery()\nEnd Using