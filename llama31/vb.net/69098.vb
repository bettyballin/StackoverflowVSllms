Imports SlimDX\nImports SlimDX.Direct3D9\n\n' Create a new DirectX 9 device\nDim device As New Device(Direct3D.CreateDevice(DriverType.Hardware, DeviceCreationFlags.None))\n\n' Load the 3D model\nDim model As Mesh = Mesh.FromFile("path/to/model.obj", Device)\n\n' Set up the render loop\nWhile True\n    ' Clear the screen\n    device.Clear(ClearFlags.Target Or ClearFlags.ZBuffer, Color.CornflowerBlue, 1.0F, 0)\n\n    ' Render the model\n    device.BeginScene()\n    device.RenderState.CullMode = CullMode.None\n    device.RenderState.Lighting = False\n    device.SetFVF(Mesh.VertexFormat)\n    device.DrawMesh(model)\n    device.EndScene()\n\n    ' Present the rendered frame\n    device.Present()\nEnd While