Imports System.Runtime.Caching\n\nPublic Class UserDataCache\n    ' ...\n\n    Public Sub New()\n        cache = MemoryCache.Default\n        ' set up a timer to periodically save the data\n        Dim timer As New Timer(10000) ' 10 minutes\n        AddHandler timer.Elapsed, AddressOf SaveData\n        timer.Start()\n    End Sub\n\n    Private Sub SaveData(sender As Object, e As ElapsedEventArgs)\n        ' save the data to the database or a file\n        For Each item As KeyValuePair(Of String, Object) In cache\n            If item.Key.StartsWith("UserData_") Then\n                Dim userId As String = item.Key.Substring(9)\n                Dim userData As Object = item.Value\n                SaveUserDataToDatabase(userId, userData)\n            End If\n        Next\n    End Sub\nEnd Class