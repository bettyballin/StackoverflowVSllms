Public Function RelativeTime(dt As DateTime) As String\n    Dim ts As TimeSpan = DateTime.Now - dt\n    If ts.TotalMinutes < 1 Then\n        Return "just now"\n    ElseIf ts.TotalMinutes < 60 Then\n        Return $"{ts.Minutes} minute{(If(ts.Minutes > 1, "s", ""))} ago"\n    ElseIf ts.TotalHours < 24 Then\n        Return $"{ts.Hours} hour{(If(ts.Hours > 1, "s", ""))} ago"\n    ElseIf ts.TotalDays < 30 Then\n        Return $"{ts.Days} day{(If(ts.Days > 1, "s", ""))} ago"\n    ElseIf ts.TotalDays < 365 Then\n        Return $"{ts.Days \ 30} month{(If(ts.Days \ 30 > 1, "s", ""))} ago"\n    Else\n        Return $"{ts.Days \ 365} year{(If(ts.Days \ 365 > 1, "s", ""))} ago"\n    End If\nEnd Functio