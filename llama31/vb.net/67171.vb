Imports System.Web.UI.WebControls\n\n' Assume you have a form with several input fields and a ValidationSummary control\nProtected Sub Page_Load(ByVal sender As Object, ByVal e As EventArgs)\n    ' Initialize the ValidationSummary control\n    ValidationSummary1.HeaderText = "Please correct the following errors:"\nEnd Sub\n\n' Example validation event handler for a TextBox control\nProtected Sub TextBox1_TextChanged(ByVal sender As Object, ByVal e As EventArgs)\n    If TextBox1.Text.Length = 0 Then\n        TextBox1.IsValid = False\n        ValidationSummary1.Controls.Add(New LiteralControl("First name is required"))\n    Else\n        TextBox1.IsValid = True\n    End If\nEnd Sub