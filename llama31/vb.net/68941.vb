Imports System.Drawing\nImports System.Drawing.Imaging\n\nPublic Function GetExifProperties(filePath As String) As Dictionary(Of String, String)\n    Dim img As Image = Image.FromFile(filePath)\n    Dim propItems As PropertyItem() = img.PropertyItems\n\n    Dim exifProps As New Dictionary(Of String, String)\n\n    For Each propItem As PropertyItem In propItems\n        Select Case propItem.Id\n            Case &H9003 ' Date Picture Taken\n                exifProps.Add("Date Picture Taken", BitConverter.ToString(propItem.Value))\n            Case &H9201 ' Shutter Speed\n                exifProps.Add("Shutter Speed", BitConverter.ToString(propItem.Value))\n            Case &H927C ' Camera Model\n                exifProps.Add("Camera Model", BitConverter.ToString(propItem.Value))\n            ' Add more cases for other EXIF properties you're interested in\n        End Select\n    Next\n\n    Return exifProps\nEnd Functio