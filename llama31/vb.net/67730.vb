Sub GenerateQuery()\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n    Dim fld As DAO.Field\n    Dim sql As String\n    \n    Set db = CurrentDb()\n    Set rs = db.OpenRecordset("YourTable")\n    \n    sql = ""\n    \n    For Each fld In rs.Fields\n        If Left(fld.Name, 6) = "attrib" Then\n            sql = sql & "SELECT '" & fld.Name & "' AS Attribute, SUM(" & fld.Name & ") AS Count FROM YourTable UNION ALL "\n        End If\n    Next fld\n    \n    sql = Left(sql, Len(sql) - 11) ' remove the last " UNION ALL "\n    \n    sql = sql & " ORDER BY Count DESC"\n    \n    Debug.Print sql\n    \n    Set rs = Nothing\n    Set db = Nothing\nEnd Sub