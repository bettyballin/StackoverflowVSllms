Imports System.Windows.Forms\n\nPublic Class WizardControl\n    Inherits Panel\n\n    Private _steps As New List(Of WizardStep)\n    Private _currentStep As Integer\n\n    Public Sub New()\n        Dock = DockStyle.Fill\n        BackColor = SystemColors.Control\n    End Sub\n\n    Public Sub AddStep(step As WizardStep)\n        _steps.Add(step)\n    End Sub\n\n    Public Sub NextStep()\n        If _currentStep < _steps.Count - 1 Then\n            _currentStep += 1\n            Refresh()\n        End If\n    End Sub\n\n    Public Sub PreviousStep()\n        If _currentStep > 0 Then\n            _currentStep -= 1\n            Refresh()\n        End If\n    End Sub\n\n    Protected Overrides Sub OnPaint(e As PaintEventArgs)\n        MyBase.OnPaint(e)\n\n        If _steps.Count > 0 Then\n            Dim currentStep = _steps(_currentStep)\n            e.Graphics.DrawString(currentStep.Title, Font, Brushes.Black, 10, 10)\n            currentStep.DrawStep(e.Graphics, 10, 30)\n        End If\n    End Sub\nEnd Class\n\nPublic Class WizardStep\n    Public Property Title As String\n    Public Property Description As String\n\n    Public Sub DrawStep(g As Graphics, x As Integer, y As Integer)\n        ' Draw your step's content here\n        g.DrawString(Description, New Font("Arial", 12), Brushes.Black, x, y)\n    End Sub\nEnd Class