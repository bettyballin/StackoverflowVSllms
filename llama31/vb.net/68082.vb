Sub UnionCSVFiles()\n    Dim folderPath As String\n    Dim csvFile As String\n    Dim targetWorksheet As Worksheet\n    Dim sourceWorkbook As Workbook\n    Dim sourceWorksheet As Worksheet\n    Dim lastRow As Long\n    \n    ' Set the folder path containing CSV files\n    folderPath = "C:\Path\To\CSV\Files\"\n    \n    ' Set the target worksheet where data will be merged\n    Set targetWorksheet = ThisWorkbook.Worksheets("TargetSheet")\n    \n    ' Clear the target worksheet\n    targetWorksheet.Cells.ClearContents\n    \n    ' Loop through each CSV file in the folder\n    csvFile = Dir(folderPath & "*.csv")\n    While csvFile <> ""\n        ' Open the CSV file\n        Set sourceWorkbook = Workbooks.Open(folderPath & csvFile)\n        Set sourceWorksheet = sourceWorkbook.Worksheets(1)\n        \n        ' Copy data from the CSV file to the target worksheet\n        lastRow = targetWorksheet.Cells(targetWorksheet.Rows.Count, 1).End(xlUp).Row + 1\n        sourceWorksheet.UsedRange.Copy targetWorksheet.Cells(lastRow, 1)\n        \n        ' Close the CSV file\n        sourceWorkbook.Close False\n        \n        ' Move to the next CSV file\n        csvFile = Dir\n    Wend\nEnd Sub