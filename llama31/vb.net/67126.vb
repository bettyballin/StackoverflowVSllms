Protected Sub DataGrid1_ItemDataBound(sender As Object, e As DataGridItemEventArgs)\n    If e.Item.ItemType = ListItemType.Footer Then\n        Dim dataTable As DataTable = CType(DataGrid1.DataSource, DataTable)\n        Dim sum As Integer = CType(dataTable.Compute("Sum(ColumnName)", ""), Integer)\n        Dim average As Double = CType(dataTable.Compute("Avg(ColumnName)", ""), Double)\n        e.Item.Cells(2).Text = "Sum: " & sum.ToString() & ", Average: " & average.ToString()\n    End If\nEnd Sub