Imports System.ServiceProcess\n\nModule MyServiceInstaller\n    Sub Main()\n        Dim args() As String = Environment.GetCommandLineArgs()\n        If args.Length > 1 Then\n            Dim serviceName As String = "MyService"\n            Dim serviceInstaller As New ServiceInstaller()\n            serviceInstaller.ServiceName = serviceName\n            serviceInstaller.DisplayName = serviceName\n            serviceInstaller.Description = "My Service"\n\n            If args(1).ToLower() = "/i" Then\n                serviceInstaller.Install(New Hashtable())\n                Console.WriteLine("Service installed successfully.")\n            ElseIf args(1).ToLower() = "/u" Then\n                serviceInstaller.Uninstall(New Hashtable())\n                Console.WriteLine("Service uninstalled successfully.")\n            Else\n                Console.WriteLine("Invalid command-line argument.")\n            End If\n        Else\n            Console.WriteLine("Usage: MyServiceInstaller /i or /u")\n        End If\n    End Sub\nEnd Module