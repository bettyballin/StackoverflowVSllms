' Create an ADODB connection object\nDim conn\nSet conn = Server.CreateObject("ADODB.Connection")\nconn.Open "DRIVER={Microsoft Access Driver (*.mdb)};DBQ=" & Server.MapPath("your_database.mdb")\n\n' Create an ADODB command object\nDim cmd\nSet cmd = Server.CreateObject("ADODB.Command")\ncmd.ActiveConnection = conn\n\n' Define your query with parameters\ncmd.CommandText = "SELECT * FROM your_table WHERE id = ?"\ncmd.Parameters.Append cmd.CreateParameter("@id", adInteger, adParamInput, 4, Request.QueryString("id"))\n\n' Execute the query\nDim rs\nSet rs = cmd.Execute\n\n' Clean up\nSet rs = Nothing\nSet cmd = Nothing\nconn.Close\nSet conn = Nothing