Imports System.Windows.Forms\n\nPublic Class CountdownTimer\n    Private _startTime As DateTime\n    Private _endTime As DateTime\n    Private _timer As Timer\n    Private _textBox As TextBox\n\n    Public Sub New(textBox As TextBox)\n        _textBox = textBox\n        _timer = New Timer()\n        _timer.Interval = 1000 ' tick every second\n        _timer.Enabled = True\n        AddHandler _timer.Tick, AddressOf Timer_Tick\n\n        ' Set the countdown time to 4 minutes\n        _endTime = DateTime.Now.AddMinutes(4)\n    End Sub\n\n    Private Sub Timer_Tick(sender As Object, e As EventArgs)\n        Dim remainingTime As TimeSpan = _endTime - DateTime.Now\n        If remainingTime <= TimeSpan.Zero Then\n            _timer.Stop()\n            _textBox.Text = "00:00:00"\n        Else\n            _textBox.Text = String.Format("{0:hh:mm:ss}", remainingTime)\n        End If\n    End Sub\nEnd Class