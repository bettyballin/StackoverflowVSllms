Imports Microsoft.Win32\n\nModule Module1\n    Sub Main()\n        ' Define the file extension and the new icon path\n        Dim extension As String = ".txt"\n        Dim newIconPath As String = "C:\Path\To\New\Icon.ico"\n\n        ' Open the registry key for the file extension\n        Using regKey As RegistryKey = Registry.ClassesRoot.OpenSubKey(extension, True)\n            If regKey IsNot Nothing Then\n                ' Set the new icon path\n                regKey.SetValue("", newIconPath, RegistryValueKind.String)\n                regKey.Close()\n            End If\n        End Using\n\n        ' Refresh the icon cache\n        SHChangeNotify(0x08000000, 0x1000, IntPtr.Zero, IntPtr.Zero)\n    End Sub\n\n    <DllImport("shell32.dll")>\n    Private Sub SHChangeNotify(hwnd As IntPtr, wEventId As Integer, uFlags As Integer, dwItem1 As IntPtr, dwItem2 As IntPtr)\n    End Sub\nEnd Module