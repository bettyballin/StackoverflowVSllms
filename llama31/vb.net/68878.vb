Module PublicationExtensions\n    <Extension()>\n    Public Function FindOrCreate(ByVal publications As IQueryable(Of publication), ByVal name As String) As publication\n        Dim existingPub = publications.FirstOrDefault(Function(s) s.name = name)\n        If existingPub IsNot Nothing Then\n            Return existingPub\n        Else\n            Dim newPub = New publication With {.name = name}\n            ' Add the new publication to the database context\n            _Data.publications.Add(newPub)\n            Return newPub\n        End If\n    End Function\nEnd Module