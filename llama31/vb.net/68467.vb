Imports System.Windows.Forms\n\nPublic Class NodeEditor\n    Private WithEvents textBox As TextBox\n    Private node As TreeNode\n\n    Public Sub New(node As TreeNode)\n        Me.node = node\n        textBox = New TextBox With {\n            .Multiline = True,\n            .ScrollBars = ScrollBars.Both,\n            .Text = node.Text\n        }\n        Dim form As New Form With {\n            .FormBorderStyle = FormBorderStyle.FixedToolWindow,\n            .ShowInTaskbar = False,\n            .Text = "Edit Node"\n        }\n        form.Controls.Add(textBox)\n        form.ShowDialog()\n    End Sub\n\n    Private Sub TextBox_KeyDown(sender As Object, e As KeyEventArgs) Handles textBox.KeyDown\n        If e.KeyCode = Keys.Enter Then\n            node.Text = textBox.Text\n            e.Handled = True\n        ElseIf e.KeyCode = Keys.Escape Then\n            e.Handled = True\n        End If\n    End Sub\n\n    Private Sub TextBox_LostFocus(sender As Object, e As EventArgs) Handles textBox.LostFocus\n        node.Text = textBox.Text\n    End Sub\nEnd Class