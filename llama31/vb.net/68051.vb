Protected Sub GridView1_RowDataBound(sender As Object, e As GridViewRowEventArgs) Handles GridView1.RowDataBound\n    If e.Row.RowState = DataControlRowState.Edit Then\n        ' Find the TextBox for application name\n        Dim txtName As TextBox = DirectCast(e.Row.FindControl("txtName"), TextBox)\n        txtName.ValidationGroup = "grd"\n\n        ' Create a RequiredFieldValidator for application name\n        Dim reqval As New RequiredFieldValidator\n        reqval.ID = "reqName"\n        reqval.ValidationGroup = "grd"\n        reqval.ErrorMessage = "Application Name Cannot Be Empty"\n        reqval.ControlToValidate = txtName.ID\n\n        ' Add the validator to the GridView\n        e.Row.Cells(0).Controls.Add(reqval)\n    End If\nEnd Sub