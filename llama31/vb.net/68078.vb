Sub AppendHtmlFiles()\n    Dim ws As Worksheet\n    Dim htmlFiles() As String\n    Dim i As Long\n    Dim htmlContent As String\n    Dim targetFile As String\n    \n    ' Set the target file path and name\n    targetFile = "C:\Path\To\Output.Html"\n    \n    ' Initialize the HTML files array\n    ReDim htmlFiles(1 To ThisWorkbook.Worksheets.Count)\n    \n    ' Loop through each worksheet and export to HTML\n    For i = 1 To ThisWorkbook.Worksheets.Count\n        Set ws = ThisWorkbook.Worksheets(i)\n        htmlFiles(i) = "C:\Path\To\" & ws.Name & ".html"\n        ws.SaveAs htmlFiles(i), xlHtml\n    Next i\n    \n    ' Initialize the HTML content\n    htmlContent = ""\n    \n    ' Loop through each HTML file and append the content\n    For i = 1 To UBound(htmlFiles)\n        Dim xmlHttp As Object\n        Set xmlHttp = CreateObject("MSXML2.XMLHTTP")\n        xmlHttp.Open "GET", htmlFiles(i), False\n        xmlHttp.Send\n        htmlContent = htmlContent & xmlHttp.responseText\n        Set xmlHttp = Nothing\n    Next i\n    \n    ' Write the final HTML content to the target file\n    Dim fso As Object\n    Set fso = CreateObject("Scripting.FileSystemObject")\n    Dim fileObject As Object\n    Set fileObject = fso.CreateTextFile(targetFile, True)\n    fileObject.WriteLine htmlContent\n    fileObject.Close\n    \n    ' Clean up\n    Set fileObject = Nothing\n    Set fso = Nothing\nEnd Sub