Public Class LimitedList(Of T)\n    Inherits List(Of T)\n\n    Private _maxSize As Integer\n\n    Public Sub New(maxSize As Integer)\n        _maxSize = maxSize\n    End Sub\n\n    Public Overrides Sub Add(item As T)\n        If Count < _maxSize Then\n            MyBase.Add(item)\n        Else\n            Throw New InvalidOperationException("List is full")\n        End If\n    End Sub\n\n    Public Overrides Sub AddRange(collection As IEnumerable(Of T))\n        If Count + collection.Count() <= _maxSize Then\n            MyBase.AddRange(collection)\n        Else\n            Throw New InvalidOperationException("List is full")\n        End If\n    End Sub\nEnd Class