Imports System.IO\nImports System.Runtime.Serialization.Formatters.Binary\nImports System.Xml.Serialization\n\nPublic Class MyClass\n    Public Property MyProperty As Integer\n        Get\n            Return New Random().Next()\n        End Get\n        Set(value As Integer)\n            ' setter logic\n        End Set\n    End Property\n\n    Public myField As Integer\nEnd Class\n\nModule Module1\n    Sub Main()\n        Dim obj As New MyClass()\n\n        ' BinaryFormatter\n        Using stream As New MemoryStream()\n            Dim formatter As New BinaryFormatter()\n            formatter.Serialize(stream, obj)\n            stream.Position = 0\n            Dim deserializedObj As MyClass = formatter.Deserialize(stream)\n            Console.WriteLine(deserializedObj.myField) ' prints 0\n        End Using\n\n        ' XmlSerializer\n        Dim serializer As New XmlSerializer(GetType(MyClass))\n        Using writer As New StringWriter()\n            serializer.Serialize(writer, obj)\n            Dim xml As String = writer.ToString()\n            Console.WriteLine(xml) ' does not include MyProperty\n        End Using\n    End Sub\nEnd Module