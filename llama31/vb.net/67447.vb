Imports System.Xml\n\nPublic Class MyDialog\n    Private Sub MyDialog_FormClosing(sender As Object, e As FormClosingEventArgs) Handles Me.FormClosing\n        Dim xmlDoc As New XmlDocument()\n        xmlDoc.Load("size.xml")\n\n        If xmlDoc.SelectSingleNode("size") Is Nothing Then\n            xmlDoc.AppendChild(xmlDoc.CreateElement("size"))\n        End If\n\n        xmlDoc.SelectSingleNode("size").InnerText = Me.Size.Width.ToString() + "," + Me.Size.Height.ToString()\n        xmlDoc.Save("size.xml")\n    End Sub\n\n    Private Sub MyDialog_Load(sender As Object, e As EventArgs) Handles Me.Load\n        If File.Exists("size.xml") Then\n            Dim xmlDoc As New XmlDocument()\n            xmlDoc.Load("size.xml")\n\n            Dim sizeNode As XmlNode = xmlDoc.SelectSingleNode("size")\n            If sizeNode IsNot Nothing Then\n                Dim size As String() = sizeNode.InnerText.Split(",")\n                If size.Length = 2 Then\n                    Me.Size = New Size(Integer.Parse(size(0)), Integer.Parse(size(1)))\n                End If\n            End If\n        End If\n    End Sub\nEnd Class