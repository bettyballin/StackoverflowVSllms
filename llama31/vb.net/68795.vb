Dim xlApp As New Excel.Application()\nDim xlWorkbook As Excel.Workbook = xlApp.Workbooks.Open("your_workbook_path")\n\nDim chartTemplate As Excel.Worksheet = xlWorkbook.Worksheets("Chart_Template")\nDim dataTemplate As Excel.Worksheet = xlWorkbook.Worksheets("Data_Template")\n\nFor Each person As String In yourPersonList\n    ' Copy chart template\n    Dim newChart As Excel.Worksheet = chartTemplate.Copy(Before:=xlWorkbook.Worksheets(1))\n    newChart.Name = person & " - Chart"\n    \n    ' Copy data template\n    Dim newData As Excel.Worksheet = dataTemplate.Copy(Before:=newChart)\n    newData.Name = person & " - Data"\n    \n    ' Update chart data source\n    Dim chart As Excel.Chart = newChart.ChartObjects(1).Chart\n    chart.SetSourceData Source:=newData.Range("your_data_range")\nNext\n\nxlWorkbook.Save()\nxlWorkbook.Close()\nxlApp.Quit()