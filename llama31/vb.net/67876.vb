Private Sub btnExportAndSend_Click()\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n    Dim fso As Object\n    Dim txtFile As Object\n    Dim olApp As Object\n    Dim olMail As Object\n    \n    Set db = CurrentDb()\n    Set rs = db.OpenRecordset("YourTable", dbOpenDynaset)\n    Set fso = CreateObject("Scripting.FileSystemObject")\n    Set txtFile = fso.CreateTextFile("C:\Path\To\ExportedFile.txt", True)\n    \n    ' Export the record to the text file\n    txtFile.WriteLine rs.Fields("Field1").Value & "," & rs.Fields("Field2").Value & "," & ...\n    txtFile.Close\n    \n    ' Send the text file to Outlook\n    Set olApp = CreateObject("Outlook.Application")\n    Set olMail = olApp.CreateItem(0)\n    olMail.To = "recipient@example.com"\n    olMail.Subject = "Exported Record"\n    olMail.Body = "Please find the exported record attached."\n    olMail.Attachments.Add "C:\Path\To\ExportedFile.txt"\n    olMail.Send\n    \n    ' Clean up\n    Set olMail = Nothing\n    Set olApp = Nothing\n    Set txtFile = Nothing\n    Set fso = Nothing\n    rs.Close\n    Set rs = Nothing\n    Set db = Nothing\nEnd Sub