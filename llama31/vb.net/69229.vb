Imports System.Net.Mail\n\nPublic Sub SendEmailFromYahoo()\n    Dim smtpClient As New SmtpClient("smtp.mail.yahoo.com")\n    smtpClient.Port = 587\n    smtpClient.EnableSsl = True\n    smtpClient.Credentials = New System.Net.NetworkCredential("your_yahoo_email_id", "your_yahoo_password")\n\n    Dim mailMessage As New MailMessage("your_yahoo_email_id", "recipient_email_id", "Subject", "Body")\n    smtpClient.Send(mailMessage)\nEnd Sub