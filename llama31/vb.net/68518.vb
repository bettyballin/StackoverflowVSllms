Dim objStream, objBase64, chunk, base64String\n\n' Create a stream object to read the file\nSet objStream = CreateObject("ADODB.Stream")\nobjStream.Open\nobjStream.Type = 1 ' adTypeBinary\n\n' Open the file\nobjStream.LoadFromFile "path/to/your/file.bin"\n\n' Create a Base64 converter object\nSet objBase64 = CreateObject("Midori.Base64")\n\n' Initialize the Base64 string\nbase64String = ""\n\n' Read the file in chunks (e.g., 32KB)\nWhile Not objStream.EOS\n  chunk = objStream.Read(32768)\n  base64String = base64String & objBase64.Encode(chunk)\nWend\n\n' Close the stream and release objects\nobjStream.Close\nSet objStream = Nothing\nSet objBase64 = Nothing\n\n' Use the base64String variable as needed