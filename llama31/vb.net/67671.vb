Sub HighlightVBNETKeywords()\n    Dim keywordArray() As String\n    keywordArray = Split("Dim,As,Integer,String,If,Then,Else,End,Class,Module,Sub,Function", ",")\n    \n    For Each keyword In keywordArray\n        With ActiveDocument.Content.Find\n            .ClearFormatting\n            .Text = keyword\n            .MatchWholeWord = True\n            .MatchCase = True\n            .Format = False\n            .Forward = True\n            .Wrap = wdFindStop\n            While .Execute\n                .Parent.Paragraphs(1).Range.Style = "VB.NET Keyword"\n            Wend\n        End With\n    Next keyword\nEnd Sub