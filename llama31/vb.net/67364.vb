Private Sub InsertDataIntoMySQLDatabase(data As String)\n    For i As Integer = 0 To 2 ' Retry up to 3 times\n        Try\n            Using connection As New MySqlConnection(mysqlConnString)\n                connection.Open()\n                Dim command As New MySqlCommand("INSERT INTO yourtable (column1) VALUES (@data)", connection)\n                command.Parameters.AddWithValue("@data", data)\n                command.ExecuteNonQuery()\n                Exit For ' Success, exit loop\n            End Using\n        Catch ex As MySqlException\n            If ex.Number = 1213 Then ' Deadlock error code\n                Thread.Sleep(500) ' Wait and retry\n            Else\n                Throw ' Rethrow if not a deadlock\n            End If\n        End Try\n    Next\nEnd Sub