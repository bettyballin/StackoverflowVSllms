Private Sub cmdSubmit_Click()\n    Dim rs As Recordset\n    Set rs = Me.Recordset\n    \n    ' Add a new record to the recordset\n    rs.AddNew\n    \n    ' Update the recordset with the values from the text boxes\n    rs!FieldName1 = Me.txtFieldName1\n    rs!FieldName2 = Me.txtFieldName2\n    rs!FieldName3 = Me.txtFieldName3\n    \n    ' Update the recordset\n    rs.Update\n    \n    ' Close the recordset\n    rs.Close\n    \n    ' Set the recordset to Nothing\n    Set rs = Nothing\nEnd Sub