Imports System.Text.RegularExpressions\n\nProtected Sub MakeWordListBeforeTab()\n    Dim filename As String = "D:\lao\00001.txt"\n    Dim WordBeforeTabArr() As String\n    Dim WordAfterTabArr() As String\n\n    Dim pattern As String = "^([^\t]+)\t([^\r]+)"\n    Dim regex As New Regex(pattern, RegexOptions.Multiline)\n\n    Dim text As String = File.ReadAllText(filename)\n    Dim matches As MatchCollection = regex.Matches(text)\n\n    WordBeforeTabArr = matches.Cast(Of Match).Select(Function(m) m.Groups(1).Value).ToArray()\n    WordAfterTabArr = matches.Cast(Of Match).Select(Function(m) m.Groups(2).Value).ToArray()\n\n    ' Test the arrays\n    For d As Integer = 0 To WordBeforeTabArr.Length - 1\n        MsgBox(WordBeforeTabArr(d) & " - " & WordAfterTabArr(d))\n    Next\nEnd Sub