Imports System\n\nModule DecimalSplitter\n    Function SplitDecimal(d As Decimal) As (Integer, Decimal)\n        Dim integerPart = Math.Truncate(d)\n        Dim fractionalPart = d - integerPart\n        Return (CInt(integerPart), fractionalPart)\n    End Function\n\n    Sub Main()\n        Dim x As Decimal = 12.34\n        Dim (y, z) = SplitDecimal(x)\n        Console.WriteLine($"y = {y}, z = {z}")\n    End Sub\nEnd Module