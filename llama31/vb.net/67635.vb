Dim timer As Object\nSet timer = CreateObject("WScript.Timer")\n\nSub CheckPathExists()\n    timer.Interval = 1000 ' 1 second\n    timer.Enabled = True\n    \n    ' Start the timer and immediately return control to the main thread\n    timer.StartTimer\n    \n    ' Your main thread can continue executing while the timer runs in the background\nEnd Sub\n\nSub timer_OnTimer()\n    ' Check if the path exists\n    If FileSystemObject.FolderExists("\\servername\path") Then\n        ' Path exists, proceed with online mode\n        timer.Enabled = False\n    Else\n        ' Path does not exist, switch to offline mode\n        timer.Enabled = False\n    End If\nEnd Sub\n\n' To cancel the search, simply disable the timer\nSub CancelSearch()\n    timer.Enabled = False\nEnd Sub