Imports System.Windows.Forms\n\nPublic Class CustomMessageBox\n    Public Shared Function Show(ByVal message As String, ByVal caption As String, ByVal button1Text As String, ByVal button2Text As String) As DialogResult\n        Dim form As New Form()\n        form.Text = caption\n        form.Size = New Size(400, 150)\n        form.FormBorderStyle = FormBorderStyle.FixedDialog\n        form.MaximizeBox = False\n        form.MinimizeBox = False\n\n        Dim label As New Label()\n        label.Text = message\n        label.AutoSize = True\n        label.Location = New Point(10, 10)\n        form.Controls.Add(label)\n\n        Dim button1 As New Button()\n        button1.Text = button1Text\n        button1.DialogResult = DialogResult.Yes\n        button1.Location = New Point(10, 50)\n        form.Controls.Add(button1)\n\n        Dim button2 As New Button()\n        button2.Text = button2Text\n        button2.DialogResult = DialogResult.No\n        button2.Location = New Point(100, 50)\n        form.Controls.Add(button2)\n\n        form.AcceptButton = button1\n        form.CancelButton = button2\n\n        Return form.ShowDialog()\n    End Function\nEnd Class