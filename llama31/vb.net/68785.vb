Imports System.Xml.Linq\n\nDim xmlDoc As XDocument = XDocument.Load("your_xml_file.xml")\n\nDim objectsWithNullArchiveDate = xmlDoc.Descendants("object").\n    Where(Function(obj) obj.Elements("field").\n        Any(Function(field) field.Attribute("name").Value = "archive_date" AndAlso field.Elements("None").Any()))\n\nFor Each obj In objectsWithNullArchiveDate\n    Dim archiveDateField = obj.Elements("field").FirstOrDefault(Function(field) field.Attribute("name").Value = "archive_date")\n    If archiveDateField IsNot Nothing Then\n        archiveDateField.Elements("None").Remove()\n        archiveDateField.Add(New XElement("archive_date", "1899-01-01"))\n    End If\nNext\n\nxmlDoc.Save("your_xml_file.xml")