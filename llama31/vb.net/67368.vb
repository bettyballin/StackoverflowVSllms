Imports NLog\n\nPublic Class ServiceMethodLogger\n    Private Shared _logger As Logger\n\n    Public Shared Sub InitializeLogger()\n        _logger = LogManager.GetLogger("ServiceMethodLogger")\n        _logger.Factory.AddTarget("gui", New GuiLogTarget())\n    End Sub\n\n    Public Shared Sub LogDebug(message As String)\n        _logger.Debug(message)\n    End Sub\nEnd Class\n\nPublic Class GuiLogTarget\n    Inherits TargetWithLayout\n\n    Private _form As frmLogViewer\n\n    Public Sub New()\n        _form = New frmLogViewer()\n    End Sub\n\n    Protected Overrides Sub Write(logEvent As LogEventInfo)\n        _form.AddLogMessage(logEvent.FormattedMessage)\n    End Sub\nEnd Class\n\nPublic Class frmLogViewer\n    Inherits Form\n\n    Public Sub AddLogMessage(message As String)\n        txtLog.AppendText(message & Environment.NewLine)\n    End Sub\n\n    Private Sub frmLogViewer_Load(sender As Object, e As EventArgs) Handles MyBase.Load\n        txtLog.Multiline = True\n        txtLog.ScrollBars = ScrollBars.Both\n    End Sub\nEnd Class