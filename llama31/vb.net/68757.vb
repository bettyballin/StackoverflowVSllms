Imports System.Xml.Linq\n\nDim xml = XDocument.Load("yourxmlfile.xml")\n\nDim asnDataList = (From datatable In xml.Descendants("NewDataTable")\n                   Select New ASNData With {\n                       .Field = datatable.Element("Field").Value,\n                       .Value = datatable.Element("Val").Value,\n                       .Orders = (From order In datatable.Elements("Order")\n                                  Select New ASNData.Order With {\n                                      .Number = order.Attribute("Number").Value,\n                                      .ShippingDate = DateTime.Parse(order.Attribute("ShipDate").Value)\n                                  }).ToList()\n                   }).ToList()