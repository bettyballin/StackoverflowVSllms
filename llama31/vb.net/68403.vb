Imports System.Timers\n\nPublic Class ReportDownloader\n    Private WithEvents timer As Timer\n\n    Public Sub New()\n        timer = New Timer(10000) ' 10 seconds\n        timer.Start()\n    End Sub\n\n    Private Sub timer_Elapsed(ByVal sender As Object, ByVal e As ElapsedEventArgs) Handles timer.Elapsed\n        ' Check if the report is available on the FTP server\n        Dim ftpHelper As New FtpHelper()\n        If ftpHelper.FileExists("ftp://server/report.txt") Then\n            ' Download the report\n            ftpHelper.DownloadFile("ftp://server/report.txt", "C:\report.txt")\n            timer.Stop()\n        End If\n    End Sub\nEnd Class