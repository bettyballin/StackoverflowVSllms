Imports SlimDX\n\nModule Game\n    Sub Main()\n        ' Create a new window\n        Dim form As New SlimDX.Windows.RenderForm("My Game")\n        form.ClientSize = New Size(800, 600)\n\n        ' Create a device and render loop\n        Dim device As New Device(form.Handle, DeviceCreationFlags.None)\n        Dim renderLoop As New RenderLoop(device)\n\n        ' Run the render loop\n        renderLoop.Run()\n\n        ' Dispose of resources\n        device.Dispose()\n        form.Dispose()\n    End Sub\nEnd Module