Imports Microsoft.Win32\n\nPublic Function GetRegisteredFileTypes() As List(Of String)\n    Dim fileTypes As New List(Of String)\n    Dim regKey As RegistryKey = Registry.ClassesRoot\n\n    For Each subKeyName As String In regKey.GetSubKeyNames()\n        If subKeyName.StartsWith(".") Then\n            Using subKey As RegistryKey = regKey.OpenSubKey(subKeyName)\n                Dim fileType As String = CType(subKey.GetValue(""), String)\n                If Not String.IsNullOrEmpty(fileType) Then\n                    fileTypes.Add(fileType)\n                End If\n            End Using\n        End If\n    Next\n\n    Return fileTypes\nEnd Function\n\nPrivate Sub FillComboBox()\n    Dim cbo As New ComboBox()\n    cbo.DataSource = GetRegisteredFileTypes()\n    ' Add cbo to your form or control\nEnd Sub