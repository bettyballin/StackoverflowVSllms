Imports System.Xml\n\nDim from As String = txtFrom.Text\nDim txto As String = txtTo.Text\nDim subj As String = txtSubject.Text\nDim body As String = txtBody.Text\n\nDim xmlDoc As New XmlDocument()\n\nIf File.Exists("C:\xmlmailfile.xml") Then\n    xmlDoc.Load("C:\xmlmailfile.xml")\nElse\n    xmlDoc.AppendChild(xmlDoc.CreateElement("EMails"))\nEnd If\n\nDim emailElement As XmlElement = xmlDoc.CreateElement("EMail")\nemailElement.AppendChild(xmlDoc.CreateElement("From")).InnerText = from\nemailElement.AppendChild(xmlDoc.CreateElement("To")).InnerText = txto\nemailElement.AppendChild(xmlDoc.CreateElement("Subject")).InnerText = subj\nemailElement.AppendChild(xmlDoc.CreateElement("Body")).InnerText = body\n\nxmlDoc.DocumentElement.AppendChild(emailElement)\n\nxmlDoc.Save("C:\xmlmailfile.xml")