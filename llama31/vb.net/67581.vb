Imports System\n\nModule Module1\n    Sub Main()\n        ' define the local time zone\n        Dim localTimeZone As TimeZoneInfo = TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time")\n\n        ' define the local date\n        Dim localDate As DateTime = New DateTime(2022, 1, 1, 12, 0, 0)\n\n        ' convert to UTC\n        Dim utcDate As DateTime = TimeZoneInfo.ConvertTimeToUtc(localDate, localTimeZone)\n\n        Console.WriteLine($"Local Date: {localDate}")\n        Console.WriteLine($"UTC Date: {utcDate}")\n    End Sub\nEnd Module