Sub ImportCSV()\n    Dim ws As Worksheet\n    Set ws = ThisWorkbook.Worksheets("YourSheetName")\n    \n    ' Open the CSV file\n    Workbooks.OpenText Filename:="a.csv", _\n        DataType:=xlDelimited, _\n        TextQualifier:=xlDoubleQuote, _\n        ConsecutiveDelimiter:=False, _\n        Tab:=True, _\n        Semicolon:=False, _\n        Comma:=True, _\n        Space:=False, _\n        Other:=False, _\n        FieldInfo:=Array(1, xlDMYFormat) ' Specify date format as DMY\n    \n    ' Copy the data to the Excel sheet\n    ActiveWorkbook.Sheets(1).UsedRange.Copy Destination:=ws.Range("A1")\n    \n    ' Close the CSV file without saving\n    ActiveWorkbook.Close False\n    \n    ' Repeat the process for the other CSV files\n    ' ...\nEnd Sub