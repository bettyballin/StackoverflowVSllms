Imports System.Text.RegularExpressions\n\nPublic Function GetLinkedSentence(obj As Object) As String\n    Dim word As String = obj.Word\n    Dim sentence As String = obj.Sentence\n    \n    ' Create a regex pattern to match the word, considering plural, phrase, and hyphenated forms\n    Dim pattern As String = Regex.Escape(word) & "(s|es|ies|ing|ed|'s)?"\n    \n    ' Replace the matched word with a link\n    Dim linkedSentence As String = Regex.Replace(sentence, pattern, _\n        Function(match) String.Format("<a href=""www.example.com/?{0}"">{1}</a>", _\n            match.Value, match.Value), RegexOptions.IgnoreCase)\n    \n    Return linkedSentence\nEnd Functio