Sub ExportToPDF()\n    Dim filePath As String\n    Dim fileName As String\n    \n    ' Set the file path and name\n    filePath = "C:\Path\To\Output\Folder\"\n    fileName = "MyWorkbook"\n    \n    ' Set the PDFCreator printer as the default printer\n    Dim printer As String\n    printer = "PDFCreator"\n    \n    ' Set the output file name\n    Dim outputFile As String\n    outputFile = filePath & fileName & ".pdf"\n    \n    ' Print the workbook to the PDFCreator printer\n    Application.ActiveWorkbook.PrintOut ActivePrinter:=printer, PrintToFile:=True, PrToFileName:=outputFile\nEnd Sub