Dim PostsEnum = From BlogPost In XMLSource.Descendants("item")\n    Order By DateTime.Parse(If(BlogPost.Element("pubDate") IsNot Nothing, BlogPost.Element("pubDate").Value, "")) Descending\n    Select New Post() With {\n        .Title = If(BlogPost.Element("title") IsNot Nothing, BlogPost.Element("title").Value, ""),\n        .Link = If(BlogPost.Element("link") IsNot Nothing, BlogPost.Element("link").Value, ""),\n        .Description = If(BlogPost.Element("description") IsNot Nothing, BlogPost.Element("description").Value, ""),\n        .AuthorText = If(BlogPost.Element("author") IsNot Nothing, BlogPost.Element("author").Value, ""),\n        .Category = (From tag In BlogPost.Descendants("category")\n            Select cat = tag.FirstNode.ToString).ToList,\n        .PubDate = DateTime.Parse(If(BlogPost.Element("pubDate") IsNot Nothing, BlogPost.Element("pubDate").Value, "")),\n        .GUID = If(BlogPost.Element("guid") IsNot Nothing, BlogPost.Element("guid").Value, ""),\n        .Source = If(BlogPost.Element("source") IsNot Nothing, BlogPost.Element("source").Value, "")\n    }