Public Function FormatAsOrdinal(number As Integer) As String\n    Select Case number Mod 10\n        Case 1\n            If number Mod 100 = 11 Then\n                Return number.ToString() & "th"\n            Else\n                Return number.ToString() & "st"\n            End If\n        Case 2\n            If number Mod 100 = 12 Then\n                Return number.ToString() & "th"\n            Else\n                Return number.ToString() & "nd"\n            End If\n        Case 3\n            If number Mod 100 = 13 Then\n                Return number.ToString() & "th"\n            Else\n                Return number.ToString() & "rd"\n            End If\n        Case Else\n            Return number.ToString() & "th"\n    End Select\nEnd Functio