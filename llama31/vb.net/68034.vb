Sub ImportMultipleCSVFiles()\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n    Dim fso As Object\n    Dim folder As Object\n    Dim file As Object\n    \n    Set db = CurrentDb()\n    Set fso = CreateObject("Scripting.FileSystemObject")\n    \n    ' Set the folder path containing the CSV files\n    Set folder = fso.GetFolder("C:\Path\To\CSVFiles")\n    \n    For Each file In folder.Files\n        If Right(file.Name, 4) = ".csv" Then\n            ' Import the CSV file\n            DoCmd.TransferText acImportDelim, , "YourTableName", file.Path, True\n        End If\n    Next file\n    \n    Set file = Nothing\n    Set folder = Nothing\n    Set fso = Nothing\n    Set rs = Nothing\n    Set db = Nothing\nEnd Sub