Sub SignDocument()\n    Dim objWord As Object\n    Dim objSignature As Object\n    \n    ' Initialize Word and signature objects\n    Set objWord = CreateObject("Word.Application")\n    Set objSignature = CreateObject("Word.Signature")\n    \n    ' Open the document to sign\n    objWord.Documents.Open "C:\Path\To\Document.docx"\n    \n    ' Select the certificate and apply the signature\n    objSignature.Certificate = "C:\Path\To\Certificate.pfx"\n    objSignature.Sign "C:\Path\To\Document.docx"\n    \n    ' Save the signed document\n    objWord.Documents.Save "C:\Path\To\SignedDocument.docx"\n    \n    ' Clean up\n    Set objSignature = Nothing\n    Set objWord = Nothing\nEnd Sub