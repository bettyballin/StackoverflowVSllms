Sub CreatePivotChart()\n    Dim db As DAO.Database\n    Dim rs As DAO.Recordset\n    Dim chart As Object\n    \n    ' Set database and recordset\n    Set db = CurrentDb()\n    Set rs = db.OpenRecordset("YourQueryName")\n    \n    ' Create a new form and add a pivot chart control\n    DoCmd.OpenForm "YourFormName", acFormView\n    Set chart = Forms!YourFormName.Controls.Add("MSChart20Lib.MSChart")\n    \n    ' Set chart properties\n    chart.RowSource = rs.Name\n    chart.ChartType = 1 ' xlColumnClustered\n    \n    ' Add fields to the chart\n    chart.PivotFields.Add "Field1"\n    chart.PivotFields.Add "Field2"\n    \n    ' Filter the chart based on user selection\n    chart.Filter = "Field1 = '" & Me.YourComboBox.Value & "'"\n    \n    ' Refresh the chart\n    chart.Refresh\nEnd Sub