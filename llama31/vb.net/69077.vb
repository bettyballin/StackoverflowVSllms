Imports System.Net\n\nPublic Class MiniWebServer\n    Private ReadOnly _listener As HttpListener\n\n    Public Sub New()\n        _listener = New HttpListener()\n        _listener.Prefixes.Add("http://localhost:1234/")\n    End Sub\n\n    Public Sub Start()\n        _listener.Start()\n        While True\n            Dim context = _listener.GetContext()\n            Dim request = context.Request\n            Dim response = context.Response\n            response.ContentType = "text/html"\n            response.OutputStream.Write(Encoding.UTF8.GetBytes("<html><body>Status: Running</body></html>"))\n            response.Close()\n        End While\n    End Sub\n\n    Public Sub Stop()\n        _listener.Stop()\n    End Sub\nEnd Class