Protected Sub FileUpload1_SelectedIndexChanged(ByVal sender As Object, ByVal e As EventArgs)\n    ' Store the uploaded file's information in ViewState\n    ViewState("UploadedFile") = FileUpload1.PostedFile.FileName\nEnd Sub\n\nProtected Sub Page_Load(ByVal sender As Object, ByVal e As EventArgs)\n    ' Re-populate the file upload control on subsequent postbacks\n    If Not IsPostBack Then\n        If ViewState("UploadedFile") IsNot Nothing Then\n            FileUpload1.FileName = ViewState("UploadedFile").ToString()\n        End If\n    End If\nEnd Sub