Sub RefreshLinks()\n    Dim db As DAO.Database\n    Dim tbl As DAO.TableDef\n    Dim fld As DAO.Field\n    Dim strSQL As String\n    \n    Set db = CurrentDb()\n    \n    ' Refresh links to views\n    For Each tbl In db.TableDefs\n        If tbl.Connect <> "" Then\n            ' Check if the table is a view\n            If tbl.SourceTableName Like "*dbo.*" Then\n                ' Refresh the link\n                tbl.RefreshLink\n                \n                ' Re-set the primary key information\n                strSQL = "SELECT * FROM " & tbl.SourceTableName\n                Set fld = tbl.Fields("YourPrimaryKeyField")\n                fld.PrimaryKey = True\n            End If\n        End If\n    Next tbl\n    \n    Set db = Nothing\nEnd Sub