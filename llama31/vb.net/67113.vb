Imports OpenPop.Pop3\nImports OpenPop.Mime\n\nDim pop3Client As New Pop3Client\npop3Client.Connect("yourmailserver.com", 110, False)\npop3Client.Authenticate("yourusername", "yourpassword")\n\nDim message As Message = pop3Client.GetMessage(1)\nDim attachment As MessagePart = message.FindFirstAttachment()\n\nIf attachment IsNot Nothing Then\n    Dim fileName As String = attachment.ContentType.Name\n    Dim fileData As Byte() = attachment.Body\n    ' Save the attachment to a file\n    File.WriteAllBytes(fileName, fileData)\nEnd If