Imports System.Windows.Forms\n\nPublic Class StartupForm\n    Private WithEvents timer As New Timer\n\n    Private Sub StartupForm_Load(ByVal sender As Object, ByVal e As EventArgs) Handles MyBase.Load\n        ' Set up the progress bar\n        ProgressBar1.Minimum = 0\n        ProgressBar1.Maximum = 100\n\n        ' Start the timer\n        timer.Interval = 100\n        timer.Start()\n    End Sub\n\n    Private Sub timer_Tick(ByVal sender As Object, ByVal e As EventArgs) Handles timer.Tick\n        ' Update the progress bar value\n        ProgressBar1.Value = ProgressBar1.Value + 1\n\n        ' Stop the timer when the progress bar is full\n        If ProgressBar1.Value = ProgressBar1.Maximum Then\n            timer.Stop()\n        End If\n    End Sub\nEnd Class