Sub ExportQueriesToSQLFiles()\n    Dim db As DAO.Database\n    Dim qry As DAO.QueryDef\n    Dim fso As Object\n    Dim file As Object\n    \n    Set db = CurrentDb()\n    Set fso = CreateObject("Scripting.FileSystemObject")\n    \n    For Each qry In db.QueryDefs\n        If qry.Type = dbQSQL Then\n            Set file = fso.CreateTextFile("C:\" & qry.Name & ".sql", True)\n            file.Write qry.SQL\n            file.Close\n        End If\n    Next qry\n    \n    Set fso = Nothing\n    Set db = Nothing\nEnd Sub