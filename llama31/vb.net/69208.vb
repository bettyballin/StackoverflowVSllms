Imports System.Reflection\n\nDim logFilePath As String = String.Empty\n\nFor Each listener As TraceListener In My.Application.Log.Listeners\n    If TypeOf listener Is FileLogTraceListener Then\n        Dim fileLogListener As FileLogTraceListener = DirectCast(listener, FileLogTraceListener)\n        Dim logFileNameField As FieldInfo = fileLogListener.GetType.GetField("logFileName", BindingFlags.NonPublic Or BindingFlags.Instance)\n        If logFileNameField IsNot Nothing Then\n            logFilePath = DirectCast(logFileNameField.GetValue(fileLogListener), String)\n            Exit For\n        End If\n    End If\nNext\n\nIf Not String.IsNullOrEmpty(logFilePath) Then\n    ' Use the log file path as needed\nEnd If