Imports System.Net.Sockets\nImports System.Text\n\nPublic Class BoggleClient\n    Private ReadOnly _client As TcpClient\n\n    Public Sub New()\n        _client = New TcpClient()\n        _client.Connect("localhost", 8080)\n    End Sub\n\n    Public Sub JoinGame()\n        Dim stream As NetworkStream = _client.GetStream()\n        Dim buffer() As Byte = Encoding.ASCII.GetBytes("join")\n        stream.Write(buffer, 0, buffer.Length)\n    End Sub\n\n    Public Sub SendScore(score As Integer)\n        Dim stream As NetworkStream = _client.GetStream()\n        Dim buffer() As Byte = Encoding.ASCII.GetBytes($"score {score}")\n        stream.Write(buffer, 0, buffer.Length)\n    End Sub\n\n    Public Function ReceiveLetters() As Char()\n        Dim stream As NetworkStream = _client.GetStream()\n        Dim buffer(1024) As Byte\n        Dim bytesRead As Integer = stream.Read(buffer, 0, buffer.Length)\n        Return Encoding.ASCII.GetString(buffer, 0, bytesRead).ToCharArray()\n    End Function\nEnd Class