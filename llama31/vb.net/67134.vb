Imports System.Text.RegularExpressions\n\nModule DesignerCleanup\n    Sub Main()\n        Dim filePath As String = "Path\To\Your\Designer.vb"\n        Dim fileContent As String = File.ReadAllText(filePath)\n        Dim pattern As String = "^(\s*)Private WithEvents (\w+) As (\w+)\s*$\n"\n        Dim regex As New Regex(pattern, RegexOptions.Multiline)\n        fileContent = regex.Replace(fileContent, String.Empty)\n        File.WriteAllText(filePath, fileContent)\n    End Sub\nEnd Module