Sub ExportTableDDL()\n    Dim db As DAO.Database\n    Dim tbl As DAO.TableDef\n    Dim fso As Object\n    Dim txtStream As Object\n    \n    Set db = CurrentDb()\n    Set fso = CreateObject("Scripting.FileSystemObject")\n    \n    For Each tbl In db.TableDefs\n        If Not tbl.System Then\n            Set txtStream = fso.CreateTextFile("C:\TableDDL\" & tbl.Name & ".sql", True)\n            txtStream.WriteLine tbl.Name & " ("\n            For Each fld In tbl.Fields\n                txtStream.WriteLine "    " & fld.Name & " " & GetFieldType(fld.Type) & ","\n            Next fld\n            txtStream.WriteLine ");"\n            txtStream.Close\n        End If\n    Next tbl\n    \n    Set db = Nothing\n    Set fso = Nothing\nEnd Sub\n\nFunction GetFieldType(fldType As Integer) As String\n    Select Case fldType\n        Case dbBoolean: GetFieldType = "BIT"\n        Case dbByte: GetFieldType = "BYTE"\n        Case dbCurrency: GetFieldType = "MONEY"\n        Case dbDate: GetFieldType = "DATE"\n        Case dbDouble: GetFieldType = "DOUBLE"\n        Case dbInteger: GetFieldType = "INTEGER"\n        Case dbLong: GetFieldType = "LONG"\n        Case dbMemo: GetFieldType = "TEXT"\n        Case dbSingle: GetFieldType = "SINGLE"\n        Case dbText: GetFieldType = "VARCHAR(255)"\n        Case dbTime: GetFieldType = "TIME"\n        Case Else: GetFieldType = "UNKNOWN"\n    End Select\nEnd Functio