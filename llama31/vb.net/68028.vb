Private Sub DGUserBets_CellValidating(sender As Object, e As DataGridViewCellValidatingEventArgs) Handles DGUserBets.CellValidating\n    If e.ColumnIndex = DGUserBets.Columns("DGUBStake").Index Then\n        Dim combo As ComboBox = CType(DGUserBets.EditingControl, ComboBox)\n        If combo IsNot Nothing Then\n            ' Update the "Profit" column based on the selected value\n            Select Case combo.SelectedIndex\n                Case 0\n                    DGUserBets.Rows(e.RowIndex).Cells("DGUBProfit").Value = 0\n                Case 1\n                    DGUserBets.Rows(e.RowIndex).Cells("DGUBProfit").Value = DGUserBets.Rows(e.RowIndex).Cells("DGUBIfWin").Value\n                Case 2\n                    DGUserBets.Rows(e.RowIndex).Cells("DGUBProfit").Value = DGUserBets.Rows(e.RowIndex).Cells("DGUBIfLose").Value\n                Case 3\n                    DGUserBets.Rows(e.RowIndex).Cells("DGUBProfit").Value = 0\n            End Select\n        End If\n    End If\nEnd Sub