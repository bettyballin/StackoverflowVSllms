Dim objXMLHTTP, url, html, apiKey\n\n' Set up API endpoint and credentials\nurl = "http://api.pdfcrowd.com/convert/html-to-pdf/"\napiKey = "YOUR_API_KEY_HERE"\nhtml = "<html><body>Hello World!</body></html>"\n\n' Create an XMLHTTP object\nSet objXMLHTTP = CreateObject("MSXML2.XMLHTTP")\n\n' Set up request headers and send the request\nobjXMLHTTP.Open "POST", url, False\nobjXMLHTTP.setRequestHeader "Authorization", "Bearer " & apiKey\nobjXMLHTTP.setRequestHeader "Content-Type", "text/html"\nobjXMLHTTP.send html\n\n' Get the response and save to a file\nResponse.ContentType = "application/pdf"\nResponse.AddHeader "Content-Disposition", "attachment; filename=output.pdf"\nResponse.Write objXMLHTTP.responseText\n\n' Clean up\nSet objXMLHTTP = Nothing