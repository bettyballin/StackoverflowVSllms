Imports System.Text\n\nModule Module1\n    Sub Main()\n        Dim qpString As String = "=C3=A4=C3=B6=C3=A5"\n        Dim qpBytes() As Byte = Convert.FromBase64String(qpString.Replace("=", "+").Replace("-", "/"))\n        Dim utf8Bytes() As Byte = New Byte(qpBytes.Length - 1) {}\n        For i As Integer = 0 To qpBytes.Length - 1\n            utf8Bytes(i) = qpBytes(i)\n        Next\n        Dim asciiString As String = Encoding.ASCII.GetString(utf8Bytes)\n\n        Console.WriteLine(asciiString) ' prints "äöå" correctly\n    End Sub\nEnd Module